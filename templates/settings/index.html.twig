            <script>
                document.addEventListener('DOMContentLoaded', function() {
                    // Auto-submit profile picture form on file selection
                    const imageInput = document.getElementById('imageForm_image');
                    if (imageInput) {
                        imageInput.addEventListener('change', function() {
                            if (this.files && this.files.length > 0) {
                                // Show loading animation
                                const profileImg = document.querySelector('.profile-picture img');
                                if (profileImg) {
                                    profileImg.style.opacity = '0.5';
                                    profileImg.style.filter = 'blur(2px)';
                                }
                                
                                // Create and show a loading spinner
                                const spinner = document.createElement('div');
                                spinner.className = 'loading-spinner';
                                spinner.style.cssText = `
                                    position: absolute;
                                    top: 50px;
                                    left: 50%;
                                    transform: translateX(-50%);
                                    width: 40px;
                                    height: 40px;
                                    border: 3px solid rgba(255,255,255,0.2);
                                    border-radius: 50%;
                                    border-top-color: var(--primary-light);
                                    animation: spin 1s infinite linear;
                                    z-index: 10;
                                `;
                                
                                const style = document.createElement('style');
                                style.textContent = `
                                    @keyframes spin {
                                        0% { transform: translateX(-50%) rotate(0deg); }
                                        100% { transform: translateX(-50%) rotate(360deg); }
                                    }
                                `;
                                document.head.appendChild(style);
                                
                                const profilePictureDiv = document.querySelector('.profile-picture');
                                if (profilePictureDiv) {
                                    profilePictureDiv.appendChild(spinner);
                                }
                                
                                // Submit the form
                                document.getElementById('imageForm').submit();
                            }
                        });
                    }

                    // Toggle language submenu with improved positioning
                    const languageToggle = document.querySelector('.language-toggle');
                    const languageSubmenu = document.querySelector('.language-submenu');
                    if (languageToggle && languageSubmenu) {
                        languageToggle.addEventListener('click', function(e) {
                            e.preventDefault();
                            if (languageSubmenu.classList.contains('active')) {
                                languageSubmenu.classList.remove('active');
                            } else {
                                // Position the submenu correctly
                                const rect = this.getBoundingClientRect();
                                languageSubmenu.style.top = (rect.bottom + window.scrollY) + 'px';
                                languageSubmenu.style.left = rect.left + 'px';
                                languageSubmenu.classList.add('active');
                            }
                        });

                        // Close language submenu when clicking elsewhere
                        document.addEventListener('click', function(e) {
                            if (!languageToggle.contains(e.target) && !languageSubmenu.contains(e.target)) {
                                languageSubmenu.classList.remove('active');
                            }
                        });
                    }

                    // Smooth scroll for section links with modern animation
                    const scrollLinks = document.querySelectorAll('.scroll-link');
                    scrollLinks.forEach(function(link) {
                        link.addEventListener('click', function(e) {
                            e.preventDefault();

                            // Remove active class from all nav links
                            scrollLinks.forEach(l => l.classList.remove('active'));
                            this.classList.add('active');

                            // Smooth scroll to target section
                            const targetId = this.getAttribute('href').substring(1);
                            const targetSection = document.getElementById(targetId);
                            if (targetSection) {
                                const offset = 80; // Adjust based on your navbar height
                                const sectionPosition = targetSection.getBoundingClientRect().top + window.scrollY - offset;
                                
                                window.scrollTo({
                                    top: sectionPosition,
                                    behavior: 'smooth'
                                });

                                // Add highlight animation
                                targetSection.classList.add('highlight');
                                setTimeout(() => {
                                    targetSection.classList.remove('highlight');
                                }, 1000);
                            }
                        });
                    });

                    // Set active state for scroll links based on scroll position
                    function updateActiveNavLink() {
                        const scrollPosition = window.scrollY;
                        
                        // Get all sections that can be navigated to
                        const sections = document.querySelectorAll('.settings-section');
                        
                        sections.forEach(section => {
                            const sectionTop = section.offsetTop - 100;
                            const sectionBottom = sectionTop + section.offsetHeight;
                            
                            if (scrollPosition >= sectionTop && scrollPosition < sectionBottom) {
                                const id = section.getAttribute('id');
                                
                                // Remove active class from all links
                                scrollLinks.forEach(link => link.classList.remove('active'));
                                
                                // Add active class to corresponding link
                                const correspondingLink = document.querySelector(`.scroll-link[href="#${id}"]`);
                                if (correspondingLink) {
                                    correspondingLink.classList.add('active');
                                }
                            }
                        });
                    }
                    
                    // Listen for scroll events to update the active link
                    window.addEventListener('scroll', updateActiveNavLink);
                    
                    // Call once on page load
                    updateActiveNavLink();

                    // Password toggle functionality with animation
                    const passwordInput = document.querySelector('.password-input');
                    const passwordToggle = document.getElementById('password-toggle');
                    if (passwordInput && passwordToggle) {
                        passwordToggle.addEventListener('click', function() {
                            const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                            passwordInput.setAttribute('type', type);
                            
                            // Change icon and add animation
                            if (type === 'text') {
                                this.classList.remove('fa-eye');
                                this.classList.add('fa-eye-slash');
                                this.style.animation = 'pulse 0.5s';
                            } else {
                                this.classList.remove('fa-eye-slash');
                                this.classList.add('fa-eye');
                                this.style.animation = 'none';
                            }
                        });
                    }

                    // Mobile menu toggle with animation
                    const menuToggle = document.querySelector('.menu-toggle');
                    const mobileMenu = document.querySelector('.fh5co-nav .menu-1 ul');
                    if (menuToggle && mobileMenu) {
                        menuToggle.addEventListener('click', function() {
                            if (mobileMenu.classList.contains('active')) {
                                mobileMenu.classList.remove('active');
                                mobileMenu.style.animation = 'slideUp 0.3s forwards';
                                setTimeout(() => {
                                    mobileMenu.style.display = 'none';
                                }, 300);
                            } else {
                                mobileMenu.style.display = 'flex';
                                mobileMenu.classList.add('active');
                            }
                        });
                        
                        // Add animation styles
                        const style = document.createElement('style');
                        style.textContent = `
                            @keyframes slideUp {
                                from { opacity: 1; transform: translateY(0); }
                                to { opacity: 0; transform: translateY(-10px); }
                            }
                        `;
                        document.head.appendChild(style);
                    }
                    
                    // Mobile dropdown toggle
                    const dropdownToggleLinks = document.querySelectorAll('.fh5co-nav .menu-1 ul li.has-dropdown > a');
                    dropdownToggleLinks.forEach(link => {
                        link.addEventListener('click', function(e) {
                            if (window.innerWidth <= 768) {
                                e.preventDefault();
                                const parentLi = this.parentElement;
                                parentLi.classList.toggle('active');
                                
                                // Close all other dropdowns
                                document.querySelectorAll('.fh5co-nav .menu-1 ul li.has-dropdown').forEach(li => {
                                    if (li !== parentLi) {
                                        li.classList.remove('active');
                                    }
                                });
                            }
                        });
                    });

                    // Add subtle animations to form elements on focus
                    const formInputs = document.querySelectorAll('.form-group input, .form-group select');
                    formInputs.forEach(input => {
                        input.addEventListener('focus', function() {
                            this.parentElement.querySelector('label')?.classList.add('highlight-label');
                        });
                        
                        input.addEventListener('blur', function() {
                            this.parentElement.querySelector('label')?.classList.remove('highlight-label');
                        });
                    });
                    
                    // Add styles for label highlight
                    const style = document.createElement('style');
                    style.textContent = `
                        .highlight-label {
                            color: var(--primary-light) !important;
                            transform: translateY(-2px);
                            transition: all 0.3s ease;
                        }
                    `;
                    document.head.appendChild(style);

                    // Video background error handling with better UX
                    const video = document.getElementById('background-video');
                    const videoErrorDiv = document.getElementById('video-error');
                    if (video && videoErrorDiv) {
                        video.addEventListener('error', function(e) {
                            const errorMessages = {
                                1: 'La lecture de la vidéo a été interrompue',
                                2: 'Erreur de réseau lors du chargement de la vidéo',
                                3: 'Format vidéo non supporté ou corrompu',
                                4: 'La vidéo est introuvable'
                            };
                            const errorCode = e.target.error?.code || 0;
                            const errorMessage = errorMessages[errorCode] || 'Problème de chargement de la vidéo';
                            
                            console.error('Erreur vidéo:', {
                                code: errorCode,
                                message: e.target.error?.message,
                                src: video.src
                            });
                            
                            // Display user-friendly error with icon
                            videoErrorDiv.innerHTML = `<i class="fas fa-exclamation-circle"></i> ${errorMessage}`;
                            videoErrorDiv.style.display = 'block';
                            
                            // Apply fallback background
                            document.body.style.background = 'linear-gradient(135deg, #0f172a 0%, #1e1b4b 100%)';
                            video.style.display = 'none';
                            
                            // Auto-hide error after 5 seconds
                            setTimeout(() => {
                                videoErrorDiv.style.opacity = '0';
                                setTimeout(() => {
                                    videoErrorDiv.style.display = 'none';
                                    videoErrorDiv.style.opacity = '1';
                                }, 500);
                            }, 5000);
                        });
                        
                        video.addEventListener('loadeddata', function() {
                            console.log('Vidéo chargée avec succès:', video.src);
                            videoErrorDiv.style.display = 'none';
                            document.body.style.background = 'none';
                        });
                    }
                    
                    // Add modern loading indicator to submit button
                    const submitButton = document.querySelector('.form-group button[type="submit"]');
                    if (submitButton) {
                        submitButton.addEventListener('click', function() {
                            // Check form validity before showing loader
                            const form = this.closest('form');
                            if (form && form.checkValidity()) {
                                // Add loading state
                                this.classList.add('loading');
                                this.disabled = true;
                                
                                // Store original text
                                this.dataset.originalText = this.textContent;
                                this.textContent = 'Sauvegarde en cours...';
                                
                                // Add loading animation
                                this.style.background = 'linear-gradient(270deg, var(--primary-color), var(--primary-dark))';
                                this.style.backgroundSize = '200% 200%';
                                
                                // Add loading animation style
                                const style = document.createElement('style');
                                style.textContent = `
                                    @keyframes gradientMove {
                                        0% { background-position: 0% 50%; }
                                        50% { background-position: 100% 50%; }
                                        100% { background-position: 0% 50%; }
                                    }
                                    .loading {
                                        animation: gradientMove 2s ease infinite !important;
                                    }
                                `;
                                document.head.appendChild(style);
                            }
                        });
                    }
                });
            </script>
