{% extends 'home/home.html.twig' %}

{% block title %}{{ 'settings'|trans }} - Eventora{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Palette de couleurs (inchangée) */
        :root {
            --primary-color: #D66F6F; /* Deep Pink pour les accents et boutons */
            --secondary-color: #FFF7F7; /* Very Light Pink pour le fond principal */
            --text-color: #333; /* Gris foncé pour le texte principal (lisibilité) */
            --text-muted: #666; /* Texte secondaire (légèrement plus clair) */
            --shadow: 0 2px 4px rgba(139, 46, 46, 0.1); /* Ombre avec Dark Reddish Tone */
            --hover-shadow: 0 4px 12px rgba(139, 46, 46, 0.2);
            --accent-color: #F5BFBF; /* Medium Pink pour les survols */
            --error-color: #8B2E2E; /* Dark Reddish Tone pour les erreurs */
            --sidebar-color: #8B2E2E; /* Dark Reddish Tone pour la sidebar */
        }

        body {
            font-family: 'Roboto', sans-serif;
            background-color: var(--secondary-color);
            margin: 0;
            padding: 0;
            scroll-behavior: smooth;
            overflow-x: hidden;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        /* Conteneur principal avec sidebar */
        .settings-wrapper {
            display: flex;
            min-height: 100vh;
            width: 100%;
            overflow: hidden; /* Empêche tout débordement indésirable */
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            background-color: var(--sidebar-color);
            color: #fff;
            padding: 30px 20px;
            border-bottom-right-radius: 40px;
            flex-shrink: 0;
            overflow-y: auto; /* Permet le défilement si nécessaire */
            scrollbar-width: thin;
            scrollbar-color: var(--accent-color) var(--sidebar-color);
            animation: bounceInLeft 0.8s cubic-bezier(0.68, -0.55, 0.27, 1.55);
            will-change: transform, opacity;
            box-sizing: border-box;
            min-height: 100vh; /* Hauteur minimale pour couvrir la fenêtre */
            height: auto; /* S'adapte au contenu si plus grand */
        }

        .sidebar::-webkit-scrollbar {
            width: 6px;
        }

        .sidebar::-webkit-scrollbar-thumb {
            background-color: var(--accent-color);
            border-radius: 3px;
            transition: background-color 0.3s ease-in-out;
        }

        .sidebar::-webkit-scrollbar-thumb:hover {
            background-color: #e0a0a0;
        }

        .sidebar::-webkit-scrollbar-track {
            background-color: var(--sidebar-color);
        }

        @keyframes bounceInLeft {
            0% { transform: translateX(-100%); opacity: 0; }
            60% { transform: translateX(20px); opacity: 1; }
            80% { transform: translateX(-10px); }
            100% { transform: translateX(0); opacity: 1; }
        }

        .sidebar h2 {
            font-size: 24px;
            font-weight: 500;
            margin-bottom: 30px;
            letter-spacing: 0.5px;
            transition: transform 0.3s ease-in-out, color 0.3s ease-in-out;
        }

        .sidebar h2:hover {
            transform: scale(1.05);
            color: var(--accent-color);
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .sidebar ul li {
            margin-bottom: 20px;
            opacity: 0;
            animation: fadeInBounce 0.6s ease-in-out forwards;
            animation-delay: calc(0.1s * var(--index));
            transition: transform 0.3s ease-in-out, opacity 0.3s ease-in-out;
            will-change: transform, opacity;
        }

        @keyframes fadeInBounce {
            0% { opacity: 0; transform: translateY(20px); }
            60% { opacity: 1; transform: translateY(-5px); }
            100% { opacity: 1; transform: translateY(0); }
        }

        .sidebar ul li a {
            color: #fff;
            text-decoration: none;
            font-size: 16px;
            font-weight: 400;
            display: flex;
            align-items: center;
            padding: 8px 0;
            position: relative;
            transition: color 0.3s ease-in-out, transform 0.3s ease-in-out, background-color 0.3s ease-in-out;
        }

        .sidebar ul li a::after {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            background-color: var(--accent-color);
            bottom: 0;
            left: 0;
            transition: width 0.3s ease-in-out;
        }

        .sidebar ul li a:hover,
        .sidebar ul li.active a {
            color: var(--accent-color);
            font-weight: 500;
            transform: translateX(8px);
        }

        .sidebar ul li a:hover::after {
            width: 100%;
        }

        .sidebar ul li.active a {
            border-left: 3px solid #fff;
            padding-left: 10px;
        }

        /* Style pour le sous-menu des langues */
        .sidebar ul li.language-menu {
            position: relative;
        }

        .sidebar ul li.language-menu .language-toggle {
            cursor: pointer;
        }

        .sidebar ul li.language-menu .language-submenu {
            display: none;
            padding-left: 20px;
        }

        .sidebar ul li.language-menu .language-submenu.active {
            display: block;
        }

        .sidebar ul li.language-menu .language-submenu a {
            display: block;
            padding: 8px 0;
            color: #fff;
            font-size: 14px;
            font-weight: 400;
            transition: color 0.3s ease-in-out, transform 0.3s ease-in-out;
        }

        .sidebar ul li.language-menu .language-submenu a:hover {
            color: var(--accent-color);
            transform: translateX(8px);
        }

        /* Cacher l'élément "Help" quand le sous-menu est actif */
        .sidebar ul li.help-item.hidden {
            display: none;
        }

        /* Contenu principal */
        .main-content {
            flex: 1;
            padding: 40px;
            overflow-y: auto;
            scrollbar-width: thin;
            scrollbar-color: var(--text-muted) var(--secondary-color);
            animation: bounceInRight 0.8s cubic-bezier(0.68, -0.55, 0.27, 1.55);
            min-height: 100vh;
            background-color: var(--secondary-color);
            transition: background-color 0.3s ease-in-out;
            will-change: transform, opacity;
        }

        .main-content::-webkit-scrollbar {
            width: 6px;
        }

        .main-content::-webkit-scrollbar-thumb {
            background-color: var(--text-muted);
            border-radius: 3px;
            transition: background-color 0.3s ease-in-out;
        }

        .main-content::-webkit-scrollbar-thumb:hover {
            background-color: #999;
        }

        .main-content::-webkit-scrollbar-track {
            background-color: var(--secondary-color);
        }

        @keyframes bounceInRight {
            0% { transform: translateX(100%); opacity: 0; }
            60% { transform: translateX(-20px); opacity: 1; }
            80% { transform: translateX(10px); }
            100% { transform: translateX(0); opacity: 1; }
        }

        .main-content h1 {
            font-size: 24px;
            font-weight: 500;
            color: var(--text-color);
            margin-bottom: 20px;
            position: relative;
            transition: color 0.3s ease-in-out, transform 0.3s ease-in-out;
        }

        .main-content h1::after {
            content: '';
            position: absolute;
            width: 50px;
            height: 3px;
            background-color: var(--primary-color);
            bottom: -5px;
            left: 0;
            transition: width 0.4s ease-in-out, background-color 0.3s ease-in-out;
        }

        .main-content h1:hover {
            transform: translateX(5px);
        }

        .main-content h1:hover::after {
            width: 100px;
            background-color: var(--accent-color);
        }

        /* Sections */
        .settings-section {
            background-color: #fff;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: var(--shadow);
            opacity: 0;
            transform: translateY(30px);
            animation: popIn 0.7s cubic-bezier(0.68, -0.55, 0.27, 1.55) forwards;
            animation-delay: calc(0.2s * var(--index));
            transition: box-shadow 0.3s ease-in-out, transform 0.3s ease-in-out, opacity 0.3s ease-in-out;
            will-change: transform, opacity;
        }

        @keyframes popIn {
            0% { opacity: 0; transform: translateY(30px) scale(0.95); }
            70% { opacity: 1; transform: translateY(-5px) scale(1.02); }
            100% { opacity: 1; transform: translateY(0) scale(1); }
        }

        .settings-section:hover {
            box-shadow: var(--hover-shadow);
            transform: translateY(-5px) scale(1.01);
        }

        .settings-section h3 {
            font-size: 18px;
            font-weight: 500;
            color: var(--text-color);
            margin-bottom: 15px;
            border-left: 4px solid var(--primary-color);
            padding-left: 10px;
            position: relative;
            overflow: hidden;
            transition: color 0.3s ease-in-out, transform 0.3s ease-in-out;
        }

        .settings-section h3::after {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            background-color: var(--accent-color);
            bottom: 0;
            left: 0;
            transition: width 0.4s ease-in-out;
        }

        .settings-section h3:hover {
            transform: translateX(5px);
        }

        .settings-section h3:hover::after {
            width: 100%;
        }

        /* Grille pour organiser les champs du formulaire */
        .form-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
        }

        /* Formulaires */
        .form-group {
            margin-bottom: 20px;
            position: relative;
        }

        .form-group label {
            font-size: 14px;
            font-weight: 500;
            color: var(--text-muted);
            margin-bottom: 8px;
            display: block;
            transition: color 0.3s ease-in-out, transform 0.3s ease-in-out;
        }

        .form-group label:hover {
            color: var(--primary-color);
            transform: translateX(3px);
        }

        .form-group input,
        .form-group select {
            width: 100%;
            padding: 10px;
            border: 1px solid var(--text-muted);
            border-radius: 4px;
            font-size: 14px;
            color: var(--text-color);
            background-color: #fff;
            transition: border-color 0.3s ease-in-out, box-shadow 0.3s ease-in-out, transform 0.3s ease-in-out;
            will-change: border-color, box-shadow, transform;
        }

        .form-group input:focus,
        .form-group select:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 8px rgba(214, 111, 111, 0.3);
            transform: scale(1.02);
        }

        /* Animation pour les champs remplis */
        .form-group input:not(:placeholder-shown),
        .form-group select:not(:placeholder-shown) {
            border-color: var(--primary-color);
            transform: scale(1.01);
            transition: border-color 0.3s ease-in-out, transform 0.3s ease-in-out;
        }

        /* Bouton de soumission */
        .form-group input[type="submit"] {
            background-color: var(--primary-color);
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease-in-out, transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
            position: relative;
            overflow: hidden;
            will-change: transform, box-shadow;
        }

        .form-group input[type="submit"]::after {
            content: '';
            position: absolute;
            width: 0;
            height: 100%;
            background-color: rgba(255, 255, 253, 0.3);
            top: 0;
            left: -100%;
            transition: width 0.4s ease-in-out, left 0.4s ease-in-out;
        }

        .form-group input[type="submit"]:hover {
            background-color: #c55e5e;
            transform: translateY(-3px) scale(1.05);
            box-shadow: 0 4px 12px rgba(139, 46, 46, 0.3);
        }

        .form-group input[type="submit"]:hover::after {
            width: 200%;
            left: 100%;
        }

        /* Photo de profil */
        .profile-picture {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            transition: transform 0.3s ease-in-out;
        }

        .profile-picture:hover {
            transform: scale(1.03);
        }

        .profile-picture img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            margin-right: 15px;
            object-fit: cover;
            border: 2px solid var(--primary-color);
            transition: border-color 0.3s ease-in-out, transform 0.3s ease-in-out;
            will-change: transform, border-color;
        }

        .profile-picture img:hover {
            border-color: var(--accent-color);
            transform: rotate(8deg) scale(1.1);
        }

        .profile-picture .custom-file-upload {
            color: var(--primary-color);
            font-size: 14px;
            text-decoration: none;
            position: relative;
            transition: color 0.3s ease-in-out, transform 0.3s ease-in-out;
        }

        .profile-picture .custom-file-upload::after {
            content: '';
            position: absolute;
            width: 0;
            height: 1px;
            background-color: var(--primary-color);
            bottom: -2px;
            left: 0;
            transition: width 0.3s ease-in-out;
        }

        .profile-picture .custom-file-upload:hover {
            color: var(--accent-color);
            transform: translateX(3px);
        }

        .profile-picture .custom-file-upload:hover::after {
            width: 100%;
        }

        .profile-picture input[type="file"] {
            display: none;
        }

        /* Messages flash */
        .alert-success {
            background-color: var(--accent-color);
            color: var(--text-color);
            padding: 10px;
            border-radius: 4px;
            margin-bottom: 20px;
            opacity: 0;
            animation: popIn 0.5s cubic-bezier(0.68, -0.55, 0.27, 1.55) forwards;
            transition: opacity 0.3s ease-in-out, transform 0.3s ease-in-out;
        }

        .alert-error {
            background-color: var(--error-color);
            color: #fff;
            padding: 10px;
            border-radius: 4px;
            margin-bottom: 20px;
            opacity: 0;
            animation: popIn 0.5s cubic-bezier(0.68, -0.55, 0.27, 1.55) forwards;
            transition: opacity 0.3s ease-in-out, transform 0.3s ease-in-out;
        }

        @keyframes popIn {
            0% { opacity: 0; transform: translateY(10px) scale(0.95); }
            70% { opacity: 1; transform: translateY(-3px) scale(1.02); }
            100% { opacity: 1; transform: translateY(0) scale(1); }
        }

        /* Style pour les erreurs */
        .form-error {
            color: var(--error-color);
            font-size: 12px;
            margin-top: 5px;
            opacity: 0;
            animation: fadeIn 0.3s ease-in-out forwards;
            transition: opacity 0.3s ease-in-out;
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="settings-wrapper">
        <!-- Sidebar -->
        <div class="sidebar">
            <h2>{{ 'settings'|trans }}</h2>
            <ul>
                {% set menu_items = [
                    'Home',
                    'Privacy and Security',
                    'Langages',
                    'Help'
                ] %}
                {% for item in menu_items %}
                    <li style="--index: {{ loop.index }}"
                        {% if item == 'Privacy and Security' or item == 'Home' %}class="active"{% endif %}
                        {% if item == 'Langages' %}class="language-menu"{% endif %}
                        {% if item == 'Help' %}class="help-item"{% endif %}>
                        {% if item == 'Home' %}
                            <a href="{{ path('app_home') }}">{{ item|trans }}</a>
                        {% elseif item == 'Langages' %}
                            <a href="#" class="language-toggle">{{ 'languages'|trans }}</a>
                            <div class="language-submenu">
                                <a href="{{ path('app_change_language', {locale: 'fr'}) }}">{{ 'french'|trans }}</a>
                                <a href="{{ path('app_change_language', {locale: 'en'}) }}">{{ 'english'|trans }}</a>
                            </div>
                        {% else %}
                            <a href="#">{{ item|trans }}</a>
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
        </div>

        <!-- Contenu principal -->
        <div class="main-content">
            {# Titre traduit #}
            <h1>{{ 'privacy_and_security'|trans }}:</h1>

            {% for flash_message in app.flashes('success') %}
                <div class="alert-success">
                    {{ flash_message|trans }}
                </div>
            {% endfor %}
            {% for flash_message in app.flashes('error') %}
                <div class="alert-error">
                    {{ flash_message|trans }}
                </div>
            {% endfor %}

            <!-- Section 1: Informations de base -->
            <div class="settings-section" style="--index: 1">
                <h3>{{ 'your_account'|trans }}</h3>
                <div class="profile-picture">
                    {% if app.user.image %}
                        <img src="{{ asset('uploads/images/' ~ app.user.image) }}" alt="{{ 'profile_picture'|trans }}">
                    {% else %}
                        <img src="{{ asset('images/default-profile.png') }}" alt="{{ 'default_profile_picture'|trans }}">
                    {% endif %}
                    {{ form_start(imageForm, {'attr': {'id': 'imageForm'}}) }}
                    <label for="imageForm_image" class="custom-file-upload">
                        {{ 'edit_profile_picture'|trans }}
                    </label>
                    {{ form_widget(imageForm.image, {'attr': {'id': 'imageForm_image'}}) }}
                    {{ form_widget(imageForm.submit, {'attr': {'style': 'display: none;'}}) }}
                    {{ form_end(imageForm) }}
                </div>

                {{ form_start(form, {'attr': {'is_edit': true}}) }}
                <div class="form-grid">
                    <div class="form-group">
                        {{ form_label(form.nom, null, {'label': 'first_name'|trans}) }}
                        {{ form_widget(form.nom) }}
                        {% if form.nom.vars.errors|length > 0 %}
                            <div class="form-error">{{ form.nom.vars.errors[0].message|trans }}</div>
                        {% endif %}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.prenom, null, {'label': 'last_name'|trans}) }}
                        {{ form_widget(form.prenom) }}
                        {% if form.prenom.vars.errors|length > 0 %}
                            <div class="form-error">{{ form.prenom.vars.errors[0].message|trans }}</div>
                        {% endif %}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.dateOfBirth, null, {'label': 'date_of_birth'|trans}) }}
                        {{ form_widget(form.dateOfBirth) }}
                        {% if form.dateOfBirth.vars.errors|length > 0 %}
                            <div class="form-error">{{ form.dateOfBirth.vars.errors[0].message|trans }}</div>
                        {% endif %}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.gender, null, {'label': 'gender'|trans}) }}
                        {{ form_widget(form.gender) }}
                        {% if form.gender.vars.errors|length > 0 %}
                            <div class="form-error">{{ form.gender.vars.errors[0].message|trans }}</div>
                        {% endif %}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.email, null, {'label': 'email'|trans}) }}
                        {{ form_widget(form.email) }}
                        {% if form.email.vars.errors|length > 0 %}
                            <div class="form-error">{{ form.email.vars.errors[0].message|trans }}</div>
                        {% endif %}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.cin, null, {'label': 'cin'|trans}) }}
                        {{ form_widget(form.cin) }}
                        {% if form.cin.vars.errors|length > 0 %}
                            <div class="form-error">{{ form.cin.vars.errors[0].message|trans }}</div>
                        {% endif %}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.numTel, null, {'label': 'phone_number'|trans}) }}
                        {{ form_widget(form.numTel) }}
                        {% if form.numTel.vars.errors|length > 0 %}
                            <div class="form-error">{{ form.numTel.vars.errors[0].message|trans }}</div>
                        {% endif %}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.adresse, null, {'label': 'address'|trans}) }}
                        {{ form_widget(form.adresse) }}
                        {% if form.adresse.vars.errors|length > 0 %}
                            <div class="form-error">{{ form.adresse.vars.errors[0].message|trans }}</div>
                        {% endif %}
                    </div>
                  <div class="form-group">
                        <label>{{ 'account_confirmed'|trans }}</label>
                        <p>{{ app.user.isConfirmed ? 'Oui' : 'Non' }}</p>
                    </div>
                </div>
            </div>

            <!-- Section 2: Sécurité et accès -->
            <div class="settings-section" style="--index: 2">
                <h3>{{ 'security_and_account_access'|trans }}</h3>
                <div class="form-grid">
                    <div class="form-group">
                        {{ form_label(form.username, null, {'label': 'username'|trans}) }}
                        {{ form_widget(form.username) }}
                        {% if form.username.vars.errors|length > 0 %}
                            <div class="form-error">{{ form.username.vars.errors[0].message|trans }}</div>
                        {% endif %}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.motDePasse, null, {'label': 'password'|trans}) }}
                        {{ form_widget(form.motDePasse) }}
                        {% if form.motDePasse.vars.errors|length > 0 %}
                            <div class="form-error">{{ form.motDePasse.vars.errors[0].message|trans }}</div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="form-group">
                {{ form_widget(form.save, {'label': 'save_changes'|trans}) }}
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Ajuster dynamiquement la hauteur de la sidebar
            const sidebar = document.querySelector('.sidebar');
            const mainContent = document.querySelector('.main-content');
            if (sidebar && mainContent) {
                const adjustSidebarHeight = () => {
                    const mainHeight = mainContent.offsetHeight;
                    sidebar.style.minHeight = `${mainHeight}px`;
                };
                adjustSidebarHeight();
                window.addEventListener('resize', adjustSidebarHeight);
            }

            // Soumettre automatiquement le formulaire de photo après sélection
            const imageInput = document.getElementById('imageForm_image');
            if (imageInput) {
                imageInput.addEventListener('change', function() {
                    if (this.files.length > 0) {
                        const imageForm = document.getElementById('imageForm');
                        if (imageForm) {
                            imageForm.submit();
                        }
                    }
                });
            }

            // Afficher/masquer le sous-menu des langues et gérer la visibilité de "Help"
            const languageToggle = document.querySelector('.language-toggle');
            const languageSubmenu = document.querySelector('.language-submenu');
            const helpItem = document.querySelector('.help-item');

            if (languageToggle && languageSubmenu && helpItem) {
                languageToggle.addEventListener('click', function(e) {
                    e.preventDefault();
                    const isActive = languageSubmenu.classList.toggle('active');
                    if (isActive) {
                        helpItem.classList.add('hidden');
                    } else {
                        helpItem.classList.remove('hidden');
                    }
                    // Réajuster la hauteur après l'ouverture/fermeture du sous-menu
                    adjustSidebarHeight();
                });

                document.addEventListener('click', function(e) {
                    if (!languageToggle.contains(e.target) && !languageSubmenu.contains(e.target)) {
                        languageSubmenu.classList.remove('active');
                        helpItem.classList.remove('hidden');
                        adjustSidebarHeight();
                    }
                });
            }

            // Ajout d'un log pour vérifier que le clic sur "English" est bien détecté
            const englishLink = document.querySelector('a[href*="/change-language/en"]');
            if (englishLink) {
                englishLink.addEventListener('click', function(e) {
                    console.log('English link clicked, redirecting to: ' + this.href);
                });
            }

            const frenchLink = document.querySelector('a[href*="/change-language/fr"]');
            if (frenchLink) {
                frenchLink.addEventListener('click', function(e) {
                    console.log('French link clicked, redirecting to: ' + this.href);
                });
            }

            // Animations au survol des sections
            const sections = document.querySelectorAll('.settings-section');
            sections.forEach(section => {
                section.addEventListener('mouseenter', function() {
