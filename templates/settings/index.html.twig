            <!-- Theme style -->
            <link rel="stylesheet" href="{{ asset('css/style1.css') }}">
            <!-- Font Awesome -->
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
            <!-- Custom styles for navbar and settings -->
            <style>
                :root {
                    --primary-color: #934D1A; /* Marron/brun au lieu de l'indigo */
                    --primary-light: #CAB69A; /* Beige clair */
                    --primary-dark: #723A15; /* Marron/brun foncé */
                    --secondary-color: #AF9D81; /* Beige/brun secondaire */
                    --accent-color: #007bff; /* Bleu d'accent */
                    --success-color: #28a745; /* Vert */
                    --error-color: #dc3545; /* Rouge */
                    --dark-bg: #211A15; /* Fond sombre adapté */
                    --light-bg: #F9F5F0; /* Fond clair beige */
                    --card-bg: rgba(255, 255, 255, 0.05); /* Fond de carte */
                    --text-dark: #333333; /* Texte foncé */
                    --text-light: #F9F5F0; /* Texte clair */
                    --text-muted: #9CA3AF; /* Texte discret */
                    --border-color: rgba(255, 255, 255, 0.1); /* Bordure */
                    --shadow-color: rgba(0, 0, 0, 0.25); /* Ombre */
                    --glass-bg: rgba(33, 26, 21, 0.7); /* Fond avec effet glass adapté */
                    --glass-border: rgba(255, 255, 255, 0.05); /* Bordure glass */
                }

                /* Reset */
                * {
                    box-sizing: border-box;
                    margin: 0;
                    padding: 0;
                }

                body {
                    font-family: 'Poppins', sans-serif;
                    min-height: 100vh;
                    position: relative;
                    overflow-x: hidden;
                    background: none;
                    color: var(--text-light);
                    line-height: 1.6;
                }

                /* Video Background with gradient overlay */
                #background-video {
                    position: fixed;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    object-fit: cover;
                    z-index: -2;
                    filter: brightness(0.5) saturate(1.2);
                }

                body::before {
                    content: '';
                    position: fixed;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    background: linear-gradient(135deg, rgba(33, 26, 21, 0.9), rgba(147, 77, 26, 0.3));
                    z-index: -1;
                    backdrop-filter: blur(10px);
                }

                /* Message d'erreur pour la vidéo */
                #video-error {
                    display: none;
                    position: fixed;
                    top: 10px;
                    left: 50%;
                    transform: translateX(-50%);
                    background: rgba(239, 68, 68, 0.9);
                    color: #fff;
                    padding: 12px 24px;
                    border-radius: 8px;
                    z-index: 1001;
                    font-family: 'Poppins', sans-serif;
                    text-align: center;
                    font-weight: 500;
                    backdrop-filter: blur(10px);
                    box-shadow: 0 4px 20px rgba(239, 68, 68, 0.4);
                }

                /* Navigation fixe */
                #page {
                    min-height: 100vh;
                    display: flex;
                    flex-direction: column;
                    padding-top: 70px;
                }

                .fh5co-nav {
                    position: fixed;
                    top: 0;
                    width: 100%;
                    z-index: 1000;
                    background: rgba(255, 255, 255, 0.9);
                    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
                    backdrop-filter: blur(10px);
                    -webkit-backdrop-filter: blur(10px);
                }

                .fh5co-nav .container {
                    display: flex;
                    align-items: center;
                    justify-content: space-between;
                    padding: 12px 24px;
                    max-width: 1400px;
                    margin: 0 auto;
                }

                .fh5co-logo a {
                    font-family: 'Montserrat', sans-serif;
                    font-weight: 700;
                    font-size: 24px;
                    color: #934D1A;
                    text-decoration: none;
                    letter-spacing: -0.5px;
                    display: flex;
                    align-items: center;
                    gap: 8px;
                }

                .fh5co-logo a:before {
                    content: '';
                    display: inline-block;
                    width: 8px;
                    height: 8px;
                    background: #934D1A;
                    border-radius: 50%;
                    box-shadow: 0 0 12px rgba(147, 77, 26, 0.5);
                }

                .user-circle {
                    display: inline-block;
                    width: 40px;
                    height: 40px;
                    line-height: 40px;
                    text-align: center;
                    border-radius: 50%;
                    background-color: var(--primary-dark);
                    color: var(--text-light);
                    font-size: 18px;
                    vertical-align: middle;
                    margin-right: 8px;
                    border: 2px solid var(--primary-light);
                    overflow: hidden;
                    transition: all 0.3s ease;
                }

                .user-circle img {
                    width: 100%;
                    height: 100%;
                    object-fit: cover;
                    border-radius: 50%;
                }

                .fh5co-nav .menu-1 {
                    display: block;
                }

                .fh5co-nav .menu-1 ul {
                    display: flex;
                    align-items: center;
                    justify-content: flex-end;
                    margin: 0;
                    padding: 0;
                    list-style: none;
                }

                .fh5co-nav .menu-1 ul li {
                    margin: 0 12px;
                    position: relative;
                }

                .fh5co-nav .menu-1 ul li a {
                    font-family: 'Poppins', sans-serif;
                    font-size: 15px;
                    font-weight: 500;
                    color: #333;
                    text-transform: uppercase;
                    text-decoration: none;
                    transition: all 0.3s ease;
                    padding: 8px 12px;
                    border-radius: 6px;
                    letter-spacing: 0.5px;
                }

                .fh5co-nav .menu-1 ul li a:hover {
                    color: #934D1A;
                    background: rgba(255, 255, 255, 0.2);
                }

                .fh5co-nav .menu-1 ul li.active a {
                    color: #934D1A !important;
                    background: rgba(147, 77, 26, 0.1);
                    font-weight: 600;
                }

                .fh5co-nav .menu-1 ul li.has-dropdown {
                    position: relative;
                }

                .fh5co-nav .menu-1 ul li.has-dropdown .dropdown {
                    display: none;
                    position: absolute;
                    top: 100%;
                    right: 0;
                    background: #fff;
                    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
                    list-style: none;
                    padding: 10px 0;
                    min-width: 180px;
                    z-index: 1001;
                    opacity: 0;
                    visibility: hidden;
                    transition: all 0.3s ease;
                    border-radius: 12px;
                    backdrop-filter: blur(12px);
                    -webkit-backdrop-filter: blur(12px);
                    transform: translateY(10px);
                }

                .fh5co-nav .menu-1 ul li.has-dropdown:hover .dropdown {
                    display: block !important;
                    opacity: 1;
                    visibility: visible;
                    transform: translateY(0);
                }

                .fh5co-nav .menu-1 ul li.has-dropdown .dropdown li {
                    margin: 0;
                }

                .fh5co-nav .menu-1 ul li.has-dropdown .dropdown li a {
                    padding: 10px 20px;
                    display: block;
                    font-size: 14px;
                    text-transform: none;
                    color: #333;
                    font-weight: 400;
                    letter-spacing: normal;
                    border-radius: 0;
                }

                .fh5co-nav .menu-1 ul li.has-dropdown .dropdown li a:hover {
                    color: #934D1A;
                    background: rgba(147, 77, 26, 0.1);
                }

                .menu-toggle {
                    display: none;
                    font-size: 24px;
                    cursor: pointer;
                    color: #333;
                    padding: 10px;
                }

                /* Main content wrapper */
                .settings-wrapper {
                    flex: 1;
                    padding: 40px 24px;
                    box-sizing: border-box;
                    position: relative;
                    z-index: 2;
                    max-width: 1200px;
                    margin: 0 auto;
                    width: 100%;
                }

                /* Settings container */
                .settings-container {
                    width: 100%;
                    margin: 20px auto 60px;
                    padding: 40px;
                    background: var(--glass-bg);
                    border-radius: 24px;
                    transition: all 0.4s cubic-bezier(0.19, 1, 0.22, 1);
                    position: relative;
                    z-index: 2;
                    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.3);
                    border: 1px solid var(--glass-border);
                    backdrop-filter: blur(20px);
                    -webkit-backdrop-filter: blur(20px);
                }

                .settings-container:hover {
                    transform: translateY(-5px);
                    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.4);
                }
                
                /* Headings */
                .settings-container h1 {
                    font-family: 'Montserrat', sans-serif;
                    font-size: 2.5rem;
                    font-weight: 700;
                    color: var(--text-light);
                    text-align: center;
                    margin-bottom: 30px;
                    position: relative;
                    display: inline-block;
                    width: 100%;
                    letter-spacing: -0.5px;
                }

                .settings-container h1 span {
                    font-family: 'Poppins', sans-serif;
                    color: var(--primary-light);
                    font-size: 16px;
                    display: block;
                    margin-bottom: 8px;
                    font-weight: 500;
                    text-transform: uppercase;
                    letter-spacing: 3px;
                    opacity: 0.8;
                }

                .settings-container h3 {
                    font-family: 'Poppins', sans-serif;
                    font-size: 1.5rem;
                    font-weight: 600;
                    color: var(--text-light);
                    margin-bottom: 25px;
                    letter-spacing: -0.5px;
                    display: flex;
                    align-items: center;
                    gap: 10px;
                }

                .settings-container h3:before {
                    content: '';
                    display: block;
                    width: 3px;
                    height: 22px;
                    background: var(--primary-light);
                    border-radius: 3px;
                }

                /* Alerts */
                .alert-success,
                .alert-error {
                    padding: 16px 20px;
                    margin-bottom: 24px;
                    border-radius: 12px;
                    font-size: 15px;
                    font-weight: 500;
                    text-align: center;
                    font-family: 'Poppins', sans-serif;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    gap: 10px;
                    animation: slideInDown 0.5s ease forwards;
                    border: 1px solid rgba(255, 255, 255, 0.05);
                    backdrop-filter: blur(10px);
                }

                @keyframes slideInDown {
                    from {
                        opacity: 0;
                        transform: translateY(-20px);
                    }
                    to {
                        opacity: 1;
                        transform: translateY(0);
                    }
                }

                .alert-success {
                    background: rgba(40, 167, 69, 0.15);
                    color: #4cd964;
                    border-left: 4px solid #28a745;
                }

                .alert-success:before {
                    content: '\f058';
                    font-family: 'Font Awesome 6 Free';
                    font-weight: 900;
                    font-size: 18px;
                }

                .alert-error {
                    background: rgba(220, 53, 69, 0.15);
                    color: #ff3b30;
                    border-left: 4px solid #dc3545;
                }

                .alert-error:before {
                    content: '\f057';
                    font-family: 'Font Awesome 6 Free';
                    font-weight: 900;
                    font-size: 18px;
                }

                /* Settings sections */
                .settings-section {
                    margin-bottom: 40px;
                    padding: 30px;
                    background: rgba(255, 255, 255, 0.03);
                    border-radius: 16px;
                    opacity: 0;
                    animation: fadeInUp 0.6s ease forwards;
                    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
                    border: 1px solid var(--glass-border);
                    backdrop-filter: blur(5px);
                    -webkit-backdrop-filter: blur(5px);
                    position: relative;
                    overflow: hidden;
                }

                .settings-section:before {
                    content: '';
                    position: absolute;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 2px;
                    background: linear-gradient(90deg, var(--primary-light), rgba(255, 255, 255, 0.1));
                }

                @keyframes fadeInUp {
                    from {
                        opacity: 0;
                        transform: translateY(30px);
                    }
                    to {
                        opacity: 1;
                        transform: translateY(0);
                    }
                }

                .settings-section.highlight {
                    animation: highlightSection 1s ease-out;
                }

                @keyframes highlightSection {
                    0% {
                        background: rgba(147, 77, 26, 0.2);
                        box-shadow: 0 0 30px rgba(147, 77, 26, 0.4);
                    }
                    100% {
                        background: rgba(255, 255, 255, 0.03);
                        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
                    }
                }

                /* Profile picture */
                .profile-picture {
                    display: flex;
                    flex-direction: column;
                    align-items: center;
                    margin-bottom: 30px;
                    position: relative;
                }

                .profile-picture img {
                    width: 140px;
                    height: 140px;
                    border-radius: 50%;
                    object-fit: cover;
                    margin-bottom: 24px;
                    border: 3px solid var(--primary-light);
                    transition: all 0.3s ease;
                    box-shadow: 0 0 20px rgba(147, 77, 26, 0.4);
                    background: rgba(255, 255, 255, 0.1);
                }

                .profile-picture img:hover {
                    transform: scale(1.05);
                    border-color: var(--accent-color);
                    box-shadow: 0 0 30px rgba(147, 77, 26, 0.6);
                }

                .file-upload-wrapper {
                    position: relative;
                    display: inline-block;
                }

                .custom-file-upload {
                    display: inline-flex;
                    align-items: center;
                    justify-content: center;
                    gap: 8px;
                    padding: 12px 24px;
                    background: var(--primary-color);
                    color: white;
                    border-radius: 8px;
                    cursor: pointer;
                    font-family: 'Poppins', sans-serif;
                    font-size: 14px;
                    font-weight: 500;
                    transition: all 0.3s ease;
                    box-shadow: 0 4px 15px rgba(147, 77, 26, 0.3);
                    border: 1px solid rgba(255, 255, 255, 0.1);
                }

                .custom-file-upload:before {
                    content: '\f030';
                    font-family: 'Font Awesome 6 Free';
                    font-weight: 900;
                }

                .custom-file-upload:hover {
                    background: var(--primary-dark);
                    transform: translateY(-2px);
                    box-shadow: 0 8px 20px rgba(147, 77, 26, 0.4);
                }

                .file-upload-wrapper input[type="file"] {
                    position: absolute;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    opacity: 0;
                    cursor: pointer;
                }

                /* Form styling */
                .form-grid {
                    display: grid;
                    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
                    gap: 24px;
                }

                .form-group {
                    margin-bottom: 24px;
                    position: relative;
                }

                .form-group label {
                    font-family: 'Poppins', sans-serif;
                    font-size: 14px;
                    color: var(--text-muted);
                    margin-bottom: 8px;
                    font-weight: 500;
                    display: block;
                    transition: all 0.3s ease;
                }

                .form-group label:hover {
                    color: var(--primary-light);
                }

                .form-group input,
                .form-group select {
                    width: 100%;
                    padding: 12px 16px;
                    border: 1px solid rgba(255, 255, 255, 0.1);
                    border-radius: 8px;
                    font-family: 'Inter', sans-serif;
                    font-size: 15px;
                    background: rgba(255, 255, 255, 0.05);
                    color: var(--text-light);
                    transition: all 0.3s ease;
                    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
                }

                .form-group input:focus,
                .form-group select:focus {
                    outline: none;
                    background: rgba(255, 255, 255, 0.08);
                    border-color: var(--primary-light);
                    box-shadow: 0 0 0 3px rgba(147, 77, 26, 0.2);
                }

                .form-group input::placeholder {
                    color: var(--text-muted);
                    opacity: 0.7;
                }

                .form-error {
                    color: #F87171;
                    font-size: 13px;
                    margin-top: 6px;
                    font-family: 'Poppins', sans-serif;
                    display: block;
                    display: flex;
                    align-items: center;
                    gap: 5px;
                }

                .form-error:before {
                    content: '\f071';
                    font-family: 'Font Awesome 6 Free';
                    font-weight: 900;
                    font-size: 11px;
                }

                .form-group button[type="submit"] {
                    padding: 14px 28px;
                    background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
                    border: none;
                    border-radius: 8px;
                    font-family: 'Poppins', sans-serif;
                    font-size: 16px;
                    font-weight: 600;
                    color: white;
                    cursor: pointer;
                    transition: all 0.3s ease;
                    box-shadow: 0 4px 15px rgba(147, 77, 26, 0.3);
                    display: inline-flex;
                    align-items: center;
                    justify-content: center;
                    gap: 10px;
                    margin-top: 10px;
                    position: relative;
                    overflow: hidden;
                }

                .form-group button[type="submit"]:before {
                    content: '\f0c7';
                    font-family: 'Font Awesome 6 Free';
                    font-weight: 900;
                }

                .form-group button[type="submit"]:hover {
                    background: linear-gradient(135deg, var(--primary-dark), var(--primary-color));
                    transform: translateY(-2px);
                    box-shadow: 0 8px 25px rgba(147, 77, 26, 0.5);
                }

                .form-group button[type="submit"]:after {
                    content: '';
                    position: absolute;
                    width: 100%;
                    height: 100%;
                    top: 0;
                    left: -100%;
                    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
                    transition: 0.5s;
                }

                .form-group button[type="submit"]:hover:after {
                    left: 100%;
                }

                /* Password toggle icon */
                .password-container {
                    position: relative;
                    display: flex;
                    align-items: center;
                }

                .password-container input {
                    width: 100%;
                    padding-right: 40px;
                }

                .password-toggle-icon {
                    position: absolute;
                    right: 12px;
                    cursor: pointer;
                    color: var(--text-muted);
                    font-size: 16px;
                    transition: all 0.3s ease;
                    background: transparent;
                    border: none;
                    padding: 5px;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                }

                .password-toggle-icon:hover {
                    color: var(--primary-light);
                }

                /* Navigation links */
                .settings-nav {
                    display: flex;
                    justify-content: center;
                    gap: 16px;
                    margin-bottom: 40px;
                    flex-wrap: wrap;
                    padding: 0 12px;
                }

                .settings-nav a {
                    padding: 12px 20px;
                    background: rgba(255, 255, 255, 0.05);
                    color: var(--text-light);
                    text-decoration: none;
                    border-radius: 8px;
                    font-family: 'Poppins', sans-serif;
                    font-size: 14px;
                    font-weight: 500;
                    transition: all 0.3s ease;
                    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
                    border: 1px solid var(--glass-border);
                    display: flex;
                    align-items: center;
                    gap: 8px;
                    min-width: 120px;
                    justify-content: center;
                }

                .settings-nav a:before {
                    font-family: 'Font Awesome 6 Free';
                    font-weight: 900;
                }

                .settings-nav a[href$="home"]:before {
                    content: '\f015';
                }

                .settings-nav a[href$="account-information"]:before {
                    content: '\f007';
                }

                .settings-nav a[href$="change-password"]:before {
                    content: '\f023';
                }

                .language-toggle:before {
                    content: '\f0ac';
                }

                .settings-nav a:hover {
                    background: rgba(147, 77, 26, 0.1);
                    transform: translateY(-3px);
                    box-shadow: 0 6px 15px rgba(147, 77, 26, 0.2);
                }

                .settings-nav a.active {
                    background: var(--primary-color);
                    color: white;
                    font-weight: 600;
                    box-shadow: 0 6px 15px rgba(147, 77, 26, 0.3);
                }

                /* Language submenu */
                .language-submenu {
                    display: none;
                    position: absolute;
                    background: rgba(17, 24, 39, 0.95);
                    border-radius: 8px;
                    overflow: hidden;
                    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
                    z-index: 100;
                    margin-top: 5px;
                    backdrop-filter: blur(10px);
                    -webkit-backdrop-filter: blur(10px);
                    border: 1px solid var(--glass-border);
                    min-width: 150px;
                }

                .language-submenu.active {
                    display: block;
                    animation: fadeIn 0.3s ease forwards;
                }

                .language-submenu a {
                    font-size: 14px;
                    padding: 12px 16px;
                    background: transparent;
                    display: flex;
                    align-items: center;
                    gap: 8px;
                    color: var(--text-light);
                    border-radius: 0;
                    border: none;
                    box-shadow: none;
                    margin: 0;
                    width: 100%;
                    justify-content: flex-start;
                }

                .language-submenu a:hover {
                    background: rgba(147, 77, 26, 0.1);
                    transform: none;
                    box-shadow: none;
                }

                .language-submenu a:before {
                    display: inline-block;
                    width: 20px;
                    height: 15px;
                    background-size: cover;
                    background-position: center;
                    content: '';
                }

                .language-submenu a[href*="locale=fr"]:before {
                    background-image: url('https://flagcdn.com/w20/fr.png');
                }

                .language-submenu a[href*="locale=en"]:before {
                    background-image: url('https://flagcdn.com/w20/gb.png');
                }

                /* Footer */
                #fh5co-footer {
                    margin-top: auto;
                    background: rgba(17, 24, 39, 0.7);
                    backdrop-filter: blur(10px);
                    -webkit-backdrop-filter: blur(10px);
                    border-top: 1px solid var(--glass-border);
                    padding: 20px 0;
                }

                #fh5co-footer p {
                    color: var(--text-muted);
                    font-size: 14px;
                }

                /* Animations */
                @keyframes fadeIn {
                    from { opacity: 0; }
                    to { opacity: 1; }
                }

                @keyframes pulse {
                    0% { box-shadow: 0 0 0 0 rgba(79, 70, 229, 0.7); }
                    70% { box-shadow: 0 0 0 10px rgba(79, 70, 229, 0); }
