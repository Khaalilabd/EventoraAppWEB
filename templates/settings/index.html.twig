            <style>
                /* Reset */
                * {
                    box-sizing: border-box;
                }

                body {
                    margin: 0;
                    padding: 0;
                    font-family: 'Work Sans', sans-serif;
                    min-height: 100vh;
                    position: relative;
                    overflow-x: hidden;
                    background: none; /* Supprime tout fond statique */
                }

                /* Video Background */
                #background-video {
                    position: fixed;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    object-fit: cover;
                    z-index: -2;
                }

                body::before {
                    content: '';
                    position: fixed;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    background: rgba(0, 0, 0, 0.6); /* Overlay plus sombre pour meilleure lisibilité */
                    z-index: -1;
                }

                /* Message d'erreur pour la vidéo */
                #video-error {
                    display: none;
                    position: fixed;
                    top: 10px;
                    left: 50%;
                    transform: translateX(-50%);
                    background: rgba(255, 77, 77, 0.9);
                    color: #fff;
                    padding: 10px 20px;
                    border-radius: 5px;
                    z-index: 1001;
                    font-family: 'Work Sans', sans-serif;
                    text-align: center;
                }

                /* Navigation fixe */
                #page {
                    min-height: 100vh;
                    display: flex;
                    flex-direction: column;
                    padding-top: 70px;
                }

                .fh5co-nav {
                    position: fixed;
                    top: 0;
                    width: 100%;
                    z-index: 1000;
                    background: rgba(255, 255, 255, 0.95);
                    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
                    backdrop-filter: blur(10px);
                    -webkit-backdrop-filter: blur(10px);
                }

                .fh5co-nav .container {
                    display: flex;
                    align-items: center;
                    justify-content: space-between;
                    padding: 10px 15px;
                    max-width: 1200px;
                    margin: 0 auto;
                }

                .fh5co-logo a {
                    font-family: 'Work Sans', sans-serif;
                    font-weight: 700;
                    font-size: 24px;
                    color: #934D1A;
                    text-decoration: none;
                }

                .user-circle {
                    display: inline-block;
                    width: 40px;
                    height: 40px;
                    line-height: 40px;
                    text-align: center;
                    border-radius: 50%;
                    background-color: #f0f0f0;
                    color: #333;
                    font-size: 20px;
                    vertical-align: middle;
                    margin-right: 8px;
                }

                .user-circle img {
                    width: 100%;
                    height: 100%;
                    object-fit: cover;
                    border-radius: 50%;
                }

                .fh5co-nav .menu-1 {
                    display: block;
                }

                .fh5co-nav .menu-1 ul {
                    display: flex;
                    align-items: center;
                    justify-content: flex-end;
                    margin: 0;
                    padding: 0;
                    list-style: none;
                }

                .fh5co-nav .menu-1 ul li {
                    margin: 0 15px;
                    position: relative;
                }

                .fh5co-nav .menu-1 ul li a {
                    font-family: 'Work Sans', sans-serif;
                    font-size: 16px;
                    color: #333;
                    text-transform: uppercase;
                    text-decoration: none;
                    transition: color 0.3s ease;
                }

                .fh5co-nav .menu-1 ul li a:hover {
                    color: #934D1A;
                }

                .fh5co-nav .menu-1 ul li.active a {
                    color: #934D1A !important;
                    font-weight: 600;
                }

                .fh5co-nav .menu-1 ul li.has-dropdown {
                    position: relative;
                }

                .fh5co-nav .menu-1 ul li.has-dropdown .dropdown {
                    display: none;
                    position: absolute;
                    top: 100%;
                    right: 0;
                    background-color: #fff;
                    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
                    list-style: none;
                    padding: 10px 0;
                    min-width: 150px;
                    z-index: 1001;
                    transition: opacity 0.3s ease, visibility 0.3s ease;
                    opacity: 0;
                    visibility: hidden;
                }

                .fh5co-nav .menu-1 ul li.has-dropdown:hover .dropdown {
                    display: block;
                    opacity: 1;
                    visibility: visible;
                }

                .fh5co-nav .menu-1 ul li.has-dropdown .dropdown li {
                    margin: 0;
                }

                .fh5co-nav .menu-1 ul li.has-dropdown .dropdown li a {
                    padding: 10px 20px;
                    display: block;
                    font-size: 14px;
                    text-transform: none;
                    color: #333;
                }

                .fh5co-nav .menu-1 ul li.has-dropdown .dropdown li a:hover {
                    color: #f57c00;
                }

                .menu-toggle {
                    display: none;
                    font-size: 24px;
                    cursor: pointer;
                    color: #333;
                    padding: 10px;
                }

                /* Main content wrapper */
                .settings-wrapper {
                    flex: 1;
                    padding: 70px 20px 40px;
                    box-sizing: border-box;
                    position: relative;
                    z-index: 2;
                    max-width: 1200px;
                    margin: 0 auto;
                }

                /* Settings container */
                .settings-container {
                    width: 100%;
                    margin: 40px auto;
                    padding: 40px;
                    background: linear-gradient(to bottom, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.4)); /* Plus sombre pour contraste */
                    border-radius: 20px;
                    transition: transform 0.3s ease;
                    position: relative;
                    z-index: 2;
                    box-shadow: 0 5px 15px rgba(217, 130, 43, 0.3); /* Ombre dorée */
                }

                .settings-container:hover {
                    transform: translateY(-5px);
                    box-shadow: 0 8px 20px rgba(217, 130, 43, 0.5);
                }

                /* Headings */
                .settings-container h1 {
                    font-family: 'Cormorant Garamond', serif;
                    font-size: 2.5rem;
                    font-weight: 700;
                    color: #ffffff;
                    text-align: center;
                    margin-bottom: 40px;
                    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
                }

                .settings-container h1 span {
                    font-family: 'Sacramento', cursive;
                    color: #d9822b;
                    font-size: 18px;
                    display: block;
                    margin-bottom: 10px;
                    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
                }

                .settings-container h3 {
                    font-family: 'Work Sans', sans-serif;
                    font-size: 1.8rem;
                    font-weight: 600;
                    color: #ffffff;
                    margin-bottom: 30px;
                    text-transform: uppercase;
                    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
                }

                /* Alerts */
                .alert住了success,
                .alert-error {
                    padding: 1rem;
                    margin-bottom: 1.5rem;
                    border-radius: 10px;
                    font-size: 1rem;
                    text-align: center;
                    font-family: 'Work Sans', sans-serif;
                    color: #ffffff;
                    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
                }

                .alert-success {
                    background-color: rgba(22, 163, 74, 0.8);
                }

                .alert-error {
                    background-color: rgba(255, 77, 77, 0.8);
                }

                /* Settings sections */
                .settings-section {
                    margin-bottom: 2.5rem;
                    padding: 30px;
                    background: linear-gradient(to bottom, rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.3));
                    border-radius: 20px;
                    opacity: 0;
                    animation: fadeIn 0.5s ease forwards;
                    box-shadow: 0 3px 10px rgba(217, 130, 43, 0.2);
                }

                @keyframes fadeIn {
                    from {
                        opacity: 0;
                        transform: translateY(20px);
                    }
                    to {
                        opacity: 1;
                        transform: translateY(0);
                    }
                }

                .settings-section.highlight {
                    animation: highlightSection 1s ease-out;
                }

                @keyframes highlightSection {
                    0% {
                        background: linear-gradient(to bottom, rgba(147, 77, 26, 0.8), rgba(217, 130, 43, 0.8));
                        color: #ffffff;
                    }
                    100% {
                        background: linear-gradient(to bottom, rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.3));
                        color: #ffffff;
                    }
                }

                /* Profile picture */
                .profile-picture {
                    display: flex;
                    flex-direction: column;
                    align-items: center;
                    margin-bottom: 2rem;
                }

                .profile-picture img {
                    width: 120px;
                    height: 120px;
                    border-radius: 50%;
                    object-fit: cover;
                    margin-bottom: 1.5rem;
                    border: 3px solid #d9822b;
                    transition: transform 0.3s ease;
                    box-shadow: 0 0 10px rgba(217, 130, 43, 0.5);
                }

                .profile-picture img:hover {
                    transform: scale(1.1);
                }

                .file-upload-wrapper {
                    position: relative;
                    display: inline-block;
                }

                .custom-file-upload {
                    display: inline-block;
                    padding: 10px 25px;
                    background: linear-gradient(135deg, #934D1A, #D9822B);
                    color: #ffffff;
                    border-radius: 30px;
                    cursor: pointer;
                    font-family: 'Work Sans', sans-serif;
                    font-size: 1rem;
                    font-weight: 500;
                    text-transform: uppercase;
                    letter-spacing: 1px;
                    transition: background 0.3s ease, transform 0.3s ease;
                    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
                    box-shadow: 0 2px 8px rgba(217, 130, 43, 0.4);
                }

                .custom-file-upload:hover {
                    background: linear-gradient(135deg, #b66b1d, #d9822b);
                    transform: scale(1.05);
                    box-shadow: 0 4px 12px rgba(217, 130, 43, 0.6);
                }

                .file-upload-wrapper input[type="file"] {
                    position: absolute;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    opacity: 0;
                    cursor: pointer;
                }

                /* Form styling */
                .form-grid {
                    display: grid;
                    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
                    gap: 1.5rem;
                }

                .form-group {
                    margin-bottom: 20px;
                }

                .form-group label {
                    font-family: 'Work Sans', sans-serif;
                    font-size: 1rem;
                    color: #ffffff; /* Texte blanc pour contraste */
                    margin-bottom: 5px;
                    font-weight: 500;
                    display: block;
                    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.7);
                }

                .form-group input,
                .form-group select {
                    padding: 10px;
                    border: 1px solid rgba(217, 130, 43, 0.3); /* Bordure dorée subtile */
                    border-radius: 5px;
                    font-family: 'Roboto', sans-serif;
                    font-size: 1rem;
                    background: rgba(255, 255, 255, 0.9); /* Fond blanc semi-transparent */
                    color: #333;
                    transition: background 0.3s ease, border-color 0.3s ease;
                    box-shadow: 0 1px 5px rgba(0, 0, 0, 0.2);
                }

                .form-group input:focus,
                .form-group select:focus {
                    background: rgba(255, 255, 255, 1);
                    border-color: #d9822b;
                    outline: none;
                    box-shadow: 0 0 8px rgba(217, 130, 43, 0.4);
                }

                .form-group input::placeholder {
                    color: rgba(0, 0, 0, 0.5);
                }

                .form-error {
                    color: #ff4d4d;
                    font-size: 0.9rem;
                    margin-top: 5px;
                    font-family: 'Work Sans', sans-serif;
                    display: block;
                    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
                }

                .form-group button[type="submit"] {
                    padding: 10px 25px;
                    background: linear-gradient(135deg, #934D1A, #D9822B);
                    border: none;
                    border-radius: 30px;
                    font-family: 'Work Sans', sans-serif;
                    font-size: 1rem;
                    font-weight: 500;
                    color: #ffffff;
                    text-transform: uppercase;
                    letter-spacing: 1px;
                    cursor: pointer;
                    transition: background 0.3s ease, transform 0.3s ease;
                    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
                    box-shadow: 0 2px 8px rgba(217, 130, 43, 0.4);
                }

                .form-group button[type="submit"]:hover {
                    background: linear-gradient(135deg, #b66b1d, #d9822b);
                    transform: scale(1.05);
                    box-shadow: 0 4px 12px rgba(217, 130, 43, 0.6);
                }

                /* Password toggle icon */
                .password-container {
                    position: relative;
                    display: flex;
                    align-items: center;
                }

                .password-container input {
                    width: 100%;
                    padding-right: 2.5rem;
                }

                .password-toggle-icon {
                    position: absolute;
                    right: 0.75rem;
                    cursor: pointer;
                    color: #ffffff;
                    font-size: 1.2rem;
                    transition: color 0.3s ease;
                    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
                }

                .password-toggle-icon:hover {
                    color: #d9822b;
                }

                /* Navigation links */
                .settings-nav {
                    display: flex;
                    justify-content: center;
                    gap: 1rem;
                    margin-bottom: 2rem;
                    flex-wrap: wrap;
                }

                .settings-nav a {
                    padding: 10px 25px;
                    background: linear-gradient(135deg, #934D1A, #D9822B);
                    color: #ffffff;
                    text-decoration: none;
                    border-radius: 30px;
                    font-family: 'Work Sans', sans-serif;
                    font-size: 1rem;
                    font-weight: 500;
                    text-transform: uppercase;
                    letter-spacing: 1px;
                    transition: background 0.3s ease, transform 0.3s ease;
                    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
                    box-shadow: 0 2px 8px rgba(217, 130, 43, 0.4);
                }

                .settings-nav a:hover {
                    background: linear-gradient(135deg, #b66b1d, #d9822b);
                    transform: scale(1.05);
                    box-shadow: 0 4px 12px rgba(217, 130, 43, 0.6);
                    animation: pulse 0.5s ease;
                }

                @keyframes pulse {
                    0% { transform: scale(1); }
                    50% { transform: scale(1.08); }
                    100% { transform: scale(1.05); }
                }

                .settings-nav a.active {
                    background: linear-gradient(135deg, #b66b1d, #d9822b);
                    font-weight: 600;
                    box-shadow: 0 4px 12px rgba(217, 130, 43, 0.6);
                }

                /* Language submenu */
                .language-submenu {
                    display: none;
                    margin-top: 0.5rem;
                    padding-left: 2rem;
                }

                .language-submenu.active {
                    display: block;
                }

                .language-submenu a {
                    font-size: 0.9rem;
                    padding: 0.5rem 1rem;
                    background: transparent;
                    display: block;
                    color: #ffffff;
                    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
                }

                /* Footer */
                #fh5co-footer {
                    margin-top: auto;
                    background: rgba(0, 0, 0, 0.5);
                    z-index: 2;
                }

                /* Responsive adjustments */
                @media (max-width: 1024px) {
                    .form-grid {
                        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
                    }
                }

                @media (max-width: 768px) {
                    .menu-toggle {
                        display: block;
                    }

                    .fh5co-nav .menu-1 ul {
                        display: none;
                        flex-direction: column;
                        position: absolute;
                        top: 60px;
                        left: 0;
                        width: 100%;
                        background-color: #fff;
                        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
                        padding: 20px 0;
                    }

                    .fh5co-nav .menu-1 ul.active {
                        display: flex;
                    }

                    .fh5co-nav .menu-1 ul li {
                        margin: 10px 0;
                        text-align: center;
                    }

                    .user-circle {
                        margin-right: 0;
                        margin-bottom: 5px;
                    }

                    .fh5co-nav .menu-1 ul li.has-dropdown .dropdown {
                        position: static;
                        display: none;
                        box-shadow: none;
                        background-color: #f8f9fa;
                        padding: 10px 0;
                        opacity: 1;
                        visibility: visible;
                    }

                    .fh5co-nav .menu-1 ul li.has-dropdown:hover .dropdown {
                        display: none;
                    }

                    .fh5co-nav .menu-1 ul li.has-dropdown.active .dropdown {
                        display: block;
                    }

                    .settings-wrapper {
                        padding: 60px 15px 20px;
                    }

                    .settings-container {
                        padding: 20px;
                        margin: 20px auto;
                    }

                    .settings-container h1 {
                        font-size: 2rem;
                    }

                    .settings-container h3 {
                        font-size: 1.5rem;
                    }

                    .form-grid {
                        grid-template-columns: 1fr;
                    }

                    .settings-nav {
                        flex-direction: column;
                        align-items: center;
                    }

                    .settings-nav a {
                        width: 100%;
                        text-align: center;
                        padding: 10px;
                    }

                    #background-video {
                        object-fit: cover;
                        height: 100vh;
                    }
                }

                @media (max-width: 640px) {
                    .settings-container h1 {
                        font-size: 1.8rem;
                    }

                    .settings-container h3 {
                        font-size: 1.3rem;
                    }

                    .profile-picture img {
                        width: 100px;
                        height: 100px;
                    }

                    .settings-nav a {
                        padding: 8px;
                        font-size: 0.9rem;
                    }
                }
            </style>
            <!-- Include Font Awesome for eye icons -->
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        {% endblock %}

        <!-- Modernizr JS -->
        <script src="{{ asset('js/modernizr-2.6.2.min.js') }}"></script>
        <!--[if lt IE 9]>
        <script src="{{ asset('js/respond.min.js') }}"></script>
        <![endif]-->
    </head>
