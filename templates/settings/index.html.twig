            <script>
                $(document).ready(function() {
                    // Auto-submit profile picture form on file selection
                    const imageInput = $('#imageForm_image');
                    if (imageInput.length) {
                        imageInput.on('change', function() {
                            if (this.files && this.files.length > 0) {
                                $('#imageForm').submit();
                            }
                        });
                    }

                    // Toggle language submenu
                    const languageToggle = $('.language-toggle');
                    const languageSubmenu = $('.language-submenu');
                    if (languageToggle.length && languageSubmenu.length) {
                        languageToggle.on('click', function(e) {
                            e.preventDefault();
                            languageSubmenu.toggleClass('active');
                        });

                        $(document).on('click', function(e) {
                            if (!languageToggle.is(e.target) && !languageSubmenu.is(e.target) && languageSubmenu.has(e.target).length === 0) {
                                languageSubmenu.removeClass('active');
                            }
                        });
                    }

                    // Smooth scroll for section links and manage active state
                    const scrollLinks = $('.scroll-link');
                    scrollLinks.each(function() {
                        $(this).on('click', function(e) {
                            e.preventDefault();

                            // Remove active class from all nav links
                            scrollLinks.removeClass('active');
                            $(this).addClass('active');

                            // Smooth scroll to target section
                            const targetId = $(this).attr('href').substring(1);
                            const targetSection = $('#' + targetId);
                            if (targetSection.length) {
                                const offset = 70; /* Matches navbar height */
                                const sectionPosition = targetSection.offset().top - offset;
                                $('html, body').animate({
                                    scrollTop: sectionPosition
                                }, 800);

                                // Add highlight animation
                                targetSection.addClass('highlight');
                                setTimeout(() => {
                                    targetSection.removeClass('highlight');
                                }, 1000);
                            }
                        });
                    });

                    // Password toggle functionality
                    const passwordInput = $('.password-input');
                    const passwordToggle = $('#password-toggle');
                    if (passwordInput.length && passwordToggle.length) {
                        passwordToggle.on('click', function() {
                            const type = passwordInput.attr('type') === 'password' ? 'text' : 'password';
                            passwordInput.attr('type', type);
                            $(this).toggleClass('fa-eye fa-eye-slash');
                        });
                    }

                    // Ensure navbar mobile toggle works
                    $('.menu-toggle').on('click', function() {
                        $('.fh5co-nav .menu-1 ul').toggleClass('active');
                    });

                    // Set active state for Settings in navbar dropdown
                    $('.fh5co-nav .menu-1 ul li.has-dropdown .dropdown li a').each(function() {
                        if ($(this).attr('href') === '{{ path('app_settings') }}') {
                            $(this).addClass('active');
                            $(this).closest('.has-dropdown').addClass('active');
                        }
                    });

                    // Vérification du chargement de la vidéo
                    const video = $('#background-video')[0];
                    const videoErrorDiv = $('#video-error');
                    if (video && videoErrorDiv.length) {
                        video.addEventListener('error', function(e) {
                            const errorMessages = {
                                1: 'Lecture de la vidéo interrompue.',
                                2: 'Erreur réseau lors du chargement de la vidéo.',
                                3: 'Erreur de décodage de la vidéo (format corrompu ou non supporté).',
                                4: 'La source vidéo n\'est pas supportée ou le fichier est introuvable.'
                            };
                            const errorCode = e.target.error.code;
                            const errorMessage = errorMessages[errorCode] || 'Erreur inconnue lors du chargement de la vidéo.';
                            console.error('Erreur de chargement de la vidéo:', {
                                code: errorCode,
                                message: e.target.error.message,
                                src: video.src
                            });
                            videoErrorDiv.text('Erreur vidéo: ' + errorMessage + ' (Vérifiez la console pour plus de détails)');
                            videoErrorDiv.show();
                            $('#background-video').css('display', 'none');
                        });
                        video.addEventListener('loadeddata', function() {
                            console.log('Vidéo chargée avec succès:', video.src);
                            videoErrorDiv.hide();
                            $('body').css('background', 'none');
                        });
                        video.addEventListener('canplay', function() {
                            console.log('La vidéo est prête à être lue.');
                        });
                    }
                });
            </script>
