{% block javascripts %}
    {{ parent() }}
    <script>
        // Fonction de débouncing pour limiter les clics rapides
        function debounce(func, wait) {
            let timeout;
            return function executedFunction(...args) {
                const later = () => {
                    clearTimeout(timeout);
                    func(...args);
                };
                clearTimeout(timeout);
                timeout = setTimeout(later, wait);
            };
        }

        document.getElementById('regenerateResponse').addEventListener('click', debounce(function() {
            const reclamationId = this.getAttribute('data-reclamation-id');
            const textarea = document.querySelector('textarea[name="reclamation_rep[reponse]"]');
            const regenerateButton = this;

            // Désactiver le bouton pendant la requête
            regenerateButton.disabled = true;
            regenerateButton.textContent = 'Génération en cours...';

            fetch('{{ path('admin_reclamations_generate_response', {'id': reclamation.id}) }}', {
                method: 'POST',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest',
                    'Content-Type': 'application/json',
                },
            })
            .then(response => response.json())
            .then(data => {
                if (data.success && data.response) {
                    textarea.value = data.response;
                } else {
                    alert('Erreur lors de la génération de la réponse : ' + (data.message || 'Veuillez réessayer.'));
                }
            })
            .catch(error => {
                console.error('Erreur AJAX:', error);
                alert('Erreur lors de la communication avec le serveur.');
            })
            .finally(() => {
                // Réactiver le bouton
                regenerateButton.disabled = false;
                regenerateButton.textContent = 'Régénérer la suggestion';
            });
        }, 5000)); // Délai de 5 secondes entre les clics
    </script>
