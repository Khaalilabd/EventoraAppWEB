                                                                    <i class="bx bx-edit-alt me-1"></i> Modifier Statut
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a class="dropdown-item delete-reclamation" href="{{ path('admin_reclamations_delete', {'id': reclamation.id}) }}" data-token="{{ csrf_token('delete' ~ reclamation.id) }}">
                                                                    <i class="bx bx-trash me-1"></i> Supprimer
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    {% else %}
                                        <tr>
                                            <td colspan="7" class="text-center">Aucune réclamation trouvée</td>
                                        </tr>
                                    {% endif %}
                                </tbody>
                            </table>
                        </div>

                        {# Pagination manuelle #}
                        {% if reclamations is defined and reclamations is not empty %}
                            <nav aria-label="Page navigation">
                                <ul class="pagination">
                                    <li class="page-item {{ currentPage == 1 ? 'disabled' : '' }}">
                                        <a class="page-link" href="{{ path('admin_reclamations', {'page': currentPage - 1}) }}" {{ currentPage == 1 ? 'aria-disabled="true"' : '' }}>Précédent</a>
                                    </li>
                                    {% for page in 1..totalPages %}
                                        <li class="page-item {{ currentPage == page ? 'active' : '' }}">
                                            <a class="page-link" href="{{ path('admin_reclamations', {'page': page}) }}">{{ page }}</a>
                                        </li>
                                    {% endfor %}
                                    <li class="page-item {{ currentPage == totalPages ? 'disabled' : '' }}">
                                        <a class="page-link" href="{{ path('admin_reclamations', {'page': currentPage + 1}) }}" {{ currentPage == totalPages ? 'aria-disabled="true"' : '' }}>Suivant</a>
                                    </li>
                                </ul>
                            </nav>
                        {% endif %}
                    </div>
                </div>
