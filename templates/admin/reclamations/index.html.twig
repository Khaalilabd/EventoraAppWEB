        }

        /* Nouvelle classe pour le bouton orange */
        .card-header .btn-orange {
            background-color: #ff6200;
            color: #fff;
            border: none;
        }

        .card-header .btn-orange:hover {
            background-color: #ff8c00;
        }

        /* Style du tableau */
        .table-container {
            width: 100%;
        }

        .table {
            width: 100%;
            min-width: 1600px; /* Augmenter la largeur pour un meilleur espacement */
        }

        .table-responsive {
            overflow-x: auto;
        }

        .table thead th {
            background-color: #ff6200;
            color: #fff;
            text-transform: uppercase;
            font-size: 0.85rem;
            font-weight: 600;
            padding: 15px 25px; /* Plus d'espace dans les en-têtes */
            border-bottom: 2px solid #e9ecef;
        }

        .table tbody tr {
            transition: background-color 0.3s ease;
        }

        .table tbody tr:nth-child(odd) {
            background-color: #f8f9fa;
        }

        .table tbody tr:hover {
            background-color: #f1f3f5;
        }

        .table tbody td {
            padding: 15px 25px; /* Plus d'espace dans les cellules */
            font-size: 0.9rem;
            color: #333;
            border-bottom: 1px solid #e9ecef;
        }

        /* Badges pour les statuts */
        .badge {
            font-size: 0.8rem;
            padding: 5px 10px;
            border-radius: 12px;
            color: #fff;
            display: inline-block;
            min-width: 80px;
            text-align: center;
        }

        .badge-en_cours {
            background-color:rgb(20, 55, 253); /* Orange pour "En_Cours" */
        }

        .badge-en_attente {
            background-color: #ffc107; /* Jaune pour "En_Attente" */
            color: #333;
        }

        .badge-resolue {
            background-color: #28a745; /* Vert pour "Resolue" */
        }

        .badge-rejetee {
            background-color: #dc3545; /* Rouge pour "Rejetée" */
        }

        /* Style du dropdown pour les actions */
        .action-toggle {
            cursor: pointer;
            font-size: 1.5rem; /* Ajuste la taille pour rendre le : plus visible */
            color: #ff6200;
            border: none;
            background: none;
            padding: 0;
            line-height: 1;
            font-weight: bold; /* Rend le caractère plus épais */
        }

        .dropdown-menu {
            min-width: 150px;
            border-radius: 5px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
        }

        .dropdown-item i {
            margin-right: 8px;
        }

        .dropdown-item:hover {
            background-color: #ff6200;
            color: #fff;
        }

        /* Style de la pagination */
        .pagination {
            justify-content: center;
            margin-top: 20px;
        }

        .page-item.active .page-link {
            background-color: #ff6200;
            border-color: #ff6200;
            color: #fff;
        }

        .page-link {
            color: #ff6200;
            border-radius: 5px;
            margin: 0 5px;
            padding: 8px 12px;
        }

        .page-link:hover {
            background-color: #ff8c00;
            color: #fff;
        }

        .page-item.disabled .page-link {
            color: #ccc;
            cursor: not-allowed;
        }
    </style>
{% endblock %}

