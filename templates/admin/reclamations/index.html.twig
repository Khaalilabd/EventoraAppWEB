                                                <div class="mt-3">
                                                    <a href="{{ path('admin_reclamations_show_qr', {'id': reclamation.id}) }}" class="btn btn-action btn-view">Détails</a>
                                                    {% if reclamation.statut in ['En_Attente', 'En_Cours'] %}
                                                        <a href="{{ path('admin_reclamations_traiter', {'id': reclamation.id}) }}" class="btn btn-action btn-edit">Traiter</a>
                                                    {% endif %}
                                                    <a href="#" class="btn btn-action btn-delete" onclick="if(confirm('Voulez-vous vraiment supprimer cette réclamation ?')) { document.getElementById('delete-form-{{ reclamation.id }}').submit(); } return false;">Supprimer</a>
                                                    <form id="delete-form-{{ reclamation.id }}" method="post" action="{{ path('admin_reclamations_delete', {'id': reclamation.id}) }}" style="display: none;">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reclamation.id) }}">
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                {% else %}
                                    <div class="alert alert-info text-center" role="alert">
                                        Aucune réclamation trouvée.
                                    </div>
                                {% endif %}
                            </div>
                        </div>

                        <!-- Pagination -->
                        {% if total_pages > 1 %}
                            <nav aria-label="Page navigation">
                                <ul class="pagination">
                                    <li class="page-item {{ current_page == 1 ? 'disabled' : '' }}">
                                        <a class="page-link" href="{{ path('admin_reclamations', {'page': current_page - 1, 'sort_by': sort_by, 'sort_order': sort_order, 'status_filter': status_filter, 'search': searchTerm}) }}" aria-label="Previous">
                                            <span aria-hidden="true">«</span>
                                        </a>
                                    </li>
                                    {% for i in 1..total_pages %}
                                        <li class="page-item {{ current_page == i ? 'active' : '' }}">
                                            <a class="page-link" href="{{ path('admin_reclamations', {'page': i, 'sort_by': sort_by, 'sort_order': sort_order, 'status_filter': status_filter, 'search': searchTerm}) }}">{{ i }}</a>
                                        </li>
                                    {% endfor %}
                                    <li class="page-item {{ current_page == total_pages ? 'disabled' : '' }}">
                                        <a class="page-link" href="{{ path('admin_reclamations', {'page': current_page + 1, 'sort_by': sort_by, 'sort_order': sort_order, 'status_filter': status_filter, 'search': searchTerm}) }}" aria-label="Next">
                                            <span aria-hidden="true">»</span>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        {% endif %}
                    </div>

                    <!-- Menu de tri à droite -->
                    <div class="col-lg-3 col-md-12">
                        <div class="filter-section">
                            <h6 class="text-dark font-weight-bold"><i class="fas fa-filter me-2"></i>Options de Tri</h6>
                            <form method="get" action="{{ path('admin_reclamations') }}" class="row g-3 align-items-center">
                                <div class="col-12">
                                    <label for="status_filter" class="form-label text-sm font-weight-bold">Filtrer par Statut</label>
                                    <select name="status_filter" id="status_filter" class="form-select" onchange="this.form.submit()">
                                        {% for value, label in statuses %}
                                            <option value="{{ value }}" {{ status_filter == value ? 'selected' : '' }}>{{ label }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="col-12">
                                    <label class="form-label text-sm font-weight-bold">Trier par Date</label>
                                    <div class="btn-group w-100" role="group">
                                        <a href="{{ path('admin_reclamations', {'sort_by': 'date', 'sort_order': 'asc', 'status_filter': status_filter, 'search': searchTerm, 'page': current_page}) }}"
                                           class="btn btn-outline-primary {{ sort_by == 'date' and sort_order == 'asc' ? 'active' : '' }}">
                                            <i class="fas fa-arrow-up me-1"></i> Croissant
                                        </a>
                                        <a href="{{ path('admin_reclamations', {'sort_by': 'date', 'sort_order': 'desc', 'status_filter': status_filter, 'search': searchTerm, 'page': current_page}) }}"
                                           class="btn btn-outline-primary {{ sort_by == 'date' and sort_order == 'desc' ? 'active' : '' }}">
                                            <i class="fas fa-arrow-down me-1"></i> Décroissant
                                        </a>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <label class="form-label text-sm font-weight-bold">Trier par Type</label>
                                    <div class="btn-group w-100" role="group">
                                        <a href="{{ path('admin_reclamations', {'sort_by': 'Type', 'sort_order': 'asc', 'status_filter': status_filter, 'search': searchTerm, 'page': current_page}) }}"
                                           class="btn btn-outline-primary {{ sort_by == 'Type' and sort_order == 'asc' ? 'active' : '' }}">
                                            <i class="fas fa-arrow-up me-1"></i> Croissant
                                        </a>
                                        <a href="{{ path('admin_reclamations', {'sort_by': 'Type', 'sort_order': 'desc', 'status_filter': status_filter, 'search': searchTerm, 'page': current_page}) }}"
                                           class="btn btn-outline-primary {{ sort_by == 'Type' and sort_order == 'desc' ? 'active' : '' }}">
                                            <i class="fas fa-arrow-down me-1"></i> Décroissant
                                        </a>
                                    </div>
                                </div>
                                <div class="col-12 d-flex align-items-end">
                                    <a href="{{ path('admin_reclamations') }}" class="btn btn-outline-secondary w-100">
                                        <i class="fas fa-undo me-1"></i> Réinitialiser
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Recherche en temps réel
        document.getElementById('searchReclamation').addEventListener('input', function(e) {
            const searchText = e.target.value.toLowerCase();
            const cards = document.querySelectorAll('.reclamation-card');
            cards.forEach(card => {
                const title = card.querySelector('.card-summary h6').textContent.toLowerCase();
                const description = card.querySelector('.card-details p:nth-child(1)').textContent.toLowerCase();
                card.style.display = title.includes(searchText) || description.includes(searchText) ? '' : 'none';
            });
        });

        // Toggle pour l'expansion des cartes
        function toggleCard(card) {
            card.classList.toggle('expanded');
        }
    </script>
{% endblock %}