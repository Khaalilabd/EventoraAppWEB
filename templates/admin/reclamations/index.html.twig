                                        <th>Description</th>
                                        <th>Type</th>
                                        <th>Statut</th>
                                        <th>Membre</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody class="table-border-bottom-0">
                                    {% if reclamations is defined and reclamations is not empty %}
                                        {# Pagination manuelle : Limiter à 5 éléments par page #}
                                        {% set itemsPerPage = 5 %}
                                        {% set currentPage = app.request.query.get('page', 1)|default(1)|number_format %}
                                        {% set totalItems = reclamations|length %}
                                        {% set totalPages = (totalItems / itemsPerPage)|round(0, 'ceil') %}
                                        {% set startIndex = (currentPage - 1) * itemsPerPage %}
                                        {% set endIndex = startIndex + itemsPerPage %}

                                        {% for reclamation in reclamations|slice(startIndex, itemsPerPage) %}
                                            <tr class="table-default">
                                                <td>{{ reclamation.id }}</td>
                                                <td>{{ reclamation.titre }}</td>
                                                <td>{{ reclamation.description|length > 50 ? reclamation.description|slice(0, 50) ~ '...' : reclamation.description }}</td>
                                                <td>{{ reclamation.type }}</td>
                                                <td>
                                                    <span class="badge badge-{{ reclamation.statut|lower|replace({'en_attente': 'en_attente', 'en_cours': 'en_cours', 'resolue': 'resolue', 'rejetée': 'rejetee'}) }}">
                                                        {{ reclamation.statut }}
                                                    </span>
                                                </td>
                                                <td>{{ reclamation.membre ? reclamation.membre.email : 'Anonyme' }}</td>
                                                <td>
                                                    <div class="dropdown">
                                                        <button class="action-toggle" type="button" id="dropdownMenuButton{{ reclamation.id }}" data-bs-toggle="dropdown" aria-expanded="false">
