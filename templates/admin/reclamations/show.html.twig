                                <h6 class="mb-0">Réclamation #{{ reclamation.id }}</h6>
                            </div>
                            <div class="card-body">
                                <p class="text-sm mb-2"><strong>Titre :</strong> {{ reclamation.titre }}</p>
                                <p class="text-sm mb-2"><strong>Description :</strong> {{ reclamation.description }}</p>
                                <p class="text-sm mb-2"><strong>Type :</strong> {{ reclamation.Type }}</p>
                                <p class="text-sm mb-2">
                                    <strong>Statut :</strong>
                                    <span class="badge badge-{{ reclamation.statut|lower|replace({'en_attente': 'en_attente', 'en_cours': 'en_cours', 'resolue': 'resolue', 'rejetée': 'rejetée'}) }}">
                                        {{ reclamation.statut }}
                                    </span>
                                </p>
                                <p class="text-sm mb-2"><strong>Date :</strong> {{ reclamation.date|date('Y-m-d') }}</p>
                                <p class="text-sm mb-2"><strong>Utilisateur :</strong> {{ reclamation.membre.email }}</p>
                            </div>
