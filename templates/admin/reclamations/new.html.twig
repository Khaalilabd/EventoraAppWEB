            <script>
                if (typeof jQuery === 'undefined') {
                    console.error("jQuery is not loaded. Issue with CDN or network.");
                } else {
                    console.log("jQuery loaded successfully");
                    jQuery(document).ready(function($) {
                        // Hamburger menu
                        $('.menu-toggle').click(function() {
                            console.log("Click on menu-toggle detected");
                            $('.fh5co-nav .menu-1 ul').toggleClass('active');
                        });

                        // Dropdowns on mobile
                        $('.fh5co-nav .menu-1 ul li.has-dropdown > a').click(function(e) {
                            if ($(window).width() <= 768) {
                                console.log("Click on dropdown detected");
                                e.preventDefault();
                                $(this).parent().toggleClass('active');
                                
                                // Fermer les autres dropdowns
                                $('.fh5co-nav .menu-1 ul li.has-dropdown').not($(this).parent()).removeClass('active');
                            }
                        });

                        // Dropdowns on desktop with hover
                        $('.fh5co-nav .menu-1 ul li.has-dropdown').hover(
                            function() {
                                console.log("Hover detected on has-dropdown element");
                                $(this).find('.dropdown').css({
                                    'display': 'block',
                                    'position': 'absolute',
                                    'top': '100%',
                                    'right': '0',
                                    'visibility': 'visible',
                                    'opacity': '1',
                                    'z-index': '1001'
                                });
                            },
                            function() {
                                console.log("End of hover");
                                $(this).find('.dropdown').css({
                                    'display': 'none',
                                    'visibility': 'hidden',
                                    'opacity': '0'
                                });
                            }
                        );

                        // AJAX submission
                        $('#complaint-form').on('submit', function(event) {
                            event.preventDefault();
                            const form = this;
                            const $submitButton = $(this).find('.btn-primary');
                            $submitButton.addClass('loading').prop('disabled', true);

                            const formData = new FormData(form);

                            // Reset errors and styles
                            $('.form-control').removeClass('is-invalid');
                            $('.text-danger').empty();

                            $.ajax({
                                url: form.action,
                                method: form.method,
                                data: formData,
                                processData: false,
                                contentType: false,
                                dataType: 'json',
                                headers: { 'X-Requested-With': 'XMLHttpRequest' },
                                success: function(data) {
                                    console.log('AJAX response received', data);
                                    $submitButton.removeClass('loading').prop('disabled', false);
                                    if (data.success) {
                                        $('#successPopup p').text(data.message);
                                        $('#successPopup').fadeIn();
                                        $('#popupOverlay').fadeIn();
                                        $('#closeSuccessPopup').data('redirect-url', '{{ path('app_user_history') }}');
                                        form.reset();
                                    } else {
                                        if (data.errors) {
                                            for (const field in data.errors) {
                                                const errorMessage = data.errors[field][0];
                                                const $field = $(`[name="reclamation[${field}]"]`);
                                                if ($field.length) {
                                                    $field.addClass('is-invalid');
                                                    $field.closest('.form-group').find('.text-danger').text(errorMessage);
                                                } else {
                                                    console.warn(`Field ${field} not found in the form.`);
                                                }
                                            }
                                        }
                                        alert(data.message || 'Please correct the errors in the form.');
                                    }
                                },
                                error: function(xhr, status, error) {
                                    console.error('AJAX error:', {
                                        status: status,
                                        error: error,
                                        response: xhr.responseText,
                                    });
                                    $submitButton.removeClass('loading').prop('disabled', false);
                                    try {
                                        const data = JSON.parse(xhr.responseText);
                                        if (data.errors) {
                                            for (const field in data.errors) {
                                                const errorMessage = data.errors[field][0];
                                                const $field = $(`[name="reclamation[${field}]"]`);
                                                if ($field.length) {
                                                    $field.addClass('is-invalid');
                                                    $field.closest('.form-group').find('.text-danger').text(errorMessage);
                                                } else {
                                                    console.warn(`Field ${field} not found in the form.`);
                                                }
                                            }
                                        }
                                        alert(data.message || 'Error communicating with the server.');
                                    } catch (e) {
                                        alert('Error communicating with the server. Please try again.');
                                    }
                                }
                            });
                        });

                        // Close pop-up and redirect
                        $('#closeSuccessPopup').on('click', function() {
                            $('#successPopup').fadeOut();
                            $('#popupOverlay').fadeOut();
                            var redirectUrl = $(this).data('redirect-url');
                            if (redirectUrl) {
                                window.location.href = redirectUrl;
                            }
                        });

                        // Close pop-up by clicking on overlay
                        $('#popupOverlay').on('click', function() {
                            $('#successPopup').fadeOut();
                            $('#popupOverlay').fadeOut();
                            var redirectUrl = $('#closeSuccessPopup').data('redirect-url');
                            if (redirectUrl) {
                                window.location.href = redirectUrl;
                            }
                        });
                    });
                }
            </script>
        {% endblock %}
    </body>
