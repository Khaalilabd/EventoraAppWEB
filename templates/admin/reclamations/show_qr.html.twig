{% extends 'admin/dashboard.html.twig' %}

{% block admin_content %}
    <h2>QR Code de la Réclamation #{{ reclamation.id }}</h2>
    <div class="card">
        <div class="card-header">
            <h6 class="mb-0">Détails</h6>
        </div>
        <div class="card-body">
            <p><strong>Titre :</strong> {{ reclamation.titre }}</p>
            <p><strong>Statut :</strong> {{ reclamation.statut }}</p>
            <div class="text-center">
                <img src="{{ reclamation.qr_code_url }}" alt="QR Code" class="img-fluid" style="max-width: 200px;">
                <p class="mt-2"><a href="{{ reclamation.qr_code_url }}" target="_blank">{{ reclamation.qr_code_url }}</a></p>
            </div>
            <a href="{{ path('admin_reclamations') }}" class="btn btn-secondary mt-3">Retour</a>
        </div>
    </div>
{% endblock %}