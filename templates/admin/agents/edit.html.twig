{% extends 'admin/dashboard.html.twig' %}

{% block title %}Modifier un Agent - Eventora{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Card Styling */
        .edit-card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            background: linear-gradient(145deg, #ffffff, #f8f9fa);
            transition: transform 0.3s ease;
        }
        .edit-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
        }
        .card-header {
            background: linear-gradient(90deg, #007bff, #0056b3);
            color: #fff;
            border-radius: 12px 12px 0 0;
            padding: 20px;
            font-size: 1.2rem;
            font-weight: 600;
        }

        /* Form Styling */
        .form-label {
            font-weight: 600;
            color: #333;
            margin-bottom: 8px;
            font-size: 0.95rem;
        }
        .form-control {
            border: 1px solid #ced4da;
            border-radius: 8px;
            padding: 10px 15px;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        }
        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.3);
            outline: none;
        }
        .form-control::placeholder {
            color: #adb5bd;
        }
        .form-select {
            border: 1px solid #ced4da;
            border-radius: 8px;
            padding: 10px 15px;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        }
        .form-select:focus {
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.3);
            outline: none;
        }

        /* Custom Checkbox Toggle */
        .custom-switch {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .custom-switch input {
            display: none;
        }
        .custom-switch-label {
            position: relative;
            display: inline-block;
            width: 40px;
            height: 20px;
            background-color: #ccc;
            border-radius: 20px;
            transition: background-color 0.3s ease;
            cursor: pointer;
        }
        .custom-switch-label::after {
            content: '';
            position: absolute;
            width: 16px;
            height: 16px;
            background-color: #fff;
            border-radius: 50%;
            top: 2px;
            left: 2px;
            transition: transform 0.3s ease;
        }
        .custom-switch input:checked + .custom-switch-label {
            background-color: #28a745;
        }
        .custom-switch input:checked + .custom-switch-label::after {
            transform: translateX(20px);
        }
        .custom-switch span {
            font-size: 0.95rem;
            color: #333;
            font-weight: 500;
        }

        /* Buttons */
        .btn-primary {
            background: linear-gradient(90deg, #fd7e14, #ff9f43);
            border: none;
            border-radius: 8px;
            padding: 10px 20px;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
            box-shadow: 0 2px 8px rgba(253, 126, 20, 0.3);
        }
        .btn-primary:hover {
            background: linear-gradient(90deg, #ff9f43, #fd7e14);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(253, 126, 20, 0.4);
        }
        .btn-secondary {
            background-color: #6c757d;
            border: none;
            border-radius: 8px;
            padding: 10px 20px;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
            box-shadow: 0 2px 8px rgba(108, 117, 125, 0.3);
        }
        .btn-secondary:hover {
            background-color: #5a6268;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(108, 117, 125, 0.4);
        }

        /* Responsive Adjustments */
        @media (max-width: 768px) {
            .card-header {
                font-size: 1.1rem;
                padding: 15px;
            }
            .form-control, .form-select {
                font-size: 0.9rem;
                padding: 8px 12px;
            }
            .btn-primary, .btn-secondary {
                font-size: 0.9rem;
                padding: 8px 15px;
            }
        }
    </style>
{% endblock %}

{% block content %}
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur">
        <div class="container-fluid py-1 px-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                    <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="{{ path('admin_dashboard') }}">Dashboard</a></li>
                    <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="{{ path('app_agent_index') }}">Agents</a></li>
                    <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Modifier</li>
                </ol>
                <h6 class="font-weight-bolder mb-0">Modifier un Agent</h6>
            </nav>
        </div>
    </nav>

    <div class="container-fluid py-4">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10 col-sm-12">
                <div class="card edit-card">
                    <div class="card-header">
                        <h5 class="mb-0">Modifier Agent #{{ agent.id }}</h5>
                    </div>
                    <div class="card-body p-4">
                        {{ form_errors(form) }} {# Afficher les erreurs globales (ex. CSRF) #}
                        {{ form_start(form) }}
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.nom, {'attr': {'class': 'form-control' ~ (form.nom.vars.valid == false ? ' is-invalid' : '')}}) }}
                                    {{ form_errors(form.nom) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.prenom, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control' ~ (form.prenom.vars.valid == false ? ' is-invalid' : '')}}) }}
                                    {{ form_errors(form.prenom) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.email, {'attr': {'class': 'form-control' ~ (form.email.vars.valid == false ? ' is-invalid' : '')}}) }}
                                    {{ form_errors(form.email) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.cin, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.cin, {'attr': {'class': 'form-control' ~ (form.cin.vars.valid == false ? ' is-invalid' : '')}}) }}
                                    {{ form_errors(form.cin) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.numTel, 'Numéro de Téléphone', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.numTel, {'attr': {'class': 'form-control' ~ (form.numTel.vars.valid == false ? ' is-invalid' : '')}}) }}
                                    {{ form_errors(form.numTel) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.adresse, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.adresse, {'attr': {'class': 'form-control' ~ (form.adresse.vars.valid == false ? ' is-invalid' : '')}}) }}
                                    {{ form_errors(form.adresse) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.dateOfBirth, 'Date de naissance', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.dateOfBirth, {'attr': {'class': 'form-control' ~ (form.dateOfBirth.vars.valid == false ? ' is-invalid' : ''), 'placeholder': 'JJ/MM/AAAA'}}) }}
                                    {{ form_errors(form.dateOfBirth) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.gender, 'Genre', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.gender, {'attr': {'class': 'form-select' ~ (form.gender.vars.valid == false ? ' is-invalid' : '')}}) }}
                                    {{ form_errors(form.gender) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.username, "Nom d'utilisateur", {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.username, {'attr': {'class': 'form-control' ~ (form.username.vars.valid == false ? ' is-invalid' : '')}}) }}
                                    {{ form_errors(form.username) }}
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.motDePasse, 'Mot de Passe (laisser vide pour ne pas modifier)', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.motDePasse, {'attr': {'class': 'form-control' ~ (form.motDePasse.vars.valid == false ? ' is-invalid' : '')}}) }}
                                    {{ form_errors(form.motDePasse) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.role, 'Rôle', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.role, {'attr': {'class': 'form-select' ~ (form.role.vars.valid == false ? ' is-invalid' : ''), 'readonly': 'readonly'}}) }}
                                    {{ form_errors(form.role) }}
                                </div>
                                <div class="col-md-6 mb-3 d-flex align-items-end">
                                    <div class="custom-switch">
                                        {{ form_widget(form.isConfirmed, {'attr': {'class': 'custom-control-input'}}) }}
                                        <label class="custom-switch-label" for="{{ form.isConfirmed.vars.id }}"></label>
                                        <span>Compte confirmé</span>
                                    </div>
                                    {{ form_errors(form.isConfirmed) }}
                                </div>
                            </div>
                            <div class="d-flex justify-content-end gap-3 mt-4">
                                <button type="submit" class="btn btn-primary">Modifier</button>
                                <a href="{{ path('app_agent_index') }}" class="btn btn-secondary">Retour</a>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}