{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Main Styling */
        .agent-details-container {
            margin-left: 270px;
        }
        
        /* Card Styling */
        .agent-profile-card {
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
            padding: 0;
            overflow: hidden;
            margin-bottom: 30px;
            border: 2px solid #ffc107;
            transition: all 0.3s ease;
        }
        
        .agent-profile-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.18);
        }
        
        .profile-header {
            background: linear-gradient(120deg, #f7c00d, #ffd747);
            color: #333;
            padding: 25px;
            position: relative;
            text-align: center;
        }
        
        .profile-avatar {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            border: 5px solid rgba(255, 255, 255, 0.7);
            margin: 0 auto 15px;
            overflow: hidden;
            background-color: #f5f5f5;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .profile-avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        
        .profile-avatar i {
            font-size: 3rem;
            color: #f7c00d;
        }
        
        .profile-name {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 5px;
        }
        
        .profile-label {
            display: inline-block;
            font-size: 0.9rem;
            padding: 6px 12px;
            border-radius: 50px;
            background-color: rgba(255, 255, 255, 0.4);
            border: 1px solid rgba(255, 255, 255, 0.7);
            animation: pulse 2s infinite;
        }
        
        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }
        
        .profile-body {
            padding: 30px;
        }
        
        .info-section {
            margin-bottom: 25px;
        }
        
        .info-section h6 {
            font-size: 1.1rem;
            font-weight: 600;
            color: #f7c00d;
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 1px solid #eaeaea;
        }
        
        .info-item {
            display: flex;
            margin-bottom: 15px;
            align-items: center;
        }
        
        .info-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: linear-gradient(135deg, #fff8e1, #ffecb3);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
            flex-shrink: 0;
        }
        
        .info-icon i {
            color: #f7c00d;
            font-size: 1.2rem;
        }
        
        .info-content {
            flex-grow: 1;
        }
        
        .info-label {
            font-size: 0.85rem;
            color: #666;
            margin-bottom: 2px;
        }
        
        .info-value {
            font-size: 1rem;
            color: #333;
            font-weight: 500;
        }
        
        .badge-agent {
            font-size: 0.85rem;
            padding: 5px 12px;
            border-radius: 50px;
            display: inline-block;
            background-color: #ffc107;
            color: #333;
        }
        
        .badge-confirmed, .badge-not-confirmed {
            font-size: 0.85rem;
            padding: 5px 12px;
            border-radius: 50px;
            display: inline-block;
        }
        
        .badge-confirmed {
            background-color: #28a745;
            color: white;
        }
        
        .badge-not-confirmed {
            background-color: #dc3545;
            color: white;
        }
        
        .actions-container {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-top: 25px;
        }
        
        .btn-action {
            padding: 10px 25px;
            border-radius: 50px;
            font-weight: 600;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }
        
        .btn-back {
            background-color: #007bff;
            color: white;
            border: none;
        }
        
        .btn-back:hover {
            background-color: #0056b3;
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0, 123, 255, 0.4);
        }
        
        .btn-edit {
            background-color: #ffc107;
            color: #333;
            border: none;
        }
        
        .btn-edit:hover {
            background-color: #e0a800;
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(255, 193, 7, 0.4);
        }
        
        /* Responsive Design */
        @media (max-width: 992px) {
            .agent-details-container {
                margin-left: 0;
            }
        }
    </style>
{% endblock %}

