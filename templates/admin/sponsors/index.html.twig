            font-weight: 600;
            color: #1f2937;
            font-size: 1.1rem;
        }
        .form-label {
            font-weight: 500;
            font-size: 0.9rem;
            color: #1f2937;
        }
        .btn-group .btn {
            padding: 8px 15px;
            font-size: 0.9rem;
            border-radius: 8px;
            display: flex;
            align-items: center;
            gap: 6px;
            transition: all 0.2s ease;
        }
        .btn-group .btn i {
            font-size: 1rem;
        }
        .btn-group .btn.active {
            background: #4f46e5;
            color: #ffffff;
            border-color: #4f46e5;
        }
        .btn-group .btn:hover {
            background: #e0f2fe;
            color: #1f2937;
        }
        .btn-reset {
            background: #f8f9fa;
            border: 1px solid #d1d5db;
            color: #1f2937;
            padding: 8px 15px;
            border-radius: 8px;
            font-size: 0.9rem;
            transition: background-color 0.2s ease;
        }
        .btn-reset:hover {
            background: #e5e7eb;
        }

        /* Pagination */
        .pagination {
            display: flex;
            justify-content: center;
            margin-top: 30px;
            gap: 8px;
        }
        .pagination .page-item .page-link {
            color: #4f46e5;
            border: none;
            padding: 10px 16px;
            border-radius: 50%;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            background: #ffffff;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
        }
        .pagination .page-item.active .page-link {
            background: #4f46e5;
            color: #ffffff;
            box-shadow: 0 4px 12px rgba(79, 70, 229, 0.3);
        }
        .pagination .page-item .page-link:hover {
            background: #e0f2fe;
            color: #4338ca;
            transform: translateY(-2px);
        }
        .pagination .page-item.disabled .page-link {
            color: #d1d5db;
            background: #f8f9fa;
            box-shadow: none;
        }

        /* Modale */
        .modal-content {
            border-radius: 12px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
        }
        .modal-header {
            background: #1f2937;
            color: #ffffff;
            border-radius: 12px 12px 0 0;
            padding: 15px 20px;
        }
        .modal-body {
            padding: 20px;
            font-size: 0.9rem;
            background: #ffffff;
        }
        .modal-body p {
            margin: 8px 0;
            color: #1f2937;
        }
        .modal-footer {
            padding: 15px;
            background: #f8f9fa;
            border-radius: 0 0 12px 12px;
        }
        .modal-footer .btn {
            padding: 8px 16px;
            border-radius: 8px;
        }

        /* Responsive */
        @media (max-width: 992px) {
            .sponsor-container {
                margin-left: 0;
            }
            .filter-section {
                margin-top: 20px;
            }
        }
        @media (max-width: 768px) {
            .business-card {
                font-size: 0.8rem;
                min-height: 160px; /* Légèrement plus petit pour les petits écrans */
            }
            .business-card .card-header h6 {
                font-size: 0.9rem;
            }
            .business-card .card-body p {
                font-size: 0.8rem;
            }
            .business-card .icon-container {
                width: 32px;
                height: 32px;
            }
            .business-card .actions a {
                width: 20px;
                height: 20px;
                font-size: 0.8rem;
            }
            .search-bar .input-group {
                max-width: 100%;
            }
            .table-header {
                flex-direction: column;
                gap: 15px;
                align-items: stretch;
            }
            .action-buttons {
                justify-content: center;
            }
            .pagination .page-link {
                padding: 8px 12px;
                font-size: 0.85rem;
            }
        }
    </style>
{% endblock %}

