{% block javascripts %}
    {{ parent() }}
    <script>
        // Recherche en temps réel
        document.getElementById('searchSponsor').addEventListener('input', function(e) {
            const searchText = e.target.value.toLowerCase().trim();
            const cards = document.querySelectorAll('#sponsorList .col-lg-4');
            cards.forEach(card => {
                const nom = card.querySelector('.card-header h6').textContent.toLowerCase();
                const email = card.querySelector('.card-body p:nth-child(1)').textContent.toLowerCase();
                const telephone = card.querySelector('.card-body p:nth-child(2)').textContent.toLowerCase();
                const site = card.querySelector('.card-body p:nth-child(3)').textContent.toLowerCase();
                const type = card.querySelector('.card-header .badge').textContent.toLowerCase();
                card.style.display = nom.includes(searchText) || email.includes(searchText) || telephone.includes(searchText) || site.includes(searchText) || type.includes(searchText) ? '' : 'none';
            });
        });

        // Exportation en CSV
        function exportToCSV() {
            const cards = document.querySelectorAll('#sponsorList .col-lg-4');
            let csvContent = 'ID,Nom,Email,Téléphone,Adresse,Site Web,Type\n';
            cards.forEach(card => {
                const id = card.querySelector('.card-header h6').textContent.replace('Partenaire #', '');
                const nom = card.querySelector('.card-header h6').textContent.replace(/,/g, '');
                const email = card.querySelector('.card-body p:nth-child(1)').textContent.replace('Email : ', '').replace(/,/g, '');
                const telephone = card.querySelector('.card-body p:nth-child(2)').textContent.replace('Tél : ', '').replace(/,/g, '');
                const site = card.querySelector('.card-body p:nth-child(3)').textContent.replace('Site : ', '').replace(/,/g, '');
                const type = card.querySelector('.card-header .badge').textContent.replace(/,/g, '');
                csvContent += `${id},${nom},${email},${telephone},,${site},${type}\n`; // Adresse non affichée, laissée vide
            });
            const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
            const link = document.createElement('a');
            link.href = URL.createObjectURL(blob);
            link.download = 'partenaires.csv';
            link.click();
        }
    </script>
{% endblock %}