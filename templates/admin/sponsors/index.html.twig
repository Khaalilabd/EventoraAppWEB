    align-items: center;
    justify-content: center;
    width: 100%;
    padding: 0;
    color: inherit;
    text-align: left;
}

.sort-btn:hover {
    color: #007bff;
}

.sort-icon {
    margin-left: 5px;
    font-size: 0.8em;
}

.sort-asc .sort-icon::after {
    content: '↑';
}

.sort-desc .sort-icon::after {
    content: '↓';
}
</style>

<!-- Ajout du JavaScript pour gérer le tri -->
<script>
document.addEventListener('DOMContentLoaded', () => {
    const table = document.querySelector('.modern-table');
    const headers = table.querySelectorAll('.sort-btn');
    let currentSortColumn = null;
    let isAsc = true;

    headers.forEach(header => {
        header.addEventListener('click', () => {
            const sortKey = header.getAttribute('data-sort');
            if (currentSortColumn === sortKey) {
                isAsc = !isAsc;
            } else {
                isAsc = true;
                headers.forEach(h => {
                    h.classList.remove('sort-asc', 'sort-desc');
                    h.querySelector('.sort-icon').innerHTML = '↕';
                });
            }
            currentSortColumn = sortKey;

            // Mettre à jour l'icône de tri
            header.classList.add(isAsc ? 'sort-asc' : 'sort-desc');
            header.classList.remove(isAsc ? 'sort-desc' : 'sort-asc');

            // Trier les lignes
            sortTable(sortKey, isAsc);
        });
    });

    function sortTable(column, asc) {
        const tbody = table.querySelector('tbody');
        const rows = Array.from(tbody.querySelectorAll('tr'));

        rows.sort((a, b) => {
            let aValue = a.querySelector(`td[data-label="${column}"]`).textContent.trim();
            let bValue = b.querySelector(`td[data-label="${column}"]`).textContent.trim();

            // Gestion des nombres pour ID Partenaire
            if (column === 'id_partenaire') {
                aValue = parseInt(aValue) || 0;
                bValue = parseInt(bValue) || 0;
                return asc ? aValue - bValue : bValue - aValue;
            }

            // Tri alphabétique pour les autres colonnes
            return asc
                ? aValue.localeCompare(bValue)
                : bValue.localeCompare(aValue);
        });

        // Réinsérer les lignes triées
        tbody.innerHTML = '';
        rows.forEach(row => tbody.appendChild(row));
    }
});
</script>
