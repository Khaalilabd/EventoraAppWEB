    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg">
        <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur">
            <div class="container-fluid py-1 px-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                        <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="#">Pages</a></li>
                        <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Nouvelle Réservation Personnalisée</li>
                    </ol>
                    <h6 class="font-weight-bolder mb-0">Ajouter une Réservation Personnalisée</h6>
                </nav>
                <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
                    <div class="ms-md-auto pe-md-3 d-flex align-items-center">
                        <div class="input-group">
                            <span class="input-group-text text-body"><i class="fas fa-search" aria-hidden="true"></i></span>
                            <input type="text" class="form-control" placeholder="Rechercher...">
                        </div>
                    </div>
                    <ul class="navbar-nav justify-content-end">
                        <li class="nav-item d-flex align-items-center">
                            <a href="#" class="nav-link text-body font-weight-bold px-0">
                                <i class="fa fa-user me-sm-1"></i>
                                <span class="d-sm-inline d-none">{{ app.user.email ?? 'Utilisateur' }}</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container-fluid py-4">
            <div class="row">
                <div class="col-12">
                    <div class="card mb-4 shadow-sm border-radius-xl reservation-card">
                        <div class="card-header p-3 bg-gradient-dark text-white">
                            <h6 class="font-weight-bolder mb-0">Formulaire de Réservation Personnalisée</h6>
                        </div>
                        <div class="card-body p-4">
                            {% for message in app.flashes('success') %}
                                <div class="alert alert-success">{{ message }}</div>
                            {% endfor %}
                            {% for message in app.flashes('error') %}
                                <div class="alert alert-danger">{{ message }}</div>
                            {% endfor %}

                            {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}
                                <div class="col-md-6">
                                    {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                                    <div class="text-danger">{{ form_errors(form.nom) }}</div>
                                </div>
                                <div class="col-md-6">
                                    {{ form_label(form.prenom, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                                    <div class="text-danger">{{ form_errors(form.prenom) }}</div>
                                </div>
                                <div class="col-md-6">
                                    {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                    <div class="text-danger">{{ form_errors(form.email) }}</div>
                                </div>
                                <div class="col-md-6">
                                    {{ form_label(form.numtel, 'Numéro de téléphone', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.numtel, {'attr': {'class': 'form-control'}}) }}
                                    <div class="text-danger">{{ form_errors(form.numtel) }}</div>
                                </div>
                                <div class="col-12">
                                    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '3'}}) }}
                                    <div class="text-danger">{{ form_errors(form.description) }}</div>
                                </div>
                                <div class="col-md-6">
                                    {{ form_label(form.date, 'Date', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                                    <div class="text-danger">{{ form_errors(form.date) }}</div>
                                </div>
                                <div class="col-12 mb-4">
                                    <div class="card shadow-sm border-radius-lg">
                                        <div class="card-header p-3 bg-gradient-warning">
                                            <h6 class="mb-0 text-white">
                                                <i class="fas fa-concierge-bell me-2"></i> Services Disponibles
                                            </h6>
                                        </div>
                                        <div class="card-body p-4">
                                            <div class="services-container">
                                                <div class="search-services mb-4">
                                                    <div class="input-group">
                                                        <span class="input-group-text bg-gradient-warning text-white">
                                                            <i class="fas fa-search"></i>
                                                        </span>
                                                        <input type="text" id="serviceSearchInput" class="form-control" placeholder="Rechercher un service...">
                                                    </div>
                                                    <div id="noSearchResults" class="no-results-message" style="display: none;">
                                                        <i class="fas fa-info-circle me-2"></i> Aucun service ne correspond à votre recherche
                                                    </div>
                                                </div>
                                                
                                                <div class="row">
                                                    <div class="col-md-7">
                                                        <h6 class="text-gradient text-warning fw-bold mb-3">
                                                            <i class="fas fa-list me-2"></i> Choisir les services
                                                        </h6>
                                                        <div class="services-selection mb-3">
                                                            <div class="service-list-container">
                                                                {{ form_widget(form.services, {'attr': {'class': 'service-list-improved'}}) }}
                                                                <div class="text-danger">{{ form_errors(form.services) }}</div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    
                                                    <div class="col-md-5">
                                                        <div class="services-summary card border-0 h-100">
                                                            <div class="card-header bg-light">
                                                                <h6 class="text-gradient text-warning fw-bold mb-0">
                                                                    <i class="fas fa-check-circle me-2"></i> Services sélectionnés (<span id="selectedServicesCount">0</span>)
                                                                </h6>
                                                            </div>
                                                            <div class="card-body bg-light rounded-bottom">
                                                                <div class="selected-services-preview" id="servicesPreview">
                                                                    <div class="text-muted text-center empty-selection">
                                                                        <div class="empty-icon mb-3">
                                                                            <i class="fas fa-hand-pointer opacity-6"></i>
                                                                        </div>
                                                                        <p>Sélectionnez des services dans la liste</p>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {% if form.status is defined %}
                                    <div class="col-md-6">
                                        {{ form_label(form.status, 'Statut', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
                                        <div class="text-danger">{{ form_errors(form.status) }}</div>
                                    </div>
                                {% endif %}
                                <div class="col-12 action-buttons">
                                    <button type="submit" class="btn btn-primary mt-3">Enregistrer</button>
                                    <a href="{{ path('admin_reservations_personnalise') }}" class="btn btn-secondary mt-3">Retour à la liste</a>
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <style>
        /* Card Styling */
        .reservation-card {
            background: #ffffff;
            border-radius: 15px !important;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1) !important;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            animation: fadeIn 0.5s ease-in-out;
        }
        .reservation-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.2) !important;
            background: linear-gradient(145deg, #f8f9fa, #ffffff);
        }
        .card-header {
            background: linear-gradient(90deg, #2c3e50, #4b5e71) !important;
            border-radius: 15px 15px 0 0 !important;
            padding: 1.5rem !important;
        }
        .card-header h6 {
            font-size: 1.2rem;
            color: #ffffff;
            text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
        }
        .card-body {
            padding: 2rem !important;
        }

        /* Form Styling */
        .form-label {
            font-size: 1rem;
            font-weight: 600;
            color: #1a3c34;
            margin-bottom: 8px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        .form-control {
            border-radius: 8px;
            border: 1px solid #ced4da;
            padding: 0.75rem 1rem;
            font-size: 0.95rem;
            color: #2d6a4f;
            background: #f8f9fa;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }
        .form-control:focus {
            border-color: #2d6a4f;
            box-shadow: 0 0 5px rgba(45, 106, 79, 0.3);
            background: #ffffff;
        }
        .form-control::placeholder {
            color: #adb5bd;
        }
        textarea.form-control {
            resize: vertical;
        }
        .text-danger {
            font-size: 0.85rem;
            margin-top: 5px;
        }

        /* Buttons */
        .action-buttons .btn {
            padding: 0.8rem 1.8rem;
            font-size: 0.95rem;
            border-radius: 10px;
            transition: all 0.3s ease;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }
        .action-buttons .btn:hover {
            transform: scale(1.05);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }
        .btn-primary {
            background: linear-gradient(90deg, #3498db, #4ab0f2) !important;
            border: none !important;
            color: #fff !important;
        }
        .btn-secondary {
            background: linear-gradient(90deg, #7f8c8d, #95a5a6) !important;
            border: none !important;
            color: #fff !important;
        }

        /* Animation */
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .reservation-card {
                margin: 0 10px;
            }
            .card-header h6 {
                font-size: 1rem;
            }
            .form-label {
                font-size: 0.95rem;
            }
            .form-control {
                font-size: 0.9rem;
                padding: 0.6rem 0.8rem;
            }
            .action-buttons {
                flex-direction: column;
                gap: 10px;
            }
            .action-buttons .btn {
                width: 100%;
                padding: 0.6rem 1.2rem;
                font-size: 0.9rem;
            }
        }

        /* Style pour le bouton d'effacement de la recherche */
        .btn-clear-search {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            background: transparent;
            border: none;
            color: #6c757d;
            font-size: 0.8rem;
            cursor: pointer;
            width: 28px;
            height: 28px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s ease;
            z-index: 10;
        }
        
        .btn-clear-search:hover {
            background-color: rgba(195, 175, 145, 0.1);
            color: #c3af91;
        }
        
        /* Style pour le message d'absence de résultats */
        .no-results-message {
            margin-top: 10px;
            padding: 8px 12px;
            background-color: #fff3cd;
            color: #856404;
            border-radius: 8px;
            font-size: 0.9rem;
            text-align: center;
            animation: fadeIn 0.3s ease forwards;
        }
        
