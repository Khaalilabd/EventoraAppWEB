    {% block javascripts %}
        {{ parent() }}
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                // IMPLÉMENTATION DE RECHERCHE ULTRA-SIMPLE AVEC JQUERY
                if (typeof $ !== 'undefined') {
                    $("#serviceSearchInput").on("keyup", function() {
                        var value = $(this).val().toLowerCase();
                        
                        // Nettoyer l'ancienne recherche d'abord
                        $(".service-list-improved > div").show();
                        
                        if (value) {
                            // Cacher les éléments qui ne correspondent pas
                            $(".service-list-improved > div").each(function() {
                                if ($(this).text().toLowerCase().indexOf(value) === -1) {
                                    $(this).hide();
                                }
                            });
                            
                            // Vérifier s'il y a des résultats visibles
                            var visibleItems = $(".service-list-improved > div:visible").length;
                            $("#noSearchResults").toggle(visibleItems === 0);
                            
                            // Afficher le bouton d'effacement
                            $("<button>")
                                .attr("id", "clearBtn")
                                .addClass("btn-clear-search")
                                .html('<i class="fas fa-times"></i>')
                                .css({
                                    "position": "absolute",
                                    "right": "10px",
                                    "top": "50%",
                                    "transform": "translateY(-50%)",
                                    "background": "transparent",
                                    "border": "none",
                                    "color": "#6c757d",
                                    "cursor": "pointer",
                                    "width": "28px",
                                    "height": "28px",
                                    "border-radius": "50%",
                                    "display": "flex",
                                    "align-items": "center",
                                    "justify-content": "center",
                                    "z-index": 10
                                })
                                .click(function() {
                                    $("#serviceSearchInput").val("").trigger("keyup").focus();
                                    $(this).remove();
                                })
                                .appendTo($("#serviceSearchInput").parent());
                        } else {
                            // Cacher le message et le bouton quand la recherche est vide
                            $("#noSearchResults").hide();
                            $("#clearBtn").remove();
                        }
                    });
                }
                
                // Visualisation des services sélectionnés
                function updateServicesPreview() {
                    const servicesPreview = document.getElementById('servicesPreview');
                    const selectedCountElement = document.getElementById('selectedServicesCount');
                    const emptySelection = servicesPreview ? servicesPreview.querySelector('.empty-selection') : null;
                    
                    if (!servicesPreview) return;
                    
                    // Supprimer les tags existants mais pas le message vide
                    const existingTags = servicesPreview.querySelectorAll('.service-tag');
                    existingTags.forEach(tag => tag.remove());
                    
                    const checkboxes = document.querySelectorAll('.service-list-improved input[type="checkbox"]:checked');
                    const count = checkboxes.length;
                    
                    if (selectedCountElement) {
                        selectedCountElement.textContent = count;
                    }
                    
                    if (count === 0) {
                        if (emptySelection) emptySelection.style.display = 'flex';
                        return;
                    }
                    
                    if (emptySelection) emptySelection.style.display = 'none';
                    
                    checkboxes.forEach(checkbox => {
                        let serviceLabel = '';
                        const label = checkbox.nextElementSibling;
                        if (label) {
                            serviceLabel = label.textContent.trim();
                        } else {
                            const nearbyLabel = checkbox.closest('div').querySelector('label');
                            if (nearbyLabel) {
                                serviceLabel = nearbyLabel.textContent.trim();
                            }
                        }
                        
                        if (serviceLabel) {
                            const serviceTag = document.createElement('div');
                            serviceTag.className = 'service-tag';
                            serviceTag.innerHTML = `<i class="fas fa-check-circle"></i>${serviceLabel}`;
                            servicesPreview.appendChild(serviceTag);
                        }
                    });
                }
                
                // Mettre à jour l'aperçu au chargement
                updateServicesPreview();
                
                // Mettre à jour l'aperçu lorsqu'on change les services
                const serviceCheckboxes = document.querySelectorAll('.service-list-improved input[type="checkbox"]');
                serviceCheckboxes.forEach(checkbox => {
                    checkbox.addEventListener('change', updateServicesPreview);
                });
            });
        </script>
