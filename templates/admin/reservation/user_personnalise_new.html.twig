        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            $(document).ready(function() {
                // Explicitly hide modals on page load
                $('#services-modal').hide();
                $('#service-details-modal').hide();

                // Menu toggle
                $('.menu-toggle').click(function() {
                    $('.fh5co-nav .menu-1 ul').toggleClass('active');
                });

                // Mobile dropdowns
                $('.fh5co-nav .menu-1 ul li.has-dropdown > a').click(function(e) {
                    if ($(window).width() <= 768) {
                        e.preventDefault();
                        $(this).parent().toggleClass('active').siblings().removeClass('active');
                    }
                });

                // Prevent autofocus on description
                if ($('#{{ form.description.vars.id }}').length) {
                    $('#{{ form.description.vars.id }}').removeAttr('autofocus');
                }
                $('.form-control').on('focus', function() {
                    $(this).select();
                });

                // Flatpickr initialization
                flatpickr(".flatpickr", {
                    dateFormat: "Y-m-d",
                    minDate: "today",
                    locale: "fr",
                    allowInput: true,
                    onChange: function(selectedDates, dateStr, instance) {
                        const $input = $(instance.element);
                        $input.toggleClass('is-invalid', selectedDates.length === 0)
                              .next('.form-error').text(selectedDates.length === 0 ? 'The date is required.' : '');
                    }
                });

                // Numtel input restriction
                $('#{{ form.numtel.vars.id }}').on('input', function() {
                    this.value = this.value.replace(/[^0-9]/g, '').slice(0, 8);
                });

                // Services Modal
                const $servicesModal = $('#services-modal');
                const $servicesColumnContainer = $('#services-column-container');
                const $selectedServicesList = $('#selected-services-list');
                const $servicesEmptyState = $('#services-empty-state');
                const $servicesInputs = $('input[name="{{ form.services.vars.full_name }}[]"]');

                // Initialize services in modal and selected list
                let hasSelectedServices = false;
                
                // Clear previous content
                $servicesColumnContainer.empty();
                
                // Add services to modal in better format
                $servicesInputs.each(function() {
                    const $input = $(this);
                    const labelText = $input.next('label').text();
                    const serviceId = $input.val();

                    // Add to modal with improved layout
                    $servicesColumnContainer.append(`
                        <div class="form-check">
                            <div class="checkbox-label-container">
                                <input type="checkbox" class="form-check-input modal-service-checkbox" data-id="${serviceId}" ${$input.is(':checked') ? 'checked' : ''}>
                                <label class="form-check-label">${labelText}</label>
                            </div>
                            <button type="button" class="view-service-details" data-id="${serviceId}">
                                <i class="fas fa-info-circle"></i> Details
                            </button>
                        </div>
                    `);
                    
                    // Add to selected list if checked
                    if ($input.is(':checked')) {
                        hasSelectedServices = true;
                        $selectedServicesList.append(`
                            <li data-id="${serviceId}" style="animation: fadeIn 0.3s ease-out;">
                                <span class="service-name">${labelText}</span>
                                <span class="remove-service" title="Remove service">×</span>
                            </li>
                        `);
                    }
                });
                
                // Show/hide empty state based on initial selection
                $servicesEmptyState.toggle(!hasSelectedServices);
                $selectedServicesList.toggle(hasSelectedServices);

                $('#open-services-modal').click(function() {
                    $servicesModal.css('display', 'flex').hide().fadeIn(400);
                    $('body').addClass('modal-open');
                    
                    // Add subtle animation to checkboxes
                    $('.form-check').each(function(index) {
                        $(this).css({
                            'opacity': 0,
                            'transform': 'translateY(10px)'
                        }).delay(index * 50).animate({
                            'opacity': 1,
                            'transform': 'translateY(0)'
                        }, 300);
                    });
                });

                $('.close-modal, #cancel-services').click(function() {
                    $servicesModal.fadeOut(300, function() {
                        $(this).css('display', 'none');
                    });
                    $('body').removeClass('modal-open');
                });

                $('#confirm-services').click(function() {
                    const selectedServices = [];
                    $selectedServicesList.empty();
                    let hasSelectedServices = false;
                    
                    $('.modal-service-checkbox').each(function() {
                        const $checkbox = $(this);
                        const serviceId = $checkbox.data('id');
                        const labelText = $checkbox.next('label').text();
                        const $formCheckbox = $servicesInputs.filter(`[value="${serviceId}"]`);

                        if ($checkbox.is(':checked')) {
                            hasSelectedServices = true;
                            selectedServices.push({
                                id: serviceId,
                                name: labelText
                            });
                            $formCheckbox.prop('checked', true);
                        } else {
                            $formCheckbox.prop('checked', false);
                        }
                    });
                    
                    // Add selected services with staggered animation
                    selectedServices.forEach((service, index) => {
                        const $listItem = $(`
                            <li data-id="${service.id}" style="opacity: 0; transform: translateX(-10px);">
                                <span class="service-name">${service.name}</span>
                                <span class="remove-service" title="Remove service">×</span>
                            </li>
                        `);
                        
                        $selectedServicesList.append($listItem);
                        
                        setTimeout(() => {
                            $listItem.css({
                                'opacity': 1,
                                'transform': 'translateX(0)',
                                'transition': 'all 0.3s ease'
                            });
                        }, index * 100);
                    });
                    
                    // Toggle empty state message
                    $servicesEmptyState.toggle(!hasSelectedServices);
                    $selectedServicesList.toggle(hasSelectedServices);
                    
                    // Show error if no services selected
                    $('#services-error').text(hasSelectedServices ? '' : 'Please select at least one service.');
                    
                    // Close modal with animation
                    $servicesModal.fadeOut(300, function() {
                        $(this).css('display', 'none');
                    });
                    $('body').removeClass('modal-open');
                    
                    // Show confirmation if services were selected
                    if (hasSelectedServices) {
                        Swal.fire({
                            position: 'top-end',
                            icon: 'success',
                            title: 'Services updated',
                            text: `${selectedServices.length} service${selectedServices.length > 1 ? 's' : ''} selected`,
                            showConfirmButton: false,
                            timer: 2000,
                            toast: true,
                            background: '#6d28d9',
                            iconColor: '#ffffff',
                            customClass: {
                                title: 'text-white',
                                content: 'text-white'
                            }
                        });
                    }
                });

                // Delegated event for removing services
                $selectedServicesList.on('click', '.remove-service', function() {
                    const $li = $(this).parent();
                    const serviceId = $li.data('id');
                    
                    // Animate removal
                    $li.css({
                        'transform': 'translateX(10px)',
                        'opacity': 0
                    });
                    
                    setTimeout(() => {
                        $li.remove();
                        
                        // Toggle empty state if no services remain
                        if ($selectedServicesList.children('li').length === 0) {
                            $servicesEmptyState.fadeIn(200);
                            $selectedServicesList.hide();
                        }
                        
                        // Update form and modal checkboxes
                        $servicesInputs.filter(`[value="${serviceId}"]`).prop('checked', false);
                        $('.modal-service-checkbox[data-id="' + serviceId + '"]').prop('checked', false);
                    }, 300);
                });

                // Service Details Modal
                const $serviceDetailsModal = $('#service-details-modal');
                const $serviceDetailsContent = $('#service-details-content');

                $(document).on('click', '.view-service-details', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    const serviceId = $(this).data('id');
                    
                    // Show loading state with animation
                    $serviceDetailsContent.html(`
                        <div class="text-center" style="padding: 30px 0;">
                            <div class="loading-spinner" style="display:inline-block; margin:0 auto 20px; width:40px; height:40px; border-width:3px; border-top-color:#7c3aed;"></div>
                            <p style="color:#6b7280; font-size:16px;"><i class="fas fa-info-circle"></i> Loading service details...</p>
                        </div>
                    `);
                    
                    $serviceDetailsModal.css('display', 'flex').hide().fadeIn(300);
                    $('body').addClass('modal-open');
                    
                    $.ajax({
                        url: `{{ path('user_service_details', {'id': 'SERVICE_ID'}) }}`.replace('SERVICE_ID', serviceId),
                        method: 'GET',
                        success: function(response) {
                            if (response.success) {
                                const service = response.service;
                                setTimeout(() => {
                                    $serviceDetailsContent.html(`
                                        <p><strong>Title:</strong> ${$('<div/>').text(service.titre).html()}</p>
                                        <p><strong>Description:</strong> ${$('<div/>').text(service.description).html()}</p>
                                        <p><strong>Price:</strong> ${$('<div/>').text(service.prix).html()} TND</p>
                                        <p><strong>Location:</strong> ${$('<div/>').text(service.location).html()}</p>
                                        <p><strong>Service Type:</strong> ${$('<div/>').text(service.type_service).html()}</p>
                                        ${service.image ? `<img src="${$('<div/>').text(service.image).html()}" alt="${$('<div/>').text(service.titre).html()}">` : ''}
                                    `).hide().fadeIn(300);
                                }, 600); // Add slight delay for better UX
                            } else {
                                setTimeout(() => {
                                    $serviceDetailsContent.html(`
                                        <div class="alert alert-danger" style="background-color:#fef2f2; color:#b91c1c; padding:15px; border-radius:8px; border-left:4px solid #ef4444;">
                                            <i class="fas fa-exclamation-circle"></i> 
                                            ${response.message || 'Unable to load service details.'}
                                        </div>
                                    `).hide().fadeIn(300);
                                }, 600);
                            }
                        },
                        error: function() {
                            setTimeout(() => {
                                $serviceDetailsContent.html(`
                                    <div class="alert alert-danger" style="background-color:#fef2f2; color:#b91c1c; padding:15px; border-radius:8px; border-left:4px solid #ef4444;">
                                        <i class="fas fa-exclamation-circle"></i> 
                                        Unable to retrieve service details. Please try again.
                                    </div>
                                `).hide().fadeIn(300);
                            }, 600);
                        }
                    });
                });

                $('#close-service-details-modal, #close-service-details').click(function() {
                    $serviceDetailsModal.fadeOut(300, function() {
                        $(this).css('display', 'none');
                    });
                    $('body').removeClass('modal-open');
                });

                // Form validation
                $('#personalized-reservation-form').on('submit', function(e) {
                    let isValid = true;
                    $('.form-control').removeClass('is-invalid');
                    $('.form-error').text('');

                    const validateField = ($input, value, maxLength, errorMsg, regex = null) => {
                        if (!value) {
                            $input.addClass('is-invalid').next('.form-error').text(errorMsg.required);
                            return false;
                        }
                        if (value.length > maxLength) {
                            $input.addClass('is-invalid').next('.form-error').text(errorMsg.maxLength);
                            return false;
                        }
                        if (regex && !regex.test(value)) {
                            $input.addClass('is-invalid').next('.form-error').text(errorMsg.invalid);
                            return false;
                        }
                        return true;
                    };

                    // Last Name
                    if ($('#{{ form.nom.vars.id }}').length) {
                        isValid &= validateField(
                            $('#{{ form.nom.vars.id }}'),
                            $('#{{ form.nom.vars.id }}').val().trim(),
                            255,
                            { 
                                required: 'Last name is required.', 
                                maxLength: 'Last name cannot exceed 255 characters.' 
                            }
                        );
                    }

                    // First Name
                    if ($('#{{ form.prenom.vars.id }}').length) {
                        isValid &= validateField(
                            $('#{{ form.prenom.vars.id }}'),
                            $('#{{ form.prenom.vars.id }}').val().trim(),
                            255,
                            { 
                                required: 'First name is required.', 
                                maxLength: 'First name cannot exceed 255 characters.' 
                            }
                        );
                    }

                    // Email
                    if ($('#{{ form.email.vars.id }}').length) {
                        isValid &= validateField(
                            $('#{{ form.email.vars.id }}'),
                            $('#{{ form.email.vars.id }}').val().trim(),
                            255,
                            {
                                required: 'Email is required.',
                                maxLength: 'Email cannot exceed 255 characters.',
                                invalid: 'Email is not valid.'
                            },
                            /^[^\s@]+@[^\s@]+\.[^\s@]+$/
                        );
                    }

                    // Phone Number
                    if ($('#{{ form.numtel.vars.id }}').length) {
                        isValid &= validateField(
                            $('#{{ form.numtel.vars.id }}'),
                            $('#{{ form.numtel.vars.id }}').val().trim(),
                            8,
                            {
                                required: 'Phone number is required.',
                                invalid: 'Phone number must contain exactly 8 digits.'
                            },
                            /^[0-9]{8}$/
                        );
                    }

                    // Date
                    if ($('#{{ form.date.vars.id }}').length) {
                        const $dateInput = $('#{{ form.date.vars.id }}');
                        const dateValue = $dateInput.val();
                        if (!dateValue) {
                            $dateInput.addClass('is-invalid').next('.form-error').text('The date is required.');
                            isValid = false;
                        } else if (!/^\d{4}-\d{2}-\d{2}$/.test(dateValue)) {
                            $dateInput.addClass('is-invalid').next('.form-error').text('The date must be in YYYY-MM-DD format.');
                            isValid = false;
                        } else {
                            const selectedDate = new Date(dateValue);
                            const today = new Date();
                            today.setHours(0, 0, 0, 0);
                            if (selectedDate < today) {
                                $dateInput.addClass('is-invalid').next('.form-error').text('The date must be today or in the future.');
                                isValid = false;
                            }
                        }
                    }

                    // Services
                    if ($servicesInputs.length) {
                        if (!$servicesInputs.filter(':checked').length) {
                            $('#services-error').text('Please select at least one service.');
                            isValid = false;
                        }
                    }

                    if (!isValid) {
                        e.preventDefault();
                        return false;
                    }

                    // AJAX submission
                    e.preventDefault();
                    const $form = $(this);
                    const $submitButton = $form.find('button[type="submit"]');
                    const $spinner = $('.loading-spinner');
                    $submitButton.prop('disabled', true);
                    $spinner.show();

                    $.ajax({
                        url: $form.attr('action'),
                        method: $form.attr('method'),
                        data: $form.serialize(),
                        dataType: 'json',
                        success: function(response) {
                            if (response.success) {
                                // Prepare data for Google Calendar
                                const eventName = $('#{{ form.nom.vars.id }}').val() + ' ' + $('#{{ form.prenom.vars.id }}').val() + ' - Event';
                                const eventDescription = $('#{{ form.description.vars.id }}').val() || 'Custom reservation via Eventora';
                                const eventDate = $('#{{ form.date.vars.id }}').val();
                                const eventStart = new Date(eventDate);
                                const eventEnd = new Date(eventStart.getTime() + 2 * 60 * 60 * 1000); // +2 hours
                                const formattedStart = eventStart.toISOString().replace(/-|:|\.\d{3}/g, '');
                                const formattedEnd = eventEnd.toISOString().replace(/-|:|\.\d{3}/g, '');

                                // Generate Google Calendar link
                                const googleCalendarUrl = `https://calendar.google.com/calendar/render?action=TEMPLATE` +
                                    `&text=${encodeURIComponent(eventName)}` +
                                    `&details=${encodeURIComponent(eventDescription)}` +
                                    `&dates=${formattedStart}/${formattedEnd}`;

                                Swal.fire({
                                    title: 'Success',
                                    text: response.message,
                                    icon: 'success',
                                    showCancelButton: true,
                                    confirmButtonText: 'Add to Google Calendar',
                                    cancelButtonText: 'OK'
                                }).then((result) => {
                                    if (result.isConfirmed) {
                                        window.open(googleCalendarUrl, '_blank');
                                        window.location.href = response.redirectUrl;
                                    } else {
                                        window.location.href = response.redirectUrl;
                                    }
                                });
                            } else {
                                Swal.fire({
                                    title: 'Error',
                                    text: response.message,
                                    icon: 'error',
                                    confirmButtonText: 'OK'
                                });
                                if (response.errors) {
                                    Object.keys(response.errors).forEach(field => {
                                        const $field = $(`#${field}`);
                                        $field.addClass('is-invalid').next('.form-error').text(response.errors[field].join(', '));
                                    });
                                }
                            }
                        },
                        error: function() {
                            Swal.fire({
                                title: 'Error',
                                text: 'An error occurred while submitting the form.',
                                icon: 'error',
                                confirmButtonText: 'OK'
                            });
                        },
                        complete: function() {
                            $submitButton.prop('disabled', false);
                            $spinner.hide();
                        }
                    });
                });

                // Apply is-invalid on load
                $('.form-control').each(function() {
                    const $errorDiv = $(this).next('.form-error');
                    if ($errorDiv.length && $errorDiv.text().trim()) {
                        $(this).addClass('is-invalid');
                    }
                });

                // Handle flash messages
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        Swal.fire({
                            title: '{{ label == 'success' ? 'Success' : 'Error' }}',
                            text: '{{ message|raw }}',
                            icon: '{{ label == 'success' ? 'success' : 'error' }}',
                            confirmButtonText: 'OK'
                        });
                    {% endfor %}
                {% endfor %}
            });
        </script>
    {% endblock %}
</body>
</html>