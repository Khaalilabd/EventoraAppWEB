        <div class="container-fluid py-4">
            <div class="row">
                <div class="col-12">
                    <div class="card mb-4 shadow-lg border-radius-xl overflow-hidden">
                        <div class="card-header p-3 bg-gradient-primary">
                            <h6 class="font-weight-bolder mb-0 text-white">Formulaire d'édition - Réservation Pack</h6>
                        </div>
                        <div class="card-body p-4">
                            {% for message in app.flashes('success') %}
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    <i class="fas fa-check-circle me-2"></i> {{ message }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            {% endfor %}
                            {% for message in app.flashes('error') %}
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <i class="fas fa-exclamation-circle me-2"></i> {{ message }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            {% endfor %}

                            {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                                <div class="row g-4">
                                    <!-- Section Informations Client -->
                                <div class="col-md-6">
                                        <div class="card shadow-sm border-0 h-100">
                                            <div class="card-header p-3 bg-gradient-primary bg-opacity-80">
                                                <h6 class="font-weight-bolder mb-0 text-white"><i class="fas fa-user-circle me-2"></i>Informations Client</h6>
                                            </div>
                                            <div class="card-body p-4">
                                                <div class="mb-4">
                                                    {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label text-gradient text-primary fw-bold'}}) }}
                                                    <div class="input-group input-group-dynamic">
                                                        <span class="input-group-text bg-gradient-primary text-white"><i class="fas fa-user-circle"></i></span>
                                                        {{ form_widget(form.nom, {'attr': {'class': 'form-control border ps-3', 'placeholder': 'Entrez le nom'}}) }}
                                                    </div>
                                    <div class="text-danger">{{ form_errors(form.nom) }}</div>
                                </div>
                                                
                                                <div class="mb-4">
                                                    {{ form_label(form.prenom, 'Prénom', {'label_attr': {'class': 'form-label text-gradient text-primary fw-bold'}}) }}
                                                    <div class="input-group input-group-dynamic">
                                                        <span class="input-group-text bg-gradient-primary text-white"><i class="fas fa-user"></i></span>
                                                        {{ form_widget(form.prenom, {'attr': {'class': 'form-control border ps-3', 'placeholder': 'Entrez le prénom'}}) }}
                                                    </div>
                                    <div class="text-danger">{{ form_errors(form.prenom) }}</div>
                                </div>
                                                
                                                <div class="mb-4">
                                                    {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label text-gradient text-primary fw-bold'}}) }}
                                                    <div class="input-group input-group-dynamic">
                                                        <span class="input-group-text bg-gradient-primary text-white"><i class="fas fa-envelope"></i></span>
                                                        {{ form_widget(form.email, {'attr': {'class': 'form-control border ps-3', 'placeholder': 'Entrez l\'email'}}) }}
                                                    </div>
                                    <div class="text-danger">{{ form_errors(form.email) }}</div>
                                </div>
                                                
                                                <div class="mb-0">
                                                    {{ form_label(form.numtel, 'Numéro de téléphone', {'label_attr': {'class': 'form-label text-gradient text-primary fw-bold'}}) }}
                                                    <div class="input-group input-group-dynamic">
                                                        <span class="input-group-text bg-gradient-primary text-white"><i class="fas fa-phone"></i></span>
                                                        {{ form_widget(form.numtel, {'attr': {'class': 'form-control border ps-3', 'placeholder': 'Entrez le numéro de téléphone'}}) }}
                                                    </div>
                                    <div class="text-danger">{{ form_errors(form.numtel) }}</div>
                                </div>
                                </div>
                                </div>
                                </div>
                                    
                                    <!-- Section Détails de la Réservation -->
                                    <div class="col-md-6">
                                        <div class="card shadow-sm border-0 h-100">
                                            <div class="card-header p-3 bg-gradient-primary bg-opacity-80">
                                                <h6 class="font-weight-bolder mb-0 text-white"><i class="fas fa-calendar-check me-2"></i>Détails de la Réservation</h6>
                                            </div>
                                            <div class="card-body p-4">
                                                <div class="mb-4">
                                                    {{ form_label(form.date, 'Date de Réservation', {'label_attr': {'class': 'form-label text-gradient text-primary fw-bold'}}) }}
                                                    <div class="input-group input-group-dynamic">
                                                        <span class="input-group-text bg-gradient-primary text-white"><i class="fas fa-calendar-day"></i></span>
                                                        {{ form_widget(form.date, {'attr': {'class': 'form-control border ps-3'}}) }}
                                                    </div>
                                                    <div class="text-danger">{{ form_errors(form.date) }}</div>
                                                </div>
                                                
                                                <div class="mb-4">
                                                    {{ form_label(form.status, 'Statut', {'label_attr': {'class': 'form-label text-gradient text-primary fw-bold'}}) }}
                                                    <div class="input-group input-group-dynamic">
                                                        <span class="input-group-text bg-gradient-primary text-white"><i class="fas fa-tag"></i></span>
                                                        {{ form_widget(form.status, {'attr': {'class': 'form-select custom-select border ps-3'}}) }}
                                                    </div>
                                        <div class="text-danger">{{ form_errors(form.status) }}</div>
                                                </div>
                                                
                                                <div class="mb-4">
                                                    {{ form_label(form.pack, 'Pack Sélectionné', {'label_attr': {'class': 'form-label text-gradient text-primary fw-bold'}}) }}
                                                    <div class="input-group input-group-dynamic">
                                                        <span class="input-group-text bg-gradient-primary text-white"><i class="fas fa-box"></i></span>
                                                        {{ form_widget(form.pack, {'attr': {'class': 'form-select custom-select border ps-3'}}) }}
                                                    </div>
                                                    <div class="text-danger">{{ form_errors(form.pack) }}</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <!-- Section Description -->
                                    <div class="col-12">
                                        <div class="card shadow-sm border-0">
                                            <div class="card-header p-3 bg-gradient-primary bg-opacity-80">
                                                <h6 class="font-weight-bolder mb-0 text-white"><i class="fas fa-align-left me-2"></i>Description</h6>
                                            </div>
                                            <div class="card-body p-4">
                                                <div class="form-group">
                                                    <div class="input-group input-group-dynamic">
                                                        <span class="input-group-text bg-gradient-primary text-white"><i class="fas fa-comment-alt"></i></span>
                                                        {{ form_widget(form.description, {'attr': {'class': 'form-control border ps-3', 'rows': '5', 'placeholder': 'Décrivez la réservation en détail...'}}) }}
                                                    </div>
                                                    <div class="text-danger">{{ form_errors(form.description) }}</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <!-- Boutons d'action -->
                                    <div class="col-12 mt-4">
                                        <div class="d-flex justify-content-end gap-3">
                                            <a href="{{ path('admin_reservations_pack') }}" class="btn btn-outline-secondary">
                                                <i class="fas fa-arrow-left me-2"></i> Retour à la liste
                                            </a>
                                            <button type="submit" class="btn bg-gradient-primary">
                                                <i class="fas fa-save me-2"></i> Enregistrer
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
