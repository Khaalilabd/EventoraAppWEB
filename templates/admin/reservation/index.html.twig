{# templates/admin/reservations/index.html.twig #}
{% extends 'admin/dashboard.html.twig' %}

{% block title %}Gestion des Réservations{% endblock %}

{% block body %}
    <!-- Sidebar remains unchanged -->
    <aside class="sidenav navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-3 fixed-start ms-3" id="sidenav-main">
        <!-- ... Sidebar content ... -->
    </aside>

    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg">
        <!-- Navbar remains unchanged -->
        <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur">
            <!-- ... Navbar content ... -->
        </nav>

        <div class="container-fluid py-4">
            <div class="row">
                <!-- Section Réservations Pack -->
                <div class="col-12">
                    <div class="card mb-4 shadow-sm border-radius-xl">
                        <div class="card-header p-3">
                            <h6 class="font-weight-bolder mb-0">Liste des Réservations (Packs)</h6>
                            <p class="text-sm text-muted mb-0">Gérez les réservations des packs</p>
                        </div>
                        <div class="card-body p-3">
                            {% if reservationPacks is not empty %}
                                <div class="table-responsive">
                                    <table class="table align-items-center mb-0">
                                        <thead>
                                            <tr>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">ID</th>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">ID Pack</th>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Nom</th>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Prénom</th>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Email</th>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Num. Téléphone</th>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Date</th>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for reservation in reservationPacks %}
                                                <tr>
                                                    <td class="ps-3 py-2">{{ reservation.IDReservationPack }}</td>
                                                    <td class="ps-3 py-2">{{ reservation.pack ? reservation.pack.id : 'N/A' }}</td> <!-- Updated to use relation -->
                                                    <td class="ps-3 py-2">{{ reservation.nom }}</td>
                                                    <td class="ps-3 py-2">{{ reservation.prenom }}</td>
                                                    <td class="ps-3 py-2">{{ reservation.email }}</td>
                                                    <td class="ps-3 py-2">{{ reservation.numtel }}</td>
                                                    <td class="ps-3 py-2">{{ reservation.date|date('d/m/Y') }}</td>
                                                    <td class="ps-3 py-2 text-center">
                                                        <a href="{{ path('admin_reservations_edit', {'type': 'pack', 'id': reservation.IDReservationPack}) }}" class="btn btn-sm btn-outline-primary me-1"><i class="fas fa-edit"></i></a>
                                                        <form method="post" action="{{ path('admin_reservations_delete', {'type': 'pack', 'id': reservation.IDReservationPack}) }}" style="display:inline;" onsubmit="return confirm('Voulez-vous vraiment supprimer cette réservation ?');">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.IDReservationPack) }}">
                                                            <button class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            {% else %}
                                <div class="text-center p-4">
                                    <i class="fas fa-calendar-check text-muted" style="font-size: 2rem;"></i>
                                    <p class="text-muted mt-2">Aucune réservation de pack trouvée.</p>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <!-- Section Réservations Personnalisées (unchanged unless you share the entity) -->
                <div class="col-12 mt-4">
                    <div class="card mb-4 shadow-sm border-radius-xl">
                        <div class="card-header p-3">
                            <h6 class="font-weight-bolder mb-0">Liste des Réservations (Personnalisées)</h6>
                            <p class="text-sm text-muted mb-0">Gérez les réservations personnalisées</p>
                        </div>
                        <div class="card-body p-3">
                            {% if reservationPersonnalises is not empty %}
                                <div class="table-responsive">
                                    <table class="table align-items-center mb-0">
                                        <thead>
                                            <tr>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">ID</th>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Nom</th>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Prénom</th>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Email</th>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Num. Téléphone</th>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Date</th>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for reservation in reservationPersonnalises %}
                                                <tr>
                                                    <td class="ps-3 py-2">{{ reservation.idReservationPersonalise }}</td>
                                                    <td class="ps-3 py-2">{{ reservation.nom }}</td>
                                                    <td class="ps-3 py-2">{{ reservation.prenom }}</td>
                                                    <td class="ps-3 py-2">{{ reservation.email }}</td>
                                                    <td class="ps-3 py-2">{{ reservation.numtel }}</td>
                                                    <td class="ps-3 py-2">{{ reservation.date|date('d/m/Y') }}</td>
                                                    <td class="ps-3 py-2 text-center">
                                                        <a href="{{ path('admin_reservations_edit', {'type': 'personnalise', 'id': reservation.idReservationPersonalise}) }}" class="btn btn-sm btn-outline-primary me-1"><i class="fas fa-edit"></i></a>
                                                        <form method="post" action="{{ path('admin_reservations_delete', {'type': 'personnalise', 'id': reservation.idReservationPersonalise}) }}" style="display:inline;" onsubmit="return confirm('Voulez-vous vraiment supprimer cette réservation ?');">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.idReservationPersonalise) }}">
                                                            <button class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            {% else %}
                                <div class="text-center p-4">
                                    <i class="fas fa-calendar-check text-muted" style="font-size: 2rem;"></i>
                                    <p class="text-muted mt-2">Aucune réservation personnalisée trouvée.</p>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}