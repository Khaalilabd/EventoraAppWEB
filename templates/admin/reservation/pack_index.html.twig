    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const searchInput = document.getElementById('searchInput');
            const cards = document.querySelectorAll('.reservation-card');
            const statusColumns = document.querySelectorAll('.status-column-body');
            const emptyMessages = document.querySelectorAll('.text-center.text-muted');
            
            // Enhanced search functionality
            if (searchInput && cards.length) {
                searchInput.addEventListener('input', () => {
                    const searchTerm = searchInput.value.toLowerCase();
                    let visibleCards = {
                        'En attente': 0,
                        'Validé': 0,
                        'Refusé': 0
                    };
                    
                    // Hide all empty messages initially
                    emptyMessages.forEach(msg => {
                        msg.style.display = 'none';
                    });
                    
                    // Search through cards
                    cards.forEach(card => {
                        const texts = card.querySelectorAll('.card-text, .card-title');
                        let match = false;
                        
                        texts.forEach(text => {
                            if (text.textContent.toLowerCase().includes(searchTerm)) {
                                match = true;
                            }
                        });
                        
                        // Get the status from the badge
                        let status;
                        if (card.querySelector('.status-badge-pending')) {
                            status = 'En attente';
                        } else if (card.querySelector('.status-badge-approved')) {
                            status = 'Validé';
                        } else if (card.querySelector('.status-badge-rejected')) {
                            status = 'Refusé';
                        }
                        
                        // Show/hide card based on match
                        if (match) {
                            card.style.display = '';
                            visibleCards[status]++;
                            
                            // Add reveal animation
                            card.classList.add('reveal');
                            setTimeout(() => {
                                card.classList.remove('reveal');
                            }, 300);
                        } else {
                            card.style.display = 'none';
                        }
                    });
                    
                    // Update empty status messages
                    statusColumns.forEach(column => {
                        let status;
                        if (column.parentElement.querySelector('.status-pending')) {
                            status = 'En attente';
                        } else if (column.parentElement.querySelector('.status-approved')) {
                            status = 'Validé';
                        } else if (column.parentElement.querySelector('.status-rejected')) {
                            status = 'Refusé';
                        }
                        
                        const emptyMsg = column.querySelector('.text-center.text-muted');
                        if (emptyMsg) {
                            if (visibleCards[status] === 0) {
                                emptyMsg.style.display = 'block';
                                if (searchTerm) {
                                    emptyMsg.textContent = 'Aucun résultat pour cette recherche';
                                } else {
                                    emptyMsg.textContent = `Aucune réservation ${status.toLowerCase()}`;
                                }
                            } else {
                                emptyMsg.style.display = 'none';
                            }
                        }
                    });
                    
                    // Update counters
                    document.querySelectorAll('.status-count').forEach(counter => {
                        const parentHeader = counter.closest('.status-column-header');
                        let status;
                        
                        if (parentHeader.classList.contains('status-pending')) {
                            status = 'En attente';
                            counter.textContent = visibleCards[status];
                        } else if (parentHeader.classList.contains('status-approved')) {
                            status = 'Validé';
                            counter.textContent = visibleCards[status];
                        } else if (parentHeader.classList.contains('status-rejected')) {
                            status = 'Refusé';
                            counter.textContent = visibleCards[status];
                        }
                    });
                });
                
                // Add clear button for search
                const searchWrapper = searchInput.parentElement;
                const clearButton = document.createElement('button');
                clearButton.className = 'search-clear';
                clearButton.innerHTML = '<i class="fas fa-times"></i>';
                clearButton.style.display = 'none';
                searchWrapper.appendChild(clearButton);
                
                searchInput.addEventListener('input', () => {
                    clearButton.style.display = searchInput.value ? 'block' : 'none';
                });
                
                clearButton.addEventListener('click', () => {
                    searchInput.value = '';
                    searchInput.dispatchEvent(new Event('input'));
                    clearButton.style.display = 'none';
                    searchInput.focus();
                });
            }
            
            // Add CSS for search clear button and animations
            const style = document.createElement('style');
            style.textContent = `
                .search-clear {
                    position: absolute;
                    right: 15px;
                    top: 50%;
                    transform: translateY(-50%);
                    background: none;
                    border: none;
                    color: #adb5bd;
                    cursor: pointer;
                    z-index: 10;
                    font-size: 1rem;
                    padding: 0;
                    line-height: 1;
                }
                
                .search-clear:hover {
                    color: #6c757d;
                }
                
                @keyframes reveal {
                    0% {
                        opacity: 0;
                        transform: translateY(10px);
                    }
                    100% {
                        opacity: 1;
                        transform: translateY(0);
                    }
                }
                
                .reveal {
                    animation: reveal 0.3s ease-out forwards;
                }
            `;
            document.head.appendChild(style);
        });
    </script>
