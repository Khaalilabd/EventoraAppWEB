                                                                    <button class="btn btn-outline-danger btn-sm">
                                                                        <i class="fas fa-trash"></i> Supprimer
                                                                    </button>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>

