                                                            <p class="card-text"><strong>Email :</strong> {{ reservation.email }}</p>
                                                            <p class="card-text"><strong>Téléphone :</strong> {{ reservation.numtel }}</p>
                                                            <p class="card-text"><strong>Date :</strong> {{ reservation.date|date('d/m/Y') }}</p>
                                                            <p class="card-text"><strong>Description :</strong> 
                                                                {{ reservation.description|length > 50 ? reservation.description|slice(0, 50) ~ '...' : reservation.description }}
                                                            </p>
                                                            <div class="d-flex gap-2">
                                                                <a href="{{ path('admin_reservations_pack_details', {'id': reservation.idReservationPack}) }}" class="btn btn-outline-primary btn-sm">
                                                                    <i class="fas fa-info-circle"></i> Détails
                                                                </a>
                                                                <a href="{{ path('admin_reservations_pack_edit', {'id': reservation.idReservationPack}) }}" class="btn btn-outline-primary btn-sm">
                                                                    <i class="fas fa-edit"></i> Modifier
                                                                </a>
