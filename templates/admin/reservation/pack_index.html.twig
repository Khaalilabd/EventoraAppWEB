    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg">
        <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur">
            <div class="container-fluid py-1 px-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                        <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="#">Pages</a></li>
                        <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Réservations Pack</li>
                    </ol>
                    <h6 class="font-weight-bolder mb-0">Réservations Pack</h6>
                </nav>
                <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
                    <div class="ms-md-auto pe-md-3 d-flex align-items-center">
                        <div class="input-group">
                            <span class="input-group-text text-body"><i class="fas fa-search" aria-hidden="true"></i></span>
                            <input type="text" class="form-control" id="searchInput" placeholder="Rechercher...">
                        </div>
                    </div>
                    <ul class="navbar-nav justify-content-end">
                        <li class="nav-item d-flex align-items-center">
                            <a href="#" class="nav-link text-body font-weight-bold px-0">
                                <i class="fa fa-user me-sm-1"></i>
                                <span class="d-sm-inline d-none">{{ app.user.email ?? 'Utilisateur' }}</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container-fluid py-4">
            <div class="row">
                <div class="col-12">
                    <!-- Filtering Block -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="card shadow-sm p-3 bg-light border-radius-xl">
                                <h6 class="mb-3 text-dark font-weight-bold"><i class="fas fa-filter me-2"></i> Options de Filtrage</h6>
                                <form method="get" action="{{ path('admin_reservations_pack') }}" class="row g-3 align-items-center">
                                    <div class="col-md-4">
                                        <label for="status_filter" class="form-label text-sm font-weight-bold">Filtrer par Statut</label>
                                        <select name="status_filter" id="status_filter" class="form-select" onchange="this.form.submit()">
                                            <option value="">Tous les statuts</option>
                                            <option value="En attente" {{ selected_status|default('') == 'En attente' ? 'selected' : '' }}>En attente</option>
                                            <option value="Validé" {{ selected_status|default('') == 'Validé' ? 'selected' : '' }}>Validé</option>
                                            <option value="Refusé" {{ selected_status|default('') == 'Refusé' ? 'selected' : '' }}>Refusé</option>
                                        </select>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label text-sm font-weight-bold">Trier par Date</label>
                                        <div class="input-group">
                                            <input type="date" name="date_filter" id="date_filter" class="form-control" value="{{ selected_date|default('') }}" onchange="this.form.submit()">
                                            <div class="btn-group" role="group">
                                                <a href="{{ path('admin_reservations_pack', {'sort_by': 'date', 'sort_order': 'asc', 'status_filter': selected_status|default(''), 'date_filter': selected_date|default('')}) }}"
                                                   class="btn btn-outline-primary {{ sort_by|default('') == 'date' and sort_order|default('') == 'asc' ? 'active' : '' }}">
                                                    <i class="fas fa-arrow-up"></i>
                                                </a>
                                                <a href="{{ path('admin_reservations_pack', {'sort_by': 'date', 'sort_order': 'desc', 'status_filter': selected_status|default(''), 'date_filter': selected_date|default('')}) }}"
                                                   class="btn btn-outline-primary {{ sort_by|default('') == 'date' and sort_order|default('') == 'desc' ? 'active' : '' }}">
                                                    <i class="fas fa-arrow-down"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4 d-flex align-items-end">
                                        <a href="{{ path('admin_reservations_pack') }}" class="btn btn-outline-secondary w-100">
                                            <i class="fas fa-undo me-1"></i> Réinitialiser
                                        </a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- Main Content -->
                    <div class="card mb-4 shadow-sm border-radius-xl">
                        <div class="card-header p-3 d-flex justify-content-between align-items-center">
                            <h6 class="font-weight-bolder mb-0">Liste des Réservations Pack</h6>
                        </div>
                        <div class="card-body p-3">
                            {% for message in app.flashes('success') %}
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    {{ message }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            {% endfor %}
                            {% for message in app.flashes('error') %}
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    {{ message }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            {% endfor %}

                            <a href="{{ path('admin_reservations_pack_new') }}" class="btn btn-primary mb-3">Nouvelle Réservation</a>

                            <div class="table-responsive">
                                <div class="table-container">
                                    <table class="modern-table">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Nom</th>
                                                <th>Prénom</th>
                                                <th>Email</th>
                                                <th>Téléphone</th>
                                                <th>Description</th>
                                                <th>Date</th>
                                                <th>Statut</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for reservation in reservationPacks %}
                                                <tr class="reservation-row">
                                                    <td data-label="id">{{ reservation.idReservationPack }}</td>
                                                    <td data-label="nom">{{ reservation.nom }}</td>
                                                    <td data-label="prenom">{{ reservation.prenom }}</td>
                                                    <td data-label="email">{{ reservation.email }}</td>
                                                    <td data-label="numtel">{{ reservation.numtel }}</td>
                                                    <td data-label="description" data-full-description="{{ reservation.description }}">
                                                        {{ reservation.description|length > 50 ? reservation.description|slice(0, 50) ~ '...' : reservation.description }}
                                                    </td>
                                                    <td data-label="date">{{ reservation.date|date('d/m/Y') }}</td>
                                                    <td data-label="status">
                                                        <span class="badge 
                                                            {{ reservation.status == 'En attente' ? 'bg-warning' : 
                                                               reservation.status == 'Validé' ? 'bg-success' : 
                                                               reservation.status == 'Refusé' ? 'bg-danger' : '' }}
                                                            text-white font-weight-bold">
                                                            {{ reservation.status }}
                                                        </span>
                                                    </td>
                                                    <td class="action-cell">
                                                        <a href="{{ path('admin_reservations_pack_details', {'id': reservation.idReservationPack}) }}" class="action-btn edit-btn">
                                                            <i class="fas fa-info-circle"></i> Détails
                                                        </a>
                                                        <a href="{{ path('admin_reservations_pack_edit', {'id': reservation.idReservationPack}) }}" class="action-btn edit-btn">
                                                            <i class="fas fa-edit"></i> Modifier
                                                        </a>
                                                        <form method="post" action="{{ path('admin_reservations_delete', {'type': 'pack', 'id': reservation.idReservationPack}) }}" style="display:inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette réservation ?');">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.idReservationPack) }}">
                                                            <button class="action-btn delete-btn">
                                                                <i class="fas fa-trash"></i> Supprimer
                                                            </button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            {% else %}
                                                <tr>
                                                    <td colspan="9" class="text-center">Aucune réservation trouvée.</td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <!-- Pagination Controls -->
                            {% if reservationPacks.getTotalItemCount > reservationPacks.getPaginationData().numItemsPerPage %}
                                <div class="pagination mt-4 d-flex justify-content-center">
                                    {{ knp_pagination_render(reservationPacks, null, {}, {
                                        'align': 'center',
                                        'size': 'medium',
                                        'rounded': true
                                    }) }}
                                </div>
                            {% endif %}

                            <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary mt-3">Retour</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}

