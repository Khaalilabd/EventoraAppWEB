    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg">
        <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur">
            <div class="container-fluid py-1 px-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                        <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="#">Pages</a></li>
                        <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Réservations Pack</li>
                    </ol>
                    <h6 class="font-weight-bolder mb-0">Réservations Pack</h6>
                </nav>
                <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
                    <div class="ms-md-auto pe-md-3 d-flex align-items-center">
                        <div class="input-group">
                            <span class="input-group-text text-body"><i class="fas fa-search" aria-hidden="true"></i></span>
                            <input type="text" class="form-control" id="searchInput" placeholder="Rechercher...">
                        </div>
                    </div>
                    <ul class="navbar-nav justify-content-end">
                        <li class="nav-item d-flex align-items-center">
                            <a href="#" class="nav-link text-body font-weight-bold px-0">
                                <i class="fa fa-user me-sm-1"></i>
                                <span class="d-sm-inline d-none">{{ app.user.email ?? 'Utilisateur' }}</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container-fluid py-4">
            <div class="row">
                <div class="col-12">
                    <!-- Advanced Filtering Section -->
                    <div class="filter-section card shadow-lg mb-4 p-3 bg-white border-radius-xl">
                        <h5 class="text-gradient text-primary font-weight-bold mb-3"><i class="fas fa-sliders-h me-2"></i> Options de Filtrage Avancées</h5>
                        <form method="get" action="{{ path('admin_reservations_pack') }}" class="row g-3 filter-form">
                            <div class="col-md-3">
                                <label for="status_filter" class="form-label text-sm font-weight-bold">Statut</label>
                                <select name="status_filter" id="status_filter" class="form-select custom-select">
                                    <option value="">Tous les statuts</option>
                                    <option value="En attente" {{ selected_status|default('') == 'En attente' ? 'selected' : '' }}>En attente</option>
                                    <option value="Validé" {{ selected_status|default('') == 'Validé' ? 'selected' : '' }}>Validé</option>
                                    <option value="Refusé" {{ selected_status|default('') == 'Refusé' ? 'selected' : '' }}>Refusé</option>
                                </select>
                            </div>
                            
                            <div class="col-md-3">
                                <label for="date_filter" class="form-label text-sm font-weight-bold">Date</label>
                                <input type="date" name="date_filter" id="date_filter" class="form-control" value="{{ selected_date|default('') }}">
                            </div>
                            
                            <div class="col-md-3">
                                <label class="form-label text-sm font-weight-bold">Tri par Date</label>
                                <div class="sort-buttons">
                                    <a href="{{ path('admin_reservations_pack', {'sort_by': 'date', 'sort_order': 'asc', 'status_filter': selected_status|default(''), 'date_filter': selected_date|default('')}) }}" 
                                       class="sort-button {{ sort_by|default('') == 'date' and sort_order|default('') == 'asc' ? 'active' : '' }}">
                                        <i class="fas fa-arrow-up me-1"></i> Ascendant
                                    </a>
                                    <a href="{{ path('admin_reservations_pack', {'sort_by': 'date', 'sort_order': 'desc', 'status_filter': selected_status|default(''), 'date_filter': selected_date|default('')}) }}"
                                       class="sort-button {{ sort_by|default('') == 'date' and sort_order|default('') == 'desc' ? 'active' : '' }}">
                                        <i class="fas fa-arrow-down me-1"></i> Descendant
                                    </a>
                                </div>
                            </div>
                            
                            <div class="col-md-3">
                                <label>&nbsp;</label>
                                <div class="d-flex">
                                    <button type="submit" class="btn btn-primary me-2 w-100">
                                        <i class="fas fa-filter me-1"></i> Appliquer
                                    </button>
                                    <a href="{{ path('admin_reservations_pack') }}" class="reset-btn w-100 d-flex align-items-center justify-content-center">
                                        <i class="fas fa-undo me-1"></i> Réinitialiser
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>

                    <!-- Main Content -->
                    <div class="card mb-4 shadow-lg border-radius-xl overflow-hidden">
                        <div class="card-header p-3 bg-gradient-primary d-flex justify-content-between align-items-center">
                            <h6 class="font-weight-bolder mb-0 text-white">Liste des Réservations Pack</h6>
                            <a href="{{ path('admin_reservations_pack_new') }}" class="btn btn-light btn-sm d-flex align-items-center">
                                <i class="fas fa-plus me-2"></i> Nouvelle Réservation
                            </a>
                        </div>
                        <div class="card-body p-3">
                            {% for message in app.flashes('success') %}
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    <i class="fas fa-check-circle me-2"></i> {{ message }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            {% endfor %}
                            {% for message in app.flashes('error') %}
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <i class="fas fa-exclamation-circle me-2"></i> {{ message }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            {% endfor %}

                            <!-- Search box -->
                            <div class="search-wrapper mb-4">
                                <i class="fas fa-search"></i>
                                <input type="text" id="searchInput" class="form-control" placeholder="Rechercher une réservation...">
                            </div>

                            <!-- Reservations container -->
                            <div class="reservations-container">
                                <!-- En attente -->
                                <div class="status-column">
                                    <div class="status-column-header status-pending">
                                        <h5>En attente</h5>
                                        <span class="status-count">{{ reservationPacks|filter(r => r.status == 'En attente')|length }}</span>
                                    </div>
                                    <div class="status-column-body">
                                        {% set pendingCount = 0 %}
                                        {% for reservation in reservationPacks %}
                                            {% if reservation.status == 'En attente' %}
                                                {% set pendingCount = pendingCount + 1 %}
                                                <div class="reservation-card">
                                                    <div class="card">
                                                        <div class="card-body">
                                                            <span class="status-badge status-badge-pending">
                                                                <i class="fas fa-clock me-1"></i> En attente
                                                            </span>
                                                            <h6 class="card-title">Réservation #{{ reservation.idReservationPack }}</h6>
                                                            <p class="card-text"><strong>Nom :</strong> {{ reservation.nom }} {{ reservation.prenom }}</p>
                                                            <p class="card-text"><strong>Email :</strong> {{ reservation.email }}</p>
                                                            <p class="card-text"><strong>Téléphone :</strong> {{ reservation.numtel }}</p>
                                                            <p class="card-text"><strong>Date :</strong> {{ reservation.date|date('d/m/Y') }}</p>
                                                            <p class="card-text"><strong>Description :</strong> 
                                                                {{ reservation.description|length > 50 ? reservation.description|slice(0, 50) ~ '...' : reservation.description }}
                                                            </p>
                                                            <div class="action-buttons">
                                                                <a href="{{ path('admin_reservations_pack_details', {'id': reservation.idReservationPack}) }}" class="btn-action btn-view">
                                                                    <i class="fas fa-info-circle"></i> Détails
                                                                </a>
                                                                <a href="{{ path('admin_reservations_pack_edit', {'id': reservation.idReservationPack}) }}" class="btn-action btn-edit">
                                                                    <i class="fas fa-edit"></i> Modifier
                                                                </a>
                                                                <button type="submit" class="btn-action btn-delete" form="delete-form-{{ reservation.idReservationPack }}" style="flex: 1; background: transparent; box-shadow: none;">
                                                                    <i class="fas fa-trash"></i> Supprimer
                                                                </button>
                                                                <form id="delete-form-{{ reservation.idReservationPack }}" method="post" action="{{ path('admin_reservations_delete', {'type': 'pack', 'id': reservation.idReservationPack}) }}" style="display: none;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette réservation ?');">
                                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.idReservationPack) }}">
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            {% endif %}
                                        {% endfor %}
                                        {% if pendingCount == 0 %}
                                            <p class="text-center text-muted my-4">Aucune réservation en attente</p>
                                        {% endif %}
                                    </div>
                                </div>

                                <!-- Validé -->
                                <div class="status-column">
                                    <div class="status-column-header status-approved">
                                        <h5>Validé</h5>
                                        <span class="status-count">{{ reservationPacks|filter(r => r.status == 'Validé')|length }}</span>
                                    </div>
                                    <div class="status-column-body">
                                        {% set approvedCount = 0 %}
                                        {% for reservation in reservationPacks %}
                                            {% if reservation.status == 'Validé' %}
                                                {% set approvedCount = approvedCount + 1 %}
                                                <div class="reservation-card">
                                                    <div class="card">
                                                        <div class="card-body">
                                                            <span class="status-badge status-badge-approved">
                                                                <i class="fas fa-check-circle me-1"></i> Validé
                                                            </span>
                                                            <h6 class="card-title">Réservation #{{ reservation.idReservationPack }}</h6>
                                                            <p class="card-text"><strong>Nom :</strong> {{ reservation.nom }} {{ reservation.prenom }}</p>
                                                            <p class="card-text"><strong>Email :</strong> {{ reservation.email }}</p>
                                                            <p class="card-text"><strong>Téléphone :</strong> {{ reservation.numtel }}</p>
                                                            <p class="card-text"><strong>Date :</strong> {{ reservation.date|date('d/m/Y') }}</p>
                                                            <p class="card-text"><strong>Description :</strong> 
                                                                {{ reservation.description|length > 50 ? reservation.description|slice(0, 50) ~ '...' : reservation.description }}
                                                            </p>
                                                            <div class="action-buttons">
                                                                <a href="{{ path('admin_reservations_pack_details', {'id': reservation.idReservationPack}) }}" class="btn-action btn-view">
                                                                    <i class="fas fa-info-circle"></i> Détails
                                                                </a>
                                                                <a href="{{ path('admin_reservations_pack_edit', {'id': reservation.idReservationPack}) }}" class="btn-action btn-edit">
                                                                    <i class="fas fa-edit"></i> Modifier
                                                                </a>
                                                                <button type="submit" class="btn-action btn-delete" form="delete-form-{{ reservation.idReservationPack }}" style="flex: 1; background: transparent; box-shadow: none;">
                                                                    <i class="fas fa-trash"></i> Supprimer
                                                                </button>
                                                                <form id="delete-form-{{ reservation.idReservationPack }}" method="post" action="{{ path('admin_reservations_delete', {'type': 'pack', 'id': reservation.idReservationPack}) }}" style="display: none;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette réservation ?');">
                                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.idReservationPack) }}">
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            {% endif %}
                                        {% endfor %}
                                        {% if approvedCount == 0 %}
                                            <p class="text-center text-muted my-4">Aucune réservation validée</p>
                                        {% endif %}
                                    </div>
                                </div>

                                <!-- Refusé -->
                                <div class="status-column">
                                    <div class="status-column-header status-rejected">
                                        <h5>Refusé</h5>
                                        <span class="status-count">{{ reservationPacks|filter(r => r.status == 'Refusé')|length }}</span>
                                    </div>
                                    <div class="status-column-body">
                                        {% set rejectedCount = 0 %}
                                        {% for reservation in reservationPacks %}
                                            {% if reservation.status == 'Refusé' %}
