{% extends 'admin/dashboard.html.twig' %}

{% block title %}Réservations Personnalisées{% endblock %}

{% block body %}
    <aside class="sidenav navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-3 fixed-start ms-3" id="sidenav-main">
        <div class="sidenav-header">
            <a class="navbar-brand m-0" href="{{ path('admin_dashboard') }}">
                <img src="{{ asset('assets/img/logo-ct-dark.png') }}" class="navbar-brand-img h-100" alt="main_logo">
                <span class="ms-1 font-weight-bold">Admin Dashboard</span>
            </a>
        </div>
        <hr class="horizontal dark mt-0">
        <div class="collapse navbar-collapse w-auto" id="sidenav-collapse-main">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('admin_dashboard') }}">
                        <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fas fa-tachometer-alt text-dark"></i>
                        </div>
                        <span class="nav-link-text ms-1">Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link dropdown-toggle active" href="#" data-bs-toggle="collapse" data-bs-target="#reservationsMenu" aria-expanded="true">
                        <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fas fa-calendar-check text-dark"></i>
                        </div>
                        <span class="nav-link-text ms-1">Réservations</span>
                    </a>
                    <div class="collapse show" id="reservationsMenu">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('admin_reservations_pack') }}">
                                    <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                                        <i class="fas fa-box text-dark"></i>
                                    </div>
                                    <span class="nav-link-text ms-1">Réservations Pack</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" href="{{ path('admin_reservations_personnalise') }}">
                                    <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                                        <i class="fas fa-calendar-alt text-dark"></i>
                                    </div>
                                    <span class="nav-link-text ms-1">Réservations Personnalisées</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('admin_reclamations') }}">
                        <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fas fa-exclamation-triangle text-dark"></i>
                        </div>
                        <span class="nav-link-text ms-1">Réclamations</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fas fa-users text-dark"></i>
                        </div>
                        <span class="nav-link-text ms-1">Utilisateurs</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fas fa-box text-dark"></i>
                        </div>
                        <span class="nav-link-text ms-1">Packs</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fas fa-concierge-bell text-dark"></i>
                        </div>
                        <span class="nav-link-text ms-1">Services</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_logout') }}">
                        <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fas fa-sign-out-alt text-dark"></i>
                        </div>
                        <span class="nav-link-text ms-1">Déconnexion</span>
                    </a>
                </li>
            </ul>
        </div>
    </aside>

    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg">
        <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur">
            <div class="container-fluid py-1 px-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                        <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="#">Pages</a></li>
                        <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Réservations Personnalisées</li>
                    </ol>
                    <h6 class="font-weight-bolder mb-0">Gestion des Réservations Personnalisées</h6>
                </nav>
                <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
                    <div class="ms-md-auto pe-md-3 d-flex align-items-center">
                        <div class="input-group">
                            <span class="input-group-text text-body"><i class="fas fa-search" aria-hidden="true"></i></span>
                            <input type="text" class="form-control" placeholder="Rechercher...">
                        </div>
                    </div>
                    <ul class="navbar-nav justify-content-end">
                        <li class="nav-item d-flex align-items-center">
                            <a href="#" class="nav-link text-body font-weight-bold px-0">
                                <i class="fa fa-user me-sm-1"></i>
                                <span class="d-sm-inline d-none">{{ app.user.email ?? 'Utilisateur' }}</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container-fluid py-4">
            <div class="row">
                <div class="col-12">
                    <div class="card mb-4 shadow-sm border-radius-xl">
                        <div class="card-header p-3">
                            <h6 class="font-weight-bolder mb-0">Liste des Réservations Personnalisées</h6>
                            <p class="text-sm text-muted mb-0">Gérez les réservations personnalisées</p>
                        </div>
                        <div class="card-body p-3">
                            {% for message in app.flashes('success') %}
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    {{ message }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            {% endfor %}
                            {% for message in app.flashes('error') %}
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    {{ message }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            {% endfor %}

                            {% if reservationPersonnalises is not empty %}
                                <div class="table-responsive">
                                    <table class="table align-items-center mb-0">
                                        <thead>
                                            <tr>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">ID</th>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Nom</th>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Prénom</th>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Email</th>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Description</th>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Date</th>
                                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for reservation in reservationPersonnalises %}
                                                <tr>
                                                    <td class="ps-3 py-2">{{ reservation.idReservationPersonalise }}</td>
                                                    <td class="ps-3 py-2">{{ reservation.nom }}</td>
                                                    <td class="ps-3 py-2">{{ reservation.prenom }}</td>
                                                    <td class="ps-3 py-2">{{ reservation.email }}</td>
                                                    <td class="ps-3 py-2">{{ reservation.description|length > 50 ? reservation.description|slice(0, 50) ~ '...' : reservation.description }}</td>
                                                    <td class="ps-3 py-2">{{ reservation.date|date('d/m/Y') }}</td>
                                                    <td class="ps-3 py-2 text-center">
                                                        <a href="{{ path('admin_reservations_personnalise_edit', {'id': reservation.idReservationPersonalise}) }}" class="btn btn-sm btn-outline-primary me-1"><i class="fas fa-edit"></i></a>
                                                        <form method="post" action="{{ path('admin_reservations_delete', {'type': 'personnalise', 'id': reservation.idReservationPersonalise}) }}" style="display:inline;" onsubmit="return confirm('Voulez-vous vraiment supprimer cette réservation ?');">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.idReservationPersonalise) }}">
                                                            <button class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            {% else %}
                                <div class="text-center p-4">
                                    <i class="fas fa-exclamation-circle text-muted" style="font-size: 2rem;"></i>
                                    <p class="text-muted mt-2">Aucune réservation personnalisée trouvée.</p>
                                </div>
                            {% endif %}
                            <a href="{{ path('admin_reservations_personnalise_new') }}" class="btn btn-primary mt-3">Ajouter une réservation Personnalisée</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}