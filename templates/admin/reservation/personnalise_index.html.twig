{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const searchInput = document.getElementById('searchInput');
            const reservationRows = document.querySelectorAll('.reservation-row');

            // Search functionality
            if (searchInput && reservationRows.length) {
                searchInput.addEventListener('input', () => {
                    const searchTerm = searchInput.value.toLowerCase();

                    reservationRows.forEach(row => {
                        const textContent = row.textContent.toLowerCase();
                        const shouldShow = textContent.includes(searchTerm);
                        row.style.display = shouldShow ? '' : 'none';
                    });
                });
            }
            
            // Description preview functionality
            const descriptionPreviews = document.querySelectorAll('.description-preview');
            descriptionPreviews.forEach(preview => {
                preview.addEventListener('click', () => {
                    const fullDescription = preview.getAttribute('data-full-description');
                    Swal.fire({
                        title: 'Description',
                        html: `<div style="text-align: left; padding: 10px;">${fullDescription || 'Aucune description'}</div>`,
                        confirmButtonText: 'Fermer',
                        confirmButtonColor: '#7928CA',
                        showClass: {
                            popup: 'animate__animated animate__fadeInDown'
                        },
                        hideClass: {
                            popup: 'animate__animated animate__fadeOutUp'
                        }
                    });
                });
            });
            
            // Row hover effect
            reservationRows.forEach(row => {
                row.addEventListener('mouseenter', () => {
                    row.style.backgroundColor = 'rgba(0, 0, 0, 0.02)';
                    row.style.transform = 'translateY(-2px)';
                    row.style.boxShadow = '0 4px 20px rgba(0, 0, 0, 0.05)';
                    row.style.transition = 'all 0.3s ease';
                });
                
                row.addEventListener('mouseleave', () => {
                    row.style.backgroundColor = '';
                    row.style.transform = '';
                    row.style.boxShadow = '';
                });
            });
            
            // Animation for alerts
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                alert.style.animation = 'fadeInDown 0.5s ease forwards';
            });
        });
    </script>
