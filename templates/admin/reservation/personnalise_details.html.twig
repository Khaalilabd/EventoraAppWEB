        <div class="container-fluid py-4">
            <div class="row">
                <div class="col-12">
                    <div class="card mb-4 shadow-lg border-radius-xl overflow-hidden">
                        <div class="card-header p-3 bg-gradient-primary">
                            <h6 class="font-weight-bolder mb-0 text-white">Détails de la Réservation #{{ reservation.IDReservationPersonalise }}</h6>
                        </div>
                        <div class="card-body p-4">
                            <div class="row g-4">
                                <div class="col-md-6">
                                    <div class="info-card p-4 shadow-sm rounded-lg">
                                        <h5 class="text-gradient text-primary font-weight-bold mb-4"><i class="fas fa-user-circle me-2"></i>Informations Client</h5>
                                        <div class="detail-item mb-3 d-flex align-items-center">
                                            <div class="icon-box bg-gradient-primary shadow-sm me-3">
                                                <i class="fas fa-user text-white"></i>
                                            </div>
                                            <div>
                                                <p class="text-xs text-uppercase text-muted mb-1">Nom Complet</p>
                                                <h6 class="mb-0">{{ reservation.nom }} {{ reservation.prenom }}</h6>
                                            </div>
                                        </div>
                                        <div class="detail-item mb-3 d-flex align-items-center">
                                            <div class="icon-box bg-gradient-primary shadow-sm me-3">
                                                <i class="fas fa-envelope text-white"></i>
                                            </div>
                                            <div>
                                                <p class="text-xs text-uppercase text-muted mb-1">Email</p>
                                                <h6 class="mb-0">{{ reservation.email }}</h6>
                                            </div>
                                        </div>
                                        <div class="detail-item mb-3 d-flex align-items-center">
                                            <div class="icon-box bg-gradient-primary shadow-sm me-3">
                                                <i class="fas fa-phone text-white"></i>
                                            </div>
                                            <div>
                                                <p class="text-xs text-uppercase text-muted mb-1">Téléphone</p>
                                                <h6 class="mb-0">{{ reservation.numtel }}</h6>
                                            </div>
                                        </div>
                                        <div class="detail-item mb-3 d-flex align-items-center">
                                            <div class="icon-box bg-gradient-primary shadow-sm me-3">
                                                <i class="fas fa-id-card text-white"></i>
                                            </div>
                                            <div>
                                                <p class="text-xs text-uppercase text-muted mb-1">ID Membre</p>
                                                <h6 class="mb-0">{{ reservation.idMembre }}</h6>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="info-card p-4 shadow-sm rounded-lg">
                                        <h5 class="text-gradient text-primary font-weight-bold mb-4"><i class="fas fa-info-circle me-2"></i>Détails de la Réservation</h5>
                                        <div class="detail-item mb-3">
                                            <p class="text-xs text-uppercase text-muted mb-1">Description</p>
                                            <div class="description-box p-3 bg-light rounded-lg mb-3">
                                                <p class="mb-0">{{ reservation.description }}</p>
                                            </div>
                                        </div>
                                        <div class="detail-item mb-3 d-flex align-items-center">
                                            <div class="icon-box bg-gradient-primary shadow-sm me-3">
                                                <i class="fas fa-calendar-day text-white"></i>
                                            </div>
                                            <div>
                                                <p class="text-xs text-uppercase text-muted mb-1">Date</p>
                                                <h6 class="mb-0">{{ reservation.date ? reservation.date|date('d/m/Y H:i') : 'Non définie' }}</h6>
                                            </div>
                                        </div>
                                        <div class="detail-item mb-3 d-flex align-items-center">
                                            <div class="icon-box 
                                                {{ reservation.status == 'Validé' ? 'bg-gradient-success' : 
                                                   reservation.status == 'Refusé' ? 'bg-gradient-danger' : 
                                                   'bg-gradient-warning' }} shadow-sm me-3">
                                                <i class="fas {{ reservation.status == 'Validé' ? 'fa-check-circle' : 
                                                                 reservation.status == 'Refusé' ? 'fa-times-circle' : 
                                                                 'fa-clock' }} text-white"></i>
                                            </div>
                                            <div>
                                                <p class="text-xs text-uppercase text-muted mb-1">Statut</p>
                                                <span class="badge badge-lg 
                                                    {{ reservation.status == 'Validé' ? 'bg-gradient-success' : 
                                                       reservation.status == 'Refusé' ? 'bg-gradient-danger' : 
                                                       'bg-gradient-warning' }}">
                                                    {{ reservation.status }}
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Services Section -->
                                <div class="col-12">
                                    <div class="info-card p-4 shadow-sm rounded-lg">
                                        <h5 class="text-gradient text-primary font-weight-bold mb-4"><i class="fas fa-concierge-bell me-2"></i>Services Sélectionnés</h5>
                                        {% if reservation.services|length > 0 %}
                                        <div class="row g-3">
                                            {% for service in reservation.services %}
                                            <div class="col-md-4 col-sm-6">
                                                <div class="service-card p-3 shadow-sm rounded-lg h-100">
                                                    <div class="d-flex align-items-center mb-3">
                                                        <div class="icon-shape icon-md me-3 bg-gradient-primary shadow text-center rounded-circle">
                                                            <i class="fas fa-tools text-white"></i>
                                                        </div>
                                                        <h6 class="mb-0 text-sm service-title">{{ service.titre }}</h6>
                                                    </div>
                                                    <div class="service-details">
                                                        <div class="detail-row mb-2">
                                                            <span class="detail-label"><i class="fas fa-tag text-primary me-2"></i> Prix:</span>
                                                            <span class="detail-value fw-bold">{{ service.prix }}</span>
                                                        </div>
                                                        <div class="detail-row">
                                                            <span class="detail-label"><i class="fas fa-map-marker-alt text-primary me-2"></i> Emplacement:</span>
                                                            <span class="detail-value">{{ service.location }}</span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            {% endfor %}
                                        </div>
                                        {% else %}
                                        <div class="alert alert-light text-center my-4">
                                            <i class="fas fa-info-circle me-2"></i> Aucun service sélectionné pour cette réservation
                                        </div>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Action Buttons -->
                            <div class="action-buttons mt-4 d-flex flex-wrap gap-3">
                                <a href="{{ path('admin_reservations_personnalise') }}" class="btn btn-outline-secondary btn-lg">
                                    <i class="fas fa-arrow-left me-2"></i> Retour à la liste
                                </a>
                                <a href="{{ path('admin_reservations_personnalise_edit', {'id': reservation.IDReservationPersonalise}) }}" class="btn bg-gradient-warning btn-lg">
                                    <i class="fas fa-edit me-2"></i> Modifier
                                </a>
                                <a href="{{ path('admin_reservations_personnalise_pdf', {'id': reservation.IDReservationPersonalise}) }}" class="btn bg-gradient-primary btn-lg">
                                    <i class="fas fa-file-pdf me-2"></i> Exporter en PDF
                                </a>
                                <form method="post" action="{{ path('admin_reservations_delete', {'type': 'personnalise', 'id': reservation.IDReservationPersonalise}) }}" style="display:inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette réservation ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.IDReservationPersonalise) }}">
                                    <button class="btn btn-lg text-danger" style="background: transparent !important; box-shadow: none !important; border: 1px solid #dc3545;">
                                        <i class="fas fa-trash me-2"></i> Supprimer
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}

