            .fh5co-logo a {
                font-family: 'Work Sans', sans-serif;
                font-weight: 700;
                font-size: 26px;
                color: #f3f4f6;
                text-decoration: none;
                position: relative;
                overflow: hidden;
                display: inline-block;
                text-shadow: 0 2px 4px rgba(0,0,0,0.2);
            }

            .fh5co-logo a:hover::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                width: 100%;
                height: 2px;
                background-color: #8b5cf6;
                animation: slideInFromLeft 0.3s forwards;
            }

            .user-circle {
                display: inline-block;
                width: 40px;
                height: 40px;
                line-height: 40px;
                text-align: center;
                border-radius: 50%;
                background-color: #6d28d9;
                color: #fff;
                font-size: 20px;
                vertical-align: middle;
                margin-right: 8px;
                box-shadow: 0 2px 5px rgba(0,0,0,0.2);
                transition: transform 0.3s ease, box-shadow 0.3s ease;
            }

            .user-circle:hover {
                transform: scale(1.05);
                box-shadow: 0 4px 12px rgba(109, 40, 217, 0.3);
            }

            .user-circle img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                border-radius: 50%;
            }

            .fh5co-nav .menu-1 ul {
                display: flex;
                align-items: center;
                justify-content: flex-end;
                margin: 0;
                padding: 0;
                list-style: none;
            }

            .fh5co-nav .menu-1 ul li {
                margin: 0 15px;
                position: relative;
            }

            .fh5co-nav .menu-1 ul li a {
                font-family: 'Work Sans', sans-serif;
                font-size: 15px;
                color: #e5e7eb;
                text-transform: uppercase;
                text-decoration: none;
                transition: all 0.3s ease;
                position: relative;
                display: inline-block;
                padding: 5px 0;
                letter-spacing: 0.5px;
                font-weight: 500;
            }

            .fh5co-nav .menu-1 ul li a:hover {
                color: #a855f7;
                transform: translateY(-2px);
            }

            .fh5co-nav .menu-1 ul li a::after {
                content: '';
                position: absolute;
                width: 0;
                height: 2px;
                bottom: 0;
                left: 0;
                background-color: #a855f7;
                transition: width 0.3s ease;
            }

            .fh5co-nav .menu-1 ul li a:hover::after {
                width: 100%;
            }

            .fh5co-nav .menu-1 ul li.active a {
                color: #a855f7;
                font-weight: 600;
            }

            .fh5co-nav .menu-1 ul li.active a::after {
                width: 100%;
                background-color: #a855f7;
            }

            .fh5co-nav .menu-1 ul li.has-dropdown .dropdown {
                display: none;
                position: absolute;
                top: 100%;
                right: 0;
                background-color: rgba(15, 23, 42, 0.95);
                box-shadow: 0 5px 20px rgba(0,0,0,0.2);
                list-style: none;
                padding: 10px 0;
                min-width: 180px;
                z-index: 1001;
                opacity: 0;
                visibility: hidden;
                transition: all 0.3s ease;
                transform: translateY(10px);
                border-radius: 8px;
                border-top: 2px solid #8b5cf6;
            }

            .fh5co-nav .menu-1 ul li.has-dropdown:hover .dropdown {
                display: block;
                opacity: 1;
                visibility: visible;
                transform: translateY(0);
            }

            .fh5co-nav .menu-1 ul li.has-dropdown .dropdown li a {
                padding: 10px 20px;
                font-size: 14px;
                text-transform: none;
                color: #e5e7eb;
                display: block;
                font-weight: 400;
            }

            .fh5co-nav .menu-1 ul li.has-dropdown .dropdown li a:hover {
                color: #a855f7;
                background-color: rgba(139, 92, 246, 0.1);
            }

            .menu-toggle {
                display: none;
                font-size: 24px;
                cursor: pointer;
                color: #a855f7;
                padding: 10px;
            }

            /* Form styles */
            .event-wrap {
                background: linear-gradient(135deg, #ffffff, #f5f3ff);
                padding: 40px;
                border-radius: 16px;
                box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
                max-width: 1000px;
                margin: 40px auto;
                position: relative;
                overflow: hidden;
                animation: fadeIn 0.5s ease-in-out;
                z-index: 2;
                border-top: 4px solid #8b5cf6;
            }

            .event-wrap::before {
                content: '';
                position: absolute;
                top: -50px;
                right: -50px;
                width: 150px;
                height: 150px;
                background: rgba(139, 92, 246, 0.08);
                border-radius: 50%;
            }

            .event-wrap::after {
                content: '';
                position: absolute;
                bottom: -50px;
                left: -50px;
                width: 150px;
                height: 150px;
                background: rgba(139, 92, 246, 0.08);
                border-radius: 50%;
            }

            .event-wrap h3 {
                color: #6d28d9;
                margin-bottom: 30px;
                font-size: 26px;
                font-weight: 700;
                text-align: center;
                position: relative;
                padding-bottom: 15px;
                letter-spacing: 0.5px;
            }

            .event-wrap h3::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 50%;
                transform: translateX(-50%);
                width: 60px;
                height: 3px;
                background: linear-gradient(90deg, #6d28d9, #8b5cf6);
            }

            .form-container {
                display: flex;
                gap: 30px;
            }

            .form-column {
                flex: 1;
                min-width: 0;
            }

            .form-step {
                width: 100%;
            }

            .form-group {
                margin-bottom: 20px;
                position: relative;
            }

            .form-group label {
                color: #6d28d9;
                font-weight: 600;
                font-size: 14px;
                margin-bottom: 8px;
                display: block;
                transition: transform 0.3s ease, color 0.3s ease;
                letter-spacing: 0.5px;
            }

            .form-group:focus-within label {
                color: #8b5cf6;
                transform: translateY(-2px);
            }

            .form-group textarea.form-control {
                min-height: 130px;
                resize: vertical;
            }

            .form-control {
                background: #f9fafb;
                border: 1px solid #ddd6fe;
                color: #4b5563;
                border-radius: 10px;
                padding: 14px 16px;
                font-size: 15px;
                transition: all 0.3s ease;
                width: 100%;
                pointer-events: auto;
                user-select: text;
                height: 50px;
                box-shadow: 0 2px 5px rgba(0,0,0,0.05);
            }

            .form-control::placeholder {
                color: #9ca3af;
                opacity: 0.6;
            }

            .form-control:focus {
                border-color: #8b5cf6;
                box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.2);
                outline: none;
                background: #fff;
                transform: translateY(-2px);
            }

            .form-control.is-invalid {
                border-color: #ef4444;
                background: #fef2f2;
                box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.1);
            }

            .form-control.is-valid {
                border-color: #10b981;
                background-color: #f0fdf4;
                box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1);
            }

            .form-error {
                color: #ef4444;
                font-size: 13px;
                margin-top: 5px;
                transition: all 0.3s ease;
                font-weight: 500;
            }

            .selected-pack {
                margin-top: 15px;
                padding: 15px;
                background: rgba(124, 58, 237, 0.08);
                border-radius: 10px;
                color: #6d28d9;
                font-size: 15px;
                display: none;
                border-left: 4px solid #7c3aed;
                transition: all 0.3s ease;
                animation: fadeIn 0.5s ease-out;
                font-weight: 500;
            }

            .selected-pack.visible {
                display: block;
            }

            .btn {
                padding: 14px 24px;
                border-radius: 10px;
                font-size: 16px;
                font-weight: 600;
                transition: all 0.3s ease;
                width: 100%;
                margin-top: 10px;
                position: relative;
                overflow: hidden;
                letter-spacing: 0.5px;
            }

            .btn::after {
                content: '';
                position: absolute;
                top: 50%;
                left: 50%;
                width: 5px;
                height: 5px;
                background: rgba(255, 255, 255, 0.3);
                opacity: 0;
                border-radius: 100%;
                transform: scale(1, 1) translate(-50%);
                transform-origin: 50% 50%;
            }

            .btn:focus:not(:active)::after {
                animation: ripple 1s ease-out;
            }

            .btn-primary {
                background: linear-gradient(135deg, #6d28d9, #8b5cf6);
                border: none;
                color: #ffffff;
                box-shadow: 0 5px 15px rgba(139, 92, 246, 0.3);
            }

            .btn-primary:hover {
                background: linear-gradient(135deg, #5b21b6, #7e22ce);
                transform: translateY(-3px);
                box-shadow: 0 8px 25px rgba(124, 58, 237, 0.4);
            }

            .btn-secondary {
                background: #f9fafb;
                border: 1px solid #8b5cf6;
                color: #6d28d9;
            }

            .btn-secondary:hover {
                background: rgba(139, 92, 246, 0.05);
                color: #6d28d9;
                transform: translateY(-3px);
                box-shadow: 0 5px 15px rgba(139, 92, 246, 0.15);
            }

            .btn-info {
                background: linear-gradient(135deg, #6d28d9, #4f46e5);
                border: none;
                color: #ffffff;
                box-shadow: 0 5px 15px rgba(79, 70, 229, 0.25);
            }

            .btn-info:hover {
                background: linear-gradient(135deg, #5b21b6, #4338ca);
                transform: translateY(-3px);
                box-shadow: 0 8px 20px rgba(79, 70, 229, 0.35);
            }

            .loading-spinner {
                display: none;
                border: 4px solid #e5e7eb;
                border-top: 4px solid #8b5cf6;
                border-radius: 50%;
                width: 24px;
                height: 24px;
                animation: spin 1s linear infinite;
                margin: 20px auto;
            }

            /* Step 2 placeholder */
            #step-2 {
                display: none;
                text-align: center;
                padding: 40px;
                background: rgba(139, 92, 246, 0.08);
                border-radius: 10px;
                color: #6d28d9;
            }

            #step-2 h4 {
                margin-bottom: 20px;
                font-size: 22px;
                font-weight: 600;
                color: #6d28d9;
            }

            #step-2 p {
                font-size: 16px;
                color: #6b7280;
                margin-bottom: 30px;
            }

            /* Event section */
            #fh5co-event {
                flex: 1 0 auto;
                padding: 40px 0;
            }

            .fh5co-heading {
                margin-bottom: 40px;
                text-align: center;
                animation: fadeIn 0.7s ease-out;
            }

            .fh5co-heading span {
                color: #ddd6fe;
                font-family: 'Sacramento', cursive;
                font-size: 28px;
                display: block;
                margin-bottom: 10px;
                text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
            }

            .fh5co-heading h2 {
                color: #FFFFFF;
                font-size: 38px;
                font-weight: 700;
                margin: 0;
                text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
            }

            /* Footer */
            #fh5co-footer {
                background: #0f172a;
                padding: 25px 0;
                margin-top: auto;
                position: relative;
                z-index: 2;
                border-top: 1px solid rgba(139, 92, 246, 0.3);
            }

            #fh5co-footer p {
                color: #e5e7eb;
                font-size: 14px;
                text-align: center;
                margin: 0;
            }

            #fh5co-footer a {
                color: #c4b5fd;
                text-decoration: none;
                transition: color 0.3s ease;
            }

            #fh5co-footer a:hover {
                text-decoration: underline;
                color: #a5b4fc;
            }

            /* Select2 custom styles */
            .select2-container--default .select2-selection--single {
                background: #f9fafb;
                border: 1px solid #ddd6fe;
                border-radius: 10px;
                height: 50px;
                padding: 10px 15px;
                transition: all 0.3s ease;
            }

            .select2-container--default .select2-selection--single:focus {
                border-color: #8b5cf6;
                box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.2);
            }

            .select2-container--default .select2-selection--single .select2-selection__rendered {
                color: #4b5563;
                line-height: 30px;
                padding-left: 0;
            }

            .select2-container--default .select2-selection--single .select2-selection__arrow {
                height: 48px;
                right: 10px;
            }

            .select2-container--default .select2-selection--single .select2-selection__arrow b {
                border-color: #8b5cf6 transparent transparent transparent;
            }

            .select2-dropdown {
                border: 1px solid #ddd6fe;
                border-radius: 10px;
                box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
                overflow: hidden;
            }

            .select2-container--default .select2-search--dropdown .select2-search__field {
                border: 1px solid #ddd6fe;
                border-radius: 6px;
                padding: 8px 12px;
            }

            .select2-container--default .select2-results__option--highlighted[aria-selected] {
                background-color: #8b5cf6;
            }

            .select2-container--default .select2-results__option {
                padding: 10px 15px;
                transition: all 0.2s ease;
            }

            /* Animations */
            @keyframes spin {
                0% { transform: rotate(0deg); }
                100% { transform: rotate(360deg); }
            }

            @keyframes fadeIn {
                from { opacity: 0; transform: translateY(20px); }
                to { opacity: 1; transform: translateY(0); }
            }

            @keyframes slideInFromLeft {
                from { width: 0; }
                to { width: 100%; }
            }

            @keyframes ripple {
                0% {
                    transform: scale(0, 0);
                    opacity: 1;
                }
                20% {
                    transform: scale(25, 25);
                    opacity: 1;
                }
                100% {
                    opacity: 0;
                    transform: scale(40, 40);
                }
            }

            /* Enhanced animations */
            @keyframes shake {
                0%, 100% {transform: translateX(0);}
                20%, 60% {transform: translateX(-5px);}
                40%, 80% {transform: translateX(5px);}
            }
            
            @keyframes pulse {
                0% {box-shadow: 0 0 0 0 rgba(139, 92, 246, 0.4);}
                70% {box-shadow: 0 0 0 10px rgba(139, 92, 246, 0);}
                100% {box-shadow: 0 0 0 0 rgba(139, 92, 246, 0);}
            }
            
            .btn:focus {
                animation: pulse 1.5s infinite;
            }

            /* Responsive */
            @media (max-width: 768px) {
                .menu-toggle { display: block; }
                .fh5co-nav .menu-1 ul {
                    display: none;
                    flex-direction: column;
                    position: absolute;
                    top: 60px;
                    left: 0;
                    width: 100%;
                    background-color: rgba(15, 23, 42, 0.95);
                    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
                    padding: 20px 0;
                }

                .fh5co-nav .menu-1 ul.active {
                    display: flex;
                }

                .fh5co-nav .menu-1 ul li {
                    margin: 10px 0;
                    text-align: center;
                }

                .user-circle {
                    margin-right: 0;
                    margin-bottom: 5px;
                }

                .fh5co-nav .menu-1 ul li.has-dropdown .dropdown {
                    position: static;
                    display: none;
                    box-shadow: none;
                    background-color: rgba(15, 23, 42, 0.7);
                    padding: 10px 0;
                    opacity: 1;
                    visibility: visible;
                }

                .fh5co-nav .menu-1 ul li.has-dropdown:hover .dropdown {
                    display: none;
                }

                .fh5co-nav .menu-1 ul li.has-dropdown.active .dropdown {
                    display: block;
                }

                .event-wrap {
                    max-width: 90%;
                    padding: 24px;
                }

                .form-container {
                    flex-direction: column;
                    gap: 20px;
                }

                .fh5co-heading h2 {
                    font-size: 28px;
                }

                .fh5co-heading span {
                    font-size: 20px;
                }

                .btn {
                    font-size: 14px;
                    padding: 12px;
                }

                .event-wrap h3 {
                    font-size: 22px;
                }
            }

            @media (max-width: 480px) {
                .fh5co-heading h2 {
                    font-size: 24px;
                }

                .fh5co-heading span {
                    font-size: 18px;
                }

                .event-wrap {
                    padding: 20px;
                }

                .form-control {
                    font-size: 14px;
                    padding: 12px 14px;
                }

                .select2-container--default .select2-selection--single {
                    height: 45px;
                }
            }
        </style>
    {% endblock %}

