                                        <img src="{{ asset('Uploads/images/' ~ app.user.image) }}" alt="Profile">
                                    {% else %}
                                        <i class="icon-user"></i>
                                    {% endif %}
                                </span>
                                Contact
                            </a>
                            <ul class="dropdown">
                                {% if app.user %}
                                    <li><a href="{{ path('app_settings') }}">Settings</a></li>
                                    <li><a href="{{ path('app_home') }}">Notifications</a></li>
                                    <li><a href="{{ path('app_user_history') }}">History</a></li>
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <li><a href="{{ path('admin_dashboard') }}">Dashboard</a></li>
                                    {% endif %}
                                    <li><a href="{{ path('app_logout') }}">Log out</a></li>
                                {% else %}
                                    <li><a href="{{ path('discord_login') }}">Log in with Discord</a></li>
                                    <li><a href="{{ path('app_auth') }}">Log in</a></li>
                                    <li><a href="{{ path('app_auth') }}">Sign up</a></li>
                                {% endif %}
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div id="fh5co-event">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2 text-center fh5co-heading animate-box">
                        <span>Your Perfect Event</span>
                        <h2>Create a Pack Reservation</h2>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="event-wrap animate-box">
                            <h3>Step 1: Booking Information</h3>
                            <div class="form-step" id="step-1">
                                {% if form is defined %}
                                    {{ form_start(form, {'attr': {'class': 'form', 'id': 'pack-reservation-form', 'novalidate': 'novalidate'}}) }}
                                        {% if form_errors(form) %}
                                            <div class="form-error">{{ form_errors(form) }}</div>
                                        {% endif %}
                                        <div class="form-container">
                                            <div class="form-column">
                                                <div class="form-group">
                                                    {{ form_label(form.nom, 'Last Name') }}
                                                    {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'required': 'required', 'maxlength': '255', 'placeholder': 'Your last name'}}) }}
                                                    <div class="form-error">{{ form_errors(form.nom) }}</div>
                                                </div>
                                                <div class="form-group">
                                                    {{ form_label(form.prenom, 'First Name') }}
                                                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'required': 'required', 'maxlength': '255', 'placeholder': 'Your first name'}}) }}
                                                    <div class="form-error">{{ form_errors(form.prenom) }}</div>
                                                </div>
                                                <div class="form-group">
                                                    {{ form_label(form.email, 'Email') }}
                                                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'required': 'required', 'type': 'email', 'maxlength': '255', 'placeholder': 'your@email.com'}}) }}
                                                    <div class="form-error">{{ form_errors(form.email) }}</div>
                                                </div>
                                                <div class="form-group">
                                                    {{ form_label(form.numtel, 'Phone Number') }}
                                                    {{ form_widget(form.numtel, {'attr': {'class': 'form-control', 'required': 'required', 'maxlength': '8', 'pattern': '[0-9]{8}', 'placeholder': '12345678'}}) }}
                                                    <div class="form-error">{{ form_errors(form.numtel) }}</div>
                                                </div>
                                            </div>
                                            <div class="form-column">
                                                <div class="form-group">
                                                    {{ form_label(form.description, 'Event Description') }}
                                                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '5', 'placeholder': 'Details of your event'}}) }}
                                                    <div class="form-error">{{ form_errors(form.description) }}</div>
                                                </div>
                                                <div class="form-group">
                                                    {{ form_label(form.date, 'Event Date') }}
                                                    {{ form_widget(form.date, {'attr': {'class': 'form-control flatpickr', 'required': 'required', 'placeholder': 'Select a date'}}) }}
                                                    <div class="form-error">{{ form_errors(form.date) }}</div>
                                                </div>
                                                <div class="form-group">
                                                    {{ form_label(form.pack, 'Select a Pack') }}
                                                    {{ form_widget(form.pack, {'attr': {'class': 'form-control select2', 'required': 'required'}}) }}
                                                    <div class="form-error">{{ form_errors(form.pack) }}</div>
                                                    <div class="selected-pack" id="selected-pack"></div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group d-flex gap-3 flex-wrap justify-content-center">
                                            <button type="submit" class="btn btn-primary" id="next-step">Create Reservation</button>
                                            <a href="{{ path('app_home') }}" class="btn btn-secondary">Back</a>
                                            <a href="{{ path('google_auth') }}" class="btn btn-info">Add to Google Calendar</a>
                                            <div class="loading-spinner" style="display: none;"></div>
                                        </div>
                                    {{ form_end(form) }}
                                {% else %}
                                    <div class="form-error text-danger">
                                        Error: The form is not defined. Please check the controller.
                                    </div>
                                {% endif %}
                            </div>
                            <div class="form-step" id="step-2">
                                <h4>Step 2: Confirmation (Coming Soon)</h4>
                                <p>This section will be completed later.</p>
                                <div class="d-flex gap-3 justify-content-center">
                                    <button type="button" class="btn btn-secondary" id="back-step">Back to Step 1</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <footer id="fh5co-footer" role="contentinfo">
            <div class="container">
                <div class="row copyright">
                    <div class="col-md-12 text-center">
                        <p>
                            <small class="block">© 2025 Eventora. All Rights Reserved.</small>
                            <small class="block">Designed by <a href="http://freehtml5.co/" target="_blank">FREEHTML5.co</a></small>
                        </p>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    {% block javascripts %}
        <script src="{{ asset('js/jquery.min.js') }}"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
        <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/fr.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.js"></script>
        <script>
            $(document).ready(function() {
                // Menu toggle
                $('.menu-toggle').click(function() {
                    $('.fh5co-nav .menu-1 ul').toggleClass('active');
                });

                // Mobile dropdowns
                $('.fh5co-nav .menu-1 ul li.has-dropdown > a').click(function(e) {
                    if ($(window).width() <= 768) {
                        e.preventDefault();
                        $(this).parent().toggleClass('active').siblings().removeClass('active');
                    }
                });

                // Prevent autofocus on description if it exists
                if ($('#{{ form.description.vars.id ?? 'reservation_description' }}').length) {
                    $('#{{ form.description.vars.id ?? 'reservation_description' }}').removeAttr('autofocus');
                }
                $('.form-control').on('focus', function() {
                    $(this).select();
                });

                // Initialize Select2 if pack field exists
                if ($('#{{ form.pack.vars.id ?? 'reservation_pack' }}').length) {
                    const $packSelect = $('#{{ form.pack.vars.id ?? 'reservation_pack' }}');
                    $packSelect.select2({
                        ajax: {
                            url: '{{ path('user_pack_search') }}',
                            dataType: 'json',
                            delay: 250,
                            data: function(params) {
                                return { q: params.term || '' };
                            },
                            processResults: function(data) {
                                console.log('Select2 data:', data);
                                return {
                                    results: data.results && data.results.length > 0 
                                        ? data.results 
                                        : [{ id: '', text: 'No pack found', disabled: true }]
                                };
                            },
                            error: function(xhr, status, error) {
                                console.error('Select2 error:', xhr, status, error);
                                Swal.fire({
                                    title: 'Error',
                                    text: 'Unable to load packs: ' + (xhr.responseJSON?.error || error),
                                    icon: 'error',
                                    confirmButtonText: 'OK'
                                });
                                return { results: [{ id: '', text: 'Loading error', disabled: true }] };
                            }
                        },
                        minimumInputLength: 0,
                        placeholder: 'Search or select a pack...',
                        allowClear: true,
                        width: '100%'
                    });

                    // Preload pack list
                    $packSelect.on('select2:open', function() {
                        console.log('Select2 opened');
                        const select2 = $(this).data('select2');
                        if (!select2.dropdown.$search.val()) {
                            select2.trigger('query', { term: '' });
                        }
                    });

                    // Display selected pack
                    $packSelect.on('select2:select', function(e) {
                        $('#selected-pack').text(`Selected pack: ${e.params.data.text}`).addClass('visible');
                    }).on('select2:unselect', function() {
                        $('#selected-pack').text('').removeClass('visible');
                    });
                }

                // Flatpickr if date field exists
                if ($('.flatpickr').length) {
                    flatpickr(".flatpickr", {
                        dateFormat: "Y-m-d",
                        minDate: "today",
                        locale: "fr",
                        allowInput: true,
                        onChange: function(selectedDates, dateStr, instance) {
                            const $input = $(instance.element);
                            $input.toggleClass('is-invalid', selectedDates.length === 0)
                                  .next('.form-error').text(selectedDates.length === 0 ? 'The date is required.' : '');
                        }
                    });
                }

                // Numtel validation if numtel field exists
                if ($('#{{ form.numtel.vars.id ?? 'reservation_numtel' }}').length) {
                    $('#{{ form.numtel.vars.id ?? 'reservation_numtel' }}').on('input', function() {
                        this.value = this.value.replace(/[^0-9]/g, '').slice(0, 8);
                    });
                }

                // Form submission validation
                $('#pack-reservation-form').on('submit', function(e) {
                    let isValid = true;
                    $('.form-control').removeClass('is-invalid');
                    $('.form-error').text('');

                    const validateField = ($input, value, maxLength, errorMsg, regex = null) => {
                        if (!value) {
                            $input.addClass('is-invalid').next('.form-error').text(errorMsg.required);
                            return false;
                        }
                        if (value.length > maxLength) {
                            $input.addClass('is-invalid').next('.form-error').text(errorMsg.maxLength);
                            return false;
                        }
                        if (regex && !regex.test(value)) {
                            $input.addClass('is-invalid').next('.form-error').text(errorMsg.invalid);
                            return false;
                        }
                        return true;
                    };

                    // Last Name
                    if ($('#{{ form.nom.vars.id ?? 'reservation_nom' }}').length) {
                        isValid &= validateField(
                            $('#{{ form.nom.vars.id ?? 'reservation_nom' }}'),
                            $('#{{ form.nom.vars.id ?? 'reservation_nom' }}').val().trim(),
                            255,
                            { required: 'Last name is required.', maxLength: 'Last name cannot exceed 255 characters.' }
                        );
                    }

                    // First Name
                    if ($('#{{ form.prenom.vars.id ?? 'reservation_prenom' }}').length) {
                        isValid &= validateField(
                            $('#{{ form.prenom.vars.id ?? 'reservation_prenom' }}'),
                            $('#{{ form.prenom.vars.id ?? 'reservation_prenom' }}').val().trim(),
                            255,
                            { required: 'First name is required.', maxLength: 'First name cannot exceed 255 characters.' }
                        );
                    }

                    // Email
                    if ($('#{{ form.email.vars.id ?? 'reservation_email' }}').length) {
                        isValid &= validateField(
                            $('#{{ form.email.vars.id ?? 'reservation_email' }}'),
                            $('#{{ form.email.vars.id ?? 'reservation_email' }}').val().trim(),
                            255,
                            {
                                required: 'Email is required.',
                                maxLength: 'Email cannot exceed 255 characters.',
                                invalid: 'Email is not valid.'
                            },
                            /^[^\s@]+@[^\s@]+\.[^\s@]+$/
                        );
                    }

                    // Phone Number
                    if ($('#{{ form.numtel.vars.id ?? 'reservation_numtel' }}').length) {
                        isValid &= validateField(
                            $('#{{ form.numtel.vars.id ?? 'reservation_numtel' }}'),
                            $('#{{ form.numtel.vars.id ?? 'reservation_numtel' }}').val().trim(),
                            8,
                            {
                                required: 'Phone number is required.',
                                invalid: 'Phone number must contain exactly 8 digits.'
                            },
                            /^[0-9]{8}$/
                        );
                    }

                    // Date
                    if ($('#{{ form.date.vars.id ?? 'reservation_date' }}').length) {
                        const $dateInput = $('#{{ form.date.vars.id ?? 'reservation_date' }}');
                        const dateValue = $dateInput.val();
                        if (!dateValue) {
                            $dateInput.addClass('is-invalid').next('.form-error').text('The date is required.');
                            isValid = false;
                        } else if (!/^\d{4}-\d{2}-\d{2}$/.test(dateValue)) {
                            $dateInput.addClass('is-invalid').next('.form-error').text('The date must be in YYYY-MM-DD format.');
                            isValid = false;
                        } else {
                            const selectedDate = new Date(dateValue);
                            const today = new Date();
                            today.setHours(0, 0, 0, 0);
                            if (selectedDate < today) {
                                $dateInput.addClass('is-invalid').next('.form-error').text('The date must be today or in the future.');
                                isValid = false;
                            }
                        }
                    }

                    // Pack
                    if ($('#{{ form.pack.vars.id ?? 'reservation_pack' }}').length) {
                        const $packSelect = $('#{{ form.pack.vars.id ?? 'reservation_pack' }}');
                        if (!$packSelect.val()) {
                            $packSelect.addClass('is-invalid').next('.form-error').text('You must select a pack.');
                            isValid = false;
                        }
                    }

                    if (!isValid) {
                        e.preventDefault();
                        return false;
                    }
                });

                $('#back-step').on('click', function() {
                    $('#step-2').hide();
                    $('#step-1').show();
                    $('.event-wrap h3').text('Step 1: Booking Information');
                });

                // Apply is-invalid on load
                $('.form-control').each(function() {
                    const $errorDiv = $(this).next('.form-error');
                    if ($errorDiv.length && $errorDiv.text().trim()) {
                        $(this).addClass('is-invalid');
                    }
                });

                // Handle flash messages
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        Swal.fire({
                            title: '{{ label == 'success' ? 'Success' : 'Error' }}',
                            text: '{{ message|raw }}',
                            icon: '{{ label == 'success' ? 'success' : 'error' }}',
                            confirmButtonText: 'OK'
                        });
                    {% endfor %}
                {% endfor %}
            });
        </script>
    {% endblock %}
</body>
