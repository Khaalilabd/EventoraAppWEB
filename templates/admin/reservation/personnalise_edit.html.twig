        /* Form styling */
        .form-group {
            margin-bottom: 1.2rem;
        }
        .form-label {
            font-size: 0.85rem;
            margin-bottom: 0.5rem;
            display: block;
        }
        .input-group {
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.05);
            border-radius: 0.5rem;
