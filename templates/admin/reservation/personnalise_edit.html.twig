        }
        
        .service-list-improved input[type="checkbox"] {
            width: 20px;
            height: 20px;
            margin-right: 0.8rem;
            border-radius: 4px;
            border: 2px solid #ddd;
            cursor: pointer;
            position: relative;
            transition: all 0.2s ease;
        }
        
        .service-list-improved input[type="checkbox"]:checked {
            border-color: transparent;
            background-color: #ffb21e;
        }
        
        .service-list-improved input[type="checkbox"]:checked + span {
            font-weight: 600;
            color: #ff8f00;
        }
        
        .service-list-improved input[type="checkbox"]:checked ~ label {
            background: #fff9e6;
            border-color: #ffb21e;
            box-shadow: 0 5px 15px rgba(255, 178, 30, 0.2);
        }
        
        .service-list-improved input[type="checkbox"]:checked ~ label:before {
            opacity: 1;
            width: 6px;
        }
        
        .selected-services-preview {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
        }
        
        .service-tag {
            display: inline-flex;
            align-items: center;
            background: linear-gradient(310deg, #f5b004, #ffca28);
            color: #fff;
            padding: 0.5rem 1rem;
            border-radius: 30px;
            font-size: 0.85rem;
            font-weight: 600;
