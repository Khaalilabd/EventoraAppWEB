{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Animation pour les alerts
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                alert.style.animation = 'fadeInDown 0.5s ease forwards';
            });
            
            // Initialisation de flatpickr pour la date
            if (typeof flatpickr !== 'undefined') {
                flatpickr(".flatpickr", {
                    dateFormat: "Y-m-d",
                    locale: "fr"
                });
            }
            
            // Visualisation des services sélectionnés
            function updateServicesPreview() {
                const servicesPreview = document.getElementById('servicesPreview');
                servicesPreview.innerHTML = '';
                
                const checkboxes = document.querySelectorAll('.service-list-improved input[type="checkbox"]:checked');
                
                if (checkboxes.length === 0) {
                    servicesPreview.innerHTML = '<div class="text-muted">Aucun service sélectionné</div>';
                    return;
                }
                
                checkboxes.forEach(checkbox => {
                    const serviceLabel = checkbox.nextElementSibling.textContent.trim();
                    const serviceTag = document.createElement('div');
                    serviceTag.className = 'service-tag';
                    serviceTag.innerHTML = `<i class="fas fa-check-circle"></i>${serviceLabel}`;
                    servicesPreview.appendChild(serviceTag);
                });
            }
            
            // Mettre à jour l'aperçu au chargement
            updateServicesPreview();
            
            // Mettre à jour l'aperçu lorsqu'on change les services
            const serviceCheckboxes = document.querySelectorAll('.service-list-improved input[type="checkbox"]');
            serviceCheckboxes.forEach(checkbox => {
                checkbox.addEventListener('change', updateServicesPreview);
            });
        });
    </script>
