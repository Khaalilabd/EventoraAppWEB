        }
        
        .services-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 1rem;
        }
        
        .service-list-improved {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(230px, 1fr));
            gap: 0.8rem;
        }
        
        .service-list-improved > div {
            margin-bottom: 0;
        }
        
        .service-list-improved label {
            display: flex;
            align-items: center;
            padding: 1rem;
            border-radius: 0.75rem;
            transition: all 0.3s ease;
            cursor: pointer;
            box-shadow: 0 3px 10px rgba(0,0,0,0.05);
            background: #f8f9fa;
            border: 2px solid transparent;
            position: relative;
            overflow: hidden;
        }
        
        .service-list-improved label:before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: linear-gradient(310deg, #f5b004, #ffca28);
            opacity: 0;
            transition: all 0.3s ease;
        }
        
        .service-list-improved label:hover {
