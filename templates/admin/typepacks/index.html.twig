{% extends 'admin/dashboard.html.twig' %}

{% block title %}Types de Packs - Eventora{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Main container styles */
        .typepack-container {
            padding: 2rem;
            margin-left: 270px;
        }
        
        /* Header section styles */
        .typepack-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }
        
        .typepack-title {
            font-size: 1.8rem;
            font-weight: 700;
            color: #333;
            margin: 0;
        }
        
        .add-typepack-btn {
            background: linear-gradient(135deg, #007bff, #0056b3);
            color: white;
            border: none;
            padding: 0.6rem 1.2rem;
            border-radius: 50px;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 10px rgba(0, 123, 255, 0.3);
        }
        
        .add-typepack-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 15px rgba(0, 123, 255, 0.4);
            background: linear-gradient(135deg, #0069d9, #004494);
            color: white;
            text-decoration: none;
        }
        
        /* Search bar styles */
        .search-container {
            background-color: #fff;
            border-radius: 12px;
            padding: 1rem;
            margin-bottom: 2rem;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        }
        
        .search-input {
            border: 1px solid #e0e0e0;
            border-radius: 50px;
            padding: 0.8rem 1.5rem;
            width: 100%;
            transition: all 0.3s ease;
        }
        
        .search-input:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.2);
            outline: none;
        }
        
        /* Card grid styles */
        .typepack-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 1.5rem;
        }
        
        .typepack-card {
            background: #fff;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
            transition: all 0.4s ease;
            position: relative;
            border-top: 5px solid #007bff;
            animation: fadeIn 0.6s ease-in-out forwards;
            opacity: 0;
            transform: translateY(20px);
        }
        
        @keyframes fadeIn {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .typepack-card:nth-child(1) { animation-delay: 0.1s; }
        .typepack-card:nth-child(2) { animation-delay: 0.2s; }
        .typepack-card:nth-child(3) { animation-delay: 0.3s; }
        .typepack-card:nth-child(4) { animation-delay: 0.4s; }
        .typepack-card:nth-child(5) { animation-delay: 0.5s; }
        .typepack-card:nth-child(6) { animation-delay: 0.6s; }
        
        .typepack-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        }
        
        .typepack-card-header {
            padding: 1.5rem;
            background: #f8f9fa;
        }
        
        .typepack-card-body {
            padding: 1.5rem;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 120px;
        }
        
        .typepack-name {
            font-size: 1.5rem;
            font-weight: 700;
            color: #333;
            margin-bottom: 0.5rem;
            text-align: center;
        }
        
        .typepack-subtitle {
            color: #6c757d;
            font-size: 0.9rem;
            margin: 0;
            text-align: center;
        }
        
        .typepack-icon {
            width: 60px;
            height: 60px;
            background: rgba(0, 123, 255, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1rem;
        }
        
        .typepack-icon i {
            font-size: 1.8rem;
            color: #007bff;
        }
        
        .typepack-actions {
            display: flex;
            justify-content: center;
            gap: 1rem;
            padding: 1rem;
            border-top: 1px solid #f0f0f0;
        }
        
        .action-btn {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
            border: none;
            background: none;
        }
        
        .edit-btn {
            color: #28a745;
        }
        
        .edit-btn:hover {
            background: rgba(40, 167, 69, 0.1);
            color: #28a745;
        }
        
        .delete-btn {
            color: #dc3545;
        }
        
        .delete-btn:hover {
            background: rgba(220, 53, 69, 0.1);
            color: #dc3545;
        }
        
        .action-btn i {
            font-size: 1.2rem;
        }
        
        /* Empty state styles */
        .empty-state {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 4rem 2rem;
            background: #fff;
            border-radius: 16px;
            text-align: center;
        }
        
        .empty-state-icon {
            font-size: 3.5rem;
            color: #e0e0e0;
            margin-bottom: 1.5rem;
        }
        
        .empty-state-text {
            font-size: 1.2rem;
            color: #6c757d;
            margin-bottom: 1.5rem;
        }
        
        /* Alert styles */
        .alert {
            border-left: 4px solid;
            border-radius: 8px;
            padding: 1rem 1.5rem;
            margin-bottom: 1.5rem;
            animation: slideIn 0.5s ease-in-out;
        }
        
        @keyframes slideIn {
            from {
                transform: translateX(-20px);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }
        
        .alert-success {
            background-color: #d4edda;
            border-color: #28a745;
            color: #155724;
        }
        
        .alert-danger {
            background-color: #f8d7da;
            border-color: #dc3545;
            color: #721c24;
        }
        
        /* Responsive styles */
        @media (max-width: 992px) {
            .typepack-container {
                margin-left: 0;
            }
            
            .typepack-header {
                flex-direction: column;
                align-items: stretch;
                gap: 1rem;
            }
            
            .add-typepack-btn {
                align-self: flex-end;
            }
        }
        
        @media (max-width: 768px) {
            .typepack-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
{% endblock %}

{% block body %}
    {% include 'admin/partials/sidebar.html.twig' %}

    <div class="typepack-container">
        <!-- Header section -->
        <div class="typepack-header">
            <h1 class="typepack-title">Types de Packs</h1>
            <a href="{{ path('admin_typepacks_create') }}" class="add-typepack-btn">
                <i class="fas fa-plus"></i> Ajouter un Type
            </a>
        </div>
        
        <!-- Alerts section -->
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
        
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
        
        <!-- Search bar -->
        <div class="search-container">
            <input type="text" class="search-input" id="typepackSearch" placeholder="Rechercher un type de pack..." value="{{ search_query|default('')|e('html_attr') }}">
        </div>
        
        <!-- TypePack cards grid -->
        {% if typepacks is defined and typepacks is not empty %}
            <div class="typepack-grid" id="typepackGrid">
                {% for typepack in typepacks %}
                    <div class="typepack-card" data-type="{{ typepack.type|default('Non défini')|lower }}">
                        <div class="typepack-card-body">
                            <div class="typepack-icon">
                                <i class="fas fa-tags"></i>
                            </div>
                            <h2 class="typepack-name">{{ typepack.type|default('Non défini') }}</h2>
                            <p class="typepack-subtitle">Type de pack</p>
                        </div>
                        <div class="typepack-actions">
                            <a href="{{ path('admin_typepacks_edit', {'id': typepack.id}) }}" class="action-btn edit-btn" title="Modifier">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form method="post" action="{{ path('admin_typepacks_delete', {'id': typepack.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer ce type de pack ? Cela supprimera également tous les packs associés.');" style="display: inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ typepack.id) }}">
                                <button type="submit" class="action-btn delete-btn" title="Supprimer">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="empty-state" id="emptyState">
                <i class="fas fa-tags empty-state-icon"></i>
                <h3 class="empty-state-text">Aucun type de pack trouvé</h3>
                <a href="{{ path('admin_typepacks_create') }}" class="add-typepack-btn">
                    <i class="fas fa-plus"></i> Ajouter votre premier type
                </a>
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('typepackSearch');
            const typepackGrid = document.getElementById('typepackGrid');
            const cards = document.querySelectorAll('.typepack-card');
            
            if (searchInput && typepackGrid) {
                searchInput.addEventListener('input', function() {
                    const searchTerm = this.value.toLowerCase().trim();
                    let hasVisibleCards = false;
                    
                    cards.forEach(card => {
                        const typeName = card.getAttribute('data-type');
                        
                        if (typeName.includes(searchTerm)) {
                            card.style.display = '';
                            hasVisibleCards = true;
                        } else {
                            card.style.display = 'none';
                        }
                    });
                    
                    // Afficher un message si aucun résultat
                    if (!hasVisibleCards && searchTerm !== '') {
                        if (!document.getElementById('noResults')) {
                            const noResults = document.createElement('div');
                            noResults.id = 'noResults';
                            noResults.className = 'empty-state';
                            noResults.innerHTML = `
                                <i class="fas fa-search empty-state-icon"></i>
                                <h3 class="empty-state-text">Aucun résultat pour "${searchTerm}"</h3>
                            `;
                            typepackGrid.insertAdjacentElement('afterend', noResults);
                        } else {
                            document.getElementById('noResults').querySelector('.empty-state-text').textContent = `Aucun résultat pour "${searchTerm}"`;
                        }
                    } else if (document.getElementById('noResults')) {
                        document.getElementById('noResults').remove();
                    }
                });
            }
            
            // Animation des cartes au chargement
            const animateCards = () => {
                cards.forEach((card, index) => {
                    setTimeout(() => {
                        card.style.opacity = '1';
                        card.style.transform = 'translateY(0)';
                    }, 100 * index);
                });
            };
            
            animateCards();
        });
    </script>
{% endblock %} 