        /* Style général */
        body {
            background-color: #f8f9fa;
            font-family: 'Inter', sans-serif;
            color: #2d3748;
        }

        /* Barre latérale */
        .sidenav {
            background-color: #ffffff;
            width: 260px;
            height: 100vh;
            box-shadow: 0 6px 16px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
        }
        .sidenav-header {
            padding: 20px;
            border-bottom: 1px solid #e2e8f0;
        }
        .navbar-brand {
            display: flex;
            align-items: center;
            color: #2d3748;
            transition: color 0.3s ease, transform 0.3s ease;
        }
        .navbar-brand:hover {
            color: #ff6200;
            transform: scale(1.03);
        }
        .navbar-nav .nav-link {
            padding: 12px 20px;
            color: #4a5568;
            transition: all 0.3s ease;
            border-radius: 8px;
            margin: 5px 10px;
        }
        .navbar-nav .nav-link:hover {
            background-color: #ff6200;
            color: #fff;
            transform: translateX(5px);
        }
        .navbar-nav .nav-link.active {
            background-color: #ff6200;
            color: #fff;
            box-shadow: 0 2px 8px rgba(255, 98, 0, 0.2);
        }
        .navbar-nav .nav-link .icon {
            width: 32px;
            height: 32px;
            background-color: #f7fafc;
            border-radius: 6px;
            transition: background-color 0.3s ease, transform 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .navbar-nav .nav-link:hover .icon,
        .navbar-nav .nav-link.active .icon {
            background-color: #fff;
            transform: rotate(360deg);
        }
        .navbar-nav .nav-link .icon i {
            font-size: 16px;
            color: #4a5568;
        }
        .navbar-nav .nav-link:hover .icon i,
        .navbar-nav .nav-link.active .icon i {
            color: #ff6200;
        }
        .navbar-nav .dropdown-toggle::after {
            margin-left: 12px;
            transition: transform 0.3s ease;
        }
        .navbar-nav .dropdown-toggle[aria-expanded="true"]::after {
            transform: rotate(180deg);
        }
        .collapse {
            transition: all 0.3s ease;
        }
        .navbar-nav .collapse .nav-link {
            padding-left: 45px;
            font-size: 0.95em;
        }
        .navbar-nav .collapse .nav-link:hover {
            background-color: #ff8c00;
            color: #fff;
        }
        hr.horizontal {
            border: 0;
            height: 1px;
            background-color: #e2e8f0;
            margin: 10px 0;
        }
        @media (max-width: 768px) {
            .sidenav {
                width: 220px;
            }
        }

        /* Contenu principal */
        .main-content {
            margin-left: 260px;
            width: calc(100% - 260px);
            min-height: 100vh;
            padding: 40px;
            background-color: #f8f9fa;
