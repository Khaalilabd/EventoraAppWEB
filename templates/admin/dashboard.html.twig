                            ticks: { color: '#2d3748', font: { family: 'Inter', size: 12 }, stepSize: 1 }
                        }
                    },
                    plugins: {
                        legend: { display: true, position: 'top' },
                        tooltip: {
                            backgroundColor: '#2d3748',
                            titleFont: { size: 14, family: 'Inter' },
                            bodyFont: { size: 12, family: 'Inter' },
                            callbacks: {
                                label: function(context) {
                                    return `Utilisateur: ${context.raw.email}, Note Moyenne: ${context.raw.x}, Feedbacks: ${context.raw.y}`;
                                }
                            }
                        }
                    },
                    animation: { duration: 1200, easing: 'easeOutQuart' }
                }
            });
        }

        // Fonction pour basculer une section individuelle
        function toggleSection(header) {
            const content = header.nextElementSibling;
            const icon = header.querySelector('.toggle-icon');

            content.classList.toggle('active');
            icon.classList.toggle('collapsed');

            updateToggleAllButton();
        }

        // Fonction pour basculer toutes les sections
        function toggleAllSections() {
            const sections = document.querySelectorAll('.collapsible-content');
            const allCollapsed = Array.from(sections).every(section => !section.classList.contains('active'));

            sections.forEach(section => {
                if (allCollapsed) {
                    section.classList.add('active');
                } else {
                    section.classList.remove('active');
                }
            });

            const icons = document.querySelectorAll('.toggle-icon');
            icons.forEach(icon => {
                if (allCollapsed) {
                    icon.classList.add('collapsed');
                } else {
                    icon.classList.remove('collapsed');
                }
            });

            updateToggleAllButton();
        }

        // Fonction pour mettre à jour le texte du bouton "Tout réduire / Tout afficher"
        function updateToggleAllButton() {
            const toggleAllButton = document.querySelector('.toggle-all');
            const sections = document.querySelectorAll('.collapsible-content');
            const allCollapsed = Array.from(sections).every(section => !section.classList.contains('active'));

            toggleAllButton.textContent = allCollapsed ? 'Tout afficher' : 'Tout réduire';
        }

        // Initialisation : mettre à jour le bouton au chargement
        document.addEventListener('DOMContentLoaded', updateToggleAllButton);
    </script>
