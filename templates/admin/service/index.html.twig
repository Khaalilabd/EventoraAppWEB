{% block stylesheets %}
    {{ parent() }}
    <!-- Inclusion explicite de Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        /* Importation des polices */
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');

        /* Général */
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8fafc;
            color: #334155;
        }

        /* Conteneur principal */
        .service-container {
            margin-left: 270px;
            padding: 20px;
            transition: margin-left 0.3s ease;
        }

        /* Nouvelle carte de service */
        .service-card {
            background: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
            position: relative;
            border: none;
            overflow: hidden;
            height: 100%;
            display: flex;
            flex-direction: column;
        }
        
        .service-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }
        
        .service-card .card-header {
            background: linear-gradient(135deg, #4f46e5, #6366f1);
            color: white;
            border: none;
            padding: 16px 20px;
            border-radius: 12px 12px 0 0;
            position: relative;
        }
        
        .service-card .card-header h5 {
            margin: 0;
            font-weight: 600;
            font-size: 1.1rem;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            padding-right: 40px;
        }
        
        .service-card .card-body {
            padding: 16px 20px;
            flex-grow: 1;
        }
        
        .service-card .badge {
            position: absolute;
            top: 16px;
            right: 16px;
            font-size: 0.7rem;
            font-weight: 500;
            padding: 5px 10px;
            border-radius: 20px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        
        /* Couleurs spécifiques pour chaque type de partenaire */
        .badge-traiteur { background: #f97316; }
        .badge-photographe { background: #22c55e; }
        .badge-decoration { background: #ec4899; }
        .badge-sono { background: #3b82f1; }
        .badge-autres { background: #6366f1; }
        
        .service-info {
            margin-bottom: 12px;
        }
        
        .service-info .info-label {
            font-size: 0.8rem;
            color: #64748b;
            margin-bottom: 2px;
            font-weight: 500;
        }
        
        .service-info .info-value {
            font-size: 0.9rem;
            color: #334155;
            font-weight: 400;
        }
        
        .service-card .card-footer {
            background: #f8fafc;
            border-top: 1px solid #e2e8f0;
            padding: 12px 20px;
            display: flex;
            justify-content: flex-end;
            gap: 8px;
        }
        
        .service-card .action-btn {
            width: 36px;
            height: 36px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            color: white;
            transition: all 0.3s ease;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            border: none;
        }
        
        .btn-view {
            background: #06b6d4;
        }
        
        .btn-view:hover {
            background: #0891b2;
            transform: scale(1.05);
        }
        
        .btn-edit {
            background: #4f46e5;
        }
        
        .btn-edit:hover {
            background: #4338ca;
            transform: scale(1.05);
        }
        
        .btn-delete {
            background: #ef4444;
        }
        
        .btn-delete:hover {
            background: #dc2626;
            transform: scale(1.05);
        }

        /* Barre de recherche et actions */
        .filter-header {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
            padding: 20px;
            margin-bottom: 24px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 15px;
        }
        
        .search-container {
            flex-grow: 1;
            max-width: 450px;
        }
        
        .search-container .input-group {
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        }
        
        .search-container .form-control {
            border: 1px solid #e2e8f0;
            padding: 12px 15px;
            font-size: 0.9rem;
            border-radius: 8px 0 0 8px;
        }
        
        .search-container .input-group-text {
            background: #4f46e5;
            border: none;
            color: white;
            padding: 0 15px;
        }
        
        .action-btns {
            display: flex;
            gap: 10px;
        }
        
        .primary-btn, .secondary-btn {
            padding: 12px 20px;
            border-radius: 8px;
            font-size: 0.9rem;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
        }
        
        .primary-btn {
            background: #4f46e5;
            color: white;
            border: none;
        }
        
        .primary-btn:hover {
            background: #4338ca;
            transform: translateY(-2px);
        }

        .secondary-btn {
            background: #16a34a;
            color: white;
            border: none;
        }
        
        .secondary-btn:hover {
            background: #15803d;
            transform: translateY(-2px);
        }
        
        /* Filtres */
        .filters-container {
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
            margin-bottom: 24px;
            overflow: hidden;
        }
        
        .filters-header {
            background: #f8fafc;
            padding: 15px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #e2e8f0;
        }
        
        .filters-header h6 {
            margin: 0;
            font-weight: 600;
            color: #334155;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .filters-content {
            padding: 20px;
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
        }
        
        .filter-group {
            flex: 1;
            min-width: 250px;
        }
        
        .filter-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: #334155;
            font-size: 0.9rem;
        }
        
        .filter-group .btn-group {
            width: 100%;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
            border-radius: 8px;
            overflow: hidden;
        }
        
        .filter-group .btn {
            flex: 1;
            background: white;
            color: #334155;
            border: 1px solid #e2e8f0;
            padding: 10px;
            font-size: 0.85rem;
            transition: all 0.2s ease;
        }
        
        .filter-group .btn.active {
            background: #4f46e5;
            color: white;
            border-color: #4f46e5;
        }

        /* Pagination */
        .pagination-container {
            margin-top: 30px;
            display: flex;
            justify-content: center;
        }
        
        .pagination {
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        }
        
        .page-item .page-link {
            min-width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #334155;
            background: white;
            border: 1px solid #e2e8f0;
            font-weight: 500;
            transition: all 0.3s ease;
        }
        
        .page-item.active .page-link {
            background: #4f46e5;
            color: white;
            border-color: #4f46e5;
            box-shadow: 0 2px 5px rgba(79, 70, 229, 0.3);
        }
        
        .page-item .page-link:hover:not(.page-item.active .page-link) {
            background: #f8fafc;
            color: #4f46e5;
        }

        /* Modal */
        .modal-content {
            border-radius: 12px;
            overflow: hidden;
            border: none;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        }
        
        .modal-header {
            background: linear-gradient(135deg, #4f46e5, #6366f1);
            color: white;
            padding: 20px;
            border: none;
        }
        
        .modal-body {
            padding: 24px;
        }
        
        .modal-footer {
            padding: 16px 24px;
            background: #f8fafc;
            border-top: 1px solid #e2e8f0;
        }
        
        .detail-item {
            margin-bottom: 16px;
        }
        
        .detail-item .detail-label {
            font-size: 0.85rem;
            color: #64748b;
            margin-bottom: 4px;
        }
        
        .detail-item .detail-value {
            font-size: 1rem;
            color: #334155;
            font-weight: 500;
        }

        /* Responsive */
        @media (max-width: 992px) {
            .service-container {
                margin-left: 0;
            }
            .filter-header {
                flex-direction: column;
                align-items: stretch;
            }
            .search-container {
                max-width: 100%;
            }
        }
        
        @media (max-width: 768px) {
            .filter-group {
                min-width: 100%;
            }
            .action-btns {
                width: 100%;
                justify-content: stretch;
            }
            .primary-btn, .secondary-btn {
                flex: 1;
            }
        }
    </style>
{% endblock %}

