    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const searchInput = document.getElementById('searchInput');
            const table = document.querySelector('.modern-table');
            const tbody = table ? table.querySelector('tbody') : null;
            const rows = tbody ? tbody.querySelectorAll('tr') : [];

            // Recherche dynamique
            if (searchInput && rows.length) {
                searchInput.addEventListener('input', () => {
                    const searchTerm = searchInput.value.toLowerCase();

                    rows.forEach(row => {
                        const cells = row.querySelectorAll('td');
                        let match = false;

                        cells.forEach(cell => {
                            if (cell.textContent.toLowerCase().includes(searchTerm)) {
                                match = true;
                            }
                        });

                        row.style.display = match ? '' : 'none';
                    });
                });
            }

            // Tri du tableau
            const headers = table ? table.querySelectorAll('.sort-btn') : [];
            let currentSortColumn = null;
            let isAsc = true;

            headers.forEach(header => {
                header.addEventListener('click', () => {
                    const sortKey = header.getAttribute('data-sort');
                    if (currentSortColumn === sortKey) {
                        isAsc = !isAsc;
                    } else {
                        isAsc = true;
                        headers.forEach(h => {
                            h.classList.remove('sort-asc', 'sort-desc');
                            h.querySelector('.sort-icon').innerHTML = '↕';
                        });
                    }
                    currentSortColumn = sortKey;

                    // Mettre à jour l'icône de tri
                    header.classList.add(isAsc ? 'sort-asc' : 'sort-desc');
                    header.classList.remove(isAsc ? 'sort-desc' : 'sort-asc');

                    // Trier les lignes
                    sortTable(sortKey, isAsc);
                });
            });

            function sortTable(column, asc) {
                const rowsArray = Array.from(rows);

                rowsArray.sort((a, b) => {
                    let aValue = column === 'description'
                        ? a.querySelector(`td[data-label="${column}"]`).getAttribute('data-full-description') || a.querySelector(`td[data-label="${column}"]`).textContent.trim()
                        : a.querySelector(`td[data-label="${column}"]`).textContent.trim();
                    let bValue = column === 'description'
                        ? b.querySelector(`td[data-label="${column}"]`).getAttribute('data-full-description') || b.querySelector(`td[data-label="${column}"]`).textContent.trim()
                        : b.querySelector(`td[data-label="${column}"]`).textContent.trim();

                    // Gestion des valeurs vides
                    if (!aValue && !bValue) return 0;
                    if (!aValue) return asc ? 1 : -1;
                    if (!bValue) return asc ? -1 : 1;

                    // Gestion des nombres pour ID et Prix
                    if (column === 'id' || column === 'prix') {
                        aValue = parseFloat(aValue) || 0;
                        bValue = parseFloat(bValue) || 0;
                        return asc ? aValue - bValue : bValue - aValue;
                    }

                    // Tri alphabétique pour les autres colonnes
                    return asc
                        ? aValue.localeCompare(bValue)
                        : bValue.localeCompare(aValue);
                });

                // Réinsérer les lignes triées
                if (tbody) {
                    tbody.innerHTML = '';
