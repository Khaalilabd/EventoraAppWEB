                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container-fluid py-4">
            <div class="row">
                <div class="col-12">
                    <div class="card mb-4 shadow-sm border-radius-xl">
                         <div class="card-header p-3 d-flex justify-content-between">
                            <h6 class="font-weight-bolder mb-0">Liste des Services</h6>
                            <a href="{{ path('admin_service_create') }}" class="btn btn-sm btn-outline-success">
                                <i class="fas fa-plus"></i> Ajouter un service
                            </a>
                        </div>
                        <div class="card-body p-3">
                            {# Affichage des messages flash #}
                            {% for message in app.flashes('success') %}
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    {{ message }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            {% endfor %}
                            {% for message in app.flashes('error') %}
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    {{ message }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            {% endfor %}

                            {% if GServices is defined and GServices is not empty %}
                                <div class="table-responsive">
                                   <div class="table-container">
    <table class="table align-items-center mb-0">
        <thead class="table-header bg-warning text-white">
            <tr>
                <th class="text-uppercase text-xs font-weight-bold opacity-7">ID</th>
                <th class="text-uppercase text-xs font-weight-bold opacity-7">ID Partenaire</th>
                <th class="text-uppercase text-xs font-weight-bold opacity-7">Titre</th>
                <th class="text-uppercase text-xs font-weight-bold opacity-7">Location</th>
                <th class="text-uppercase text-xs font-weight-bold opacity-7">Type Service</th>
                <th class="text-uppercase text-xs font-weight-bold opacity-7">Description</th>
                <th class="text-uppercase text-xs font-weight-bold opacity-7">Prix</th>
                <th class="text-uppercase text-xs font-weight-bold opacity-7">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for Gservice in GServices %}
                <tr class="table-row">
                    <td class="table-cell ps-3 py-3">{{ Gservice.id }}</td>
                    <td class="table-cell ps-3 py-3">{{ Gservice.sponsor.nom_partenaire }}</td>
                    <td class="table-cell ps-3 py-3">{{ Gservice.titre }}</td>
                    <td class="table-cell ps-3 py-3">{{ Gservice.Location }}</td>
                    <td class="table-cell ps-3 py-3">{{ Gservice.type_service }}</td>
                    <td class="table-cell ps-3 py-3">{{ Gservice.description|length > 50 ? Gservice.description|slice(0, 50) ~ '...' : Gservice.description }}</td>
                    <td class="table-cell ps-3 py-3">{{ Gservice.prix }}</td>
                    <td class="table-cell ps-3 py-3 text-center">
                        <!-- Actions -->
                        <a href="{{ path('admin_service_edit', {'id': Gservice.id}) }}" class="btn btn-sm btn-outline-primary me-2 action-btn">
                            <i class="fas fa-edit"></i> Modifier
                        </a>
                        <form method="post" action="{{ path('admin_service_delete', {'id': Gservice.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer ce service ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ Gservice.id) }}">
                            <button class="btn btn-sm btn-outline-danger action-btn">
                                <i class="fas fa-trash"></i> Supprimer
                            </button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>


<style>
    /* Style général du tableau */
    .table {
        border-collapse: collapse;
        width: 100%;
        background-color: #f9f9f9;
        border-radius: 8px;
    }

    /* Style pour les en-têtes du tableau */
    .table thead {
        background-color: #FF9800; /* Orange */
        color: white;
    }

    .table th {
        text-align: left;
        padding: 12px 15px;
        font-size: 0.9rem;
        text-transform: uppercase;
        font-weight: bold;
    }

    /* Style pour les cellules du tableau */
    .table td {
        padding: 10px 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
        color: #555;
    }

    /* Ajouter un effet au survol des lignes du tableau */
    .table tr:hover {
        background-color: #f1f1f1;
        cursor: pointer;
        transform: scale(1.02); /* Agrandir la ligne au survol */
        transition: all 0.3s ease;
    }

    /* Style des boutons d'action */
    .action-btn {
        font-size: 0.85rem;
        padding: 8px 15px;
        border-radius: 4px;
        transition: background-color 0.3s, transform 0.2s;
    }

    /* Bouton de modification (édition) */
    .btn-outline-primary {
        border: 1px solid #007bff;
        color: #007bff;
    }

    .btn-outline-primary:hover {
        background-color: #007bff;
        color: white;
        transform: scale(1.05); /* Zoom au survol */
    }

    /* Bouton de suppression */
    .btn-outline-danger {
        border: 1px solid #dc3545;
        color: #dc3545;
    }

    .btn-outline-danger:hover {
        background-color: #dc3545;
        color: white;
        transform: scale(1.05); /* Zoom au survol */
    }

    /* Ombre au survol pour les boutons */
    .action-btn:hover {
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15); /* Ombre autour des boutons */
    }

    /* Style de la cellule contenant les boutons d'action */
    .text-center {
        display: flex;
        justify-content: center;
        align-items: center;
        
    }

</style>

