                        <div class="col-12">
                            <div class="alert alert-info text-center" role="alert">
                                Aucun service trouvé.
                            </div>
                        </div>
                    {% endif %}
                </div>

                <!-- Pagination -->
                {% if total_pages > 1 %}
                    <nav aria-label="Page navigation">
                        <ul class="pagination">
                            <li class="page-item {{ current_page == 1 ? 'disabled' : '' }}">
                                <a class="page-link" href="{{ path('admin_services', {'page': current_page - 1, 'sort_by': sort_by, 'sort_order': sort_order, 'search': searchTerm}) }}" aria-label="Précédent">
                                    <span aria-hidden="true">«</span>
                                </a>
                            </li>
                            {% for i in 1..total_pages %}
                                <li class="page-item {{ current_page == i ? 'active' : '' }}">
                                    <a class="page-link" href="{{ path('admin_services', {'page': i, 'sort_by': sort_by, 'sort_order': sort_order, 'search': searchTerm}) }}">{{ i }}</a>
                                </li>
