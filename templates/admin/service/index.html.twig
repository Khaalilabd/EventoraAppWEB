        // Exportation en CSV
        function exportToCSV() {
            // Récupérer les données de tous les services visibles
            const fiches = document.querySelectorAll('#serviceList .col-lg-3');
            let csvContent = 'ID,Titre,Partenaire,Type de Service,Prix,Location,Description\n';
            let exportCount = 0;
            
            fiches.forEach(fiche => {
                // Toutes les fiches sont maintenant visibles car le filtrage est côté serveur
                try {
                    const titre = fiche.querySelector('.fiche-header h6').textContent.trim().replace(/,/g, ' ');
                    const partenaire = fiche.querySelector('.fiche-body p:nth-child(1)').textContent.replace(/Partenaire:|\s+/g, ' ').trim().replace(/,/g, ' ');
                    const typeService = fiche.querySelector('.fiche-body p:nth-child(2)').textContent.replace(/Type:|\s+/g, ' ').trim().replace(/,/g, ' ');
                    const prix = fiche.querySelector('.fiche-body p:nth-child(3)').textContent.replace(/Prix:|\s+/g, ' ').trim().replace(/,/g, ' ');
                    const lieu = fiche.querySelector('.fiche-body p:nth-child(4)').textContent.replace(/Lieu:|\s+/g, ' ').trim().replace(/,/g, ' ');
                    const description = fiche.querySelector('.fiche-body p:nth-child(5) .description-truncated').textContent.replace(/Description:|\s+/g, ' ').trim().replace(/,/g, ' ');
                    
                    // Récupérer l'ID depuis le formulaire de suppression
                    const deleteForm = fiche.querySelector('form[id^="delete-form-"]');
                    const id = deleteForm ? deleteForm.id.replace('delete-form-', '') : 'N/A';
                    
                    csvContent += `${id},"${titre}","${partenaire}","${typeService}","${prix}","${lieu}","${description}"\n`;
                    exportCount++;
                } catch(e) {
                    console.error("Erreur lors de l'export d'une ligne:", e);
                }
            });
            
            // Vérifier s'il y a des données à exporter
            if (exportCount === 0) {
                showNotification('<i class="fas fa-exclamation-circle me-2"></i> Aucune donnée à exporter', 'error');
                return;
            }
            
            // Créer et télécharger le fichier CSV
            const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
            const link = document.createElement('a');
            link.href = URL.createObjectURL(blob);
            const date = new Date();
            const dateStr = `${date.getFullYear()}-${String(date.getMonth()+1).padStart(2, '0')}-${String(date.getDate()).padStart(2, '0')}`;
            const searchTerm = document.getElementById('searchService').value.trim();
            const filename = searchTerm ? 
                `services_export_${searchTerm}_${dateStr}.csv` : 
                `services_export_${dateStr}.csv`;
            
            link.download = filename;
            link.click();
            
            // Afficher une notification de succès
            showNotification(`<i class="fas fa-check-circle me-2"></i> Export CSV réussi (${exportCount} services)`, 'success');
        }
        
        // Fonction pour afficher des notifications
        function showNotification(message, type = 'success') {
            const notification = document.createElement('div');
            notification.className = 'export-notification';
            
            // Définir le style en fonction du type
            if (type === 'success') {
                notification.style.background = 'linear-gradient(45deg, #10b981, #059669)';
            } else if (type === 'error') {
                notification.style.background = 'linear-gradient(45deg, #ef4444, #dc2626)';
            } else if (type === 'info') {
                notification.style.background = 'linear-gradient(45deg, #3b82f6, #2563eb)';
            }
            
            notification.innerHTML = message;
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.style.opacity = '1';
                notification.style.transform = 'translateY(0)';
            }, 100);
            
            setTimeout(() => {
                notification.style.opacity = '0';
                notification.style.transform = 'translateY(10px)';
                setTimeout(() => notification.remove(), 500);
            }, 3000);
        }
    </script>
