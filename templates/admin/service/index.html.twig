    <script>
        // Fonction pour gérer la pagination via AJAX
        function handlePagination(e, pageLink) {
            e.preventDefault();
            
            // Obtenir l'URL de la page cible
            const url = pageLink.getAttribute('href');
            if (!url) return;
            
            // Mettre à jour l'URL dans le navigateur sans recharger
            window.history.pushState({path: url}, '', url);
            
            // Afficher une animation de chargement
            const contentArea = document.querySelector('.service-content');
            contentArea.classList.add('loading');
            
            // Créer un loader
            let loader = document.getElementById('pageLoader');
            if (!loader) {
                loader = document.createElement('div');
                loader.id = 'pageLoader';
                loader.className = 'page-loader';
                loader.innerHTML = '<div class="spinner"><i class="fas fa-circle-notch fa-spin"></i></div><div class="text">Chargement de la page...</div>';
                document.querySelector('.service-content').appendChild(loader);
            }
            
            // Faire la requête AJAX
            fetch(url)
                .then(response => response.text())
                .then(html => {
                    const parser = new DOMParser();
                    const doc = parser.parseFromString(html, 'text/html');
                    
                    // Remplacer le contenu principal
                    const newServiceList = doc.getElementById('serviceList');
                    if (newServiceList) {
                        document.getElementById('serviceList').innerHTML = newServiceList.innerHTML;
                        initializeCardAnimations();
                    }
                    
                    // Mettre à jour la pagination
                    const newPagination = doc.querySelector('.pagination');
                    const currentPagination = document.querySelector('.pagination');
                    if (newPagination && currentPagination) {
                        currentPagination.innerHTML = newPagination.innerHTML;
                        // Réattacher les gestionnaires d'événements pour les nouveaux liens
                        attachPaginationHandlers();
                    }
                    
                    // Extraire le numéro de page actuel de l'URL
                    const urlParams = new URLSearchParams(new URL(url).search);
                    const currentPage = urlParams.get('page') || '1';
                    
                    // Mettre à jour les valeurs de tri cachées, au cas où elles ont changé
                    const sortBy = urlParams.get('sort_by');
                    const sortOrder = urlParams.get('sort_order');
                    if (sortBy) document.getElementById('sort_by').value = sortBy;
                    if (sortOrder) document.getElementById('sort_order').value = sortOrder;
                    
                    // Supprimer l'animation de chargement
                    contentArea.classList.remove('loading');
                    if (loader) loader.remove();
                    
                    // Faire défiler la page vers le haut en douceur
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                })
                .catch(error => {
                    console.error('Erreur lors du changement de page:', error);
                    contentArea.classList.remove('loading');
                    if (loader) loader.remove();
                    showNotification('<i class="fas fa-exclamation-circle me-2"></i> Erreur lors du changement de page', 'error');
                });
        }

        // Attacher les gestionnaires d'événements à tous les liens de pagination
        function attachPaginationHandlers() {
            const paginationLinks = document.querySelectorAll('.pagination .page-link');
            paginationLinks.forEach(link => {
                link.removeEventListener('click', function(e) { handlePagination(e, this); });
                link.addEventListener('click', function(e) { handlePagination(e, this); });
            });
        }

        // Animation d'entrée pour les cartes de service au chargement initial
        document.addEventListener('DOMContentLoaded', function() {
            // Initialiser les tooltips
            if (typeof bootstrap !== 'undefined' && bootstrap.Tooltip) {
                const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
                tooltipTriggerList.map(function(tooltipTriggerEl) {
                    return new bootstrap.Tooltip(tooltipTriggerEl, {
                        delay: { show: 500, hide: 100 }
                    });
                });
            }
            
            // Initialiser les animations des cartes au chargement
            initializeCardAnimations();
            
            // Attacher les gestionnaires d'événements pour la pagination
            attachPaginationHandlers();
        });
        
        // Fonction pour récupérer les résultats de recherche via AJAX
        function fetchSearchResults(searchText) {
            // Construire l'URL avec les paramètres actuels
            const urlParams = new URLSearchParams(window.location.search);
            urlParams.set('search', searchText);
            urlParams.set('page', '1'); // Retour à la première page lors d'une recherche
            
            // Conserver les paramètres de tri depuis les éléments cachés
            const sortBy = document.getElementById('sort_by').value || '{{ sort_by }}';
            const sortOrder = document.getElementById('sort_order').value || '{{ sort_order }}';
            urlParams.set('sort_by', sortBy);
            urlParams.set('sort_order', sortOrder);
            
            // Mettre à jour l'URL dans le navigateur sans recharger la page
            const newUrl = `{{ path('admin_services') }}?${urlParams.toString()}`;
            window.history.pushState({path: newUrl}, '', newUrl);
            
            // Afficher une animation de chargement
            const searchBar = document.querySelector('.search-bar');
            let loader = document.getElementById('searchLoader');
            if (!loader) {
                loader = document.createElement('div');
                loader.id = 'searchLoader';
                loader.className = 'search-loader';
                loader.innerHTML = '<i class="fas fa-circle-notch fa-spin"></i> Recherche...';
                searchBar.appendChild(loader);
            }
            
            // Faire la requête AJAX
            fetch(newUrl)
                .then(response => response.text())
                .then(html => {
                    // Parser le HTML reçu
                    const parser = new DOMParser();
                    const doc = parser.parseFromString(html, 'text/html');
                    
                    // Extraire la liste des services
                    const newServiceList = doc.getElementById('serviceList');
                    if (newServiceList) {
                        // Remplacer le contenu
                        document.getElementById('serviceList').innerHTML = newServiceList.innerHTML;
                        
                        // Initialiser les animations pour les nouvelles cartes
                        initializeCardAnimations();
                    }
                    
                    // Mettre à jour la pagination si présente
                    const newPagination = doc.querySelector('.pagination');
                    const currentPagination = document.querySelector('.pagination');
                    if (newPagination && currentPagination) {
                        currentPagination.innerHTML = newPagination.innerHTML;
                    } else if (newPagination) {
                        // Ajouter la pagination si elle n'existait pas
                        const paginationContainer = document.createElement('nav');
                        paginationContainer.setAttribute('aria-label', 'Page navigation');
                        paginationContainer.className = 'mt-4';
                        paginationContainer.innerHTML = newPagination.outerHTML;
                        document.getElementById('serviceList').after(paginationContainer);
                    }
                    
                    // Mettre à jour le compteur total des résultats
                    updateSearchResultsCount(document.querySelectorAll('#serviceList .col-lg-3').length, searchText);
                    
                    // Supprimer l'animation de chargement
                    if (loader) loader.remove();
                })
                .catch(error => {
                    console.error('Erreur lors de la recherche:', error);
                    // Afficher une notification d'erreur
                    showNotification('<i class="fas fa-exclamation-circle me-2"></i> Erreur lors de la recherche', 'error');
                    
                    // Supprimer l'animation de chargement
                    if (loader) loader.remove();
                });
        }

        // Fonction pour trier et soumettre le formulaire
        function sortAndSubmit(sortBy, sortOrder) {
            // Mettre à jour les éléments cachés pour le tri
            document.getElementById('sort_by').value = sortBy;
            document.getElementById('sort_order').value = sortOrder;
            
            // Récupérer la valeur de recherche actuelle
            const searchInput = document.getElementById('searchService');
            const searchValue = searchInput ? searchInput.value.trim() : '';
            
            // Construire l'URL avec les paramètres de tri et de recherche
            const urlParams = new URLSearchParams();
            urlParams.set('sort_by', sortBy);
            urlParams.set('sort_order', sortOrder);
            urlParams.set('page', '1');
            
            // Ajouter le terme de recherche s'il existe
            if (searchValue && searchValue !== '') {
                urlParams.set('search', searchValue);
                // Déclencher une recherche AJAX qui respectera les nouveaux paramètres de tri
                fetchSearchResults(searchValue);
            } else {
                // Faire une requête AJAX avec juste les paramètres de tri
                const url = `{{ path('admin_services') }}?${urlParams.toString()}`;
                
                // Mettre à jour l'URL dans le navigateur sans recharger la page
                window.history.pushState({path: url}, '', url);
                
                // Afficher une animation de chargement
                const searchBar = document.querySelector('.search-bar');
                let loader = document.getElementById('searchLoader');
                if (!loader) {
                    loader = document.createElement('div');
                    loader.id = 'searchLoader';
                    loader.className = 'search-loader';
                    loader.innerHTML = '<i class="fas fa-circle-notch fa-spin"></i> Tri en cours...';
                    searchBar.appendChild(loader);
                }
                
                // Faire la requête AJAX
                fetch(url)
                    .then(response => response.text())
                    .then(html => {
                        const parser = new DOMParser();
                        const doc = parser.parseFromString(html, 'text/html');
                        
                        // Remplacer le contenu principal
                        const newServiceList = doc.getElementById('serviceList');
                        if (newServiceList) {
                            document.getElementById('serviceList').innerHTML = newServiceList.innerHTML;
                            initializeCardAnimations();
                        }
                        
                        // Mettre à jour la pagination
                        const newPagination = doc.querySelector('.pagination');
                        const currentPagination = document.querySelector('.pagination');
                        if (newPagination && currentPagination) {
                            currentPagination.innerHTML = newPagination.innerHTML;
                        }
                        
                        // Supprimer l'animation de chargement
                        if (loader) loader.remove();
                        
                        // Afficher une notification de succès
                        showNotification('<i class="fas fa-check-circle me-2"></i> Liste triée', 'info');
                    })
                    .catch(error => {
                        console.error('Erreur lors du tri:', error);
                        if (loader) loader.remove();
                        showNotification('<i class="fas fa-exclamation-circle me-2"></i> Erreur lors du tri', 'error');
                    });
            }
        }

        // Recherche en temps réel sur le front-end (filtrage visuel)
        document.getElementById('searchService').addEventListener('input', function(e) {
            const searchText = e.target.value.toLowerCase().trim();
            
            // Debounce pour éviter trop d'appels rapides
            clearTimeout(this.searchTimeout);
            this.searchTimeout = setTimeout(() => {
                // Mise à jour dynamique de la recherche côté client
                if (searchText.length >= 2) {
                    // Au lieu de filtrer localement, faire une requête AJAX
                    fetchSearchResults(searchText);
                } else if (searchText.length === 0) {
                    // Retourner à la page initiale sans paramètres de recherche
                    window.location.href = '{{ path('admin_services') }}';
                }
            }, 500); // Légèrement plus lent pour éviter trop de requêtes
        });
        
        // Initialiser les animations des cartes
        function initializeCardAnimations() {
            const cards = document.querySelectorAll('.service-fiche');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(30px)';
                setTimeout(() => {
                    card.style.transition = 'opacity 0.5s ease, transform 0.5s cubic-bezier(0.34, 1.56, 0.64, 1)';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, 50 + (index * 100)); // Décalage progressif pour effet en cascade
                
                // Effet 3D au survol
                card.addEventListener('mousemove', function(e) {
                    const rect = this.getBoundingClientRect();
                    const x = e.clientX - rect.left;
                    const y = e.clientY - rect.top;
                    
                    const centerX = rect.width / 2;
                    const centerY = rect.height / 2;
                    const rotateY = ((x - centerX) / centerX) * 5;
                    const rotateX = ((centerY - y) / centerY) * 5;
                    
                    this.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) translateY(-8px)`;
                });
                
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'perspective(1000px) rotateX(0) rotateY(0) translateY(-8px)';
                    setTimeout(() => {
                        this.style.transform = '';
                    }, 100);
                });
            });
        }

        // Fonction pour mettre à jour le compteur de résultats
        function updateSearchResultsCount(count, searchText) {
            let searchResultsCounter = document.getElementById('searchResultsCount');
            if (!searchResultsCounter) {
                searchResultsCounter = document.createElement('div');
                searchResultsCounter.id = 'searchResultsCount';
                searchResultsCounter.className = 'search-results-count';
                document.querySelector('.search-bar').appendChild(searchResultsCounter);
            }
            
            if (searchText) {
                searchResultsCounter.textContent = `${count} résultat${count !== 1 ? 's' : ''} trouvé${count !== 1 ? 's' : ''}`;
                searchResultsCounter.style.display = 'block';
            } else {
                searchResultsCounter.style.display = 'none';
            }
        }

