{% block javascripts %}
    {{ parent() }}
    <script>
        // Recherche en temps réel
        document.getElementById('searchService').addEventListener('input', function(e) {
            const searchText = e.target.value.toLowerCase().trim();
            const serviceItems = document.querySelectorAll('.service-item');
            
            serviceItems.forEach(item => {
                const title = item.querySelector('.card-header h5').textContent.toLowerCase();
                const partner = item.querySelector('.info-value').textContent.toLowerCase();
                const serviceType = item.querySelectorAll('.info-value')[1].textContent.toLowerCase();
                const location = item.querySelectorAll('.info-value')[3].textContent.toLowerCase();
                
                if (title.includes(searchText) || 
                    partner.includes(searchText) || 
                    serviceType.includes(searchText) || 
                    location.includes(searchText)) {
                    item.style.display = '';
                } else {
                    item.style.display = 'none';
                }
            });
        });

        // Exportation en CSV
        function exportToCSV() {
            const services = document.querySelectorAll('.service-item');
            let csvContent = 'ID,Titre,Partenaire,Type de Service,Prix,Location,Description\n';
            
            services.forEach((service, index) => {
                if (service.style.display !== 'none') {
                    const title = service.querySelector('.card-header h5').textContent.replace(/,/g, ';');
                    const partner = service.querySelector('.info-value').textContent.replace(/,/g, ';');
                    const serviceType = service.querySelectorAll('.info-value')[1].textContent.replace(/,/g, ';');
                    const price = service.querySelectorAll('.info-value')[2].textContent.replace(/,/g, ';');
                    const location = service.querySelectorAll('.info-value')[3].textContent.replace(/,/g, ';');
                    
                    csvContent += `${index + 1},${title},${partner},${serviceType},${price},${location},""\n`;
                }
            });
            
            const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
            const link = document.createElement('a');
            link.href = URL.createObjectURL(blob);
            link.download = 'services_export.csv';
            link.click();
        }
    </script>
{% endblock %}