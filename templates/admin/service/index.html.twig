                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </main>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Recherche en temps réel
        document.getElementById('searchService').addEventListener('input', function(e) {
            const searchText = e.target.value.toLowerCase().trim();
            const fiches = document.querySelectorAll('#serviceList .col-lg-3');
            fiches.forEach(fiche => {
                const titre = fiche.querySelector('.fiche-header h6').textContent.toLowerCase();
                const partenaire = fiche.querySelector('.fiche-body p:nth-child(1)').textContent.toLowerCase();
                const typeService = fiche.querySelector('.fiche-body p:nth-child(2)').textContent.toLowerCase();
                const prix = fiche.querySelector('.fiche-body p:nth-child(3)').textContent.toLowerCase();
                const location = fiche.querySelector('.fiche-body p:nth-child(4)').textContent.toLowerCase();
                const description = fiche.querySelector('.fiche-body p:nth-child(5)').textContent.toLowerCase();
                fiche.style.display = titre.includes(searchText) || partenaire.includes(searchText) || typeService.includes(searchText) || prix.includes(searchText) || location.includes(searchText) || description.includes(searchText) ? '' : 'none';
            });
        });

        // Toggle pour la barre latérale de tri
        function toggleFilterSidebar() {
            const sidebar = document.getElementById('filterSidebar');
            const btn = sidebar.querySelector('.filter-toggle-btn');
            const icon = document.getElementById('filterToggleIcon');
            sidebar.classList.toggle('collapsed');
            btn.textContent = sidebar.classList.contains('collapsed') ? 'Afficher' : 'Masquer';
            icon.classList.toggle('visible', sidebar.classList.contains('collapsed'));
        }

        // Exportation en CSV
        function exportToCSV() {
            const fiches = document.querySelectorAll('#serviceList .col-lg-3');
            let csvContent = 'ID,Titre,Partenaire,Type de Service,Prix,Location,Description\n';
            fiches.forEach(fiche => {
                const id = fiche.querySelector('.fiche-header h6').textContent.replace('Service #', '');
                const titre = fiche.querySelector('.fiche-header h6').textContent.replace(/,/g, '');
                const partenaire = fiche.querySelector('.fiche-body p:nth-child(1)').textContent.replace('Partenaire : ', '').replace(/,/g, '');
                const typeService = fiche.querySelector('.fiche-body p:nth-child(2)').textContent.replace('Type : ', '').replace(/,/g, '');
                const prix = fiche.querySelector('.fiche-body p:nth-child(3)').textContent.replace('Prix : ', '').replace(/,/g, '');
                const location = fiche.querySelector('.fiche-body p:nth-child(4)').textContent.replace('Location : ', '').replace(/,/g, '');
                const description = fiche.querySelector('.fiche-body p:nth-child(5)').textContent.replace('Description : ', '').replace(/,/g, '');
                csvContent += `${id},${titre},${partenaire},${typeService},${prix},${location},${description}\n`;
            });
            const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
            const link = document.createElement('a');
            link.href = URL.createObjectURL(blob);
            link.download = 'services.csv';
            link.click();
        }
    </script>
{% endblock %}