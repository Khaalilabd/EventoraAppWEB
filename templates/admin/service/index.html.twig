            </button>
        </div>

        <!-- Modales pour détails -->
        {% for Gservice in GServices %}
            <div class="modal fade" id="serviceModal-{{ Gservice.id }}" tabindex="-1" aria-labelledby="serviceModalLabel-{{ Gservice.id }}" aria-hidden="true">
