            <div class="filter-sidebar" id="filterSidebar">
                <button class="filter-toggle-btn" onclick="toggleFilterSidebar()">Masquer</button>
                <div class="filter-content">
                    <h6><i class="fas fa-sort me-2"></i>Options de tri</h6>
                    <form method="get" action="{{ path('admin_services') }}" class="row g-3">
                        <div class="col-12">
                            <label class="form-label">Trier par Partenaire</label>
                            <div class="btn-group w-100">
                                <a href="{{ path('admin_services', {'sort_by': 'sponsor.nom_partenaire', 'sort_order': 'asc', 'search': searchTerm, 'page': current_page}) }}"
                                   class="btn btn-outline-primary {{ sort_by == 'sponsor.nom_partenaire' and sort_order == 'asc' ? 'active' : '' }}"
                                   aria-label="Trier par partenaire croissant">
                                    <i class="fas fa-arrow-up me-1"></i> Croissant
                                </a>
                                <a href="{{ path('admin_services', {'sort_by': 'sponsor.nom_partenaire', 'sort_order': 'desc', 'search': searchTerm, 'page': current_page}) }}"
                                   class="btn btn-outline-primary {{ sort_by == 'sponsor.nom_partenaire' and sort_order == 'desc' ? 'active' : '' }}"
                                   aria-label="Trier par partenaire décroissant">
                                    <i class="fas fa-arrow-down me-1"></i> Décroissant
                                </a>
                            </div>
                        </div>
                        <div class="col-12">
                            <label class="form-label">Trier par Type de Service</label>
                            <div class="btn-group w-100">
                                <a href="{{ path('admin_services', {'sort_by': 'type_service', 'sort_order': 'asc', 'search': searchTerm, 'page': current_page}) }}"
                                   class="btn btn-outline-primary {{ sort_by == 'type_service' and sort_order == 'asc' ? 'active' : '' }}"
                                   aria-label="Trier par type de service croissant">
                                    <i class="fas fa-arrow-up me-1"></i> Croissant
                                </a>
                                <a href="{{ path('admin_services', {'sort_by': 'type_service', 'sort_order': 'desc', 'search': searchTerm, 'page': current_page}) }}"
                                   class="btn btn-outline-primary {{ sort_by == 'type_service' and sort_order == 'desc' ? 'active' : '' }}"
                                   aria-label="Trier par type de service décroissant">
                                    <i class="fas fa-arrow-down me-1"></i> Décroissant
                                </a>
                            </div>
                        </div>
                        <div class="col-12">
                            <label class="form-label">Trier par Titre</label>
