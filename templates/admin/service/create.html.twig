{% extends 'admin/dashboard.html.twig' %}

{% block title %}Ajouter un service{% endblock %}

{% block body %}
    <aside class="sidenav navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-3 fixed-start ms-3 bg-light" id="sidenav-main">
        <div class="sidenav-header">
            <a class="navbar-brand m-0" href="{{ path('admin_dashboard') }}">
                <img src="{{ asset('assets/img/logo-ct-dark.png') }}" class="navbar-brand-img" style="max-height: 40px;" alt="main_logo">
                <span class="ms-2 font-weight-bold text-dark">Eventora Dashboard</span>
            </a>
        </div>
        <hr class="horizontal dark mt-0">
        <div class="collapse navbar-collapse w-auto" id="sidenav-collapse-main">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('admin_dashboard') }}">
                        <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fas fa-tachometer-alt text-dark"></i>
                        </div>
                        <span class="nav-link-text ms-1">Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fas fa-calendar-check text-dark"></i>
                        </div>
                        <span class="nav-link-text ms-1">Réservations</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="collapse" data-bs-target="#reclamationsMenu" aria-expanded="false">
                        <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fas fa-exclamation-triangle text-dark"></i>
                        </div>
                        <span class="nav-link-text ms-1">Réclamations</span>
                    </a>
                    <div class="collapse" id="reclamationsMenu">
                        <ul class="navbar-nav ms-3">
                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                                        <i class="fas fa-exclamation-circle text-dark"></i>
                                    </div>
                                    <span class="nav-link-text ms-1">Réclamations</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                                        <i class="fas fa-comment-dots text-dark"></i>
                                    </div>
                                    <span class="nav-link-text ms-1">Feedback</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="collapse" data-bs-target="#usersMenu" aria-expanded="false">
                        <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fas fa-users text-dark"></i>
                        </div>
                        <span class="nav-link-text ms-1">Utilisateurs</span>
                    </a>
                    <div class="collapse" id="usersMenu">
                        <ul class="navbar-nav ms-3">
                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                                        <i class="fas fa-user-friends text-dark"></i>
                                    </div>
                                    <span class="nav-link-text ms-1">Membres</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                                        <i class="fas fa-user-shield text-dark"></i>
                                    </div>
                                    <span class="nav-link-text ms-1">Modérateurs</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fas fa-box text-dark"></i>
                        </div>
                        <span class="nav-link-text ms-1">Packs</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="collapse" data-bs-target="#servicesMenu" aria-expanded="false">
                        <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fas fa-concierge-bell text-dark"></i>
                        </div>
                        <span class="nav-link-text ms-1">Services</span>
                    </a>
                    <div class="collapse" id="servicesMenu">
                        <ul class="navbar-nav ms-3">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('admin_services') }}">
                                    <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                                        <i class="fas fa-tools text-dark"></i>
                                    </div>
                                    <span class="nav-link-text ms-1">Services</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('admin_sponsors') }}">
                                    <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                                        <i class="fas fa-handshake text-dark"></i>
                                    </div>
                                    <span class="nav-link-text ms-1">Partenaires</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_logout') }}">
                        <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fas fa-sign-out-alt text-dark"></i>
                        </div>
                        <span class="nav-link-text ms-1">Déconnexion</span>
                    </a>
                </li>
            </ul>
        </div>
    </aside>

    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg">
        <div class="container-fluid py-4">
            <div class="row">
                <div class="col-12">
                    <div class="card mb-4 shadow-sm border-radius-xl">
                        <div class="card-header p-3">
                            <h6 class="font-weight-bolder mb-0"><i class="fas fa-plus-circle me-2"></i>Ajouter un nouveau service</h6>
                        </div>
                        <div class="card-body">
                            <div class="formbold-main-wrapper">
                                <div class="formbold-form-wrapper">
                                    {# Affichage des messages flash #}
                                    {% for message in app.flashes('success') %}
                                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                                            <i class="fas fa-check-circle me-2"></i>{{ message }}
                                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                        </div>
                                    {% endfor %}
                                    {% for message in app.flashes('error') %}
                                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                            <i class="fas fa-exclamation-circle me-2"></i>{{ message }}
                                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                        </div>
                                    {% endfor %}

                                    {{ form_start(form, {'attr': {'class': 'modern-form'}}) }}
                                    <div class="row g-4">
                                        <div class="col-md-6">
                                            <div class="form-card p-4 rounded">
                                                <h5 class="form-section-title mb-4"><i class="fas fa-info-circle me-2"></i>Informations générales</h5>
                                                
                                                <div class="form-floating mb-4">
                                                    {{ form_widget(form.titre, {'attr': {'class': 'form-control', 'placeholder': 'Titre du service'}}) }}
                                                    {{ form_label(form.titre) }}
                                                    {{ form_errors(form.titre, {'attr': {'class': 'text-danger mt-1'}}) }}
                                                </div>
                                                
                                                <div class="form-group mb-4">
                                                    {{ form_label(form.sponsor, null, {'label_attr': {'class': 'form-label'}}) }}
                                                    {{ form_widget(form.sponsor, {'attr': {'class': 'form-select select2'}}) }}
                                                    {{ form_errors(form.sponsor, {'attr': {'class': 'text-danger mt-1'}}) }}
                                                    <div class="form-text text-muted">{{ form_help(form.sponsor) }}</div>
                                                </div>
                                                
                                                <div class="form-group mb-4">
                                                    {{ form_label(form.typeService, null, {'label_attr': {'class': 'form-label'}}) }}
                                                    {{ form_widget(form.typeService, {'attr': {'class': 'form-select select2'}}) }}
                                                    {{ form_errors(form.typeService, {'attr': {'class': 'text-danger mt-1'}}) }}
                                                    <div class="form-text text-muted">{{ form_help(form.typeService) }}</div>
                                                </div>
                                                
                                                <div class="form-group mb-4">
                                                    {{ form_label(form.location, null, {'label_attr': {'class': 'form-label'}}) }}
                                                    {{ form_widget(form.location, {'attr': {'class': 'form-select select2'}}) }}
                                                    {{ form_errors(form.location, {'attr': {'class': 'text-danger mt-1'}}) }}
                                                    <div class="form-text text-muted">{{ form_help(form.location) }}</div>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="col-md-6">
                                            <div class="form-card p-4 rounded">
                                                <h5 class="form-section-title mb-4"><i class="fas fa-file-alt me-2"></i>Détails et média</h5>
                                                
                                                <div class="form-floating mb-4">
                                                    {{ form_widget(form.prix, {'attr': {'class': 'form-control', 'placeholder': 'Prix'}}) }}
                                                    {{ form_label(form.prix) }}
                                                    {{ form_errors(form.prix, {'attr': {'class': 'text-danger mt-1'}}) }}
                                                    <div class="form-text text-muted">{{ form_help(form.prix) }}</div>
                                                </div>
                                                
                                                <div class="form-group mb-4">
                                                    {{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
                                                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '5'}}) }}
                                                    {{ form_errors(form.description, {'attr': {'class': 'text-danger mt-1'}}) }}
                                                    <div class="form-text text-muted">{{ form_help(form.description) }}</div>
                                                </div>
                                                
                                                <div class="form-group mb-4">
                                                    <label class="form-label">{{ form_label(form.image) }} <i class="fas fa-image ms-1 text-muted"></i></label>
                                                    
                                                    <div class="custom-file-upload">
                                                        {{ form_widget(form.image, {'attr': {'class': 'form-control file-input', 'onchange': 'previewImage(this)'}}) }}
                                                        <div class="form-text text-muted">{{ form_help(form.image) }}</div>
                                                        {{ form_errors(form.image, {'attr': {'class': 'text-danger mt-1'}}) }}
                                                    </div>
                                                    
                                                    <div id="imagePreviewContainer" class="preview-container mt-3 rounded text-center" style="display: none;">
                                                        <p class="text-muted mb-2"><i class="fas fa-eye me-2"></i>Aperçu de l'image</p>
                                                        <img id="imagePreview" src="#" alt="Aperçu" class="img-thumbnail" style="max-height: 200px; max-width: 100%;">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="form-actions d-flex justify-content-end gap-3 mt-4">
                                        <a href="{{ path('admin_services') }}" class="btn btn-outline-secondary">
                                            <i class="fas fa-arrow-left me-2"></i>Retour
                                        </a>
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-plus-circle me-2"></i>Ajouter
                                        </button>
                                    </div>
                                    {{ form_end(form) }}

                                    <script>
                                        function previewImage(input) {
                                            const preview = document.getElementById('imagePreview');
                                            const previewContainer = document.getElementById('imagePreviewContainer');
                                            
                                            if (input.files && input.files[0]) {
                                                const reader = new FileReader();
                                                
                                                reader.onload = function(e) {
                                                    preview.src = e.target.result;
                                                    previewContainer.style.display = 'block';
                                                }
                                                
                                                reader.readAsDataURL(input.files[0]);
                                            } else {
                                                previewContainer.style.display = 'none';
                                            }
                                        }

                                        // Initialisation des select2 pour un meilleur design des listes déroulantes
                                        document.addEventListener('DOMContentLoaded', function() {
                                            if (typeof $ !== 'undefined' && $.fn.select2) {
                                                $('.select2').select2({
                                                    theme: 'bootstrap-5',
                                                    width: '100%'
                                                });
                                            }
                                        });
                                    </script>

                                    <style>
                                        .modern-form {
                                            font-family: 'Poppins', sans-serif;
                                        }
                                        
                                        .form-card {
                                            background-color: #fff;
                                            border-radius: 16px;
                                            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
                                            transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
                                            border: none;
                                            overflow: hidden;
                                        }
                                        
                                        .form-card:hover {
                                            box-shadow: 0 10px 30px rgba(37, 99, 235, 0.1);
                                            transform: translateY(-5px);
                                        }
                                        
                                        .form-section-title {
                                            color: #1e40af;
                                            font-weight: 600;
                                            border-bottom: 1px solid #e2e8f0;
                                            padding-bottom: 15px;
                                            position: relative;
                                            display: flex;
                                            align-items: center;
                                            gap: 10px;
                                        }

                                        .form-section-title::before {
                                            content: '';
                                            position: absolute;
                                            bottom: -1px;
                                            left: 0;
                                            width: 50px;
                                            height: 3px;
                                            background: linear-gradient(45deg, #3b82f6, #2563eb);
                                            border-radius: 10px;
                                        }
                                        
                                        .form-control, .form-select {
                                            border-radius: 10px;
                                            border: 1px solid #e2e8f0;
                                            padding: 12px 16px;
                                            font-size: 0.95rem;
                                            transition: all 0.3s ease;
                                            color: #334155;
                                            background-color: #f8fafc;
                                        }
                                        
                                        .form-control:focus, .form-select:focus {
                                            border-color: #3b82f6;
                                            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
                                            background-color: #ffffff;
                                        }
                                        
                                        .form-label {
                                            font-weight: 500;
                                            color: #475569;
                                            margin-bottom: 8px;
                                            font-size: 0.95rem;
                                        }
                                        
                                        .custom-file-upload {
                                            position: relative;
                                            overflow: hidden;
                                            margin-top: 10px;
                                        }
                                        
                                        .file-input {
                                            padding: 15px;
                                            border-radius: 10px;
                                            background: #f8fafc;
                                            border: 1px solid #e2e8f0;
                                            color: #64748b;
                                            transition: all 0.3s ease;
                                        }
                                        
                                        .file-input:hover {
                                            background: #f1f5f9;
                                        }
                                        
                                        .preview-container {
                                            border: 1px dashed #cbd5e1;
                                            background-color: #f1f5f9;
                                            border-radius: 10px;
                                            transition: all 0.3s ease;
                                            padding: 15px !important;
                                        }
                                        
                                        .preview-container:hover {
                                            background-color: #e2e8f0;
                                        }
                                        
                                        .btn-primary {
                                            background: linear-gradient(45deg, #3b82f6, #2563eb);
                                            border: none;
                                            border-radius: 10px;
                                            padding: 12px 24px;
                                            box-shadow: 0 4px 15px rgba(59, 130, 246, 0.3);
                                            transition: all 0.3s ease;
                                            font-weight: 500;
                                        }
                                        
                                        .btn-primary:hover {
                                            background: linear-gradient(45deg, #2563eb, #1d4ed8);
                                            transform: translateY(-3px);
                                            box-shadow: 0 8px 25px rgba(59, 130, 246, 0.4);
                                        }
                                        
                                        .btn-outline-secondary {
                                            border: 2px solid #cbd5e1;
                                            color: #475569;
                                            background: transparent;
                                            border-radius: 10px;
                                            padding: 12px 24px;
                                            transition: all 0.3s ease;
                                            font-weight: 500;
                                        }
                                        
                                        .btn-outline-secondary:hover {
                                            background-color: #f8fafc;
                                            color: #334155;
                                            border-color: #94a3b8;
                                            transform: translateY(-3px);
                                            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.05);
                                        }
                                        
                                        .form-floating > label {
                                            padding: 12px 16px;
                                            color: #64748b;
                                        }
                                        
                                        .form-floating > .form-control:focus ~ label,
                                        .form-floating > .form-control:not(:placeholder-shown) ~ label {
                                            color: #3b82f6;
                                            transform: scale(0.85) translateY(-0.5rem) translateX(0.15rem);
                                        }
                                        
                                        .form-text {
                                            color: #64748b;
                                            font-size: 0.8rem;
                                            margin-top: 5px;
                                        }
                                        
                                        /* Animation et effets visuels */
                                        @keyframes fadeIn {
                                            from { opacity: 0; transform: translateY(15px); }
                                            to { opacity: 1; transform: translateY(0); }
                                        }
                                        
                                        .form-card {
                                            animation: fadeIn 0.6s ease forwards;
                                        }
                                        
                                        .col-md-6:nth-child(2) .form-card {
                                            animation-delay: 0.2s;
                                        }
                                        
                                        /* Style supplémentaire pour les messages d'erreur et les alertes */
                                        .text-danger {
                                            color: #ef4444 !important;
                                            font-size: 0.85rem;
                                        }
                                        
                                        .alert {
                                            border-radius: 10px;
                                            padding: 15px 20px;
                                            border: none;
                                            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
                                            margin-bottom: 25px;
                                        }
                                        
                                        .alert-success {
                                            background-color: #ecfdf5;
                                            color: #047857;
                                        }
                                        
                                        .alert-danger {
                                            background-color: #fef2f2;
                                            color: #b91c1c;
                                        }
                                        
                                        .formbold-main-wrapper {
                                            padding: 30px 0;
                                        }
                                        
                                        /* Amélioration du select2 si utilisé */
                                        .select2-container--bootstrap-5 .select2-selection {
                                            border-radius: 10px;
                                            border: 1px solid #e2e8f0;
                                            height: auto;
                                            min-height: 48px;
                                            padding: 6px 12px;
                                            background-color: #f8fafc;
                                        }
                                        
                                        .select2-container--bootstrap-5.select2-container--focus .select2-selection,
                                        .select2-container--bootstrap-5.select2-container--open .select2-selection {
                                            border-color: #3b82f6;
                                            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
                                            background-color: #ffffff;
                                        }
                                        
                                        .select2-container--bootstrap-5 .select2-dropdown {
                                            border-radius: 10px;
                                            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
                                            border: none;
                                            overflow: hidden;
                                        }
                                        
                                        .select2-container--bootstrap-5 .select2-results__option--highlighted {
                                            background-color: #3b82f6;
                                        }
                                        
                                        /* Header du formulaire */
                                        .card-header {
                                            background: linear-gradient(45deg, #3b82f6, #2563eb);
                                            color: white;
                                            padding: 20px;
                                        }
                                        .card-header h6 {
                                            color: white;
                                            font-weight: 600;
                                            margin: 0;
                                            display: flex;
                                            align-items: center;
                                            gap: 10px;
                                        }
                                    </style>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}