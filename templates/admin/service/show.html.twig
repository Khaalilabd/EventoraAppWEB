    <style>
        /* Main Content Styling */
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8fafc;
            color: #334155;
        }
        .main-content {
            margin-left: 270px; /* Ajusté pour la largeur de la sidenav */
            padding: 20px;
        }
        .card {
            border: none;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
            transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
            overflow: hidden;
        }
        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 40px rgba(37, 99, 235, 0.15);
        }
        .card-header {
            background: linear-gradient(45deg, #3b82f6, #2563eb);
            color: white;
            border-radius: 20px 20px 0 0 !important;
            padding: 25px 30px;
            border: none;
        }
        .card-header h3 {
            font-weight: 600;
            font-size: 1.5rem;
            margin: 0;
            letter-spacing: -0.01em;
            display: flex;
            align-items: center;
            gap: 12px;
        }
        .card-header h3 i {
            font-size: 1.25rem;
            color: #e0f2fe;
        }
        .card-body {
            padding: 30px;
            background: #ffffff;
        }
        .info-label {
            font-weight: 600;
            color: #1e40af;
            display: inline-block;
            min-width: 120px;
            margin-right: 10px;
            position: relative;
        }
        .info-label::after {
            content: ':';
            position: absolute;
            right: 10px;
            color: #94a3b8;
        }
        .info-value {
            color: #334155;
            font-weight: 400;
        }
        p {
            margin-bottom: 15px;
            display: flex;
            align-items: baseline;
        }
        .btn-custom {
            border-radius: 12px;
            padding: 12px 24px;
            font-weight: 500;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .btn-outline-primary {
            color: #3b82f6;
            border: 2px solid #3b82f6;
        }
        .btn-outline-primary:hover {
            background: linear-gradient(45deg, #3b82f6, #2563eb);
            color: white;
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(59, 130, 246, 0.25);
            border-color: transparent;
        }
        .btn-outline-success {
            color: #10b981;
            border: 2px solid #10b981;
        }
        .btn-outline-success:hover {
            background: linear-gradient(45deg, #10b981, #059669);
            color: white;
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(16, 185, 129, 0.25);
            border-color: transparent;
        }
        .service-image {
            max-width: 100%;
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
            transition: all 0.4s ease;
        }
        .service-image:hover {
            transform: scale(1.03);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.12);
        }
        .animate__fadeIn {
            animation: fadeIn 0.8s ease;
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        /* Info sections */
        .info-section {
            margin-bottom: 25px;
            background: #fff;
            border-radius: 15px;
            padding: 20px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
        }
        .info-section:hover {
            box-shadow: 0 8px 25px rgba(37, 99, 235, 0.1);
            transform: translateY(-5px);
        }
        .info-section h5 {
            color: #3b82f6;
            font-size: 0.95rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            font-weight: 600;
            margin-bottom: 15px;
            border-bottom: 1px solid #e2e8f0;
            padding-bottom: 10px;
            display: flex;
            align-items: center;
        }
        .info-section h5 i {
            margin-right: 8px;
            color: #3b82f6;
        }
        
        @media (max-width: 992px) {
            .main-content {
                margin-left: 0;
            }
            .card-body {
                padding: 25px;
            }
        }
        @media (max-width: 768px) {
            .main-content {
                margin-left: 0;
            }
            .card-body {
                padding: 20px;
            }
            .btn-custom {
                padding: 10px 18px;
                font-size: 0.9rem;
            }
            .card-header h3 {
                font-size: 1.25rem;
            }
        }
    </style>
{% endblock %}

