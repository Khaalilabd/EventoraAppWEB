        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
            <script src="{{ asset('js/bootstrap.min.js') }}"></script>
            <script>
                if (typeof jQuery === 'undefined') {
                    console.error("jQuery n'est pas chargé. Problème avec le CDN ou le réseau.");
                } else {
                    console.log("jQuery est chargé avec succès");
                    jQuery(document).ready(function($) {
                        $('.menu-toggle').click(function() {
                            console.log("Clic sur menu-toggle détecté");
                            $('.fh5co-nav .menu-1 ul').toggleClass('active');
                        });

                        $('.fh5co-nav .menu-1 ul li.has-dropdown > a').click(function(e) {
                            if ($(window).width() <= 768) {
                                console.log("Clic sur dropdown détecté");
                                e.preventDefault();
                                $(this).parent().toggleClass('active');
                            }
                        });

                        $('.fh5co-nav .menu-1 ul li.has-dropdown').hover(
                            function() {
                                console.log("Survol détecté sur un élément has-dropdown");
                                $(this).find('.dropdown').css({
                                    'display': 'block',
                                    'position': 'absolute',
                                    'top': '100%',
                                    'right': '0',
                                    'visibility': 'visible',
                                    'opacity': '1',
                                    'z-index': '1001'
                                });
                            },
                            function() {
                                console.log("Fin du survol");
                                $(this).find('.dropdown').css({
                                    'display': 'none',
                                    'visibility': 'hidden',
                                    'opacity': '0'
                                });
                            }
                        );

                        const select = $('.star-rating');
                        const stars = $('.star');
                        let selectedValue = parseInt(select.val()) || 0;

                        function updateStars(value) {
                            stars.each(function() {
                                const starValue = parseInt($(this).attr('data-value'));
                                if (starValue <= value) {
                                    $(this).addClass('filled');
                                } else {
                                    $(this).removeClass('filled');
                                }
                            });
                        }

                        stars.each(function() {
                            $(this).on('click', function() {
                                const value = parseInt($(this).attr('data-value'));
                                selectedValue = value;
                                select.val(value);
                                updateStars(value);
                                console.log('Étoile sélectionnée : ' + value);
                            });
                            $(this).on('mouseover', function() {
                                const value = parseInt($(this).attr('data-value'));
                                updateStars(value);
                            });
                            $(this).on('mouseout', function() {
                                updateStars(selectedValue);
                            });
                        });

                        if (select.val()) {
                            selectedValue = parseInt(select.val());
                            updateStars(selectedValue);
                        }

                        $('#feedback-form').on('submit', function(event) {
                            event.preventDefault();
                            const form = this;
                            const formData = new FormData(form);

                            $('.form-control').removeClass('is-invalid');
                            $('.text-danger').empty();

                            for (var pair of formData.entries()) {
                                console.log('Donnée envoyée : ' + pair[0] + ': ' + pair[1]);
                            }

                            console.log('Envoi de la requête AJAX', {
                                url: form.action,
                                method: form.method,
                            });

                            $.ajax({
                                url: form.action,
                                method: form.method,
                                data: formData,
                                processData: false,
                                contentType: false,
                                dataType: 'json',
                                headers: { 'X-Requested-With': 'XMLHttpRequest' },
                                success: function(data) {
                                    console.log('Réponse AJAX reçue', data);
                                    if (data.success) {
                                        // Afficher la pop-up de succès
                                        $('#successPopup p').text(data.message);
                                        $('#successPopup').fadeIn();
                                        $('#popupOverlay').fadeIn();

                                        // Stocker l'URL de redirection
                                        $('#closeSuccessPopup').data('redirect-url', data.redirectUrl);

                                        // Réinitialiser le formulaire
                                        form.reset();
                                        stars.removeClass('filled');
                                        selectedValue = 0;
                                    } else {
                                        if (data.errors) {
                                            for (const field in data.errors) {
                                                const errorMessage = data.errors[field][0];
                                                const $field = $(`[name="feedback[${field}]"]`);
                                                if ($field.length) {
                                                    $field.addClass('is-invalid');
                                                    $field.closest('.form-group').find('.text-danger').text(errorMessage);
                                                } else {
                                                    console.warn(`Champ ${field} non trouvé dans le formulaire.`);
                                                }
                                            }
                                        }
                                        alert(data.message || 'Veuillez corriger les erreurs dans le formulaire.');
                                    }
                                },
                                error: function(xhr, status, error) {
                                    console.error('Erreur AJAX :', {
                                        status: status,
                                        error: error,
                                        response: xhr.responseText,
                                    });
                                    try {
                                        const data = JSON.parse(xhr.responseText);
                                        if (data.errors) {
                                            for (const field in data.errors) {
                                                const errorMessage = data.errors[field][0];
                                                const $field = $(`[name="feedback[${field}]"]`);
                                                if ($field.length) {
                                                    $field.addClass('is-invalid');
                                                    $field.closest('.form-group').find('.text-danger').text(errorMessage);
                                                } else {
                                                    console.warn(`Champ ${field} non trouvé dans le formulaire.`);
                                                }
                                            }
                                        }
                                        alert(data.message || 'Erreur de communication avec le serveur.');
                                    } catch (e) {
                                        alert('Erreur de communication avec le serveur. Veuillez réessayer.');
                                    }
                                }
                            });
                        });

                        // Fermer la pop-up et rediriger
                        $('#closeSuccessPopup').on('click', function() {
                            $('#successPopup').fadeOut();
                            $('#popupOverlay').fadeOut();

                            // Rediriger vers l'historique des feedbacks
                            var redirectUrl = $(this).data('redirect-url');
                            if (redirectUrl) {
                                window.location.href = redirectUrl;
                            }
                        });

                        // Fermer la pop-up en cliquant sur l'overlay
                        $('#popupOverlay').on('click', function() {
                            $('#successPopup').fadeOut();
                            $('#popupOverlay').fadeOut();

                            // Rediriger vers l'historique des feedbacks
                            var redirectUrl = $('#closeSuccessPopup').data('redirect-url');
                            if (redirectUrl) {
                                window.location.href = redirectUrl;
                            }
                        });
                    });
                }
            </script>
