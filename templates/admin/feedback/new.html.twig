            <link href="https://fonts.googleapis.com/css?family=Sacramento" rel="stylesheet">
            <link rel="stylesheet" href="{{ asset('css/animate.css') }}">
            <link rel="stylesheet" href="{{ asset('css/icomoon.css') }}">
            <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
            <link rel="stylesheet" href="{{ asset('css/magnific-popup.css') }}">
            <link rel="stylesheet" href="{{ asset('css/owl.carousel.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/owl.theme.default.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/style1.css') }}">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
            <style>
                body {
                    background: linear-gradient(135deg, #F5F5DC 0%, #8B4513 100%); /* Beige to brown gradient */
                    background-size: cover;
                    background-attachment: fixed;
                    min-height: 100vh;
                    margin: 0;
                    padding: 0;
                    position: relative;
                    font-family: 'Work Sans', sans-serif;
                }
                #page {
                    min-height: 100vh;
                    display: flex;
                    flex-direction: column;
                    padding-top: 70px;
                }
                .fh5co-nav {
                    position: fixed;
                    top: 0;
                    width: 100%;
                    z-index: 1000;
                    background: rgba(255, 255, 255, 0.9);
                    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
                    backdrop-filter: blur(10px);
                    -webkit-backdrop-filter: blur(10px);
                }
                .fh5co-nav .container {
                    display: flex;
                    align-items: center;
                    justify-content: space-between;
                    padding: 10px 15px;
                    max-width: 1200px;
                    margin: 0 auto;
                }
                .fh5co-logo a {
                    font-family: 'Work Sans', sans-serif;
                    font-weight: 700;
                    font-size: 24px;
                    color: #934D1A;
                    text-decoration: none;
                }
                .user-circle {
                    display: inline-block;
                    width: 40px;
                    height: 40px;
                    line-height: 40px;
                    text-align: center;
                    border-radius: 50%;
                    background-color: #f0f0f0;
                    color: #333;
                    font-size: 20px;
                    vertical-align: middle;
                    margin-right: 8px;
                }
                .user-circle img {
                    width: 100%;
                    height: 100%;
                    object-fit: cover;
                    border-radius: 50%;
                }
                .fh5co-nav .menu-1 {
                    display: block;
                }
                .fh5co-nav .menu-1 ul {
                    display: flex;
                    align-items: center;
                    justify-content: flex-end;
                    margin: 0;
                    padding: 0;
                    list-style: none;
                }
                .fh5co-nav .menu-1 ul li {
                    margin: 0 15px;
                    position: relative;
                }
                .fh5co-nav .menu-1 ul li a {
                    font-family: 'Work Sans', sans-serif;
                    font-size: 16px;
                    color: #333;
                    text-transform: uppercase;
                    text-decoration: none;
                    transition: color 0.3s ease;
                }
                .fh5co-nav .menu-1 ul li a:hover {
                    color: #934D1A;
                }
                .fh5co-nav .menu-1 ul li.active a {
                    color: #934D1A !important;
                    font-weight: 600;
                }
                .fh5co-nav .menu-1 ul li.has-dropdown {
                    position: relative;
                }
                .fh5co-nav .menu-1 ul li.has-dropdown .dropdown {
                    display: none;
                    position: absolute;
                    top: 100%;
                    right: 0;
                    background-color: #fff;
                    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
                    list-style: none;
                    padding: 10px 0;
                    min-width: 150px;
                    z-index: 1001;
                    visibility: hidden;
                    opacity: 0;
                    transition: opacity 0.2s ease, visibility 0.2s ease;
                }
                .fh5co-nav .menu-1 ul li.has-dropdown:hover .dropdown {
                    display: block !important;
                    visibility: visible;
                    opacity: 1;
                }
                .fh5co-nav .menu-1 ul li.has-dropdown .dropdown li {
                    margin: 0;
                }
                .fh5co-nav .menu-1 ul li.has-dropdown .dropdown li a {
                    padding: 10px 20px;
                    display: block;
                    font-size: 14px;
                    text-transform: none;
                    color: #333;
                }
                .fh5co-nav .menu-1 ul li.has-dropdown .dropdown li a:hover {
                    color: #007bff;
                }
                .menu-toggle {
                    display: none;
                    font-size: 24px;
                    cursor: pointer;
                    color: #333;
                    padding: 10px;
                }
                .event-wrap {
                    background: rgba(255, 255, 255, 0.95);
                    padding: 30px;
                    border-radius: 20px;
                    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
                    max-width: 550px;
                    margin: 0 auto;
                    border: 1px solid #D2B48C; /* Light beige border */
                    transition: transform 0.3s ease, box-shadow 0.3s ease;
                }
                .event-wrap:hover {
                    transform: translateY(-5px);
                    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
                }
                .event-wrap h3 {
                    color: #8B4513; /* Brown */
                    margin-bottom: 25px;
                    font-size: 26px;
                    font-weight: 600;
                    display: flex;
                    align-items: center;
                    gap: 10px;
                    position: relative;
                    animation: slideIn 0.5s ease-out;
                }
                .event-wrap h3::after {
                    content: '✨';
                    font-size: 20px;
                    color: #DAA520; /* Golden accent */
                }
                @keyframes slideIn {
                    from {
                        opacity: 0;
                        transform: translateX(-20px);
                    }
                    to {
                        opacity: 1;
                        transform: translateX(0);
                    }
                }
                .event-wrap .form-group {
                    margin-bottom: 25px;
                    position: relative;
                }
                .event-wrap .form-group label {
                    color: #5C4033; /* Darker brown for labels */
                    font-weight: 400;
                    margin-bottom: 8px;
                    display: block;
                    font-size: 14px;
                    transition: color 0.3s ease;
                }
                .event-wrap .form-group label:hover {
                    color: #8B4513; /* Brown on hover */
                }
                .event-wrap .form-control {
                    background: #FAF0E6; /* Very light beige */
                    border: none;
                    border-bottom: 2px solid #D2B48C; /* Light beige */
                    color: #5C4033; /* Darker brown text */
                    border-radius: 0;
                    padding: 12px 5px;
                    font-size: 14px;
                    transition: border-bottom 0.3s ease;
                }
                .event-wrap .form-control::placeholder {
                    color: #A0522D; /* Medium brown placeholder */
                }
                .event-wrap .form-control:focus {
                    border-bottom: 2px solid #8B4513; /* Brown on focus */
                    box-shadow: none;
                    outline: none;
                }
                .event-wrap .form-control.is-invalid {
                    border-bottom: 2px solid #ff4d4d;
                }
                .event-wrap .form-control select {
                    color: #5C4033;
                    background: #FAF0E6;
                }
                .event-wrap .form-control select option {
                    color: #5C4033;
                    background: #FAF0E6;
                }
                .event-wrap .btn {
                    margin-top: 15px;
                    padding: 12px;
                    border-radius: 50px;
                    font-size: 16px;
                    font-weight: 500;
                    transition: all 0.3s ease;
                    position: relative;
                    overflow: hidden;
                }
                .event-wrap .btn-primary {
                    background: linear-gradient(90deg, #D2B48C, #8B4513); /* Beige to brown gradient */
                    border: none;
                    width: 100%;
                    color: #fff;
                }
                .event-wrap .btn-primary:hover {
                    background: linear-gradient(90deg, #C19A6B, #5C4033); /* Slightly darker gradient */
                    transform: scale(1.05);
                }
                .event-wrap .btn-secondary {
                    background: #EDE4D3; /* Light beige */
                    border: none;
                    width: 100%;
                    color: #5C4033; /* Darker brown text */
                }
                .event-wrap .btn-secondary:hover {
                    background: #D2B48C; /* Medium beige */
                    transform: scale(1.05);
                }
                #fh5co-footer {
                    background: rgba(255, 255, 255, 0.9);
                    padding: 20px 0;
                    margin-top: auto;
                }
                #fh5co-event {
                    margin-top: 60px;
                    flex: 1 0 auto;
                    padding-top: 50px;
                }
                .fh5co-heading {
                    margin-bottom: 40px;
                }
                .fh5co-heading span {
                    color: #fff;
                    font-size: 18px;
                    display: block;
                    margin-bottom: 10px;
                }
                .fh5co-heading h2 {
                    color: #fff;
                    font-size: 36px;
                    margin: 0;
                }
                .event-wrap .form-check-label {
                    color: #5C4033;
                    margin-left: 10px;
                    font-size: 14px;
                    transition: color 0.3s ease;
                }
                .event-wrap .form-check-label:hover {
                    color: #8B4513;
                }
                .event-wrap .form-check-input {
                    transform: scale(1.3);
                    accent-color: #8B4513; /* Brown checkbox */
                }
                .star-rating-container {
                    display: flex;
                    justify-content: center;
                    font-size: 28px;
                    gap: 10px;
                    padding: 10px 0;
                }
                .star-rating-container select {
                    display: none;
                }
                .star-rating-container .stars {
                    display: flex;
                }
                .star-rating-container .star {
                    cursor: pointer;
                    color: #A0522D !important; /* Medium brown for unselected stars */
                    transition: transform 0.3s ease, color 0.3s ease;
                }
                .star-rating-container .star:hover {
                    transform: scale(1.2);
                }
                .star-rating-container .star.filled {
                    color: #DAA520 !important; /* Golden for filled stars */
                    animation: starGlow 0.5s ease;
                }
                @keyframes starGlow {
                    0% { transform: scale(1); }
                    50% { transform: scale(1.3); }
                    100% { transform: scale(1); }
                }
                .text-danger {
                    font-size: 12px;
                    margin-top: 5px;
                    color: #ff4d4d;
                    display: block;
                    animation: fadeIn 0.3s ease;
                }
                @keyframes fadeIn {
                    from { opacity: 0; }
                    to { opacity: 1; }
                }

                /* Pop-up de succès */
                .success-popup {
                    display: none;
                    position: fixed;
                    top: 50%;
                    left: 50%;
                    transform: translate(-50%, -50%);
                    background: #FAF0E6; /* Very light beige */
                    padding: 20px;
                    border-radius: 10px;
                    box-shadow: 0 4px 15px rgba(0,0,0,0.2);
                    z-index: 10000;
                    text-align: center;
                    max-width: 350px;
                    width: 90%;
                    border: 1px solid #D2B48C; /* Light beige border */
                }
                .success-popup h5 {
                    font-size: 20px;
                    color: #8B4513; /* Brown */
                    margin-bottom: 15px;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    gap: 10px;
                }
                .success-popup h5::before {
                    content: '✔';
                    font-size: 24px;
                    color: #28a745; /* Green checkmark */
                }
                .success-popup p {
                    color: #5C4033; /* Darker brown */
                    font-size: 14px;
                    margin: 15px 0;
                }
                .success-popup .btn-primary {
                    padding: 8px 16px;
                    font-size: 14px;
                }

                /* Overlay pour la pop-up */
                .popup-overlay {
                    display: none;
                    position: fixed;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    background: rgba(0, 0, 0, 0.5);
                    z-index: 9999;
                }

                @media (max-width: 768px) {
                    .menu-toggle {
                        display: block;
                    }
                    .fh5co-nav .menu-1 ul {
                        display: none;
                        flex-direction: column;
                        position: absolute;
                        top: 60px;
                        left: 0;
                        width: 100%;
                        background-color: #fff;
                        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
                        padding: 20px 0;
                    }
                    .fh5co-nav .menu-1 ul.active {
                        display: flex;
                    }
                    .fh5co-nav .menu-1 ul li {
                        margin: 10px 0;
                        text-align: center;
                    }
                    .user-circle {
                        margin-right: 0;
                        margin-bottom: 5px;
                    }
                    .fh5co-nav .menu-1 ul li.has-dropdown .dropdown {
                        position: static;
                        display: none;
                        box-shadow: none;
                        background-color: #f8f9fa;
                    }
                    .fh5co-nav .menu-1 ul li.has-dropdown:hover .dropdown {
                        display: none !important;
                    }
                    .fh5co-nav .menu-1 ul li.has-dropdown.active .dropdown {
                        display: block !important;
                    }
                    .event-wrap {
                        max-width: 90%;
                        padding: 20px;
                    }
                    .fh5co-heading h2 {
                        font-size: 28px;
                    }
                    #fh5co-event {
                        padding-top: 30px;
                    }
                    .success-popup {
                        max-width: 90%;
                    }
                }
            </style>
        {% endblock %}
