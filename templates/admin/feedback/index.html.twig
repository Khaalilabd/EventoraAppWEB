                                <div class="btn-group w-100" role="group">
                                    <a href="{{ path('admin_feedback', {'sort_by': 'membre.email', 'sort_order': 'asc', 'user_filter': selected_user, 'date_filter': selected_date, 'rating_filter': selected_rating, 'page': current_page}) }}"
                                       class="btn btn-outline-primary {{ sort_by == 'membre.email' and sort_order == 'asc' ? 'active' : '' }}"
