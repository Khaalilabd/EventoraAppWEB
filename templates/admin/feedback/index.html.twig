                        {% endfor %}
                    {% else %}
                        <div class="col-12">
                            <div class="alert alert-info text-center" role="alert">
                                Aucun feedback trouvé.
                            </div>
                        </div>
                    {% endif %}
                </div>

                <!-- Pagination -->
                {% if total_pages > 1 %}
                    <nav aria-label="Page navigation">
                        <ul class="pagination">
                            <li class="page-item {{ current_page == 1 ? 'disabled' : '' }}">
                                <a class="page-link" href="{{ path('admin_feedback', {'page': current_page - 1, 'sort_by': sort_by, 'sort_order': sort_order, 'user_filter': selected_user, 'date_filter': selected_date}) }}" aria-label="Previous">
                                    <span aria-hidden="true">«</span>
                                </a>
                            </li>
                            {% for i in 1..total_pages %}
                                <li class="page-item {{ current_page == i ? 'active' : '' }}">
                                    <a class="page-link" href="{{ path('admin_feedback', {'page': i, 'sort_by': sort_by, 'sort_order': sort_order, 'user_filter': selected_user, 'date_filter': selected_date}) }}">{{ i }}</a>
                                </li>
                            {% endfor %}
                            <li class="page-item {{ current_page == total_pages ? 'disabled' : '' }}">
                                <a class="page-link" href="{{ path('admin_feedback', {'page': current_page + 1, 'sort_by': sort_by, 'sort_order': sort_order, 'user_filter': selected_user, 'date_filter': selected_date}) }}" aria-label="Next">
                                    <span aria-hidden="true">»</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                {% endif %}
            </div>

            <!-- Barre latérale de tri à droite -->
            <div class="filter-sidebar" id="filterSidebar">
                <button class="filter-toggle-btn" onclick="toggleFilterSidebar()">Masquer</button>
                <div class="filter-content">
                    <h6 class="mb-3 text-dark font-weight-bold"><i class="fas fa-filter me-2"></i>Options de Tri et Filtrage</h6>
                    <form method="get" action="{{ path('admin_feedback') }}" class="row g-3 align-items-center">
                        <div class="col-12">
                            <label for="user_filter" class="form-label text-sm font-weight-bold">Filtrer par Utilisateur</label>
                            <select name="user_filter" id="user_filter" class="form-select" onchange="this.form.submit()">
                                <option value="">Tous les utilisateurs</option>
                                {% for user in users %}
                                    <option value="{{ user }}" {{ selected_user == user ? 'selected' : '' }}>{{ user }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-12">
                            <label class="form-label text-sm font-weight-bold">Trier par Note</label>
                            <div class="btn-group w-100" role="group">
                                <a href="{{ path('admin_feedback', {'sort_by': 'Vote', 'sort_order': 'asc', 'user_filter': selected_user, 'date_filter': selected_date, 'page': current_page}) }}"
                                   class="btn btn-outline-primary {{ sort_by == 'Vote' and sort_order == 'asc' ? 'active' : '' }}">
                                    <i class="fas fa-star me-1"></i> Croissant
                                </a>
                                <a href="{{ path('admin_feedback', {'sort_by': 'Vote', 'sort_order': 'desc', 'user_filter': selected_user, 'date_filter': selected_date, 'page': current_page}) }}"
                                   class="btn btn-outline-primary {{ sort_by == 'Vote' and sort_order == 'desc' ? 'active' : '' }}">
                                    <i class="fas fa-star me-1"></i> Décroissant
                                </a>
                            </div>
                        </div>
                        <div class="col-12">
                            <label class="form-label text-sm font-weight-bold">Trier par Date</label>
                            <div class="input-group">
                                <input type="date" name="date_filter" id="date_filter" class="form-control" value="{{ selected_date }}" onchange="this.form.submit()">
                                <div class="btn-group" role="group">
                                    <a href="{{ path('admin_feedback', {'sort_by': 'date', 'sort_order': 'asc', 'user_filter': selected_user, 'date_filter': selected_date, 'page': current_page}) }}"
                                       class="btn btn-outline-primary {{ sort_by == 'date' and sort_order == 'asc' ? 'active' : '' }}">
                                        <i class="fas fa-arrow-up"></i>
                                    </a>
                                    <a href="{{ path('admin_feedback', {'sort_by': 'date', 'sort_order': 'desc', 'user_filter': selected_user, 'date_filter': selected_date, 'page': current_page}) }}"
                                       class="btn btn-outline-primary {{ sort_by == 'date' and sort_order == 'desc' ? 'active' : '' }}">
                                        <i class="fas fa-arrow-down"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 d-flex align-items-end">
                            <a href="{{ path('admin_feedback') }}" class="btn btn-outline-secondary w-100">
                                <i class="fas fa-undo me-1"></i> Réinitialiser
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Bouton flottant pour réafficher le menu -->
            <button class="filter-toggle-icon" id="filterToggleIcon" onclick="toggleFilterSidebar()">
                <i class="fas fa-filter"></i>
            </button>
        </div>
    </main>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Recherche en temps réel
        document.getElementById('searchFeedback').addEventListener('input', function(e) {
            const searchText = e.target.value.toLowerCase();
            const cards = document.querySelectorAll('.feedback-card-container');
            cards.forEach(card => {
                const description = card.querySelector('.card-body p:nth-child(3)').textContent.toLowerCase();
                card.style.display = description.includes(searchText) ? '' : 'none';
            });
        });

        // Toggle pour la barre latérale de tri
        function toggleFilterSidebar() {
            const sidebar = document.getElementById('filterSidebar');
            const btn = sidebar.querySelector('.filter-toggle-btn');
            const icon = document.getElementById('filterToggleIcon');
            sidebar.classList.toggle('collapsed');
            btn.textContent = sidebar.classList.contains('collapsed') ? 'Afficher' : 'Masquer';
            icon.classList.toggle('visible', sidebar.classList.contains('collapsed'));
        }
    </script>
{% endblock %}