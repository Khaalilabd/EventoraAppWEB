                        </ul>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_logout') }}">
                        <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fas fa-sign-out-alt text-dark"></i>
                        </div>
                        <span class="nav-link-text ms-1">Déconnexion</span>
                    </a>
                </li>
            </ul>
        </div>
    </aside>

    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg">
        <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur">
            <div class="container-fluid py-1 px-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                        <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="#">Pages</a></li>
                        <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="{{ path('admin_reclamations') }}">Réclamations</a></li>
                        <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Feedback</li>
                    </ol>
                    <h6 class="font-weight-bolder mb-0">
                        Liste des Feedbacks
                        <a href="{{ path('app_feedback_new') }}" class="btn btn-sm btn-success ms-2">Ajouter un Feedback</a>
                    </h6>
                </nav>
                <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
                    <div class="ms-md-auto pe-md-3 d-flex align-items-center">
                        <div class="input-group">
                            <span class="input-group-text text-body"><i class="fas fa-search" aria-hidden="true"></i></span>
                            <input type="text" class="form-control" placeholder="Rechercher..." id="searchFeedback">
                        </div>
                    </div>
                    <ul class="navbar-nav justify-content-end">
                        <li class="nav-item d-flex align-items-center">
                            <a href="#" class="nav-link text-body font-weight-bold px-0">
                                <i class="fa fa-user me-sm-1"></i>
                                <span class="d-sm-inline d-none">{{ app.user.email ?? 'Utilisateur' }}</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container-fluid py-4">
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card shadow-sm p-3 bg-light border-radius-xl">
                        <h6 class="mb-3 text-dark font-weight-bold"><i class="fas fa-filter me-2"></i> Options de Tri et Filtrage</h6>
                        <form method="get" action="{{ path('admin_feedback') }}" class="row g-3 align-items-center">
                            <div class="col-md-3">
                                <label for="user_filter" class="form-label text-sm font-weight-bold">Filtrer par Utilisateur</label>
                                <select name="user_filter" id="user_filter" class="form-select" onchange="this.form.submit()">
                                    <option value="">Tous les utilisateurs</option>
                                    {% for user in users %}
                                        <option value="{{ user }}" {{ selected_user == user ? 'selected' : '' }}>{{ user }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label text-sm font-weight-bold">Trier par Note</label>
                                <div class="btn-group w-100" role="group">
                                    <a href="{{ path('admin_feedback', {'sort_by': 'Vote', 'sort_order': 'asc', 'user_filter': selected_user, 'date_filter': selected_date}) }}"
                                       class="btn btn-outline-primary {{ sort_by == 'Vote' and sort_order == 'asc' ? 'active' : '' }}">
                                        <i class="fas fa-star me-1"></i> Croissant
                                    </a>
                                    <a href="{{ path('admin_feedback', {'sort_by': 'Vote', 'sort_order': 'desc', 'user_filter': selected_user, 'date_filter': selected_date}) }}"
                                       class="btn btn-outline-primary {{ sort_by == 'Vote' and sort_order == 'desc' ? 'active' : '' }}">
                                        <i class="fas fa-star me-1"></i> Décroissant
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label text-sm font-weight-bold">Trier par Date</label>
                                <div class="input-group">
                                    <input type="date" name="date_filter" id="date_filter" class="form-control" value="{{ selected_date }}" onchange="this.form.submit()">
                                    <div class="btn-group" role="group">
                                        <a href="{{ path('admin_feedback', {'sort_by': 'date', 'sort_order': 'asc', 'user_filter': selected_user, 'date_filter': selected_date}) }}"
                                           class="btn btn-outline-primary {{ sort_by == 'date' and sort_order == 'asc' ? 'active' : '' }}">
                                            <i class="fas fa-arrow-up"></i>
                                        </a>
                                        <a href="{{ path('admin_feedback', {'sort_by': 'date', 'sort_order': 'desc', 'user_filter': selected_user, 'date_filter': selected_date}) }}"
                                           class="btn btn-outline-primary {{ sort_by == 'date' and sort_order == 'desc' ? 'active' : '' }}">
                                            <i class="fas fa-arrow-down"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3 d-flex align-items-end">
                                <a href="{{ path('admin_feedback') }}" class="btn btn-outline-secondary w-100">
                                    <i class="fas fa-undo me-1"></i> Réinitialiser
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="row" id="feedbackList">
                {% for feedback in feedbacks %}
                    <div class="col-lg-4 col-md-6 col-sm-12 mb-4 feedback-card-container">
                        <div class="card shadow-sm border-radius-xl h-100 feedback-card">
                            <div class="card-header p-3 bg-gradient-dark text-white">
                                <h6 class="mb-0">Feedback #{{ feedback.ID }}</h6>
                            </div>
                            <div class="card-body p-3 position-relative">
                                {% if feedback.souvenirsBase64 %}
                                    <div class="feedback-image-container">
                                        <img src="{{ feedback.souvenirsBase64 }}" alt="Feedback image" class="feedback-image">
                                    </div>
                                {% endif %}
                                <p class="text-sm mb-2"><strong>Membre :</strong> {{ feedback.membre ? feedback.membre.email : 'Anonyme' }}</p>
                                <p class="text-sm mb-2">
                                    <strong>Note :</strong>
                                    <span class="star-rating-display">
                                        {% for i in 1..5 %}
                                            <span class="star {% if i <= feedback.Vote %}filled{% endif %}">★</span>
                                        {% endfor %}
                                    </span>
                                </p>
                                <p class="text-sm mb-2"><strong>Description :</strong> {{ feedback.description }}</p>
                                <p class="text-sm mb-2"><strong>Date :</strong> {{ feedback.date ? feedback.date|date('Y-m-d') : 'Non définie' }}</p>
                                <div class="form-check mb-3">
                                    <input class="form-check-input recommend-checkbox {% if feedback.recommend|lower == 'oui' %}recommend-yes{% else %}recommend-no{% endif %}" 
                                           type="checkbox" 
                                           {{ feedback.recommend|lower == 'oui' ? 'checked' : '' }} 
                                           disabled>
                                    <label class="form-check-label">Recommandé ({{ feedback.recommend|default('non défini') }})</label>
                                </div>
                            </div>
                            <div class="card-footer p-3">
                                <a href="{{ path('admin_feedback_show', {'id': feedback.ID}) }}" class="btn btn-sm btn-info">Détails</a>
                                <a href="{{ path('admin_feedback_edit_recommend', {'id': feedback.ID}) }}" class="btn btn-sm btn-primary">Modifier</a>
                                <a href="#" class="btn btn-sm btn-danger" onclick="if(confirm('Voulez-vous vraiment supprimer ce feedback ?')) { document.getElementById('delete-form-{{ feedback.ID }}').submit(); } return false;">Supprimer</a>
                                <form id="delete-form-{{ feedback.ID }}" method="post" action="{{ path('admin_feedback_delete', {'id': feedback.ID}) }}" style="display: none;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ feedback.ID) }}">
                                </form>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-12">
                        <div class="alert alert-info text-center" role="alert">
                            Aucun feedback trouvé.
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </main>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .form-check .recommend-checkbox { width: 1.25em; height: 1.25em; }
        .form-check .recommend-yes { background-color: #28a745 !important; border-color: #28a745 !important; background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 20 20'%3e%3cpath fill='none' stroke='%23fff' stroke-linecap='round' stroke-linejoin='round' stroke-width='3' d='M6 10l3 3l6-6'/%3e%3c/svg%3e") !important; }
        .form-check .recommend-no { background-color: #dc3545 !important; border-color: #dc3545 !important; background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 20 20'%3e%3cpath fill='none' stroke='%23fff' stroke-linecap='round' stroke-linejoin='round' stroke-width='3' d='M6 6l8 8m0-8l-8 8'/%3e%3c/svg%3e") !important; }
        .form-check .recommend-checkbox:disabled { opacity: 0.8; }
        .card-footer .btn { margin-right: 5px; }
        .star-rating-display { display: inline-flex; font-size: 16px; gap: 5px; vertical-align: middle; margin-left: 5px; }
        .star-rating-display .star { color: #ddd; }
        .star-rating-display .star.filled { color: #ffd700; }
        .card.bg-light { background-color: #f8f9fa !important; }
        .form-select, .btn, .form-control { transition: all 0.3s ease; }
        .btn-outline-primary.active { background-color: #007bff; color: white; border-color: #007bff; }
        .btn-outline-primary:hover { background-color: #0056b3; color: white; border-color: #0056b3; }
        .btn-outline-secondary:hover { background-color: #6c757d; color: white; border-color: #6c757d; }
        .input-group .form-control[type="date"] { border-top-right-radius: 0; border-bottom-right-radius: 0; }
        .input-group .btn-group { flex: 0 0 auto; }
        .feedback-card { position: relative; overflow: hidden; transition: all 0.3s ease; }
        .feedback-image-container { position: absolute; top: 0; left: 0; width: 100%; height: 100%; opacity: 0; transition: opacity 0.3s ease; z-index: 0; }
        .feedback-image { width: 100%; height: 100%; object-fit: cover; filter: blur(10px); transition: filter 0.3s ease; }
        .feedback-card:hover .feedback-image-container { opacity: 0.5; }
        .feedback-card:hover .feedback-image { filter: blur(0); }
        .card-body { position: relative; z-index: 1; background: rgba(255, 255, 255, 0.9); }
        .card-header, .card-footer { position: relative; z-index: 1; }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.getElementById('searchFeedback').addEventListener('input', function(e) {
            const searchText = e.target.value.toLowerCase();
            const cards = document.querySelectorAll('.feedback-card-container');
            cards.forEach(card => {
                const description = card.querySelector('.card-body p:nth-child(3)').textContent.toLowerCase();
                card.style.display = description.includes(searchText) ? '' : 'none';
            });
        });
    </script>
{% endblock %}