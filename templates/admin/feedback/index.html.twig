                                <label for="date_filter" class="form-label text-sm font-weight-bold">Date</label>
                                <input type="date" name="date_filter" id="date_filter" class="form-control" value="{{ selected_date }}" onchange="this.form.submit()" aria-label="Filtrer par date">
