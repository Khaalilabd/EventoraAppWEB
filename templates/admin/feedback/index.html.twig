{% extends 'admin/dashboard.html.twig' %}

{% block title %}Feedbacks{% endblock %}

{% block body %}
    <aside class="sidenav navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-3 fixed-start ms-3" id="sidenav-main">
        <div class="sidenav-header">
            <a class="navbar-brand m-0" href="#">
                <img src="{{ asset('assets/img/logo-ct-dark.png') }}" class="navbar-brand-img h-100" alt="main_logo">
                <span class="ms-1 font-weight-bold">Admin Dashboard</span>
            </a>
        </div>
        <hr class="horizontal dark mt-0">
        <div class="collapse navbar-collapse w-auto" id="sidenav-collapse-main">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fas fa-tachometer-alt text-dark"></i>
                        </div>
                        <span class="nav-link-text ms-1">Dashboard</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fas fa-calendar-check text-dark"></i>
                        </div>
                        <span class="nav-link-text ms-1">Réservations</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link dropdown-toggle active" href="#" data-bs-toggle="collapse" data-bs-target="#reclamationsMenu" aria-expanded="true">
                        <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fas fa-exclamation-triangle text-dark"></i>
                        </div>
                        <span class="nav-link-text ms-1">Réclamations</span>
                    </a>
                    <div class="collapse show" id="reclamationsMenu">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('admin_reclamations') }}">
                                    <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                                        <i class="fas fa-exclamation-circle text-dark"></i>
                                    </div>
                                    <span class="nav-link-text ms-1">Réclamations</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" href="{{ path('admin_feedback') }}">
                                    <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                                        <i class="fas fa-comment-dots text-dark"></i>
                                    </div>
                                    <span class="nav-link-text ms-1">Feedback</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="collapse" data-bs-target="#usersMenu" aria-expanded="false">
                        <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fas fa-users text-dark"></i>
                        </div>
                        <span class="nav-link-text ms-1">Utilisateurs</span>
                    </a>
                    <div class="collapse" id="usersMenu">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                                        <i class="fas fa-user-friends text-dark"></i>
                                    </div>
                                    <span class="nav-link-text ms-1">Membres</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                                        <i class="fas fa-user-shield text-dark"></i>
                                    </div>
                                    <span class="nav-link-text ms-1">Modérateurs</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fas fa-box text-dark"></i>
                        </div>
                        <span class="nav-link-text ms-1">Packs</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="collapse" data-bs-target="#servicesMenu" aria-expanded="false">
                        <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fas fa-concierge-bell text-dark"></i>
                        </div>
                        <span class="nav-link-text ms-1">Services</span>
                    </a>
                    <div class="collapse" id="servicesMenu">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                                        <i class="fas fa-handshake text-dark"></i>
                                    </div>
                                    <span class="nav-link-text ms-1">Partenaires</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">
                                    <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                                        <i class="fas fa-tools text-dark"></i>
                                    </div>
                                    <span class="nav-link-text ms-1">Services</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_logout') }}">
                        <div class="icon icon-shape icon-sm shadow border-radius-md bg-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fas fa-sign-out-alt text-dark"></i>
                        </div>
                        <span class="nav-link-text ms-1">Déconnexion</span>
                    </a>
                </li>
            </ul>
        </div>
    </aside>

    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg">
        <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur">
            <div class="container-fluid py-1 px-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                        <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="#">Pages</a></li>
                        <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="{{ path('admin_reclamations') }}">Réclamations</a></li>
                        <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Feedback</li>
                    </ol>
                    <h6 class="font-weight-bolder mb-0">
                        Liste des Feedbacks
                        <a href="{{ path('app_feedback_new') }}" class="btn btn-sm btn-success ms-2">Add Feedback</a>
                    </h6>
                </nav>
                <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
                    <div class="ms-md-auto pe-md-3 d-flex align-items-center">
                        <div class="input-group">
                            <span class="input-group-text text-body"><i class="fas fa-search" aria-hidden="true"></i></span>
                            <input type="text" class="form-control" placeholder="Rechercher...">
                        </div>
                    </div>
                    <ul class="navbar-nav justify-content-end">
                        <li class="nav-item d-flex align-items-center">
                            <a href="#" class="nav-link text-body font-weight-bold px-0">
                                <i class="fa fa-user me-sm-1"></i>
                                <span class="d-sm-inline d-none">{{ app.user.email ?? 'Utilisateur' }}</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container-fluid py-4">
            <!-- Section de tri avec boutons stylés -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="d-flex flex-wrap align-items-center">
                        <div class="me-3 mb-2">
                            <span class="text-dark font-weight-bold me-2">Trier par :</span>
                            <div class="btn-group" role="group">
                                <a href="{{ path('admin_feedback', {'sort_by': 'membre.email', 'sort_order': sort_order}) }}"
                                   class="btn btn-outline-primary {{ sort_by == 'membre.email' ? 'active' : '' }}">
                                    Utilisateur
                                </a>
                                <a href="{{ path('admin_feedback', {'sort_by': 'vote', 'sort_order': sort_order}) }}"
                                   class="btn btn-outline-primary {{ sort_by == 'vote' ? 'active' : '' }}">
                                    Nombre d'étoiles
                                </a>
                                <a href="{{ path('admin_feedback', {'sort_by': 'date', 'sort_order': sort_order}) }}"
                                   class="btn btn-outline-primary {{ sort_by == 'date' ? 'active' : '' }}">
                                    Date
                                </a>
                                <a href="{{ path('admin_feedback', {'sort_by': 'recommend', 'sort_order': sort_order}) }}"
                                   class="btn btn-outline-primary {{ sort_by == 'recommend' ? 'active' : '' }}">
                                    Recommandation
                                </a>
                            </div>
                        </div>
                        <div class="mb-2">
                            <span class="text-dark font-weight-bold me-2">Ordre :</span>
                            <div class="btn-group" role="group">
                                <a href="{{ path('admin_feedback', {'sort_by': sort_by, 'sort_order': 'asc'}) }}"
                                   class="btn btn-outline-secondary {{ sort_order == 'asc' ? 'active' : '' }}">
                                    Croissant
                                </a>
                                <a href="{{ path('admin_feedback', {'sort_by': sort_by, 'sort_order': 'desc'}) }}"
                                   class="btn btn-outline-secondary {{ sort_order == 'desc' ? 'active' : '' }}">
                                    Décroissant
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                {% for feedback in feedbacks %}
                    <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                        <div class="card shadow-sm border-radius-xl h-100">
                            <div class="card-header p-3 bg-gradient-dark text-white">
                                <h6 class="mb-0">Feedback #{{ feedback.ID }}</h6>
                            </div>
                            <div class="card-body p-3">
                                <p class="text-sm mb-2"><strong>Membre :</strong> {{ feedback.membre ? feedback.membre.email : 'Anonyme' }}</p>
                                <p class="text-sm mb-2">
                                    <strong>Note :</strong>
                                    <span class="star-rating-display">
                                        {% for i in 1..5 %}
                                            <span class="star {% if i <= feedback.vote %}filled{% endif %}">★</span>
                                        {% endfor %}
                                    </span>
                                </p>
                                <p class="text-sm mb-2"><strong>Description :</strong> {{ feedback.description }}</p>
                                <p class="text-sm mb-2"><strong>Date :</strong> {{ feedback.date ? feedback.date|date('Y-m-d') : 'Non définie' }}</p>
                                <div class="form-check mb-3">
                                    <input class="form-check-input recommend-checkbox 
                                                  {% if feedback.recommend|lower == 'oui' %}recommend-yes{% else %}recommend-no{% endif %}" 
                                           type="checkbox" 
                                           {{ feedback.recommend|lower == 'oui' ? 'checked' : '' }} 
                                           disabled>
                                    <label class="form-check-label">Recommandé ({{ feedback.recommend|default('non défini') }})</label>
                                </div>
                            </div>
                            <div class="card-footer p-3">
                                <a href="{{ path('admin_feedback_show', {'id': feedback.ID}) }}" class="btn btn-sm btn-info">Détails</a>
                                <a href="{{ path('admin_feedback_edit_recommend', {'id': feedback.ID}) }}" class="btn btn-sm btn-primary">Modifier</a>
                                <a href="#" class="btn btn-sm btn-danger" onclick="if(confirm('Voulez-vous vraiment supprimer ce feedback ?')) { document.getElementById('delete-form-{{ feedback.ID }}').submit(); } return false;">Supprimer</a>
                                <form id="delete-form-{{ feedback.ID }}" method="post" action="{{ path('admin_feedback_delete', {'id': feedback.ID}) }}" style="display: none;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ feedback.ID) }}">
                                </form>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-12">
                        <div class="alert alert-info text-center" role="alert">
                            Aucun feedback trouvé.
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </main>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .form-check .recommend-checkbox {
            width: 1.25em;
            height: 1.25em;
        }
        .form-check .recommend-yes {
            background-color: #28a745 !important;
            border-color: #28a745 !important;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 20 20'%3e%3cpath fill='none' stroke='%23fff' stroke-linecap='round' stroke-linejoin='round' stroke-width='3' d='M6 10l3 3l6-6'/%3e%3c/svg%3e") !important;
        }
        .form-check .recommend-no {
            background-color: #dc3545 !important;
            border-color: #dc3545 !important;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 20 20'%3e%3cpath fill='none' stroke='%23fff' stroke-linecap='round' stroke-linejoin='round' stroke-width='3' d='M6 6l8 8m0-8l-8 8'/%3e%3c/svg%3e") !important;
        }
        .form-check .recommend-checkbox:disabled {
            opacity: 0.8;
        }
        .card-footer .btn {
            margin-right: 5px;
        }
        .star-rating-display {
            display: inline-flex;
            font-size: 16px;
            gap: 5px;
            vertical-align: middle;
            margin-left: 5px;
        }
        .star-rating-display .star {
            color: #ddd;
        }
        .star-rating-display .star.filled {
            color: #ffd700;
        }
        /* Style pour les boutons de tri */
        .btn-group .btn {
            transition: all 0.3s ease;
        }
        .btn-group .btn.active {
            background-color: #ff6200;
            border-color: #ff6200;
            color: #fff;
        }
        .btn-group .btn:hover {
            background-color: #e55a00;
            border-color: #e55a00;
            color: #fff;
        }
    </style>
{% endblock %}