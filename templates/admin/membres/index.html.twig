{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Real-time search
        document.getElementById('searchMembre').addEventListener('input', function(e) {
            const searchText = e.target.value.toLowerCase();
            const cards = document.querySelectorAll('.membre-card-container');
            cards.forEach(card => {
                const nom = card.querySelector('.membre-info h6').textContent.toLowerCase();
                const email = card.querySelector('.membre-info p:nth-child(2)').textContent.toLowerCase();
                card.style.display = nom.includes(searchText) || email.includes(searchText) ? '' : 'none';
            });
        });

        // Pie Chart Membres
        const ctx = document.getElementById('membrePieChart').getContext('2d');
        const membrePieChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: ['Hommes', 'Femmes'],
                datasets: [{
                    data: [
                        {{ gender_stats.Homme|default(0) }},
                        {{ gender_stats.Femme|default(0) }}
                    ],
                    backgroundColor: [
                        '#4a90e2', // bleu
                        '#e83e8c'  // rose
                    ],
                    borderWidth: 2,
                    borderColor: 'rgba(255,255,255,0.8)',
                    hoverOffset: 12,
                }]
            },
            options: {
                responsive: false,
                plugins: {
                    legend: {
                        display: true,
                        position: 'bottom',
                        labels: {
                            color: '#2c3e50',
                            font: { size: 15, weight: 'bold' },
                            padding: 20
                        }
                    },
                    tooltip: {
                        backgroundColor: 'rgba(50,50,50,0.9)',
                        titleColor: '#fff',
                        bodyColor: '#fff',
                        borderColor: '#4a90e2',
                        borderWidth: 1
                    }
                },
                layout: {
                    padding: 10
                }
            }
        });

        // Toggle isConfirmed status
        document.querySelectorAll('.toggle-confirmed').forEach(icon => {
            icon.addEventListener('click', function() {
                const membreId = this.getAttribute('data-membre-id');
                const csrfToken = this.getAttribute('data-csrf-token');
                const badge = this.parentElement.querySelector('.badge');
                const isConfirmed = this.classList.contains('fa-unlock'); // État actuel

                fetch(`{{ path('admin_membres_toggle_confirm', {'id': '__ID__'}) }}`.replace('__ID__', membreId), {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-CSRF-Token': csrfToken
                    },
                    body: JSON.stringify({ isConfirmed: !isConfirmed }) // Envoyer la valeur inversée
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        this.classList.toggle('fa-lock', data.isConfirmed);
                        this.classList.toggle('fa-unlock', !data.isConfirmed);
                        badge.textContent = data.isConfirmed ? 'Confirmé' : 'Non Confirmé';
                        badge.className = `badge badge-${data.isConfirmed ? 'confirmed' : 'not-confirmed'}`;
                    } else {
                        alert(data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Une erreur est survenue lors de la mise à jour du statut.');
                });
            });
        });
    </script>
{% endblock %}