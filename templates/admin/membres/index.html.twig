{% block javascripts %}
    {{ parent() }}
    <script>
        // Real-time search
        document.getElementById('searchMembre').addEventListener('input', function(e) {
            const searchText = e.target.value.toLowerCase();
            const cards = document.querySelectorAll('.membre-card-container');
            cards.forEach(card => {
                const nom = card.querySelector('.card-body p:nth-child(1)').textContent.toLowerCase();
                const email = card.querySelector('.card-body p:nth-child(2)').textContent.toLowerCase();
                card.style.display = nom.includes(searchText) || email.includes(searchText) ? '' : 'none';
            });
        });

        // Toggle filter sidebar
        function toggleFilterSidebar() {
            const sidebar = document.getElementById('filterSidebar');
            const btn = sidebar.querySelector('.filter-toggle-btn');
            const icon = document.getElementById('filterToggleIcon');
            sidebar.classList.toggle('collapsed');
            btn.textContent = sidebar.classList.contains('collapsed') ? 'Afficher' : 'Masquer';
            icon.classList.toggle('visible', sidebar.classList.contains('collapsed'));
        }

        // Toggle isConfirmed status
        document.querySelectorAll('.toggle-confirmed').forEach(icon => {
            icon.addEventListener('click', function() {
                const membreId = this.getAttribute('data-membre-id');
                const csrfToken = this.getAttribute('data-csrf-token');
                const badge = this.parentElement.querySelector('.badge');
                const isConfirmed = this.classList.contains('fa-unlock');

                fetch(`{{ path('admin_membres_toggle_confirm', {'id': '__ID__'}) }}`.replace('__ID__', membreId), {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-CSRF-Token': csrfToken
                    },
                    body: JSON.stringify({})
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        this.classList.toggle('fa-lock', !isConfirmed);
                        this.classList.toggle('fa-unlock', isConfirmed);
                        badge.textContent = data.isConfirmed ? 'Confirmé' : 'Non Confirmé';
                        badge.className = `badge badge-${data.isConfirmed ? 'confirmed' : 'not-confirmed'}`;
                    } else {
                        alert(data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Une erreur est survenue lors de la mise à jour du statut.');
                });
            });
        });
    </script>
