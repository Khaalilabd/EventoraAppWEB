{% extends 'admin/dashboard.html.twig' %}

{% block title %}Modifier un Membre{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Votre style CSS existant... */
        /* Card Styling */
        .edit-card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            background: linear-gradient(145deg, #ffffff, #f8f9fa);
            transition: transform 0.3s ease;
        }
        .edit-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
        }
        .card-header {
            background: linear-gradient(90deg, #007bff, #0056b3);
            color: #fff;
            border-radius: 12px 12px 0 0;
            padding: 20px;
            font-size: 1.2rem;
            font-weight: 600;
        }

        /* Form Styling */
        .form-label {
            font-weight: 600;
            color: #333;
            margin-bottom: 8px;
            font-size: 0.95rem;
        }
        .form-control {
            border: 1px solid #ced4da;
            border-radius: 8px;
            padding: 10px 15px;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        }
        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.3);
            outline: none;
        }
        .form-control::placeholder {
            color: #adb5bd;
        }
        /* Style spécifique pour les inputs invalides */
        .form-control.is-invalid {
            border-color: #dc3545; /* Bordure rouge pour indiquer l'erreur */
            padding-right: calc(1.5em + 0.75rem); /* Espace pour l'icône si vous en ajoutez */
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 12 12' width='12' height='12' fill='none' stroke='%23dc3545'%3e%3ccircle cx='6' cy='6' r='4.5'/%3e%3cpath stroke-linecap='round' d='M3.5 8.5l5-5zm5 0l-5-5z'/%3e%3ccircle cx='6' cy='6' r='4.5' transform='rotate(180 6 6)'/%3e%3c/svg%3e"); /* Icône d'erreur */
            background-repeat: no-repeat;
            background-position: right calc(0.375em + 0.1875rem) center;
            background-size: calc(0.75em + 0.375rem) calc(0.75em + 0.375rem);
        }

        .form-select {
            border: 1px solid #ced4da;
            border-radius: 8px;
            padding: 10px 15px;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        }
        .form-select:focus {
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.3);
            outline: none;
        }
        /* Style spécifique pour les selects invalides */
        .form-select.is-invalid {
             border-color: #dc3545;
             padding-right: calc(1.5em + 0.75rem);
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 12 12' width='12' height='12' fill='none' stroke='%23dc3545'%3e%3ccircle cx='6' cy='6' r='4.5'/%3e%3cpath stroke-linecap='round' d='M3.5 8.5l5-5zm5 0l-5-5z'/%3e%3ccircle cx='6' cy='6' r='4.5' transform='rotate(180 6 6)'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right calc(0.375em + 0.1875rem) center;
            background-size: calc(0.75em + 0.375rem) calc(0.75em + 0.375rem);
        }


        /* Custom Checkbox Toggle */
        .custom-switch {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .custom-switch input {
            display: none;
        }
        .custom-switch-label {
            position: relative;
            display: inline-block;
            width: 40px;
            height: 20px;
            background-color: #ccc;
            border-radius: 20px;
            transition: background-color 0.3s ease;
            cursor: pointer;
        }
        .custom-switch-label::after {
            content: '';
            position: absolute;
            width: 16px;
            height: 16px;
            background-color: #fff;
            border-radius: 50%;
            top: 2px;
            left: 2px;
            transition: transform 0.3s ease;
        }
        .custom-switch input:checked + .custom-switch-label {
            background-color: #28a745;
        }
        .custom-switch input:checked + .custom-switch-label::after {
            transform: translateX(20px);
        }
        .custom-switch span {
            font-size: 0.95rem;
            color: #333;
            font-weight: 500;
        }

        /* Buttons */
        .btn-primary {
            background: linear-gradient(90deg, #fd7e14, #ff9f43);
            border: none;
            border-radius: 8px;
            padding: 10px 20px;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
            box-shadow: 0 2px 8px rgba(253, 126, 20, 0.3);
        }
        .btn-primary:hover {
            background: linear-gradient(90deg, #ff9f43, #fd7e14);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(253, 126, 20, 0.4);
        }
        .btn-secondary {
            background-color: #6c757d;
            border: none;
            border-radius: 8px;
            padding: 10px 20px;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
            box-shadow: 0 2px 8px rgba(108, 117, 125, 0.3);
        }
        .btn-secondary:hover {
            background-color: #5a6268;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(108, 117, 125, 0.4);
        }

        /* Responsive Adjustments */
        @media (max-width: 768px) {
            .card-header {
                font-size: 1.1rem;
                padding: 15px;
            }
            .form-control, .form-select {
                font-size: 0.9rem;
                padding: 8px 12px;
            }
            .btn-primary, .btn-secondary {
                font-size: 0.9rem;
                padding: 8px 15px;
            }
        }

        /* Style pour les messages d'erreur de validation */
        .form-error-message {
            color: #dc3545; /* Couleur rouge pour l'erreur */
            font-size: 0.875em; /* Taille de police légèrement plus petite */
            margin-top: 0.25rem; /* Marge au-dessus du message */
            display: block; /* S'assure que le message prend une nouvelle ligne */
            width: 100%; /* S'assure qu'il prend toute la largeur de son conteneur */
        }

    </style>
{% endblock %}

{% block content %}
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur">
        <div class="container-fluid py-1 px-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                    <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="{{ path('admin_dashboard') }}">Dashboard</a></li>
                    <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="{{ path('admin_membres') }}">Membres</a></li>
                    <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Modifier</li>
                </ol>
                <h6 class="font-weight-bolder mb-0">Modifier un Membre</h6>
            </nav>
        </div>
    </nav>

    <div class="container-fluid py-4">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10 col-sm-12">
                <div class="card edit-card">
                    <div class="card-header">
                        <h5 class="mb-0">Modifier Membre #{{ membre.id }}</h5>
                    </div>
                    <div class="card-body p-4">
                        {# Afficher les erreurs globales du formulaire #}
                        {{ form_errors(form) }}

                        {{ form_start(form) }}
                            <div class="row">
                                {# Champ Nom #}
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.nom, {'attr': {'class': 'form-control' ~ (form.nom.vars.valid == false ? ' is-invalid' : '')}}) }}
                                    {# AFFICHER LES ERREURS DE VALIDATION POUR CE CHAMP #}
                                    {{ form_errors(form.nom) }}
                                </div>
                                {# Champ Prénom #}
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.prenom, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control' ~ (form.prenom.vars.valid == false ? ' is-invalid' : '')}}) }}
                                    {# AFFICHER LES ERREURS DE VALIDATION POUR CE CHAMP #}
                                    {{ form_errors(form.prenom) }}
                                </div>
                            </div>
                            <div class="row">
                                {# Champ Email #}
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.email, {'attr': {'class': 'form-control' ~ (form.email.vars.valid == false ? ' is-invalid' : '')}}) }}
                                    {# AFFICHER LES ERREURS DE VALIDATION POUR CE CHAMP #}
                                    {{ form_errors(form.email) }}
                                </div>
                                {# Champ CIN #}
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.cin, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.cin, {'attr': {'class': 'form-control' ~ (form.cin.vars.valid == false ? ' is-invalid' : '')}}) }}
                                    {# AFFICHER LES ERREURS DE VALIDATION POUR CE CHAMP #}
                                    {{ form_errors(form.cin) }}
                                </div>
                            </div>
                            <div class="row">
                                {# Champ NumTel #}
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.numTel, 'Numéro de Téléphone', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.numTel, {'attr': {'class': 'form-control' ~ (form.numTel.vars.valid == false ? ' is-invalid' : '')}}) }}
                                     {# AFFICHER LES ERREURS DE VALIDATION POUR CE CHAMP #}
                                     {{ form_errors(form.numTel) }}
                                </div>
                                {# Champ Adresse #}
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.adresse, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.adresse, {'attr': {'class': 'form-control' ~ (form.adresse.vars.valid == false ? ' is-invalid' : '')}}) }}
                                    {# AFFICHER LES ERREURS DE VALIDATION POUR CE CHAMP #}
                                    {{ form_errors(form.adresse) }}
                                </div>
                            </div>
                            <div class="row">
                                {# Champ DateOfBirth #}
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.dateOfBirth, 'Date de naissance', {'label_attr': {'class': 'form-label'}}) }}
                                    {# Note : Pour les types de date, form_widget gère l'input type="date" si le widget est 'single_text' dans FormType #}
                                    {{ form_widget(form.dateOfBirth, {'attr': {'class': 'form-control' ~ (form.dateOfBirth.vars.valid == false ? ' is-invalid' : ''), 'placeholder': 'AAAA-MM-JJ'}}) }} {# Ajusté le placeholder pour le format date #}
                                     {# AFFICHER LES ERREURS DE VALIDATION POUR CE CHAMP #}
                                     {{ form_errors(form.dateOfBirth) }}
                                </div>
                                {# Champ Gender #}
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.gender, 'Genre', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.gender, {'attr': {'class': 'form-select' ~ (form.gender.vars.valid == false ? ' is-invalid' : '')}}) }}
                                    {# AFFICHER LES ERREURS DE VALIDATION POUR CE CHAMP #}
                                    {{ form_errors(form.gender) }}
                                </div>
                            </div>
                            <div class="row">
                                {# Champ Username - Maintenant dans la même rangée que Mot de Passe #}
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.username, "Nom d'utilisateur", {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.username, {'attr': {'class': 'form-control' ~ (form.username.vars.valid == false ? ' is-invalid' : '')}}) }}
                                    {# AFFICHER LES ERREURS DE VALIDATION POUR CE CHAMP #}
                                    {{ form_errors(form.username) }}
                                </div>
                                {# Champ MotDePasse (pour l'édition) - Dans la même rangée que Username #}
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.motDePasse, 'Mot de Passe (laisser vide pour ne pas modifier)', {'label_attr': {'class': 'form-label'}}) }}
                                    {# Ajoutez la classe is-invalid si le champ n'est pas valide #}
                                    {{ form_widget(form.motDePasse, {'attr': {'class': 'form-control' ~ (form.motDePasse.vars.valid == false ? ' is-invalid' : '')}}) }}
                                     {# AFFICHER LES ERREURS DE VALIDATION POUR CE CHAMP #}
                                    {{ form_errors(form.motDePasse) }}
                                </div>
                            </div>
                            <div class="row">
                                {# Champ Role #}
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.role, 'Rôle', {'label_attr': {'class': 'form-label'}}) }}
                                    {# Ajoutez la classe is-invalid si le champ n'est pas valide #m#}
                                    {{ form_widget(form.role, {'attr': {'class': 'form-select' ~ (form.role.vars.valid == false ? ' is-invalid' : '')}}) }}
                                     {# AFFICHER LES ERREURS DE VALIDATION POUR CE CHAMP #}
                                     {{ form_errors(form.role) }}
                                </div>
                                {# Champ isConfirmed et Image (si défini) - Utilise le reste de la rangée #}
                                <div class="col-md-6 mb-3">
                                    {# Checkbox isConfirmed #}
                                     <div class="custom-switch mb-3"> {# Added mb-3 for spacing if image is below #}
                                         {{ form_widget(form.isConfirmed, {'attr': {'class': 'custom-control-input'}}) }}
                                         <label class="custom-switch-label" for="{{ form.isConfirmed.vars.id }}"></label>
                                         <span>Compte confirmé</span>
                                     </div>
                                     {# AFFICHER LES ERREURS DE VALIDATION POUR CE CHAMP #}
                                     {{ form_errors(form.isConfirmed) }}

                                     {# Champ Image (si FileType ou TextType) #}
                                      {% if form.image is defined %}
                                          <div> {# Wrapper div for label, widget, errors of the image field #}
                                              {{ form_label(form.image, 'Image', {'label_attr': {'class': 'form-label'}}) }}
                                              {{ form_widget(form.image, {'attr': {'class': 'form-control' ~ (form.image.vars.valid == false ? ' is-invalid' : '')}}) }}
                                              {{ form_errors(form.image) }}
                                              {# Optionnel : afficher l'image actuelle si elle existe #}
                                              {% if membre.image %}
                                                  <img src="{{ asset('uploads/images/' ~ membre.image) }}" alt="Image actuelle" style="max-width: 150px; margin-top: 10px; display: block;">
                                              {% endif %}
                                          </div>
                                      {% endif %}
                                </div>
                            </div>


                            <div class="d-flex justify-content-end gap-3 mt-4">
                                {# Bouton Modifier #}
                                {# On utilise une balise button simple de type submit #}
                                <button type="submit" class="btn btn-primary">Modifier</button>

                                {# Lien Retour à la liste #}
                                <a href="{{ path('admin_membres') }}" class="btn btn-secondary">Retour à la liste</a>
                            </div>

                        {# IMPORTANT : Utiliser render_rest: false pour ne pas rendre les champs qui n'ont pas été explicitement rendus,
                           ce qui inclut les boutons de soumission par défaut comme "Enregistrer". #}
                       {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}