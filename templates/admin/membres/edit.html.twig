{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Card Styling */
        .edit-card {
            border: 2px solid #007bff; /* Bordure bleue pour les membres */
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            background: #fff;
            transition: transform 0.3s ease;
        }
        .edit-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
        }
        .card-header {
            background: #f8f9fa;
            border-bottom: 1px solid #e0e0e0;
            border-radius: 12px 12px 0 0;
            padding: 20px;
            font-size: 1.2rem;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .membre-label {
            display: inline-block;
            font-size: 0.8rem;
            padding: 4px 8px;
            border-radius: 10px;
            color: #fff;
            background-color: #007bff; /* Bleu pour les membres */
            animation: pulse 2s infinite;
        }
        .membre-label:hover {
            animation: bounce 0.5s;
        }
        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }
        @keyframes bounce {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-5px); }
        }

        /* Form Styling */
        .form-label {
            font-weight: 600;
            color: #333;
            margin-bottom: 8px;
            font-size: 0.95rem;
            line-height: 1.5; /* Hauteur de ligne fixe pour alignement */
            display: block;
            min-height: 24px; /* Hauteur minimale pour éviter les décalages */
        }
        .form-control, .form-select {
            border: 1px solid #ced4da;
            border-radius: 8px;
            padding: 10px 15px;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
            width: 100%; /* S'assurer que tous les champs prennent toute la largeur */
            height: 40px; /* Hauteur fixe pour alignement */
        }
        .form-control:focus, .form-select:focus {
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.3);
            outline: none;
        }
        .form-control::placeholder {
            color: #adb5bd;
        }
        .form-control.is-invalid, .form-select.is-invalid {
            border-color: #dc3545;
            padding-right: calc(1.5em + 0.75rem);
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 12 12' width='12' height='12' fill='none' stroke='%23dc3545'%3e%3ccircle cx='6' cy='6' r='4.5'/%3e%3cpath stroke-linecap='round' d='M3.5 8.5l5-5zm5 0l-5-5z'/%3e%3ccircle cx='6' cy='6' r='4.5' transform='rotate(180 6 6)'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right calc(0.375em + 0.1875rem) center;
            background-size: calc(0.75em + 0.375rem) calc(0.75em + 0.375rem);
        }

        /* Custom Checkbox Toggle */
        .custom-switch {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-top: 10px; /* Alignement avec les champs */
        }
        .custom-switch input {
            display: none;
        }
        .custom-switch-label {
            position: relative;
            display: inline-block;
            width: 40px;
            height: 20px;
            background-color: #ccc;
            border-radius: 20px;
            transition: background-color 0.3s ease;
            cursor: pointer;
        }
        .custom-switch-label::after {
            content: '';
            position: absolute;
            width: 16px;
            height: 16px;
            background-color: #fff;
            border-radius: 50%;
            top: 2px;
            left: 2px;
            transition: transform 0.3s ease;
        }
        .custom-switch input:checked + .custom-switch-label {
            background-color: #28a745;
        }
        .custom-switch input:checked + .custom-switch-label::after {
            transform: translateX(20px);
        }
        .custom-switch span {
            font-size: 0.95rem;
            color: #333;
            font-weight: 500;
        }

        /* Image Field */
        .image-field img {
            max-width: 150px;
            margin-top: 10px;
            display: block;
        }

        /* Buttons */
        .btn-primary {
            background: linear-gradient(90deg, #007bff, #0056b3);
            border: none;
            border-radius: 8px;
            padding: 10px 20px;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
            box-shadow: 0 2px 8px rgba(0, 123, 255, 0.3);
        }
        .btn-primary:hover {
            background: linear-gradient(90deg, #0056b3, #007bff);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(0, 123, 255, 0.4);
        }
        .btn-secondary {
            background-color: #6c757d;
            border: none;
            border-radius: 8px;
            padding: 10px 20px;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
            box-shadow: 0 2px 8px rgba(108, 117, 125, 0.3);
        }
        .btn-secondary:hover {
            background-color: #5a6268;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(108, 117, 125, 0.4);
        }

        /* Error Messages */
        .form-error-message {
            color: #dc3545;
            font-size: 0.875em;
            margin-top: 5px;
            display: block;
            width: 100%;
            min-height: 20px; /* Réserve de l'espace pour éviter les décalages */
        }

        /* Form Group */
        .form-group {
            margin-bottom: 20px; /* Espacement uniforme entre les champs */
        }

        /* Adjust for Left Sidebar */
        .edit-container {
            margin-left: 270px;
        }

        /* Responsive Adjustments */
        @media (max-width: 992px) {
            .edit-container {
                margin-left: 0;
            }
        }
        @media (max-width: 768px) {
            .card-header {
                font-size: 1.1rem;
                padding: 15px;
            }
            .form-control, .form-select {
                font-size: 0.9rem;
                padding: 8px 12px;
                height: 36px; /* Hauteur ajustée pour mobile */
            }
            .btn-primary, .btn-secondary {
                font-size: 0.9rem;
                padding: 8px 15px;
            }
        }
    </style>
{% endblock %}

