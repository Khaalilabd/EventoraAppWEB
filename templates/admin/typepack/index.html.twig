    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const searchInput = document.getElementById('searchTypepack');
            const typepackContainer = document.getElementById('typepackContainer');
            let noResultsDiv = document.getElementById('noResults');

            if (searchInput && typepackContainer) {
                // Real-time search for typepacks
                searchInput.addEventListener('input', (e) => {
                    const searchText = e.target.value.toLowerCase().trim();
                    const cards = typepackContainer.querySelectorAll('.typepack-custom-card-wrapper');
                    let visibleCards = 0;

                    // Filter cards based on search text
                    cards.forEach(card => {
                        const type = card.querySelector('.typepack-custom-card').getAttribute('data-type').toLowerCase();
                        const isVisible = type.includes(searchText);
                        card.style.display = isVisible ? '' : 'none';
                        if (isVisible) visibleCards++;
                    });

                    // Handle no-results message
                    if (visibleCards === 0 && searchText) {
                        if (!noResultsDiv) {
                            noResultsDiv = document.createElement('div');
                            noResultsDiv.id = 'noResults';
                            noResultsDiv.className = 'custom-text-center';
                            typepackContainer.parentElement.appendChild(noResultsDiv);
                        }
                        noResultsDiv.innerHTML = `
                            <i class="fas fa-tags text-muted" style="font-size: 3rem;"></i>
                            <p class="text-muted mt-3 fs-5">Aucun type de pack trouvé pour la recherche "${searchText}".</p>
                        `;
                    } else if (noResultsDiv) {
                        noResultsDiv.remove();
                        noResultsDiv = null;
                    }
                });

                // Trigger search on page load if there's a search query
                const initialSearch = searchInput.value.toLowerCase().trim();
                if (initialSearch) {
                    searchInput.dispatchEvent(new Event('input'));
                }
            } else {
                console.error('Search input or typepack container not found');
            }
        });
    </script>
