    <style>
        /* Importation de polices */
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');

        /* Variables de couleurs */
        :root {
            --primary-color: #3a7bd5;
            --primary-gradient: linear-gradient(135deg, #3a7bd5, #00d2ff);
            --secondary-color: #f8f9fa;
            --text-dark: #1f2937;
            --text-light: #6c757d;
            --card-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
            --hover-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            --border-radius: 16px;
            --card-border: 1px solid rgba(0, 0, 0, 0.05);
        }

        /* Général */
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f9fafb;
            color: var(--text-dark);
        }

        /* Main Content */
        .main-content {
            background: linear-gradient(135deg, #f8f9fa, #e9ecef);
            min-height: 100vh;
            padding-bottom: 30px;
            width: calc(100% - 250px);
        }

        /* Custom Container */
        .fullwidth-container {
            padding: 20px 30px;
            width: 100%;
        }

        /* Header */
        .typepack-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 20px;
            background: #ffffff;
            border-radius: var(--border-radius);
            box-shadow: var(--card-shadow);
            margin-bottom: 25px;
            flex-wrap: wrap;
            gap: 15px;
        }

        /* Search bar */
        .search-bar {
            flex-grow: 1;
            max-width: 400px;
        }
        .search-bar .input-group {
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
            border-radius: 30px;
            overflow: hidden;
            background: #ffffff;
            transition: all 0.3s ease;
        }
        .search-bar .input-group:focus-within {
            box-shadow: 0 4px 12px rgba(58, 123, 213, 0.15);
        }
        .search-bar .form-control {
            border: none;
            font-size: 0.95rem;
            padding: 10px 15px;
            background: transparent;
        }
        .search-bar .form-control:focus {
            box-shadow: none;
        }
        .search-bar .input-group-text {
            background: transparent;
            border: none;
            color: var(--primary-color);
            padding-left: 15px;
        }

        /* Action buttons */
        .action-buttons {
            display: flex;
            gap: 10px;
        }
        .action-btn {
            padding: 8px 16px;
            border-radius: 30px;
            font-size: 0.9rem;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            gap: 6px;
            transition: all 0.3s ease;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
            text-decoration: none;
        }
        .btn-add {
            background: var(--primary-gradient);
            color: white;
        }
        .btn-view {
            background: #ffffff;
            color: var(--primary-color);
            border: 1px solid rgba(58, 123, 213, 0.2);
        }
        .action-btn:hover {
            transform: translateY(-2px);
            box-shadow: var(--hover-shadow);
        }
        .view-toggle {
            display: flex;
            background: #ffffff;
            border-radius: 20px;
            padding: 3px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        }
        .view-toggle button {
            border: none;
            background: transparent;
            padding: 6px 12px;
            border-radius: 17px;
            color: var(--text-light);
            cursor: pointer;
            transition: all 0.3s ease;
        }
        .view-toggle button.active {
            background: var(--primary-gradient);
            color: white;
        }

        /* Layout Containers */
        .typepack-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 25px;
            margin-bottom: 30px;
        }
        .typepack-list {
            display: none;
            flex-direction: column;
            gap: 15px;
            margin-bottom: 30px;
        }

        /* Grid View Cards */
        .typepack-card {
            background: #ffffff;
            border-radius: var(--border-radius);
            box-shadow: var(--card-shadow);
            border: var(--card-border);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            height: 100%;
            display: flex;
            flex-direction: column;
        }
        .typepack-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--hover-shadow);
        }
        .typepack-card:before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: var(--primary-gradient);
        }
        .card-body {
            padding: 20px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }
        .card-icon {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            background: var(--primary-gradient);
            color: white;
            font-size: 1.6rem;
            box-shadow: 0 4px 10px rgba(58, 123, 213, 0.3);
            margin-bottom: 15px;
        }
        .card-title {
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--text-dark);
            margin-bottom: 5px;
        }
        .card-text {
            color: var(--text-light);
            font-size: 0.9rem;
            margin-bottom: 15px;
            flex-grow: 1;
        }
        .card-footer {
            padding: 15px 20px;
            background: rgba(248, 249, 250, 0.7);
            border-top: 1px solid rgba(0, 0, 0, 0.05);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .card-footer .action-btns {
            display: flex;
            gap: 10px;
        }
        .card-btn {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
            color: var(--text-light);
            background: white;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.06);
            border: none;
            cursor: pointer;
        }
        .btn-edit { color: #3a7bd5; }
        .btn-delete { color: #ef4444; }
        .card-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
        .btn-edit:hover { background: rgba(58, 123, 213, 0.1); }
        .btn-delete:hover { background: rgba(239, 68, 68, 0.1); }

        /* List View Items */
        .typepack-item {
            background: #ffffff;
            border-radius: 12px;
            box-shadow: var(--card-shadow);
            border: var(--card-border);
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 15px 20px;
        }
        .typepack-item:hover {
            transform: translateY(-3px);
            box-shadow: var(--hover-shadow);
        }
        .item-info {
            display: flex;
            align-items: center;
            gap: 15px;
        }
        .item-icon {
            width: 45px;
            height: 45px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: var(--primary-gradient);
            color: white;
            font-size: 1.2rem;
        }
        .item-details h4 {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--text-dark);
            margin: 0 0 3px;
        }
        .item-details p {
            font-size: 0.85rem;
            color: var(--text-light);
            margin: 0;
        }
        .item-actions {
            display: flex;
            gap: 8px;
        }

        /* Empty state */
        .empty-state {
            background: #ffffff;
            border-radius: var(--border-radius);
            box-shadow: var(--card-shadow);
            border: var(--card-border);
            padding: 50px 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
        }
        .empty-icon {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background: var(--secondary-color);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            color: var(--text-light);
            margin-bottom: 20px;
            box-shadow: inset 0 0 15px rgba(0, 0, 0, 0.05);
        }
        .empty-text {
            font-size: 1.2rem;
            color: var(--text-light);
            margin-bottom: 20px;
        }

        /* Alerts & Notifications */
        .alert {
            background: #fff;
            border-radius: 12px;
            border: none;
            padding: 15px 20px;
            margin-bottom: 20px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
            display: flex;
            align-items: flex-start;
            border-left: 5px solid;
        }
        .alert-icon {
            margin-right: 15px;
            font-size: 1.2rem;
        }
        .alert-success {
            border-left-color: #10b981;
        }
        .alert-success .alert-icon {
            color: #10b981;
        }
        .alert-danger {
            border-left-color: #ef4444;
        }
        .alert-danger .alert-icon {
            color: #ef4444;
        }
        .alert-info {
            border-left-color: #3b82f6;
        }
        .alert-info .alert-icon {
            color: #3b82f6;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .typepack-header {
                flex-direction: column;
                align-items: stretch;
            }
            .search-bar {
                max-width: 100%;
            }
            .action-buttons {
                justify-content: space-between;
            }
            .typepack-grid {
                grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
            }
            .card-footer {
                flex-direction: column;
                gap: 10px;
                align-items: flex-start;
            }
            .card-footer .badge {
                align-self: flex-start;
            }
        }
    </style>
{% endblock %}

