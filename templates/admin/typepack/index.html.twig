                <div class="ms-md-auto pe-md-3 d-flex align-items-center">
                    <!-- Removed duplicate search bar -->
                </div>
                <ul class="navbar-nav justify-content-end">
                    <li class="nav-item d-flex align-items-center">
                        <a href="#" class="nav-link text-body font-weight-bold px-0">
                            <i class="fa fa-user me-sm-1"></i>
                            <span class="d-sm-inline d-none">{{ app.user.email ?? 'Utilisateur' }}</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="fullwidth-container">
        <!-- En-tête avec barre de recherche et actions -->
        <div class="typepack-header">
            <div class="search-bar">
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-search"></i></span>
                    <input type="text" class="form-control" placeholder="Rechercher un type de pack..." id="searchTypepack">
                </div>
            </div>
            <div class="action-buttons">
                <div class="view-toggle">
                    <button id="gridViewBtn" class="active"><i class="fas fa-th"></i></button>
                    <button id="listViewBtn"><i class="fas fa-list"></i></button>
                </div>
                <a href="{{ path('admin_typepacks_create') }}" class="action-btn btn-add">
                    <i class="fas fa-plus"></i> Ajouter
                </a>
            </div>
        </div>

        <!-- Affichage des notifications -->
        {% for message in app.flashes('success') %}
            <div class="alert alert-success" role="alert">
                <div class="alert-icon"><i class="fas fa-check-circle"></i></div>
                <div>{{ message }}</div>
                <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger" role="alert">
                <div class="alert-icon"><i class="fas fa-exclamation-circle"></i></div>
                <div>{{ message }}</div>
                <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
        {% for message in app.flashes('info') %}
            <div class="alert alert-info" role="alert">
                <div class="alert-icon"><i class="fas fa-info-circle"></i></div>
                <div>{{ message }}</div>
                <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        {% if typepacks is defined and typepacks is not empty %}
            <!-- Vue en grille (par défaut) -->
            <div class="typepack-grid" id="typepackGrid">
                {% for typepack in typepacks %}
                    <div class="typepack-card" data-type="{{ typepack.type|default('Non défini')|lower }}">
                        <div class="card-body">
                            <div class="card-icon">
                                <i class="fas fa-tags"></i>
                            </div>
                            <h3 class="card-title">{{ typepack.type|default('Non défini') }}</h3>
                            <p class="card-text">Ce type de pack est utilisé pour catégoriser les différentes offres d'événements disponibles sur la plateforme.</p>
                        </div>
                        <div class="card-footer">
                            <span class="badge bg-light text-dark">Type de pack</span>
                            <div class="action-btns">
                                <a href="{{ path('admin_typepacks_edit', {'id': typepack.id}) }}" class="card-btn btn-edit" title="Modifier">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form method="post" action="{{ path('admin_typepacks_delete', {'id': typepack.id}) }}" style="display: inline;" onsubmit="return confirm('Voulez-vous vraiment supprimer ce type de pack ? Cela supprimera également tous les packs associés.');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ typepack.id) }}">
                                    <button type="submit" class="card-btn btn-delete" title="Supprimer">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <!-- Vue en liste (cachée par défaut) -->
            <div class="typepack-list" id="typepackList">
                {% for typepack in typepacks %}
                    <div class="typepack-item" data-type="{{ typepack.type|default('Non défini')|lower }}">
                        <div class="item-info">
                            <div class="item-icon">
                                <i class="fas fa-tags"></i>
                            </div>
                            <div class="item-details">
                                <h4>{{ typepack.type|default('Non défini') }}</h4>
                                <p>Type de pack</p>
                            </div>
                        </div>
                        <div class="item-actions">
                            <a href="{{ path('admin_typepacks_edit', {'id': typepack.id}) }}" class="card-btn btn-edit" title="Modifier">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form method="post" action="{{ path('admin_typepacks_delete', {'id': typepack.id}) }}" style="display: inline;" onsubmit="return confirm('Voulez-vous vraiment supprimer ce type de pack ? Cela supprimera également tous les packs associés.');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ typepack.id) }}">
                                <button type="submit" class="card-btn btn-delete" title="Supprimer">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="empty-state" id="noResults">
                <div class="empty-icon">
                    <i class="fas fa-tags"></i>
                </div>
                <h3 class="empty-text">Aucun type de pack trouvé</h3>
                <a href="{{ path('admin_typepacks_create') }}" class="action-btn btn-add">
                    <i class="fas fa-plus"></i> Ajouter un type de pack
                </a>
            </div>
        {% endif %}
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Gestion de la recherche
            const searchInput = document.getElementById('searchTypepack');
            const gridItems = document.querySelectorAll('#typepackGrid .typepack-card');
            const listItems = document.querySelectorAll('#typepackList .typepack-item');
            const gridContainer = document.getElementById('typepackGrid');
            const listContainer = document.getElementById('typepackList');
            let noResultsDiv = document.getElementById('noResults');

            // Toggle entre vue grille et liste
            const gridViewBtn = document.getElementById('gridViewBtn');
            const listViewBtn = document.getElementById('listViewBtn');

            gridViewBtn.addEventListener('click', () => {
                gridViewBtn.classList.add('active');
                listViewBtn.classList.remove('active');
                gridContainer.style.display = 'grid';
                listContainer.style.display = 'none';
            });

            listViewBtn.addEventListener('click', () => {
                listViewBtn.classList.add('active');
                gridViewBtn.classList.remove('active');
                listContainer.style.display = 'flex';
                gridContainer.style.display = 'none';
            });

            // Fonction de recherche
            searchInput.addEventListener('input', (e) => {
                const searchText = e.target.value.toLowerCase().trim();
                let visibleItems = 0;

                // Filtre pour la vue grille
                gridItems.forEach(item => {
                    const type = item.getAttribute('data-type').toLowerCase();
                    const isVisible = type.includes(searchText);
                    item.style.display = isVisible ? '' : 'none';
                    if (isVisible) visibleItems++;
                });

                // Filtre pour la vue liste
                listItems.forEach(item => {
                    const type = item.getAttribute('data-type').toLowerCase();
                    const isVisible = type.includes(searchText);
                    item.style.display = isVisible ? '' : 'none';
                });

                // Gestion de l'état vide
                if (visibleItems === 0 && gridItems.length > 0) {
                    if (!noResultsDiv) {
                        noResultsDiv = document.createElement('div');
                        noResultsDiv.id = 'noResults';
                        noResultsDiv.className = 'empty-state';
                        gridContainer.parentElement.appendChild(noResultsDiv);
                    }
                    noResultsDiv.innerHTML = `
                        <div class="empty-icon">
                            <i class="fas fa-search"></i>
                        </div>
                        <h3 class="empty-text">Aucun résultat trouvé pour "${searchText}"</h3>
                    `;
                    noResultsDiv.style.display = 'flex';
                } else if (noResultsDiv) {
                    noResultsDiv.style.display = 'none';
                }
            });

            // Animation d'entrée
            const animateItems = (items) => {
                items.forEach((item, index) => {
                    setTimeout(() => {
                        item.style.opacity = '1';
                        item.style.transform = 'translateY(0)';
                    }, 50 * index);
                });
            };

            gridItems.forEach(item => {
                item.style.opacity = '0';
                item.style.transform = 'translateY(20px)';
                item.style.transition = 'all 0.3s ease';
            });

            listItems.forEach(item => {
                item.style.opacity = '0';
                item.style.transform = 'translateY(20px)';
                item.style.transition = 'all 0.3s ease';
            });

            animateItems(gridItems);
            animateItems(listItems);
        });
    </script>
</main>
{% endblock %}