    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card mb-4 shadow-lg border-radius-xl">
                    <div class="card-header p-4 d-flex justify-content-between align-items-center bg-gradient-primary text-white">
                        <h6 class="font-weight-bolder mb-0">Modifier le Type de Pack</h6>
                        <a href="{{ path('admin_typepacks') }}" class="custom-btn-annuler">
                            <i class="fas fa-arrow-left me-2"></i> Retour
                        </a>
                    </div>
                    <div class="card-body p-4">
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                {{ message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}
                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                {{ message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}

                        {{ form_start(form, {'attr': {'class': 'form-typepack'}}) }}
                            <div class="d-flex flex-column align-items-center">
                                <div class="form-group mb-3 text-field-container">
                                    {{ form_label(form.type, 'Type', {'label_attr': {'class': 'form-label custom-label'}}) }}
                                    {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                                    {% if form_errors(form.type) %}
                                        <div class="text-danger mt-1">{{ form_errors(form.type) }}</div>
                                    {% endif %}
                                </div>
                                <div class="d-flex justify-content-center align-items-center gap-3">
