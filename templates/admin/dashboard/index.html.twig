                                            <div class="progress-bar bg-warning" role="progressbar" style="width: {{ status_percentages['En Cours'] }}%" aria-valuenow="{{ status_percentages['En Cours'] }}" aria-valuemin="0" aria-valuemax="100">{{ status_percentages['En Cours'] }}%</div>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <p class="text-sm font-weight-bold mb-1">Résolue</p>
                                        <div class="progress">
                                            <div class="progress-bar bg-success" role="progressbar" style="width: {{ status_percentages['Résolue'] }}%" aria-valuenow="{{ status_percentages['Résolue'] }}" aria-valuemin="0" aria-valuemax="100">{{ status_percentages['Résolue'] }}%</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endblock %}
    </main>
