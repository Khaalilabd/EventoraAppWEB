{% block javascripts %}
    <script src="{{ asset('assets/js/core/popper.min.js') }}" defer></script>
    <script src="{{ asset('assets/js/core/bootstrap.min.js') }}" defer></script>
    <script src="{{ asset('assets/js/plugins/perfect-scrollbar.min.js') }}" defer></script>
    <script src="{{ asset('assets/js/plugins/smooth-scrollbar.min.js') }}" defer></script>
    <script src="{{ asset('assets/js/soft-ui-dashboard.min.js') }}" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.querySelectorAll('.dropdown-toggle').forEach(item => {
            item.addEventListener('click', function(e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('data-bs-target'));
                if (target.classList.contains('show')) {
                    target.classList.remove('show');
                } else {
                    document.querySelectorAll('.collapse.show').forEach(openMenu => {
                        openMenu.classList.remove('show');
                    });
                    target.classList.add('show');
                }
            });
        });

        // Réclamations par Type (Histogramme)
        const reclamationsByTypeCtx = document.getElementById('reclamationsByTypeChart').getContext('2d');
        new Chart(reclamationsByTypeCtx, {
            type: 'bar',
            data: {
                labels: [{% for type in reclamations_by_type %}'{{ type.Type }}'{% if not loop.last %},{% endif %}{% endfor %}],
                datasets: [{
                    label: 'Nombre de Réclamations',
                    data: [{% for type in reclamations_by_type %}{{ type.count }}{% if not loop.last %},{% endif %}{% endfor %}],
                    backgroundColor: '#007bff',
                    borderColor: '#007bff',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Nombre'
                        }
                    },
                    x: {
                        title: {
                            display: true,
                            text: 'Type'
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });

        // Évolution des Réclamations (Graphique linéaire)
        const reclamationsByMonthCtx = document.getElementById('reclamationsByMonthChart').getContext('2d');
        new Chart(reclamationsByMonthCtx, {
            type: 'line',
            data: {
                labels: [{% for month in reclamations_by_month %}'{{ month.month }}'{% if not loop.last %},{% endif %}{% endfor %}],
                datasets: [{
                    label: 'Réclamations',
                    data: [{% for month in reclamations_by_month %}{{ month.count }}{% if not loop.last %},{% endif %}{% endfor %}],
                    borderColor: '#28a745',
                    backgroundColor: 'rgba(40, 167, 69, 0.2)',
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Nombre'
                        }
                    },
                    x: {
                        title: {
                            display: true,
                            text: 'Mois'
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });

        // Taux de Résolution (Jauge circulaire)
        const resolutionRateCtx = document.getElementById('resolutionRateGauge').getContext('2d');
        new Chart(resolutionRateCtx, {
            type: 'doughnut',
            data: {
                labels: ['Résolu', 'Non Résolu'],
                datasets: [{
                    data: [{{ resolution_rate }}, {{ 100 - resolution_rate }}],
                    backgroundColor: ['#28a745', '#e9ecef'],
                    borderWidth: 0
                }]
            },
            options: {
                cutout: '80%',
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        enabled: false
                    }
                }
            },
            plugins: [{
                id: 'gaugeText',
                afterDraw(chart) {
                    const ctx = chart.ctx;
                    const width = chart.width;
                    const height = chart.height;
                    ctx.save();
                    ctx.textAlign = 'center';
                    ctx.textBaseline = 'middle';
                    ctx.font = 'bold 30px Arial';
                    ctx.fillStyle = '#28a745';
                    ctx.fillText('{{ resolution_rate }}%', width / 2, height / 2);
                    ctx.restore();
                }
            }]
        });
    </script>
{% endblock %}