            if (services.length > 0 && services[0] !== 'Aucun service') {
                services.forEach(service => {
                    const li = document.createElement('li');
                    li.textContent = service;
                    servicesList.appendChild(li);
                });
            } else {
                const li = document.createElement('li');
                li.textContent = 'Aucun service';
                li.classList.add('text-muted');
                servicesList.appendChild(li);
            }

            openModal();
        });
    });

    closeModalBtn.addEventListener('click', closeModal);
    closeModalBtnFooter.addEventListener('click', closeModal);
    overlay.addEventListener('click', closeModal);

    // Close modal with ESC key
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && modal.style.display === 'block') {
            closeModal();
        }
    });

    // Add hover effect to pack cards
    document.querySelectorAll('.pack-card').forEach(card => {
        card.addEventListener('mouseenter', function() {
            this.style.transform = 'translateY(-8px)';
            this.style.boxShadow = '0 15px 35px rgba(1, 163, 164, 0.2)';
        });
        
        card.addEventListener('mouseleave', function() {
            this.style.transform = 'translateY(0)';
            this.style.boxShadow = '0 10px 30px rgba(0, 0, 0, 0.08)';
        });
    });
    
    // View Toggle Functionality
    const cardsViewBtn = document.getElementById('cardsViewBtn');
    const tableViewBtn = document.getElementById('tableViewBtn');
    const cardsView = document.getElementById('cardsView');
    const tableView = document.getElementById('tableView');
    
    // Save view preference to localStorage
    function saveViewPreference(view) {
        localStorage.setItem('packViewMode', view);
    }
    
    // Load view preference from localStorage
    function loadViewPreference() {
        return localStorage.getItem('packViewMode') || 'cards';
    }
    
    // Set active view based on preference
    function setActiveView(view) {
        if (view === 'cards') {
            cardsView.style.display = 'block';
            tableView.style.display = 'none';
            cardsViewBtn.classList.add('active');
            tableViewBtn.classList.remove('active');
        } else {
            cardsView.style.display = 'none';
            tableView.style.display = 'block';
            tableViewBtn.classList.add('active');
            cardsViewBtn.classList.remove('active');
        }
    }
    
    // Initialize view based on saved preference
    const savedView = loadViewPreference();
    setActiveView(savedView);
    
    // Handle view toggle clicks
    cardsViewBtn.addEventListener('click', function() {
        setActiveView('cards');
        saveViewPreference('cards');
    });
    
    tableViewBtn.addEventListener('click', function() {
        setActiveView('table');
        saveViewPreference('table');
    });
    
    // Enable details modal for table view buttons
    document.querySelectorAll('.table-view-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            const name = this.dataset.name;
            const description = this.dataset.description;
            const location = this.dataset.location;
            const type = this.dataset.type;
            const guests = this.dataset.guests;
            const price = this.dataset.price;
            const image = this.dataset.image;
            const services = this.dataset.services ? this.dataset.services.split(',') : [];
    
            document.getElementById('modalTitle').textContent = name;
            document.getElementById('modalDescription').textContent = description;
            document.getElementById('modalLocation').textContent = location;
            document.getElementById('modalType').textContent = type;
            document.getElementById('modalGuests').textContent = guests;
            document.getElementById('modalPrice').textContent = `${price} dt`;
    
            const modalImage = document.getElementById('modalImage');
            const modalImagePlaceholder = document.getElementById('modalImagePlaceholder');
                
            if (image) {
                modalImage.src = image;
                modalImage.style.display = 'block';
                modalImagePlaceholder.style.display = 'none';
            } else {
                modalImage.style.display = 'none';
                modalImagePlaceholder.style.display = 'flex';
            }
    
            const servicesList = document.getElementById('modalServices');
            servicesList.innerHTML = '';
                
            if (services.length > 0 && services[0] !== 'Aucun service') {
                services.forEach(service => {
                    const li = document.createElement('li');
                    li.textContent = service;
                    servicesList.appendChild(li);
                });
            } else {
                const li = document.createElement('li');
                li.textContent = 'Aucun service';
                li.classList.add('text-muted');
                servicesList.appendChild(li);
            }
    
            openModal();
        });
    });
});
</script>
