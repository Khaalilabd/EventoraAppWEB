    document.querySelector('.order-label').textContent = order === 'DESC' ? 'Descendant' : 'Ascendant';

    const activeSortBtn = document.querySelector('.sort-btn.active');
    if (activeSortBtn) {
        const icon = activeSortBtn.querySelector('.sort-icon');
        if (icon) {
            icon.textContent = order === 'ASC' ? '↑' : '↓';
        } else {
            activeSortBtn.innerHTML += `<span class="sort-icon">${order === 'ASC' ? '↑' : '↓'}</span>`;
