// Utility function to debounce (no longer needed, but keeping in case other features need it)
function debounce(func, wait) {
    let timeout;
    return function (...args) {
        clearTimeout(timeout);
        timeout = setTimeout(() => func.apply(this, args), wait);
    };
}

// Sort Buttons
document.querySelectorAll('.sort-btn').forEach(button => {
    button.addEventListener('click', function() {
        if (this.classList.contains('sort-reset-btn')) return; // Skip reset button

        const sortField = document.getElementById('sortField');
        const orderField = document.getElementById('orderField');
        const currentSort = sortField.value;
        const currentOrder = orderField.value;

        const newSort = this.dataset.sort;
        let newOrder = currentOrder;

        if (currentSort === newSort) {
            newOrder = currentOrder === 'ASC' ? 'DESC' : 'ASC';
        } else {
            newOrder = 'ASC';
        }

        sortField.value = newSort;
        orderField.value = newOrder;

        // Update UI
        document.querySelectorAll('.sort-btn').forEach(btn => btn.classList.remove('active'));
        this.classList.add('active');
        const icon = this.querySelector('.sort-icon');
        if (icon) {
            icon.textContent = newOrder === 'ASC' ? '↑' : '↓';
        } else {
            this.innerHTML += `<span class="sort-icon">${newOrder === 'ASC' ? '↑' : '↓'}</span>`;
        }

        document.getElementById('orderToggle').checked = newOrder === 'DESC';
        document.querySelector('.order-label').textContent = newOrder === 'DESC' ? 'Descendant' : 'Ascendant';

        // Reset page to 1 when sorting
        document.getElementById('pageField').value = 1;
        document.getElementById('filterSortForm').submit();
    });
});

