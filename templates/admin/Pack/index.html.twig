                        <span class="input-group-text text-body"><i class="fas fa-search" aria-hidden="true"></i></span>
                        <input type="text" class="form-control" placeholder="Rechercher...">
                    </div>
                </div>
                <ul class="navbar-nav justify-content-end">
                    <li class="nav-item d-flex align-items-center">
                        <a href="#" class="nav-link text-body font-weight-bold px-0">
                            <i class="fa fa-user me-sm-1"></i>
                            <span class="d-sm-inline d-none">{{ app.user.email ?? 'Utilisateur' }}</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card mb-4 shadow-lg border-radius-xl">
                    <div class="card-header p-4 d-flex justify-content-between align-items-center bg-gradient-primary text-white">
                        <h6 class="font-weight-bolder mb-0">Liste des Packs</h6>
                        <a href="{{ path('admin_packs_create') }}" class="custom-btn-ajouter">
                            <i class="fas fa-plus me-2"></i> Ajouter un pack
                        </a>
                    </div>
                    <div class="card-body p-4">
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                {{ message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}
                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                {{ message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}
                        {% for message in app.flashes('info') %}
                            <div class="alert alert-info alert-dismissible fade show" role="alert">
                                {{ message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}

                        {% if packs is defined and packs is not empty %}
                            <div class="packs-container">
                                <div class="row">
                                    {% for pack in packs %}
                                        <div class="col-lg-4 col-md-6 col-sm-12 mb-4 pack-card-wrapper">
                                            <div class="card pack-card h-100 shadow-lg border-radius-xl pack-card-clickable"
                                                 data-name="{{ pack.nomPack|default('Non défini') }}"
                                                 data-description="{{ pack.description|default('Aucune description') }}"
                                                 data-location="{{ pack.location|default('Non défini') }}"
                                                 data-type="{{ pack.typepack ? pack.typepack.type : 'N/A' }}"
                                                 data-guests="{{ pack.nbrGuests|default('0') }}"
                                                 data-price="{{ pack.prix|default('N/A') }}"
                                                 data-image="{{ pack.imagePath ? asset(pack.imagePath) : '' }}"
                                                 data-services="{{ pack.services is not empty ? pack.services|map(service => service.titre)|join(',') : '' }}">
                                                <div class="card-header p-4 text-white text-center">
                                                    <h5 class="mb-0 pack-title">{{ pack.nomPack|default('Non défini') }}</h5>
                                                </div>
                                                <div class="card-body p-4">
                                                    <div class="text-center mb-4 position-relative">
                                                        {% if pack.imagePath %}
                                                            <img src="{{ asset(pack.imagePath) }}" alt="{{ pack.nomPack|default('Pack') }}" class="pack-image" />
                                                        {% else %}
                                                            <div class="pack-image-placeholder">
                                                                <i class="fas fa-image text-muted"></i>
                                                            </div>
                                                        {% endif %}
                                                        <span class="price-badge">{{ pack.prix|default('N/A') }} €</span>
                                                    </div>
                                                    <div class="pack-details">
                                                        <p class="pack-info"><strong>Description:</strong> <span class="pack-description">{{ pack.description|default('Aucune description')|length > 50 ? pack.description|slice(0, 50) ~ '...' : pack.description|default('Aucune description') }}</span></p>
                                                        <p class="pack-info"><strong>Lieu:</strong> {{ pack.location|default('Non défini') }}</p>
                                                        <p class="pack-info"><strong>Type:</strong> {{ pack.typepack ? pack.typepack.type : 'N/A' }}</p>
                                                        <p class="pack-info"><strong>Invités:</strong> {{ pack.nbrGuests|default('0') }}</p>
                                                        <p class="pack-info"><strong>Services:</strong></p>
                                                        {% if pack.services is not empty %}
                                                            <ul class="pack-services">
                                                                {% for service in pack.services|slice(0, 2) %}
                                                                    <li>{{ service.titre }}</li>
                                                                {% endfor %}
                                                                {% if pack.services|length > 2 %}
                                                                    <li>+{{ pack.services|length - 2 }} autres</li>
                                                                {% endif %}
                                                            </ul>
                                                        {% else %}
                                                            <span class="text-muted">Aucun service</span>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                                <div class="card-footer p-3 d-flex justify-content-between align-items-center">
                                                    <a href="{{ path('admin_packs_edit', {'id': pack.id}) }}" class="custom-btn-modifier">
                                                        <i class="fas fa-edit me-1"></i> Modifier
                                                    </a>
                                                    <form method="post" action="{{ path('admin_packs_delete', {'id': pack.id}) }}" class="action-form" onsubmit="return confirm('Voulez-vous vraiment supprimer ce pack ?');">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pack.id) }}">
                                                        <button type="submit" class="custom-btn-supprimer">
                                                            <i class="fas fa-trash me-1"></i> Supprimer
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>

                            {% if total_pages > 1 %}
                                <nav aria-label="Page navigation">
                                    <ul class="pagination">
                                        <li class="page-item {{ current_page == 1 ? 'disabled' : '' }}">
                                            <a class="page-link" href="{{ path('admin_packs', {'page': current_page - 1}) }}" aria-label="Previous">
                                                <span aria-hidden="true">«</span>
                                            </a>
                                        </li>
                                        {% for i in 1..total_pages %}
                                            <li class="page-item {{ current_page == i ? 'active' : '' }}">
                                                <a class="page-link" href="{{ path('admin_packs', {'page': i}) }}">{{ i }}</a>
                                            </li>
                                        {% endfor %}
                                        <li class="page-item {{ current_page == total_pages ? 'disabled' : '' }}">
                                            <a class="page-link" href="{{ path('admin_packs', {'page': current_page + 1}) }}" aria-label="Next">
                                                <span aria-hidden="true">»</span>
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                            {% endif %}
                        {% else %}
                            <div class="text-center p-5">
                                <i class="fas fa-box-open text-muted" style="font-size: 3rem;"></i>
                                <p class="text-muted mt-3 fs-5">Aucun pack trouvé.</p>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal" id="packModal">
        <span class="close-btn" id="closeModalBtn">×</span>
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="modalTitle"></h5>
