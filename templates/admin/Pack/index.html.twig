    /* Enhanced Card Styles */
    .pack-card-wrapper {
        animation: fadeIn 0.6s ease-in-out forwards;
        opacity: 0;
        animation-delay: calc(var(--delay) * 0.1s); /* Staggered animation for each card */
    }
    .pack-card-wrapper:nth-child(1) { --delay: 1; }
    .pack-card-wrapper:nth-child(2) { --delay: 2; }
    .pack-card-wrapper:nth-child(3) { --delay: 3; }
    .pack-card-wrapper:nth-child(4) { --delay: 4; }
    .pack-card-wrapper:nth-child(5) { --delay: 5; }
    .pack-card-wrapper:nth-child(6) { --delay: 6; }
    @keyframes fadeIn {
        0% { opacity: 0; transform: translateY(20px); }
        100% { opacity: 1; transform: translateY(0); }
    }
    .pack-card {
        border-radius: 20px;
        overflow: hidden;
        background: linear-gradient(145deg, #ffffff, #f7f7f7);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05), 0 0 0 1px rgba(0, 0, 0, 0.03);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: none;
        position: relative;
        height: 450px; /* Fixed height for all cards */
        display: flex;
        flex-direction: column;
    }
    .pack-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1), 0 0 0 1px rgba(0, 0, 0, 0.05);
    }
    .pack-card .card-header {
        background: linear-gradient(135deg, #ff6200, #ff8c00);
        border-bottom: none;
        position: relative;
        padding-bottom: 50px; /* Space for the image overlap */
        flex-shrink: 0; /* Prevent header from shrinking */
    }
    .pack-title {
        font-family: 'Poppins', sans-serif; /* Use a modern font if available */
        font-weight: 700;
        font-size: 1.3rem;
        letter-spacing: 0.5px;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
    .pack-image {
        width: 90px;
        height: 90px;
        border-radius: 50%;
        object-fit: cover; /* Ensure image scales properly */
        border: 4px solid #fff;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
