    <script>
document.addEventListener('DOMContentLoaded', function() {
    // Utility function to debounce events
    function debounce(func, wait) {
        let timeout;
        return function (...args) {
            clearTimeout(timeout);
            timeout = setTimeout(() => func.apply(this, args), wait);
        };
    }

    // Sort Buttons
    document.querySelectorAll('.sort-btn').forEach(button => {
        button.addEventListener('click', function() {
            if (this.classList.contains('sort-reset-btn')) return; // Skip reset button

            const sortField = document.getElementById('sortField');
            const orderField = document.getElementById('orderField');
            const pageField = document.getElementById('pageField');
            const currentSort = sortField.value;
            const currentOrder = orderField.value;

            const newSort = this.dataset.sort;
            let newOrder = currentOrder;

            if (currentSort === newSort) {
                newOrder = currentOrder === 'ASC' ? 'DESC' : 'ASC';
            } else {
                newOrder = 'ASC';
            }

            sortField.value = newSort;
            orderField.value = newOrder;
            pageField.value = 1; // Reset to page 1 when sorting

            // Update UI
            document.querySelectorAll('.sort-btn').forEach(btn => {
                btn.classList.remove('active');
                const icon = btn.querySelector('.sort-icon');
                if (icon) icon.remove();
            });
            
            this.classList.add('active');
            const sortIcon = document.createElement('span');
            sortIcon.className = 'sort-icon';
            sortIcon.textContent = newOrder === 'ASC' ? '↑' : '↓';
            this.appendChild(sortIcon);

            document.getElementById('orderToggle').checked = newOrder === 'DESC';
            document.querySelector('.order-label').textContent = newOrder === 'DESC' ? 'Descendant' : 'Ascendant';

            // Submit the form
            document.getElementById('filterSortForm').submit();
        });
    });

    // Order Toggle (ASC/DESC)
    document.getElementById('orderToggle').addEventListener('change', function() {
        const orderField = document.getElementById('orderField');
        const pageField = document.getElementById('pageField');
        const order = this.checked ? 'DESC' : 'ASC';
        
        orderField.value = order;
        pageField.value = 1; // Reset to page 1 when changing order
        
        document.querySelector('.order-label').textContent = order === 'DESC' ? 'Descendant' : 'Ascendant';

        const activeSortBtn = document.querySelector('.sort-btn.active');
        if (activeSortBtn) {
            const icon = activeSortBtn.querySelector('.sort-icon');
            if (icon) {
                icon.textContent = order === 'ASC' ? '↑' : '↓';
            } else {
                const newIcon = document.createElement('span');
                newIcon.className = 'sort-icon';
                newIcon.textContent = order === 'ASC' ? '↑' : '↓';
                activeSortBtn.appendChild(newIcon);
            }
        }

        // Submit the form
        document.getElementById('filterSortForm').submit();
