<script>
document.addEventListener('DOMContentLoaded', () => {
    const packCards = document.querySelectorAll('.pack-card-clickable');
    const modal = document.getElementById('packModal');
    const overlay = document.getElementById('overlay');
    const closeBtn = document.getElementById('closeModalBtn');
    const modalTitle = document.getElementById('modalTitle');
    const modalPrice = document.getElementById('modalPrice');
    const modalImage = document.getElementById('modalImage');
    const modalImagePlaceholder = document.getElementById('modalImagePlaceholder');
    const modalDescription = document.getElementById('modalDescription');
    const modalLocation = document.getElementById('modalLocation');
    const modalType = document.getElementById('modalType');
    const modalGuests = document.getElementById('modalGuests');
    const modalServices = document.getElementById('modalServices');

    packCards.forEach(card => {
        card.addEventListener('click', (e) => {
            if (e.target.closest('.custom-btn-modifier') || e.target.closest('.custom-btn-supprimer') || e.target.closest('.action-form')) {
                return;
            }

            modalTitle.textContent = card.getAttribute('data-name');
            modalPrice.textContent = card.getAttribute('data-price') + ' €';
            modalDescription.textContent = card.getAttribute('data-description');
            modalLocation.textContent = card.getAttribute('data-location');
            modalType.textContent = card.getAttribute('data-type');
            modalGuests.textContent = card.getAttribute('data-guests');

            const imageSrc = card.getAttribute('data-image');
            if (imageSrc) {
                modalImage.src = imageSrc;
                modalImage.style.display = 'block';
                modalImagePlaceholder.style.display = 'none';
            } else {
                modalImage.style.display = 'none';
                modalImagePlaceholder.style.display = 'flex';
            }

            modalServices.innerHTML = '';
            const services = card.getAttribute('data-services').split(',');
            if (services.length > 0 && services[0] !== '') {
                services.forEach(service => {
                    const li = document.createElement('li');
                    li.textContent = service.trim();
                    modalServices.appendChild(li);
                });
            } else {
                const li = document.createElement('li');
                li.textContent = 'Aucun service';
                li.classList.add('text-muted');
                modalServices.appendChild(li);
            }

            modal.classList.add('active');
            overlay.classList.add('active');
        });
    });

    closeBtn.addEventListener('click', () => {
        modal.classList.remove('active');
        overlay.classList.remove('active');
    });

    overlay.addEventListener('click', () => {
        modal.classList.remove('active');
        overlay.classList.remove('active');
    });

    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && modal.classList.contains('active')) {
            modal.classList.remove('active');
            overlay.classList.remove('active');
        }
    });
});
</script>
