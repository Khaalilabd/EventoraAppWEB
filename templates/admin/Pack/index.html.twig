<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg" style="margin-left: 250px;">
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur">
        <div class="container-fluid py-1 px-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                    <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="#">Panneau Admin</a></li>
                    <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Packs</li>
                </ol>
                <h6 class="font-weight-bolder mb-0">Gestion des Packs</h6>
            </nav>
            <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
                <div class="ms-md-auto pe-md-3 d-flex align-items-center">
                    <form method="get" action="{{ path('admin_packs') }}" class="d-flex align-items-center">
                        
                        <input type="hidden" name="sort" value="{{ sort|default('nomPack') }}">
                        <input type="hidden" name="order" value="{{ order|default('ASC') }}">
                        <input type="hidden" name="page" value="{{ current_page|default(1) }}">
                        <input type="hidden" name="type" value="{{ type|default('') }}">
                        <input type="hidden" name="location" value="{{ location|default('') }}">
                        <input type="hidden" name="minPrice" value="{{ minPrice is not null ? minPrice : '' }}">
                        <input type="hidden" name="maxPrice" value="{{ maxPrice is not null ? maxPrice : '' }}">
                    </form>
                </div>
                <ul class="navbar-nav justify-content-end">
                    <li class="nav-item d-flex align-items-center">
                        <a href="#" class="nav-link text-body font-weight-bold px-0">
                            <i class="fa fa-user me-sm-1"></i>
                            <span class="d-sm-inline d-none">{{ app.user.email ?? 'Utilisateur' }}</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card mb-4 shadow-lg border-radius-xl">
                    <div class="card-header p-4 d-flex justify-content-between align-items-center bg-gradient-primary text-white">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-box-open fa-2x me-3"></i>
                            <div>
                                <h5 class="font-weight-bolder mb-0">Liste des Packs</h5>
                                <p class="mb-0 opacity-8 text-sm">Gérez et visualisez tous les packs d'événements</p>
                            </div>
                        </div>
                        <a href="{{ path('admin_packs_create') }}" class="custom-btn-ajouter">
                            <i class="fas fa-plus me-2"></i> Ajouter un pack
                        </a>
                    </div>
                    <div class="card-body p-4">
                        <div class="alerts-container">
                            {% for message in app.flashes('success') %}
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-check-circle me-2"></i>
                                        <span>{{ message }}</span>
                                    </div>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            {% endfor %}
                            {% for message in app.flashes('error') %}
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-exclamation-circle me-2"></i>
                                        <span>{{ message }}</span>
                                    </div>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            {% endfor %}
                            {% for message in app.flashes('info') %}
                                <div class="alert alert-info alert-dismissible fade show" role="alert">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-info-circle me-2"></i>
                                        <span>{{ message }}</span>
                                    </div>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            {% endfor %}
                        </div>

                        <!-- Combined Filter and Sort Form (Always Visible) -->
                        <form method="get" action="{{ path('admin_packs') }}" id="filterSortForm">
                            <div class="filters-container">
                                <div class="filter-controls mb-4">
                                    <div class="filter-header">
                                        <i class="fas fa-filter me-2"></i>
                                        <h6 class="mb-0">Filtres</h6>
                                    </div>
                                    <div class="filter-body">
                                        <div class="filter-group">
                                            <label for="typeFilter" class="form-label">Type:</label>
                                            <select id="typeFilter" name="type" class="form-select">
                                                <option value="" {{ type is not defined or type is empty ? 'selected' : '' }}>Tous</option>
                                                {% for typepack in typepacks %}
                                                    <option value="{{ typepack.type }}" {{ type is defined and type == typepack.type ? 'selected' : '' }}>{{ typepack.type }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                        <div class="filter-group">
                                            <label for="locationFilter" class="form-label">Lieu:</label>
                                            <select id="locationFilter" name="location" class="form-select">
                                                <option value="" {{ location is not defined or location is empty ? 'selected' : '' }}>Tous</option>
                                                <option value="HOTEL" {{ location is defined and location == 'HOTEL' ? 'selected' : '' }}>Hôtel</option>
                                                <option value="MAISON_D_HOTE" {{ location is defined and location == 'MAISON_D_HOTE' ? 'selected' : '' }}>Maison d'hôte</option>
                                                <option value="ESPACE_VERT" {{ location is defined and location == 'ESPACE_VERT' ? 'selected' : '' }}>Espace vert</option>
                                                <option value="SALLE_DE_FETE" {{ location is defined and location == 'SALLE_DE_FETE' ? 'selected' : '' }}>Salle de fête</option>
                                                <option value="AUTRE" {{ location is defined and location == 'AUTRE' ? 'selected' : '' }}>Autre</option>
                                            </select>
                                        </div>
                                        <div class="filter-group">
                                            <label for="price-range" class="form-label">Prix (dt):</label>
                                            <div class="price-range">
                                                <input type="number" name="minPrice" id="minPrice" placeholder="Min" value="{{ minPrice is not null ? minPrice : '' }}" min="0" step="0.01" class="form-control">
                                                <span>-</span>
                                                <input type="number" name="maxPrice" id="maxPrice" placeholder="Max" value="{{ maxPrice is not null ? maxPrice : '' }}" min="0" step="0.01" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Sorting Controls (Always Visible) -->
                                <div class="sort-controls mb-4">
                                    <div class="sort-header">
                                        <i class="fas fa-sort me-2"></i>
                                        <h6 class="mb-0">Tri</h6>
                                    </div>
                                    <div class="sort-body">
                                        <div class="sort-buttons">
                                            <button type="button" class="sort-btn {{ sort == 'nomPack' ? 'active' : '' }}" data-sort="nomPack">
                                                <i class="fas fa-font me-1"></i> Nom
                                                {% if sort == 'nomPack' %}
                                                    <span class="sort-icon">{{ order == 'ASC' ? '↑' : '↓' }}</span>
                                                {% endif %}
                                            </button>
                                            <button type="button" class="sort-btn {{ sort == 'prix' ? 'active' : '' }}" data-sort="prix">
                                                <i class="fas fa-tag me-1"></i> Prix
                                                {% if sort == 'prix' %}
                                                    <span class="sort-icon">{{ order == 'ASC' ? '↑' : '↓' }}</span>
                                                {% endif %}
                                            </button>
                                            <button type="button" class="sort-btn {{ sort == 'nbrGuests' ? 'active' : '' }}" data-sort="nbrGuests">
                                                <i class="fas fa-users me-1"></i> Invités
                                                {% if sort == 'nbrGuests' %}
                                                    <span class="sort-icon">{{ order == 'ASC' ? '↑' : '↓' }}</span>
                                                {% endif %}
                                            </button>
                                            <a href="{{ path('admin_packs', { sort: 'nomPack', order: 'ASC', page: 1, type: '', location: '', minPrice: '', maxPrice: '' }) }}"
                                               class="sort-btn sort-reset-btn">
                                                <i class="fas fa-undo me-1"></i> Réinitialiser
                                            </a>
                                        </div>
                                        <div class="form-check form-switch">
                                            <input class="form-check-input order-toggle" type="checkbox" id="orderToggle" {{ order == 'DESC' ? 'checked' : '' }}>
                                            <label class="form-check-label" for="orderToggle">
                                                <span class="order-label">{{ order == 'DESC' ? 'Descendant' : 'Ascendant' }}</span>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Hidden Inputs for Sort and Order -->
                            <input type="hidden" name="sort" id="sortField" value="{{ sort|default('nomPack') }}">
                            <input type="hidden" name="order" id="orderField" value="{{ order|default('ASC') }}">
                            <input type="hidden" name="page" id="pageField" value="1">

                            <!-- Apply Filters Button (Always Visible) -->
                            <div class="text-center mb-4">
                                <button type="submit" class="apply-filters-btn">
                                    <i class="fas fa-filter me-2"></i> Appliquer les filtres
                                </button>
                            </div>
                        </form>

                        <!-- View Mode Switcher -->
                        <div class="view-mode-container mb-4">
                            <div class="view-toggle-wrapper">
                                <span class="view-mode-label">Mode d'affichage:</span>
                                <div class="view-toggle-buttons">
                                    <button id="cardsViewBtn" class="view-toggle-btn active" data-view="cards">
                                        <i class="fas fa-th-large"></i> Cartes
                                    </button>
                                    <button id="tableViewBtn" class="view-toggle-btn" data-view="table">
                                        <i class="fas fa-table"></i> Tableau
                                    </button>
                                </div>
                            </div>
                        </div>

                        {% if packs is defined and packs is not empty %}
                            <!-- Cards View -->
                            <div class="packs-container" id="cardsView">
                                <div class="row" id="packList">
                                    {% for pack in packs %}
                                        <div class="col-lg-4 col-md-6 col-sm-12 mb-4 pack-card-wrapper">
                                            <div class="card pack-card h-100 shadow-lg border-radius-xl pack-card-clickable"
                                                 data-name="{{ pack.nomPack|default('Non défini') }}"
                                                 data-description="{{ pack.description|default('Aucune description') }}"
                                                 data-location="{{ pack.location|default('Non défini') }}"
                                                 data-type="{{ pack.typepack ? pack.typepack.type : 'N/A' }}"
                                                 data-guests="{{ pack.nbrGuests|default('0') }}"
                                                 data-price="{{ pack.prix|default('N/A') }}"
                                                 data-image="{{ pack.imagePath ? asset(pack.imagePath) : '' }}"
                                                 data-services="{% if pack.services is not empty %}{{ pack.services|map(service => service.titre)|join(',') }}{% else %}Aucun service{% endif %}">
                                                <div class="card-status-indicator"></div>
                                                <div class="card-header p-4 text-white">
                                                    <div class="header-content">
                                                        <h5 class="mb-0 pack-title">{{ pack.nomPack|default('Non défini') }}</h5>
                                                        <div class="pack-type-badge">{{ pack.typepack and pack.typepack.type ? pack.typepack.type : 'N/A' }}</div>
                                                    </div>
                                                    <span class="price-badge">{{ pack.prix|default('N/A') }} dt</span>
                                                </div>
                                                <div class="card-body p-4">
                                                    <div class="text-center mb-4 pack-image-container">
                                                        {% if pack.imagePath %}
                                                            <img src="{{ asset(pack.imagePath) }}" alt="{{ pack.nomPack|default('Pack') }}" class="pack-image" />
                                                        {% else %}
                                                            <div class="pack-image-placeholder">
                                                                <i class="fas fa-image text-muted"></i>
                                                            </div>
                                                        {% endif %}
                                                    </div>
                                                    <div class="pack-details">
                                                        <div class="pack-info">
                                                            <i class="fas fa-info-circle info-icon"></i>
                                                            <div>
