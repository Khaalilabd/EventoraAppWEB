        /* Navbar styles */
        .navbar-main {
            background: #fff;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
            margin-top: 20px;
            padding: 10px 20px;
        }
        .breadcrumb { font-size: 0.9rem; }
        .breadcrumb-item a { color: #6c757d; transition: color 0.3s ease; }
