<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg" style="margin-left: 250px;">
    <nav class="navbar navbar-main navbar-expand-lg px-0 mx-4 shadow-none border-radius-xl" id="navbarBlur">
        <div class="container-fluid py-1 px-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
                    <li class="breadcrumb-item text-sm"><a class="opacity-5 text-dark" href="#">Pages</a></li>
                    <li class="breadcrumb-item text-sm text-dark active" aria-current="page">Packs</li>
                </ol>
                <h6 class="font-weight-bolder mb-0">Modifier un Pack</h6>
            </nav>
            <div class="collapse navbar-collapse mt-sm-0 mt-2 me-md-0 me-sm-4" id="navbar">
                <ul class="navbar-nav justify-content-end">
                    <li class="nav-item d-flex align-items-center">
                        <a href="#" class="nav-link text-body font-weight-bold px-0">
                            <i class="fa fa-user me-sm-1"></i>
                            <span class="d-sm-inline d-none">{{ app.user.email ?? 'Utilisateur' }}</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card mb-4 shadow-lg border-radius-xl">
                    <div class="card-header p-4 d-flex justify-content-between align-items-center bg-gradient-primary text-white">
                        <h6 class="font-weight-bolder mb-0">Modifier un Pack</h6>
                    </div>
                    <div class="card-body p-4">
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                {{ message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}
                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                {{ message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}

                        {{ form_start(form, {'action': path('admin_packs_edit', {'id': pack.id}), 'method': 'POST', 'attr': {'enctype': 'multipart/form-data', 'class': 'row g-3', 'id': 'pack-form', 'novalidate': 'novalidate'}}) }}
                            {% if form_errors(form) %}
                                <div class="alert alert-danger">
                                    {{ form_errors(form) }}
                                </div>
                            {% endif %}
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        {{ form_label(form.nomPack, 'Nom du Pack', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.nomPack, {'attr': {'class': 'form-control'}}) }}
                                        <div class="error-message text-danger mt-1">
                                            {{ form_errors(form.nomPack) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        {{ form_label(form.prix, 'Prix (en dt)', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
                                        <div class="error-message text-danger mt-1"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 mb-3">
                                    <div class="form-group">
                                        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '4'}}) }}
                                        <div class="error-message text-danger mt-1"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        {{ form_label(form.location, 'Lieu', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.location, {'attr': {'class': 'form-control'}}) }}
                                        <div class="error-message text-danger mt-1"></div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        {{ form_label(form.nbrGuests, 'Nombre d\'Invités', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.nbrGuests, {'attr': {'class': 'form-control'}}) }}
                                        <div class="error-message text-danger mt-1"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        {{ form_label(form.image_path, 'Image du Pack', {'label_attr': {'class': 'form-label'}}) }}
                                        <div class="image-preview-container text-center">
                                            {% if pack.imagePath %}
                                                <div class="current-image mb-3">
                                                    <img src="{{ asset(pack.imagePath) }}" alt="{{ pack.nomPack }}" class="pack-image" id="current-image" />
                                                    <p class="text-muted mt-2">Image actuelle</p>
                                                </div>
                                            {% endif %}
                                            <div id="image-preview" style="display: none;" class="mb-3">
                                                <img src="" alt="Aperçu de l'image" class="pack-image" id="preview-image" />
                                                <p class="text-muted mt-2">Aperçu de la nouvelle image</p>
                                            </div>
                                        </div>
                                        <div class="custom-file-upload">
                                            <label for="pack_image_path" class="custom-file-label">
                                                <i class="fas fa-upload me-2"></i> Choisir une nouvelle image
                                            </label>
                                            {{ form_widget(form.image_path, {'attr': {'class': 'form-control-file', 'id': 'pack_image_path'}}) }}
                                        </div>
                                        <div class="error-message text-danger mt-1"></div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="form-group">
                                        {{ form_label(form.type, 'Type de Pack', {'label_attr': {'class': 'form-label'}}) }}
                                        {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                                        <div class="error-message text-danger mt-1">
                                            {{ form_errors(form.type) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 mb-3">
                                    <div class="form-group">
                                        {{ form_label(form.services, 'Services Inclus', {'label_attr': {'class': 'form-label'}}) }}
                                        <div class="checkbox-group">
                                            {% for choice in form.services %}
                                                <div class="form-check mb-2">
                                                    {{ form_widget(choice, {'attr': {'class': 'form-check-input'}}) }}
                                                    <label class="form-check-label" for="{{ choice.vars.id }}">
                                                        {{ choice.vars.label }}
                                                    </label>
                                                </div>
                                            {% endfor %}
                                        </div>
                                        <div class="error-message text-danger mt-1"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 text-center">
                                    <button type="submit" class="custom-btn-modifier-pack mt-3">Modifier le Pack</button>
                                    <a href="{{ path('admin_packs') }}" class="custom-btn-annuler mt-3">Annuler</a>
                                </div>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
