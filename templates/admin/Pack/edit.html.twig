        .breadcrumb-item.active { color: #2d3436; font-weight: 500; }
        .navbar-main h6 { font-size: 1.25rem; font-weight: 600; color: #2d3436; }
        .nav-link.text-body {
            display: flex;
            align-items: center;
            gap: 8px;
            font-weight: 500;
            color: #2d3436 !important;
            transition: color 0.3s ease;
        }
        .nav-link.text-body:hover { color: #ff6200 !important; }
