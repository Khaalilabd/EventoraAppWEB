            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #fff;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
        .custom-file-upload {
            position: relative;
            display: inline-block;
        }
        .custom-file-label {
            display: inline-flex;
            align-items: center;
            padding: 10px 20px;
            background: #ff6200;
            color: #fff;
            border-radius: 25px;
            cursor: pointer;
            font-weight: 500;
            font-size: 0.9rem;
            transition: background 0.3s ease;
        }
        .custom-file-label:hover {
            background: #ff8c00;
        }
        .custom-file-label i {
            margin-right: 8px;
        }
        .form-control-file {
            position: absolute;
            width: 100%;
            height: 100%;
            opacity: 0;
            cursor: pointer;
        }

        /* Checkbox Group Styling */
        .checkbox-group {
            background: #f8f9fa;
            padding: 15px;
            border-radius: 8px;
            max-height: 200px;
            overflow-y: auto;
            border: 1px solid #ced4da;
        }
        .checkbox-group.invalid {
            border: 2px solid #dc3545;
        }
        .form-check {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }
        .form-check-input {
            margin-right: 10px;
            accent-color: #ff6200;
        }
        .form-check-label {
            font-size: 0.95rem;
            color: #2d3436;
            cursor: pointer;
        }

        /* Custom Button Styling */
        .custom-btn-modifier-pack,
        .custom-btn-annuler {
            font-size: 0.9rem;
            padding: 10px 20px;
            border-radius: 25px;
            border: none;
            box-shadow: 0 3px 8px rgba(0, 0, 0, 0.1);
            display: inline-flex;
            align-items: center;
            gap: 5px;
            font-weight: 500;
            min-width: 120px;
            justify-content: center;
            text-decoration: none;
            cursor: pointer;
            transition: transform 0.3s ease, box-shadow 0.3s ease, background 0.3s ease;
        }
        .custom-btn-modifier-pack {
            background: #ff6200;
            color: #fff;
        }
        .custom-btn-modifier-pack:hover {
            background: #ff8c00;
            transform: scale(1.05);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
        }
        .custom-btn-modifier-pack:focus,
        .custom-btn-modifier-pack:active {
            background: #ff8c00;
            transform: none;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            outline: none;
        }
        .custom-btn-annuler {
            background: #6c757d;
            color: #fff;
        }
        .custom-btn-annuler:hover {
            background: #5a6268;
            transform: scale(1.05);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
        }
