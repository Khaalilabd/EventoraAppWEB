        }
    </style>

    <script>
        // Image preview functionality
        document.getElementById('pack_image_path').addEventListener('change', function(event) {
            const file = event.target.files[0];
            const previewContainer = document.getElementById('image-preview');
            const previewImage = document.getElementById('preview-image');

            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    previewImage.src = e.target.result;
                    previewContainer.style.display = 'block';
                };
                reader.readAsDataURL(file);
            } else {
                previewContainer.style.display = 'none';
            }
        });

        // Custom form validation
        document.getElementById('pack-form').addEventListener('submit', function(event) {
            let isValid = true;
            const form = this;

            // Reset all error messages and invalid styles
            const errorMessages = form.querySelectorAll('.error-message');
            const inputs = form.querySelectorAll('.form-control, .checkbox-group');
            errorMessages.forEach(msg => msg.textContent = '');
            inputs.forEach(input => input.classList.remove('invalid'));

            // Validate nomPack
            const nomPack = form.querySelector('#pack_nomPack');
            if (!nomPack.value.trim()) {
                isValid = false;
                nomPack.classList.add('invalid');
                nomPack.parentElement.querySelector('.error-message').textContent = 'Le nom du pack est requis.';
            }

            // Validate prix
            const prix = form.querySelector('#pack_prix');
            const prixValue = parseFloat(prix.value);
            if (!prix.value.trim()) {
                isValid = false;
                prix.classList.add('invalid');
                prix.parentElement.querySelector('.error-message').textContent = 'Le prix est requis.';
            } else if (isNaN(prixValue) || prixValue < 0) {
                isValid = false;
                prix.classList.add('invalid');
                prix.parentElement.querySelector('.error-message').textContent = 'Le prix doit être supérieur ou égal à 0.';
            }

            // Validate description
            const description = form.querySelector('#pack_description');
            if (!description.value.trim()) {
                isValid = false;
                description.classList.add('invalid');
                description.parentElement.querySelector('.error-message').textContent = 'La description est requise.';
            }

            // Validate location
            const location = form.querySelector('#pack_location');
            const validLocations = ['HOTEL', 'MAISON_D_HOTE', 'ESPACE_VERT', 'SALLE_DE_FETE', 'AUTRE'];
            if (!location.value.trim()) {
                isValid = false;
                location.classList.add('invalid');
                location.parentElement.querySelector('.error-message').textContent = 'Le lieu est requis.';
            } else if (!validLocations.includes(location.value)) {
                isValid = false;
                location.classList.add('invalid');
                location.parentElement.querySelector('.error-message').textContent = 'Veuillez sélectionner un lieu valide.';
            }

            // Validate nbrGuests
            const nbrGuests = form.querySelector('#pack_nbrGuests');
            const nbrGuestsValue = parseInt(nbrGuests.value);
            if (!nbrGuests.value.trim()) {
                isValid = false;
                nbrGuests.classList.add('invalid');
                nbrGuests.parentElement.querySelector('.error-message').textContent = 'Le nombre d\'invités est requis.';
            } else if (isNaN(nbrGuestsValue) || nbrGuestsValue < 1) {
                isValid = false;
                nbrGuests.classList.add('invalid');
                nbrGuests.parentElement.querySelector('.error-message').textContent = 'Le nombre d\'invités doit être au moins 1.';
            }

            // Validate image_path (optional, but if provided, must be an image)
            const imagePath = form.querySelector('#pack_image_path');
            if (imagePath.files.length > 0) {
                const file = imagePath.files[0];
                const allowedExtensions = ['jpg', 'jpeg', 'png'];
                const fileExtension = file.name.split('.').pop().toLowerCase();
                if (!allowedExtensions.includes(fileExtension)) {
                    isValid = false;
                    imagePath.parentElement.parentElement.querySelector('.error-message').textContent = 'L\'image doit être au format JPG, JPEG ou PNG.';
                }
            }

            // Validate typepack
            const typepack = form.querySelector('#pack_typepack');
            if (!typepack.value || typepack.value === '') {
                isValid = false;
                typepack.classList.add('invalid');
                typepack.parentElement.querySelector('.error-message').textContent = 'Veuillez sélectionner un type de pack.';
            }

            // Validate services
            const services = form.querySelectorAll('input[name="pack[services][]"]:checked');
            const servicesContainer = form.querySelector('.checkbox-group');
            if (services.length === 0) {
                isValid = false;
                servicesContainer.classList.add('invalid');
                servicesContainer.parentElement.querySelector('.error-message').textContent = 'Veuillez sélectionner au moins un service.';
            }

            // Prevent form submission if validation fails
            if (!isValid) {
                event.preventDefault();
                // Scroll to the first error
                const firstError = form.querySelector('.error-message:not(:empty)');
                if (firstError) {
                    firstError.scrollIntoView({ behavior: 'smooth', block: 'center' });
                }
            }
        });
    </script>
</main>
