{% extends 'base.html.twig' %}

{% block title %}Authentification{% endblock %}

{% block body %}
    <video autoplay loop muted playsinline class="background-video">
        <source src="{{ asset('images/fireworks loop.mp4') }}" type="video/mp4">
        Your browser does not support the video tag.
    </video>

    <div class="container" id="container">
        <div class="form-container sign-up-container">
            <form action="{{ path('app_register') }}" method="post" enctype="multipart/form-data">
                <h1>Create Account</h1>
                <div class="social-container">
                    <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                    <a href="{{ path('connect_google') }}" class="social"><i class="fab fa-google-plus-g"></i></a>

                    <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
                </div>
                <span>or use your email for registration</span>
                <div class="form-columns">
                    <div class="form-column">
                        <div class="form-group">
                            {{ form_label(registration_form.nom) }}
                            {{ form_widget(registration_form.nom) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(registration_form.prenom) }}
                            {{ form_widget(registration_form.prenom) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(registration_form.email) }}
                            {{ form_widget(registration_form.email) }}
                        </div>
                    </div>
                    <div class="form-column">
                        <div class="form-group">
                            {{ form_label(registration_form.cin) }}
                            {{ form_widget(registration_form.cin) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(registration_form.numTel) }}
                            {{ form_widget(registration_form.numTel) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(registration_form.adresse) }}
                            {{ form_widget(registration_form.adresse) }}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(registration_form.motDePasse) }}
                    <div class="password-container">
                        {{ form_widget(registration_form.motDePasse, {'attr': {'class': 'password-input'}}) }}
                        <span class="toggle-password">
                            <i class="fas fa-eye" id="toggleIcon"></i>
                        </span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="custom-control custom-switch">
                        <input type="checkbox" class="custom-control-input" id="enable2fa" name="enable2fa">
                        <label class="custom-control-label" for="enable2fa">
                            Activer la double authentification par email
                        </label>
                    </div>
                    <small class="form-text text-muted">
                        La double authentification ajoute une couche de sécurité supplémentaire à votre compte.
                        Vous recevrez un code par email à chaque connexion.
                    </small>
                </div>
                <div class="form-group">
                    {{ form_label(registration_form.image) }}
                    {{ form_widget(registration_form.image, {'attr': {'accept': 'image/*', 'class': 'image-input'}}) }}
                </div>
                <div class="button-container">
                    <button type="submit" class="submit-btn">Sign Up</button>
                </div>
            </form>
        </div>

        <div class="form-container sign-in-container">
            {{ form_start(login_form) }}
                <h1>Sign in</h1>
                <div class="social-container">
                    <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                    <a href="{{ path('connect_google') }}" class="social"><i class="fab fa-google-plus-g"></i></a>
                    <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
                </div>
                <span>or use your account</span>
                <div class="flash-messages">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger">
                            {{ message }}
                        </div>
                    {% endfor %}
                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}
                </div>
                <div class="form-group">
                    {{ form_label(login_form.email) }}
                    {{ form_widget(login_form.email) }}
                </div>
                <div class="form-group password-group">
                    {{ form_label(login_form.motDePasse) }}
                    <div class="password-container">
                        {{ form_widget(login_form.motDePasse, {'attr': {'class': 'password-input'}}) }}
                        <span class="toggle-password">
                            <i class="fas fa-eye" id="toggleIcon"></i>
                        </span>
                    </div>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
                <div class="g-recaptcha" data-sitekey="{{ recaptcha_site_key }}"></div>
                <a href="{{ path('app_reset_password_request') }}" class="forgot-password">Forgot your password?</a>
                <button type="submit" class="submit-btn">Sign In</button>
                <a href="{{ path('app_register') }}" class="register-link" id="go-to-register">
                    Créer un compte complet <i class="fas fa-arrow-right"></i>
                </a>
            {{ form_end(login_form) }}
        </div>

        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>Welcome Back!</h1>
                    <p>To keep connected with us please login with your personal info</p>
                    <button class="ghost" id="signIn">Sign In</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1>Hello, Friend!</h1>
                    <p>Enter your personal details and start journey with us</p>
                    <button class="ghost" id="signUp">Sign Up</button>
                    <img src="https://i.pinimg.com/736x/4f/02/9c/4f029c9bfa1290dc2a401046d528ac43.jpg" alt="Background" class="welcome-image">
                </div>
            </div>
        </div>
    </div>

    <style>
        body {
            background-color: #f6f5f7;
            margin: 0;
            padding: 0;
            min-height: 100vh;
            overflow-x: hidden;
            font-family: 'Montserrat', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        
        .background-video {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            z-index: -1;
        }
        
        .container {
            position: relative;
            width: 850px;
            max-width: 95%;
            min-height: 680px;
            height: auto;
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0 14px 28px rgba(0, 0, 0, 0.25), 0 10px 10px rgba(0, 0, 0, 0.22);
            overflow: hidden;
            margin: 20px 0;
        }
        
        .form-container {
            position: absolute;
            top: 0;
            height: 100%;
            transition: all 0.6s ease-in-out;
        }
        
        .sign-in-container {
            width: 50%;
            left: 0;
            z-index: 2;
        }
        
        .sign-up-container {
            width: 50%;
            left: 0;
            opacity: 0;
            z-index: 1;
            overflow-y: auto;
            padding-bottom: 30px;
        }
        
        .container.right-panel-active .sign-in-container {
            transform: translateX(100%);
        }
        
        .container.right-panel-active .sign-up-container {
            transform: translateX(100%);
            opacity: 1;
            z-index: 5;
            animation: show 0.6s;
        }
        
        @keyframes show {
            0%, 49.99% {
                opacity: 0;
                z-index: 1;
            }
            50%, 100% {
                opacity: 1;
                z-index: 5;
            }
        }
        
        .overlay-container {
            position: absolute;
            top: 0;
            left: 50%;
            width: 50%;
            height: 100%;
            overflow: hidden;
            transition: transform 0.6s ease-in-out;
            z-index: 100;
        }
        
        .container.right-panel-active .overlay-container {
            transform: translateX(-100%);
        }
        
        .overlay {
            background: #d0a877;
            background: linear-gradient(to right, #d0a877, #bb8f5e);
            background-repeat: no-repeat;
            background-size: cover;
            background-position: 0 0;
            color: #fff;
            position: relative;
            left: -100%;
            height: 100%;
            width: 200%;
            transform: translateX(0);
            transition: transform 0.6s ease-in-out;
        }
        
        .container.right-panel-active .overlay {
            transform: translateX(50%);
        }
        
        .overlay-panel {
            position: absolute;
            top: 0;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 0 30px;
            height: 100%;
            width: 50%;
            text-align: center;
            transform: translateX(0);
            transition: transform 0.6s ease-in-out;
        }
        
        .overlay-left {
            transform: translateX(-20%);
        }
        
        .container.right-panel-active .overlay-left {
            transform: translateX(0);
        }
        
        .overlay-right {
            right: 0;
            transform: translateX(0);
        }
        
        .container.right-panel-active .overlay-right {
            transform: translateX(20%);
        }
        
        .overlay-panel h1 {
            margin-bottom: 20px;
            font-weight: bold;
            font-size: 28px;
        }
        
        .overlay-panel p {
            margin-bottom: 20px;
            font-size: 16px;
            line-height: 24px;
        }
        
        .social-container {
            margin: 15px 0;
            display: flex;
            justify-content: center;
        }
        
        .social-container a {
            border: 1px solid #ddd;
            border-radius: 50%;
            display: inline-flex;
            justify-content: center;
            align-items: center;
            margin: 0 5px;
            height: 40px;
            width: 40px;
            transition: all 0.3s;
        }
        
        .social-container a:hover {
            background-color: #f0f0f0;
            transform: translateY(-2px);
        }
        
        form {
            background-color: #fff;
            display: flex;
            flex-direction: column;
            padding: 0 30px 20px;
            height: 100%;
            justify-content: center;
            align-items: center;
            text-align: center;
        }
        
        form h1 {
            font-weight: bold;
            margin: 0 0 10px;
            font-size: 24px;
            color: #333;
        }
        
        form span {
            font-size: 13px;
            color: #666;
            margin-bottom: 15px;
        }
        
        .form-columns {
            display: flex;
            justify-content: space-between;
            width: 100%;
            margin-bottom: 5px;
        }
        
        .form-column {
            width: 48%;
        }
        
        .form-group {
            width: 100%;
            margin-bottom: 10px;
            text-align: left;
        }
        
        .form-group label {
            display: block;
            margin-bottom: 3px;
            font-weight: 500;
            font-size: 13px;
            color: #333;
        }
        
        .form-group input,
        .form-group select,
        .form-group textarea {
            background-color: #f0f0f0;
            border: none;
            border-radius: 5px;
            padding: 10px 12px;
            width: 100%;
            box-sizing: border-box;
            font-size: 14px;
            height: 40px;
            transition: background-color 0.3s;
        }
        
        .form-group input:focus,
        .form-group select:focus,
        .form-group textarea:focus {
            background-color: #e8e8e8;
            outline: none;
        }
        
        .password-group {
            margin-bottom: 10px;
        }
        
        .password-wrapper {
            display: flex;
            align-items: center;
        }
        
        .password-wrapper input {
            flex: 1;
            border-top-right-radius: 0;
            border-bottom-right-radius: 0;
        }
        
        .btn-generate-password {
            height: 40px;
            margin: 0;
            border-top-left-radius: 0;
            border-bottom-left-radius: 0;
            background-color: #f0f0f0;
            color: #666;
            font-size: 12px;
            padding: 0 15px;
            text-transform: none;
            letter-spacing: 0;
            transition: background-color 0.3s;
        }
        
        .btn-generate-password:hover {
            background-color: #e0e0e0;
            color: #333;
            transform: none;
        }
        
        .password-container {
            position: relative;
            width: 100%;
        }
        
        .password-input {
            padding-right: 40px !important;
        }
        
        .toggle-password {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #666;
            z-index: 5;
        }
        
        .toggle-password:hover {
            color: #333;
        }
        
        .image-input {
            height: auto !important;
            padding: 8px !important;
            font-size: 12px !important;
        }
        
        .button-container {
            width: 100%;
            display: flex;
            justify-content: center;
            margin-top: 15px;
            margin-bottom: 10px;
        }
        
        button.submit-btn {
            border-radius: 30px;
            border: none;
            background-color: #d0a877;
            color: white;
            font-size: 14px;
            font-weight: bold;
            padding: 10px 35px;
            letter-spacing: 1px;
            text-transform: uppercase;
            transition: transform 0.3s ease, background-color 0.3s;
            cursor: pointer;
            width: auto;
        }
        
        button.submit-btn:hover {
            background-color: #bb8f5e;
            transform: scale(1.05);
        }
        
        button.submit-btn:active {
            transform: scale(0.95);
        }
        
        button.ghost {
            background-color: transparent;
            border: 2px solid white;
            margin-bottom: 20px;
            padding: 10px 30px;
            border-radius: 30px;
            color: white;
            font-size: 14px;
            font-weight: bold;
            letter-spacing: 1px;
            text-transform: uppercase;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        
        button.ghost:hover {
            background-color: rgba(255, 255, 255, 0.2);
        }
        
        .flash-messages {
            width: 100%;
            margin: 5px 0;
        }
        
        .alert {
            padding: 10px;
            margin-bottom: 8px;
            border-radius: 5px;
            text-align: center;
            font-size: 13px;
        }
        
        .alert-success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }
        
        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }
        
        .forgot-password {
            color: #d0a877;
            text-decoration: none;
            margin: 10px 0;
            font-size: 13px;
            transition: color 0.3s;
        }
        
        .forgot-password:hover {
            color: #bb8f5e;
            text-decoration: underline;
        }
        
        .register-link {
            color: #d0a877;
            text-decoration: none;
            margin: 15px 0 0;
            font-size: 14px;
            font-weight: 500;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .register-link i {
            margin-left: 8px;
            transition: transform 0.3s ease;
        }
        
        .register-link:hover {
            color: #bb8f5e;
        }
        
        .register-link:hover i {
            transform: translateX(5px);
        }
        
        .g-recaptcha {
            margin: 10px 0;
            transform: scale(0.9);
            transform-origin: left center;
        }
        
        .welcome-image {
            width: 100%;
            height: 60%;
            object-fit: cover;
            margin-top: 20px;
        }
        
        /* Animation pour la transition vers la page d'inscription */
        @keyframes fadeOut {
            0% {
                opacity: 1;
                transform: translateY(0);
            }
            100% {
                opacity: 0;
                transform: translateY(-20px);
            }
        }
        
        @keyframes fadeIn {
            0% {
                opacity: 0;
                transform: translateY(20px);
            }
            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        /* Responsive adjustments */
        @media (max-width: 850px) {
            .container {
                width: 90%;
                min-height: 600px;
            }
            
            .form-columns {
                flex-direction: column;
            }
            
            .form-column {
                width: 100%;
            }
            
            form {
                padding: 0 15px 20px;
            }
            
            button {
                padding: 10px 25px;
            }
            
            .password-wrapper {
                flex-direction: column;
            }
            
            .password-wrapper input {
                border-radius: 5px;
                margin-bottom: 5px;
            }
            
            .btn-generate-password {
                width: 100%;
                border-radius: 5px;
            }
            
            .welcome-image {
                height: 50%;
            }
            
            .overlay-panel h1 {
                font-size: 24px;
                margin-bottom: 15px;
            }
            
            .overlay-panel p {
                font-size: 14px;
                margin-bottom: 15px;
            }
        }
        
        @media (min-height: 750px) {
            .container {
                min-height: 700px;
            }
        }
        
        @media (max-height: 680px) {
            .container {
                min-height: 600px;
                margin: 10px 0;
            }
            
            form h1 {
                font-size: 22px;
                margin-bottom: 8px;
            }
            
            .form-group {
                margin-bottom: 8px;
            }
            
            .form-group input,
            .form-group select,
            .form-group textarea,
            .btn-generate-password {
                height: 36px;
                padding: 8px 10px;
            }
            
            .social-container {
                margin: 10px 0;
            }
            
            .social-container a {
                height: 35px;
                width: 35px;
            }
            
            .welcome-image {
                height: 40%;
            }
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const signUpButton = document.getElementById('signUp');
            const signInButton = document.getElementById('signIn');
            const container = document.getElementById('container');
            const toggleIcon = document.getElementById('toggleIcon');
            const goToRegisterBtn = document.getElementById('go-to-register');

            if (signUpButton) {
                signUpButton.addEventListener('click', () => {
                    container.classList.add('right-panel-active');
                });
            }

            if (signInButton) {
                signInButton.addEventListener('click', () => {
                    container.classList.remove('right-panel-active');
                });
            }

            // Password toggle functionality
            document.querySelector('.toggle-password').addEventListener('click', function() {
                const passwordInput = document.querySelector('.password-input');
                if (passwordInput.type === 'password') {
                    passwordInput.type = 'text';
                    toggleIcon.classList.remove('fa-eye');
                    toggleIcon.classList.add('fa-eye-slash');
                } else {
                    passwordInput.type = 'password';
                    toggleIcon.classList.remove('fa-eye-slash');
                    toggleIcon.classList.add('fa-eye');
                }
            });

            // Password generator
            const generatePasswordBtn = document.getElementById('generate-password');
            if (generatePasswordBtn) {
                generatePasswordBtn.addEventListener('click', function() {
                    const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789!@#$%^&*()';
                    let password = '';
                    for (let i = 0; i < 12; i++) {
                        password += chars.charAt(Math.floor(Math.random() * chars.length));
                    }
                    // Find the password field in the registration form
                    const passwordField = document.querySelector('input[name*="motDePasse"]');
                    if (passwordField) {
                        passwordField.value = password;
                        passwordField.type = 'text';
                        setTimeout(() => {
                            passwordField.type = 'password';
                        }, 3000);
                    }
                });
            }
            
            // Ensure Sign Up button is visible by scrolling to it after form activation
            function scrollToSignUpButton() {
                if (container.classList.contains('right-panel-active')) {
                    const signUpForm = document.querySelector('.sign-up-container form');
                    const signUpButton = signUpForm.querySelector('.submit-btn');
                    if (signUpButton) {
                        setTimeout(() => {
                            signUpButton.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                        }, 600);
                    }
                }
            }
            
            if (signUpButton) {
                signUpButton.addEventListener('click', scrollToSignUpButton);
            }
            
            // Animation pour passer à la page d'inscription complète
            if (goToRegisterBtn) {
                goToRegisterBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    const href = this.getAttribute('href');
                    
                    // Animer la sortie du container
                    container.style.animation = 'fadeOut 0.5s forwards';
                    
                    // Rediriger après l'animation
                    setTimeout(() => {
                        window.location.href = href;
                    }, 500);
                });
            }
            
            // Check if we should scroll to the button on page load (if form is active)
            if (container.classList.contains('right-panel-active')) {
                scrollToSignUpButton();
            }
        });
    </script>
{% endblock %}