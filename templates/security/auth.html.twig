{% extends 'base.html.twig' %}

{% block title %}Authentification{% endblock %}

{% block body %}
    <video autoplay loop muted playsinline class="background-video">
        <source src="{{ asset('images/fireworks loop.mp4') }}" type="video/mp4">
        Your browser does not support the video tag.
    </video>

    <div class="container" id="container">
        <div class="form-container sign-up-container">
            <form action="{{ path('app_register') }}" method="post" enctype="multipart/form-data">
                <h1>Create Account</h1>
                <div class="social-container">
                    <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
                    <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
                </div>
                <span>or use-services: ['email', 'password', 'recaptcha'] your email for registration</span>
                <div class="form-columns">
                    <div class="form-column">
                        {{ form_row(registration_form.nom) }}
                        {{ form_row(registration_form.prenom) }}
                        {{ form_row(registration_form.email) }}
                    </div>
                    <div class="form-column">
                        {{ form_row(registration_form.cin) }}
                        {{ form_row(registration_form.numTel) }}
                        {{ form_row(registration_form.adresse) }}
                    </div>
                </div>
                <div class="password-container">
                    {{ form_row(registration_form.motDePasse) }}
                    <button type="button" id="generate-password" class="btn-generate-password">Générer un mot de passe</button>
                </div>
                {{ form_row(registration_form.image, {'attr': {'accept': 'image/*'}}) }}
                <button type="submit">Sign Up</button>
            </form>
        </div>

        <div class="form-container sign-in-container">
            {{ form_start(login_form) }}
                <h1>Sign in</h1>
                <div class="social-container">
                    <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
                    <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
                </div>
                <span>or use your account</span>
                <div class="flash-messages">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger">
                            {{ message }}
                        </div>
                    {% endfor %}
                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}
                </div>
                {{ form_row(login_form.email) }}
                <div class="password-container">
                    {{ form_row(login_form.motDePasse, {'attr': {'class': 'password-input'}}) }}
                    <span class="toggle-password" onclick="togglePasswordVisibility()">
                        <i class="fas fa-eye" id="toggleIcon"></i>
                    </span>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
                <div class="g-recaptcha" data-sitekey="{{ recaptcha_site_key }}"></div>
                <a href="{{ path('app_reset_password_request') }}" class="forgot-password">Forgot your password?</a>
                <button type="submit">Sign In</button>
                <a href="{{ path('app_register') }}" class="ghost" id="signUp">Sign Up</a>
            {{ form_end(login_form) }}
        </div>

        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>Welcome Back!</h1>
                    <p>To keep connected with us please login with your personal info</p>
                    <button class="ghost" id="signIn">Sign In</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <img src="https://i.pinimg.com/736x/4f/02/9c/4f029c9bfa1290dc2a401046d528ac43.jpg" alt="Background" class="welcome-image">
                </div>
            </div>
        </div>
    </div>

    <style>
        body {
            background-color: #fff;
            margin: 0;
            padding: 0;
            height: 100vh;
            overflow-x: hidden;
        }
        .background-video {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            z-index: -1;
        }
        .flash-messages {
            margin: 10px 0;
            width: 100%;
        }
        .alert {
            padding: 10px;
            margin-bottom: 10px;
            border-radius: 5px;
            text-align: center;
            font-size: 14px;
        }
        .alert-success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }
        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }
        .container {
            width: 800px;
            min-height: 600px;
            margin: 0 auto;
            position: relative;
            background-color: rgba(255, 255, 255, 0.9);
            z-index: 1;
            border-radius: 10px;
        }
        .form-container.sign-in-container,
        .form-container.sign-up-container {
            width: 50%;
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;
            padding: 20px;
            box-sizing: border-box;
        }
        .form-container.sign-up-container {
            left: 100%;
        }
        .overlay-container {
            width: 50%;
            height: 100%;
            position: absolute;
            top: 0;
            right: 0;
        }
        .overlay-container .overlay {
            background: none !important;
            position: static;
        }
        .overlay-container .overlay .overlay-panel.overlay-right {
            width: 400px;
            height: 600px;
            background-color: #000;
            margin: 0;
            padding: 0;
            position: static;
        }
        .overlay-panel.overlay-right .welcome-image {
            width: 400px;
            height: 600px;
            display: block;
            object-fit: cover;
        }
        .form-container.sign-in-container .ghost {
            display: block;
            margin-top: 10px;
            padding: 10px 20px;
            background-color:rgb(208, 168, 119);
            color: #fff;
            text-decoration: none;
            border-radius: 25px;
            text-align: center;
            font-weight: bold;
            border: none;
            transition: background-color 0.3s;
        }
        .form-container.sign-in-container .ghost:hover {
            background-color: rgb(208, 168, 119);
        }
        .overlay-panel.overlay-left .ghost {
            padding: 10px 20px;
            background-color: rgb(208, 168, 119);
            color: #fff;
            text-decoration: none;
            border-radius: 25px;
            text-align: center;
            font-weight: bold;
            border: none;
            transition: background-color 0.3s;
        }
        .overlay-panel.overlay-left .ghost:hover {
            background-color: rgb(208, 168, 119);
        }
        .overlay-panel.overlay-right .ghost {
            display: none;
        }
        .container.right-panel-active .form-container.sign-in-container {
            transform: translateX(100%);
        }
        .container.right-panel-active .form-container.sign-up-container {
            transform: translateX(-100%);
        }
        .container.right-panel-active .overlay-container,
        .container.right-panel-active .overlay-panel.overlay-right {
            transform: none !important;
        }
        .form-container.sign-in-container .forgot-password {
            display: block;
            margin: 10px 0;
            color: #rgb(208, 168, 119);
            text-decoration: none;
            text-align: center;
            font-size: 14px;
            transition: color 0.3s;
        }
        .form-container.sign-in-container .forgot-password:hover {
            color:rgb(208, 168, 119);
        }
        footer {
            position: relative;
            z-index: 1;
            background-color: rgba(255, 255, 255, 0.9);
            padding: 10px;
            text-align: center;
            margin-top: 20px;
        }
        footer p {
            margin: 0;
            font-size: 14px;
            color: #333;
        }
        footer a {
            color:rgb(208, 168, 119);
            text-decoration: none;
        }
        footer a:hover {
            color: rgb(208, 168, 119);
        }
        footer .fa-heart {
            color: rgb(208, 168, 119);
        }
        .g-recaptcha {
            margin: 20px 0;
        }
        .password-container {
            position: relative;
            width: 100%;
        }
        .password-container .password-input {
            width: 100%;
            padding-right: 40px;
            box-sizing: border-box;
        }
        .password-container .toggle-password {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #666;
        }
        .password-container .toggle-password:hover {
            color: #333;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <script>
        const signUpButton = document.getElementById('signUp');
        const signInButton = document.getElementById('signIn');
        const container = document.getElementById('container');

        if (signUpButton && signInButton && container) {
            signUpButton.addEventListener('click', () => {
                container.classList.add('right-panel-active');
            });

            signInButton.addEventListener('click', () => {
                container.classList.remove('right-panel-active');
            });
        }

        function togglePasswordVisibility() {
            const passwordInput = document.querySelector('.password-input');
            const toggleIcon = document.getElementById('toggleIcon');
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }
    </script>
{% endblock %}