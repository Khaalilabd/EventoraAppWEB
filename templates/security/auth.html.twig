{% extends 'base.html.twig' %}

{% block title %}Authentification{% endblock %}

{% block body %}
    <!-- Vidéo en arrière-plan de la page entière -->
    <video autoplay loop muted playsinline class="background-video">
        <source src="{{ asset('images/video2.mp4') }}" type="video/mp4">
        Your browser does not support the video tag.
    </video>

    <div class="flash-messages">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
    </div>

    <div class="container" id="container">
        <div class="form-container sign-up-container">
            <form action="{{ path('app_register') }}" method="post" enctype="multipart/form-data">
                <h1>Create Account</h1>
                <div class="social-container">
                    <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
                    <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
                </div>
                <span>or use your email for registration</span>
                <div class="form-columns">
                    <div class="form-column">
                        {{ form_row(registration_form.nom) }}
                        {{ form_row(registration_form.prenom) }}
                        {{ form_row(registration_form.email) }}
                    </div>
                    <div class="form-column">
                        {{ form_row(registration_form.cin) }}
                        {{ form_row(registration_form.numTel) }}
                        {{ form_row(registration_form.adresse) }}
                    </div>
                </div>
                <div class="password-container">
                    {{ form_row(registration_form.motDePasse) }}
                    <button type="button" id="generate-password" class="btn-generate-password">Générer un mot de passe</button>
                </div>
                {{ form_row(registration_form.image, {'attr': {'accept': 'image/*'}}) }}
                <button type="submit">Sign Up</button>
            </form>
        </div>

        <div class="form-container sign-in-container">
            {{ form_start(login_form) }}
                <h1>Sign in</h1>
                <div class="social-container">
                    <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
                    <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
                </div>
                <span>or use your account</span>
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                {{ form_row(login_form.email) }}
                {{ form_row(login_form.password) }}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
                <a href="#">Forgot your password?</a>
                <button type="submit">Sign In</button>
                <a href="{{ path('app_register') }}" class="ghost" id="signUp">Sign Up</a>
            {{ form_end(login_form) }}
        </div>

        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>Welcome Back!</h1>
                    <p>To keep connected with us please login with your personal info</p>
                    <button class="ghost" id="signIn">Sign In</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <img src="{{ asset('images/partybackground.png') }}" alt="Background" class="welcome-image">
                </div>
            </div>
        </div>
    </div>

  

    <style>
        /* Fond blanc pour le body comme secours */
        body {
            background-color: #fff; /* Fond blanc si la vidéo ne se charge pas */
            margin: 0; /* Supprime les marges par défaut */
            padding: 0;
            height: 100vh; /* S’assure que le body prend toute la hauteur */
            overflow-x: hidden; /* Empêche le défilement horizontal */
        }
        /* Style pour la vidéo en arrière-plan */
        .background-video {
            position: fixed; /* Position fixe pour couvrir toute la page */
            top: 0;
            left: 0;
            width: 100%; /* Couvre toute la largeur */
            height: 100%; /* Couvre toute la hauteur */
            object-fit: cover; /* S’assure que la vidéo remplit l’espace sans déformation */
            z-index: -1; /* Place la vidéo derrière tous les autres éléments */
        }
        .flash-messages {
            margin: 20px auto;
            max-width: 600px;
            position: relative; /* S’assure que les messages sont au-dessus de la vidéo */
            z-index: 1; /* Place les messages au-dessus de la vidéo */
        }
        .alert {
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 5px;
            text-align: center;
        }
        .alert-success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }
        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }
        .container {
            width: 800px; /* Largeur fixe pour le conteneur */
            min-height: 600px; /* Hauteur minimale */
            margin: 0 auto; /* Centre le conteneur */
            position: relative; /* Nécessaire pour l’effet de bascule */
            background-color: rgba(255, 255, 255, 0.9); /* Fond blanc semi-transparent pour la lisibilité */
            z-index: 1; /* S’assure que le conteneur est au-dessus de la vidéo */
            border-radius: 10px; /* Coins arrondis pour un meilleur contraste */
        }
        .form-container.sign-in-container,
        .form-container.sign-up-container {
            width: 50%; /* Prend 50% de la largeur du conteneur (400px) */
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;
            padding: 20px;
            box-sizing: border-box;
        }
        .form-container.sign-up-container {
            left: 100%; /* Position initiale pour l’effet de bascule */
        }
        .overlay-container {
            width: 50%; /* Prend 50% de la largeur du conteneur (400px) */
            height: 100%;
            position: absolute;
            top: 0;
            right: 0;
        }
        .overlay-container .overlay {
            background: none !important;
            position: static; /* Empêche l’overlay de participer à l’animation */
        }
        .overlay-container .overlay .overlay-panel.overlay-right {
            width: 400px; /* Largeur fixe correspondant à l’image */
            height: 600px; /* Hauteur fixe correspondant à l’image */
            background-color: #000; /* Fond noir pour les espaces vides autour de l’image */
            margin: 0;
            padding: 0;
            position: static; /* Empêche l’image de bouger */
        }
        .overlay-panel.overlay-right .welcome-image {
            width: 400px; /* Largeur fixe de l’image */
            height: 600px; /* Hauteur fixe de l’image */
            display: block;
            object-fit: cover; /* S’assure que l’image remplit la zone sans déformation */
        }
        .form-container.sign-in-container .ghost {
            display: block; /* S’assure que le bouton prend toute la largeur */
            margin-top: 10px; /* Espace au-dessus du bouton */
            padding: 10px 20px;
            background-color: #ff4b5c; /* Fond rose comme le bouton Sign In */
            color: #fff; /* Texte blanc */
            text-decoration: none;
            border-radius: 25px; /* Coins arrondis */
            text-align: center;
            font-weight: bold;
            border: none; /* Pas de bordure */
            transition: background-color 0.3s;
        }
        .form-container.sign-in-container .ghost:hover {
            background-color: #e04352; /* Fond rose plus foncé au survol */
        }
        .overlay-panel.overlay-left .ghost {
            padding: 10px 20px;
            background-color: #ff4b5c; /* Fond rose pour le bouton Sign In dans overlay-left */
            color: #fff;
            text-decoration: none;
            border-radius: 25px;
            text-align: center;
            font-weight: bold;
            border: none;
            transition: background-color 0.3s;
        }
        .overlay-panel.overlay-left .ghost:hover {
            background-color: #e04352; /* Fond rose plus foncé au survol */
        }
        /* Supprimer les styles spécifiques à l’ancienne position sur l’image */
        .overlay-panel.overlay-right .ghost {
            display: none; /* Masquer les styles précédents qui ne s’appliquent plus */
        }
        /* Ajustement pour l’effet de bascule, uniquement pour les formulaires */
        .container.right-panel-active .form-container.sign-in-container {
            transform: translateX(100%);
        }
        .container.right-panel-active .form-container.sign-up-container {
            transform: translateX(-100%);
        }
        /* S’assurer que l’overlay ne bouge pas */
        .container.right-panel-active .overlay-container,
        .container.right-panel-active .overlay-panel.overlay-right {
            transform: none !important; /* Empêche tout mouvement */
        }
        footer {
            position: relative;
            z-index: 1; /* S’assure que le footer est au-dessus de la vidéo */
            background-color: rgba(255, 255, 255, 0.9); /* Fond blanc semi-transparent pour la lisibilité */
            padding: 10px;
            text-align: center;
        }
    </style>
{% endblock %}

{% block javascripts %}
    <script>
        // Script pour générer un mot de passe aléatoire
        document.getElementById('generate-password').addEventListener('click', function() {
            const passwordField = document.querySelector('input[name="membre[motDePasse]"]');
            const generatedPassword = Math.random().toString(36).slice(2, 10) + Math.random().toString(36).slice(2, 10);
            passwordField.value = generatedPassword;
        });

        // Script pour le basculement entre Sign In et Sign Up
        const signUpButton = document.getElementById('signUp');
        const signInButton = document.getElementById('signIn');
        const container = document.getElementById('container');

        if (signUpButton && signInButton && container) {
            signUpButton.addEventListener('click', () => {
                container.classList.add('right-panel-active');
            });

            signInButton.addEventListener('click', () => {
                container.classList.remove('right-panel-active');
            });
        }
    </script>
{% endblock %}