{% extends 'base.html.twig' %}

{% block title %}Vérification en deux étapes{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Vérification en deux étapes</h3>
                </div>
                <div class="card-body">
                    <p class="text-center">Un code de vérification a été envoyé à votre adresse email.</p>
                    <p class="text-center">Veuillez entrer le code ci-dessous :</p>

                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger">
                            {{ message }}
                        </div>
                    {% endfor %}

                    <form method="post">
                        <div class="form-group">
                            <label for="code">Code de vérification</label>
                            <input type="text" class="form-control" id="code" name="code" required autofocus>
                        </div>
                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-primary w-100">Vérifier</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 