{% extends 'base.html.twig' %}

{% block title %}{{ 'registration'|trans }}{% endblock %}

{% block body %}
    <video autoplay loop muted playsinline class="background-video">
        <source src="{{ asset('images/fireworks loop.mp4') }}" type="video/mp4">
        {{ 'browser_no_video'|trans({'default': 'Your browser does not support the video tag.'}) }}
    </video>

    <div class="page-container">
        <div class="form-card">
            <div class="form-header">
                <h1>{{ 'create_account'|trans }}</h1>
                
                <div class="social-container">
                    <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
                    <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
                </div>
                
                <span class="subtitle">{{ 'or_use_email_for_registration'|trans({'default': 'or use your email for registration'}) }}</span>
            </div>
            
    <div class="flash-messages">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
    </div>

            {{ form_start(registration_form, {'attr': {'enctype': 'multipart/form-data', 'class': 'register-form'}}) }}
                <div class="form-two-columns">
                    <!-- Colonne gauche -->
                    <div class="form-column left-column">
                        <h2 class="section-title">Informations personnelles</h2>
                        <div class="compact-row">
                            <div class="form-group half">
                                {{ form_label(registration_form.nom) }}
                                {{ form_widget(registration_form.nom) }}
                            </div>
                            <div class="form-group half">
                                {{ form_label(registration_form.prenom) }}
                                {{ form_widget(registration_form.prenom) }}
                            </div>
                        </div>
                        
                        <div class="form-group">
                            {{ form_label(registration_form.email) }}
                            {{ form_widget(registration_form.email) }}
                        </div>
                        
                        <div class="compact-row">
                            <div class="form-group half">
                                {{ form_label(registration_form.username) }}
                                {{ form_widget(registration_form.username) }}
                            </div>
                            <div class="form-group half">
                                {{ form_label(registration_form.adresse) }}
                                {{ form_widget(registration_form.adresse) }}
                            </div>
                        </div>
                    </div>
                    
                    <!-- Colonne droite -->
                    <div class="form-column right-column">
                        <h2 class="section-title">Informations supplémentaires</h2>
                        <div class="compact-row">
                            <div class="form-group half">
                                {{ form_label(registration_form.dateOfBirth) }}
                                {{ form_widget(registration_form.dateOfBirth, {
                        'attr': {
                            'type': 'date',
                            'min': '1900-01-01',
                                        'max': '2030-01-01',
                                        'class': 'date-input'
                        } 
                    }) }}
                            </div>
                            <div class="form-group half">
                                {{ form_label(registration_form.gender) }}
                                {{ form_widget(registration_form.gender) }}
                            </div>
                        </div>
                        
                        <div class="compact-row">
                            <div class="form-group half">
                                {{ form_label(registration_form.cin) }}
                                {{ form_widget(registration_form.cin) }}
                            </div>
                            <div class="form-group half">
                                {{ form_label(registration_form.numTel) }}
                                {{ form_widget(registration_form.numTel) }}
                            </div>
                        </div>
                        
                        <div class="form-group">
                            {{ form_label(registration_form.motDePasse) }}
                            <div class="password-wrapper">
                                {{ form_widget(registration_form.motDePasse, {'attr': {'autocomplete': 'new-password', 'class': 'password-input'}}) }}
                                <span id="toggle-password" class="toggle-password">
                                    <i class="fas fa-eye" id="toggleIcon"></i>
                                </span>
                            </div>
                            <button type="button" id="generate-password" class="btn-generate-password">{{ 'generate_password'|trans({'default': 'Générer'}) }}</button>
                        </div>
                    </div>
                </div>
                
                <div class="form-footer">
                    <div class="compact-row">
                        <div class="form-group image-group two-thirds">
                            {{ form_label(registration_form.image) }}
                            {{ form_widget(registration_form.image, {'attr': {'accept': 'image/*', 'class': 'image-input'}}) }}
                        </div>
                        
                        <div class="actions-group one-third">
                            <div class="buttons-container">
                                <a href="{{ path('app_auth') }}" class="back-to-login" id="back-to-login">
                                    <i class="fas fa-arrow-left"></i> {{ 'back_to_login'|trans({'default': 'Retour'}) }}
                                </a>
                                <button type="submit" class="submit-btn">{{ 'sign_up'|trans({'default': 'Inscription'}) }}</button>
                            </div>
                </div>
            </div>
                </div>
            {{ form_end(registration_form) }}
            </div>
    </div>

    <style>
        body {
            background-color: #f6f5f7;
            margin: 0;
            padding: 0;
            min-height: 100vh;
            overflow-x: hidden;
            font-family: 'Montserrat', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        
        .background-video {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            z-index: -1;
        }
        
        .page-container {
            width: 80%;
            max-width: 680px;
            margin: 3px auto;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        
        .form-card {
            width: 100%;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
            padding: 10px;
            overflow: hidden;
            animation: fadeIn 0.6s ease-in-out;
        }
        
        @keyframes fadeIn {
            0% {
                opacity: 0;
                transform: translateY(15px);
            }
            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        @keyframes fadeOut {
            0% {
                opacity: 1;
                transform: translateY(0);
            }
            100% {
                opacity: 0;
                transform: translateY(15px);
            }
        }
        
        .form-header {
            text-align: center;
            margin-bottom: 6px;
            border-bottom: 1px solid #f0f0f0;
            padding-bottom: 5px;
        }
        
        h1 {
            font-weight: bold;
            margin: 0 0 4px;
            font-size: 16px;
            color: #333;
            text-align: center;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        
        .section-title {
            font-weight: bold;
            font-size: 13px;
            color: #d0a877;
            margin: 0 0 4px;
            padding-bottom: 3px;
            border-bottom: 1px solid #f0f0f0;
        }
        
        .subtitle {
            display: none;
        }
        
        .social-container {
            margin: 5px 0;
            display: flex;
            justify-content: center;
        }
        
        .social-container a {
            border: 1px solid #ddd;
            border-radius: 50%;
            display: inline-flex;
            justify-content: center;
            align-items: center;
            margin: 0 3px;
            height: 22px;
            width: 22px;
            transition: all 0.3s;
        }
        
        .social-container a:hover {
            background-color: #f0f0f0;
            transform: translateY(-1px);
        }
        
        .flash-messages {
            width: 100%;
            margin: 4px 0 6px;
        }
        
        .alert {
            padding: 4px;
            margin-bottom: 3px;
            border-radius: 3px;
            text-align: center;
            font-size: 10px;
        }
        
        .alert-success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }
        
        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }
        
        .register-form {
            display: flex;
            flex-direction: column;
            width: 100%;
        }
        
        .form-two-columns {
            display: flex;
            gap: 8px;
            margin-bottom: 8px;
        }
        
        .form-column {
            width: 50%;
            background-color: #fafafa;
            border-radius: 5px;
            padding: 6px;
            box-shadow: 0 1px 1px rgba(0, 0, 0, 0.05);
        }
        
        .form-footer {
            background-color: #fafafa;
            border-radius: 5px;
            padding: 6px;
            box-shadow: 0 1px 1px rgba(0, 0, 0, 0.05);
            margin-top: 6px;
        }
        
        .compact-row {
            display: flex;
            gap: 6px;
            width: 100%;
            margin-bottom: 4px;
        }
        
        .half {
            width: 50%;
        }
        
        .two-thirds {
            width: 66%;
        }
        
        .one-third {
            width: 34%;
        }
        
        .form-group {
            width: 100%;
            margin-bottom: 4px;
            text-align: left;
        }
        
        .form-group label {
            display: block;
            margin-bottom: 1px;
            font-weight: 600;
            font-size: 10px;
            color: #333;
        }
        
        .form-group input, 
        .form-group select, 
        .form-group textarea {
            background-color: #fff;
            border: 1px solid #e0e0e0;
            border-radius: 3px;
            padding: 3px 6px;
            width: 100%;
            box-sizing: border-box;
            font-size: 10px;
            height: 24px;
            transition: all 0.3s;
        }
        
        .form-group input:focus, 
        .form-group select:focus, 
        .form-group textarea:focus {
            border-color: #d0a877;
            background-color: #fff;
            outline: none;
            box-shadow: 0 0 0 1px rgba(208, 168, 119, 0.2);
        }
        
        .date-input {
            font-family: 'Montserrat', sans-serif;
        }
        
        .password-wrapper {
            position: relative;
            width: 100%;
            margin-bottom: 2px;
        }
        
        .password-input {
            padding-right: 24px !important;
        }
        
        .toggle-password {
            position: absolute;
            right: 6px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #666;
            z-index: 5;
            font-size: 10px;
        }
        
        .toggle-password:hover {
            color: #333;
        }
        
        .btn-generate-password {
            background-color: #f0f0f0;
            color: #666;
            font-size: 9px;
            padding: 2px 5px;
            margin-top: 1px;
            text-transform: none;
            letter-spacing: 0;
            border: none;
            border-radius: 2px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        
        .btn-generate-password:hover {
            background-color: #e0e0e0;
            color: #333;
        }
        
        .image-group {
            margin-bottom: 0;
        }
        
        .image-input {
            height: auto !important;
            padding: 2px !important;
            font-size: 9px !important;
            background-color: #f7f7f7 !important;
            border: 1px solid #e0e0e0 !important;
        }
        
        .image-input:hover {
            border-color: #d0a877 !important;
        }
        
        .actions-group {
            display: flex;
            justify-content: center;
            align-items: center;
        }
        
        .buttons-container {
            display: flex;
            flex-direction: column;
            gap: 4px;
            width: 100%;
        }
        
        .submit-btn {
            border-radius: 15px;
            border: none;
            background-color: #d0a877;
            color: white;
            font-size: 11px;
            font-weight: bold;
            padding: 4px 12px;
            letter-spacing: 1px;
            text-transform: uppercase;
            transition: transform 0.3s ease, background-color 0.3s;
            cursor: pointer;
            width: 100%;
            box-shadow: 0 1px 3px rgba(208, 168, 119, 0.3);
        }
        
        .submit-btn:hover {
            background-color: #bb8f5e;
            transform: translateY(-1px);
            box-shadow: 0 2px 4px rgba(208, 168, 119, 0.4);
        }
        
        .submit-btn:active {
            transform: translateY(0);
            box-shadow: 0 1px 2px rgba(208, 168, 119, 0.4);
        }
        
        .back-to-login {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            color: #666;
            text-decoration: none;
            transition: all 0.3s ease;
            font-size: 11px;
            font-weight: 500;
            padding: 3px 8px;
            border-radius: 15px;
            background-color: #f0f0f0;
            width: 100%;
        }
        
        .back-to-login:hover {
            color: #333;
            background-color: #e0e0e0;
            text-decoration: none;
        }
        
        .back-to-login i {
            margin-right: 3px;
        }
        
        /* Responsive adjustments */
        @media (max-width: 768px) {
            .page-container {
                width: 95%;
                margin: 5px auto;
            }
            
            .form-card {
                padding: 8px;
            }
            
            .form-two-columns {
                flex-direction: column;
                gap: 8px;
            }
            
            .form-column {
                width: 100%;
                padding: 6px;
            }
            
            .form-footer {
                padding: 6px;
        }
            
            .compact-row {
                flex-direction: column;
                gap: 4px;
            }
            
            .half, .two-thirds, .one-third {
            width: 100%;
            }
            
            h1 {
                font-size: 15px;
                margin-bottom: 4px;
        }
            
            .section-title {
                font-size: 12px;
            }
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const generateButton = document.getElementById('generate-password');
            const passwordField = document.querySelector('.password-input');
            const togglePassword = document.getElementById('toggle-password');
            const toggleIcon = document.getElementById('toggleIcon');
            const backToLoginBtn = document.getElementById('back-to-login');

            if (generateButton && passwordField) {
                generateButton.addEventListener('click', function() {
                    const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789!@#$%^&*()';
                    let password = '';
                    for (let i = 0; i < 12; i++) {
                        password += chars.charAt(Math.floor(Math.random() * chars.length));
                    }
                    passwordField.value = password;
                    passwordField.type = 'text';
                    setTimeout(() => {
                        passwordField.type = 'password';
                    }, 3000);
                });
            }

            if (togglePassword && passwordField && toggleIcon) {
            togglePassword.addEventListener('click', function() {
                    if (passwordField.type === 'password') {
                        passwordField.type = 'text';
                        toggleIcon.classList.remove('fa-eye');
                        toggleIcon.classList.add('fa-eye-slash');
                    } else {
                        passwordField.type = 'password';
                        toggleIcon.classList.remove('fa-eye-slash');
                        toggleIcon.classList.add('fa-eye');
                    }
                });
            }
            
            // Animation pour retourner à la page de connexion
            if (backToLoginBtn) {
                backToLoginBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    const formCard = document.querySelector('.form-card');
                    formCard.style.animation = 'fadeOut 0.5s forwards';
                    
                    setTimeout(() => {
                        window.location.href = backToLoginBtn.getAttribute('href');
                    }, 500);
            });
            }
        });
    </script>
{% endblock %}