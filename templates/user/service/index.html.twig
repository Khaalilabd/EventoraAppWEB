                <script src="{{ asset('js/owl.carousel.min.js') }}"></script>
                <script src="{{ asset('js/jquery.magnific-popup.min.js') }}"></script>
                <script src="{{ asset('js/simplyCountdown.js') }}"></script>
                <script src="{{ asset('js/main.js') }}"></script>
                <script>
                    var eventDate = new Date('2025-12-31'); // Date mise à jour dynamiquement
                    simplyCountdown('.simply-countdown-one', {
                        year: eventDate.getFullYear(),
                        month: eventDate.getMonth() + 1,
                        day: eventDate.getDate(),
                        enableUtc: false
                    });
                </script>
            {% endblock %}
        </div>
    </body>
    <style>
        /* Style de base pour le conteneur des cartes */
        .card-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            padding: 20px;
            gap: 20px;
        }

        /* Style pour chaque carte */
        .card {
            width: 300px;
            height: 400px;
            perspective: 1000px; /* Pour l'effet de rotation 3D */
        }

        /* Contenu de la carte */
        .content {
            position: relative;
            width: 100%;
            height: 100%;
            transform-style: preserve-3d;
            transition: transform 0.6s;
            border-radius: 10px;
        }

        /* Lorsque la carte est survolée, elle effectue une rotation */
        .card:hover .content {
            transform: rotateY(180deg);
        }

        /* Face avant de la carte */
        .front {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            backface-visibility: hidden; /* Masquer la face arrière quand elle est retournée */
            transform: rotateY(0deg); /* Face avant visible par défaut */
        }

        /* Face arrière de la carte */
        .back {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            color: black; /* Texte en noir */
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            border-radius: 10px;
            backface-visibility: hidden; /* Masquer quand elle n'est pas tournée */
            transform: rotateY(180deg); /* Face arrière tournée de 180° par défaut */
            padding: 20px; /* Ajout d'un padding pour l'espace intérieur */
            box-sizing: border-box; /* Inclut le padding dans les dimensions */
            background-color: rgba(255, 255, 255, 0.9); /* Fond légèrement transparent pour contraste */
        }

        /* Conteneur des détails à l'arrière */
        .back-details {
            max-height: 200px; /* Hauteur initiale limitée */
            overflow: hidden; /* Cache le texte qui dépasse */
            transition: max-height 0.5s ease; /* Transition fluide pour l'expansion */
            position: relative;
            text-align: left; /* Alignement à gauche pour lisibilité */
            word-wrap: break-word; /* Empêche le débordement horizontal */
        }

        /* Effet de fade-out en bas */
        .back-details::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            height: 50px; /* Hauteur du dégradé */
            background: linear-gradient(to top, rgba(255, 255, 255, 0.9), transparent); /* Dégradé vers le bas */
            pointer-events: none; /* Permet de cliquer à travers */
        }

        /* Expansion au survol */
        .back:hover .back-details {
            max-height: 300px; /* Hauteur maximale augmentée au survol */
        }

        /* Contenu de la face avant (images et texte) */
        .front-content {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            height: 100%; /* Occupe toute la hauteur disponible */
        }

        /* Badge indiquant le type du service */
        .badge {
            font-size: 14px;
            font-weight: bold;
            color: #20c997;
            background-color: #e7f7f1;
            padding: 5px 10px;
            border-radius: 50px;
            margin-bottom: 10px;
        }

        /* Titre du service */
        .front-content .title {
            font-size: 20px;
            font-weight: bold;
            color: #333;
            margin: 0;
        }

        /* Description en bas de la carte */
        .card-footer {
            font-size: 14px;
            color: #666;
            margin-top: 10px;
            display: flex;
            justify-content: space-between;
        }

        /* Style pour le bouton Réserver */
        .reserve-btn {
            display: inline-block;
            padding: 8px 16px;
            background-color: #20c997; /* Couleur verte assortie au badge */
            color: white;
            text-align: center;
            text-decoration: none;
            font-size: 14px;
            font-weight: bold;
            border-radius: 5px;
            margin-top: 10px; /* Espacement au-dessus du bouton */
            transition: background-color 0.3s ease; /* Transition fluide */
        }

        .reserve-btn:hover {
            background-color: #18a77b; /* Couleur plus foncée au survol */
            text-decoration: none;
            color: white;
        }

        .front .img {
            position: relative;
            margin-bottom: 20px;
        }

        .front .circle {
            position: absolute;
            background-color: #ff5733;
            border-radius: 50%;
            opacity: 0.2;
        }

        .front .circle#right {
            right: 10%;
            top: 10%;
            width: 50px;
            height: 50px;
        }

        .front .circle#bottom {
            bottom: 10%;
            left: 10%;
            width: 60px;
            height: 60px;
        }
    </style>
</html>