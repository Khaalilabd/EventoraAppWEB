{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://js.stripe.com/v3/"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const stripe = Stripe('{{ stripe_key }}');
            const elements = stripe.elements();

            // Create Stripe elements
            const cardNumberElement = elements.create('cardNumber', {
                style: {
                    base: {
                        fontSize: '18px',
                        color: '#1a3b5d',
                        fontFamily: '"Source Sans Pro", sans-serif',
                    },
                },
            });
            const cardExpiryElement = elements.create('cardExpiry', {
                style: {
                    base: {
                        fontSize: '18px',
                        color: '#1a3b5d',
                        fontFamily: '"Source Sans Pro", sans-serif',
                    },
                },
            });
            const cardCvcElement = elements.create('cardCvc', {
                style: {
                    base: {
                        fontSize: '18px',
                        color: '#1a3b5d',
                        fontFamily: '"Source Sans Pro", sans-serif',
                    },
                },
            });

            // Mount Stripe elements
            cardNumberElement.mount('#card-number');
            cardExpiryElement.mount('#card-expiry');
            cardCvcElement.mount('#card-cvc');

            // Card number handling
            cardNumberElement.on('change', (event) => {
                const cardTypeImg = document.querySelector('.card-item__typeImg');
                const cardNumberDisplay = document.querySelector('.card-item__number');
                const cardType = event.brand || 'unknown';
                const cardNumber = event.value || '';

                // Update card type logo
                if (cardType !== 'unknown') {
                    cardTypeImg.src = `https://raw.githubusercontent.com/muhammederdem/credit-card-form/master/src/assets/images/${cardType}.png`;
                } else {
                    cardTypeImg.src = 'https://raw.githubusercontent.com/muhammederdem/credit-card-form/master/src/assets/images/visa.png';
                }

                // Update card number display (mask all but last 4 digits)
                const displayValue = cardNumber ? `**** **** **** ${cardNumber.slice(-4)}` : '**** **** **** ****';
                cardNumberDisplay.textContent = displayValue;
                cardNumberDisplay.classList.toggle('active', !!cardNumber);
            });

            // Expiration date handling
            cardExpiryElement.on('change', (event) => {
                const cardMonthDisplay = document.querySelector('.card-item__dateItem.month');
                const cardYearDisplay = document.querySelector('.card-item__dateItem.year');
                const [month, year] = event.value ? event.value.split(' / ') : ['MM', 'YY'];
                cardMonthDisplay.textContent = month || 'MM';
                cardYearDisplay.textContent = year || 'YY';
                cardMonthDisplay.classList.toggle('active', !!month && month !== 'MM');
                cardYearDisplay.classList.toggle('active', !!year && year !== 'YY');
            });

            // CVV handling
            cardCvcElement.on('change', (event) => {
                const cardCvvDisplay = document.querySelector('.card-item__cvvBand');
                cardCvvDisplay.textContent = event.value ? '*'.repeat(event.value.length) : '***';
                cardCvvDisplay.classList.toggle('active', !!event.value);
            });

            // Cardholder name handling
            function updateCardDisplay() {
                const cardNameInput = document.getElementById('cardName');
                const cardNameDisplay = document.querySelector('.card-item__name');
                const name = cardNameInput.value.toUpperCase() || 'FULL NAME';
                cardNameDisplay.textContent = name;
                cardNameDisplay.classList.toggle('active', !!cardNameInput.value);
            }

            // Card flip for CVV
            function flipCard(status) {
                const cardItem = document.querySelector('.card-item');
                cardItem.classList.toggle('-active', status);
            }

            // Payment handling
            async function handlePayment() {
                const payBtn = document.getElementById('pay-btn');
                const cardName = document.getElementById('cardName').value;
                const errorDisplay = document.getElementById('card-errors');

                if (!cardName) {
                    errorDisplay.textContent = 'Veuillez entrer le nom du titulaire.';
                    return;
                }

                payBtn.disabled = true;
                errorDisplay.textContent = '';

                try {
                    const { paymentMethod, error: paymentMethodError } = await stripe.createPaymentMethod({
                        type: 'card',
                        card: cardNumberElement,
                        billing_details: { name: cardName },
                    });

                    if (paymentMethodError) {
                        errorDisplay.textContent = paymentMethodError.message || 'Erreur lors de la création de la méthode de paiement.';
                        payBtn.disabled = false;
                        return;
                    }

                    const response = await fetch('{{ path('app_stripe_create_payment_intent') }}', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ payment_method_id: paymentMethod.id }),
                    });

                    if (!response.ok) {
                        const errorText = await response.text();
                        throw new Error(`Erreur lors de la création du PaymentIntent: ${errorText}`);
                    }

                    const data = await response.json();

                    if (data.error) {
                        errorDisplay.textContent = data.error;
                        payBtn.disabled = false;
                        return;
                    }

                    const { error: confirmError, paymentIntent } = await stripe.confirmCardPayment(data.clientSecret, {
                        payment_method: paymentMethod.id,
                    });

                    if (confirmError) {
                        errorDisplay.textContent = confirmError.message || 'Erreur lors de la confirmation du paiement.';
                        payBtn.disabled = false;
                    } else if (paymentIntent.status === 'succeeded') {
                        window.location.href = '{{ path('app_stripe_success') }}';
                    }
                } catch (err) {
                    errorDisplay.textContent = err.message || 'Une erreur est survenue. Veuillez réessayer.';
                    payBtn.disabled = false;
                }
            }

            // Event listeners
            const cardNameInput = document.getElementById('cardName');
            cardNameInput.addEventListener('input', (e) => {
                e.target.value = e.target.value.replace(/[^a-zA-Z\s]/g, '').toUpperCase();
                updateCardDisplay();
            });

            cardCvcElement.on('focus', () => flipCard(true));
            cardCvcElement.on('blur', () => flipCard(false));
            document.getElementById('pay-btn').addEventListener('click', handlePayment);

            // Initialize card display
            updateCardDisplay();
        });
    </script>
{% endblock %}

