                {% endfor %}
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger">
                        {{ message }}
                    </div>
                {% endfor %}

                <p>Montant total : {{ total }} TND</p>

                <div class="card-input">
                    <label for="card-number" class="card-input__label">Numéro de la carte</label>
                    <div id="card-number" class="StripeElement"></div>
                    <div id="card-errors" class="error-message"></div>
                </div>

                <div class="card-input">
                    <label for="cardName" class="card-input__label">Titulaire de la carte</label>
                    <input type="text" id="cardName" class="card-input__input" autocomplete="off" required aria-label="Nom du titulaire de la carte">
                </div>
                <div class="card-form__row">
                    <div class="card-form__col">
                        <div class="card-form__group">
                            <label for="card-expiry" class="card-input__label">Date d'expiration</label>
                            <div id="card-expiry" class="StripeElement"></div>
                        </div>
                    </div>
                    <div class="card-form__col -cvv">
                        <div class="card-input">
                            <label for="card-cvc" class="card-input__label">CVV</label>
                            <div id="card-cvc" class="StripeElement"></div>
                        </div>
                    </div>
                </div>

                <button id="pay-btn" class="card-form__button" type="button">
                    Payer {{ total }} TND
                </button>
            </div>
        </div>
    </div>
{% endblock %}