{% extends 'base.html.twig' %}

{% block title %}Paiement Réussi{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        .success-container {
            text-align: center;
            padding: 50px;
        }
        .success-message {
            color: green;
            font-size: 24px;
            margin-bottom: 20px;
        }
        .redirect-message {
            font-size: 16px;
            color: #333;
        }
    </style>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script>
        // Redirection automatique vers la page d'accueil après 3 secondes
        setTimeout(function() {
            window.location.href = "{{ path('app_home') }}";
        }, 3000);
    </script>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="success-container">
            <div class="success-message">
                Paiement réussi ! Merci pour votre achat.
            </div>
            <div class="redirect-message">
                Vous serez redirigé vers la page d'accueil dans quelques secondes...
            </div>
        </div>
    </div>
{% endblock %}