{% extends 'base.html.twig' %}

{% block title %}Paiement Réussi{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        .success-container {
            text-align: center;
            padding: 50px;
        }
        .success-message {
            color: green;
            font-size: 24px;
            margin-bottom: 20px;
        }
        .redirect-message {
            font-size: 16px;
            color: #333;
        }
    </style>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script>
        // Redirection automatique vers la page d'accueil après 3 secondes
        setTimeout(function() {
            window.location.href = "{{ path('app_home') }}";
        }, 3000);
    </script>
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-check-circle text-success" style="font-size: 80px;"></i>
                    </div>
                    <h2 class="card-title mb-4">Paiement Réussi!</h2>
                    {% if reservation_data %}
                    <div class="alert alert-info">
                        <h4>Détails de votre réservation:</h4>
                        <p><strong>Type:</strong> {{ reservation_data.type == 'pack' ? 'Pack' : 'Réservation Personnalisée' }}</p>
                        <p><strong>Date:</strong> {{ reservation_data.date }}</p>
                        <p><strong>Référence:</strong> #{{ reservation_data.id }}</p>
                    </div>
                    {% endif %}
                    <p class="card-text">Merci pour votre paiement. Votre transaction a été traitée avec succès.</p>
                    <p class="text-muted mb-4">Un email de confirmation vous a été envoyé.</p>
                    <div class="mt-4">
                        <a href="{{ path('app_user_history_reservations') }}" class="btn btn-primary">Voir mes réservations</a>
                        <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">Retour à l'accueil</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}