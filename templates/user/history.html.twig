                border-radius: 6px;
                text-decoration: none;
                transition: all 0.3s ease;
                font-size: 14px;
            }
            .pagination li.active a {
                background: #8B4513; /* Brown */
                color: #ffffff;
                border-color: #8B4513;
            }
            .pagination li a:hover {
                background: #8B4513;
                color: #ffffff;
                border-color: #8B4513;
            }
            .pagination li.disabled a {
                color: #A0522D; /* Medium brown */
                cursor: not-allowed;
                border-color: #D2B48C;
                background: #F5F5DC; /* Light beige */
            }

            /* Filtre */
            .filter-form {
                margin-bottom: 20px;
                text-align: center;
            }
            .filter-form select {
                padding: 12px;
                border: none;
                border-bottom: 2px solid #D2B48C; /* Light beige */
                background: #FAF0E6; /* Very light beige */
                border-radius: 0;
                font-size: 14px;
                color: #5C4033; /* Darker brown */
                transition: border-bottom 0.3s ease;
            }
            .filter-form select:focus {
                border-bottom: 2px solid #8B4513; /* Brown */
                outline: none;
            }

            /* Message vide */
            .text-center p {
                color: #5C4033;
                font-size: 16px;
                margin-bottom: 20px;
            }

            /* Pied de page */
            #fh5co-footer {
                background: rgba(255, 255, 255, 0.9);
                padding: 20px 0;
                margin-top: auto;
            }
            #fh5co-footer p {
                color: #5C4033;
                font-size: 14px;
                text-align: center;
            }
            #fh5co-footer a {
                color: #8B4513;
                text-decoration: none;
            }
            #fh5co-footer a:hover {
                text-decoration: underline;
            }

            /* Responsive */
            @media (max-width: 768px) {
                .menu-toggle {
                    display: block;
                }
                .fh5co-nav .menu-1 ul {
                    display: none;
                    flex-direction: column;
                    position: absolute;
                    top: 60px;
                    left: 0;
                    width: 100%;
                    background-color: #fff;
                    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
                    padding: 20px 0;
                }
                .fh5co-nav .menu-1 ul.active {
                    display: flex;
                }
                .fh5co-nav .menu-1 ul li {
                    margin: 10px 0;
                    text-align: center;
                }
                .fh5co-nav .menu-1 ul li.has-dropdown .dropdown {
                    position: static;
                    display: none;
                    box-shadow: none;
                    background-color: #F5F5DC; /* Light beige */
                }
                .fh5co-nav .menu-1 ul li.has-dropdown:hover .dropdown {
                    display: none !important;
                }
                .fh5co-nav .menu-1 ul li.has-dropdown.active .dropdown {
                    display: block !important;
                }
                .content-card {
                    padding: 20px;
                    max-width: 95%;
                }
                .content-card h2 {
                    font-size: 22px;
                }
                .history-table {
                    font-size: 13px;
                }
                .history-table th, .history-table td {
                    padding: 10px;
                    font-size: 13px;
                }
                .history-table td:nth-child(3), .history-table td:nth-child(4), .history-table td:nth-child(5) {
                    max-width: 100px;
                    white-space: nowrap;
                    overflow: hidden;
                    text-overflow: ellipsis;
                }
                .nav-tabs li a {
                    font-size: 14px;
                    padding: 8px 15px;
                }
                .reclamation-details p, .feedback-details p, .reservation-details p {
                    font-size: 14px;
                    padding: 10px;
                }
                .feedback-details img {
                    max-width: 100%;
                }
                .filter-form select {
                    width: 100%;
                    font-size: 13px;
                }
            }
        </style>
    {% endblock %}
</head>
