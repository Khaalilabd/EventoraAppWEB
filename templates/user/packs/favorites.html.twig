        <!-- Navbar JavaScript -->
        <script>
            $(document).ready(function() {
                // Debug logs
                console.log('jQuery loaded:', typeof $ !== 'undefined');
                console.log('Dropdown items found:', $('.has-dropdown').length);

                // Navbar toggle for mobile
                $('.menu-toggle').click(function() {
                    console.log('Menu toggle clicked');
                    $('.fh5co-nav .menu-1 ul').toggleClass('active');
                    // Close all dropdowns when toggling the menu
                    $('.has-dropdown .dropdown').removeClass('show');
                });

                // Dropdown handling for both desktop and mobile
                $('.fh5co-nav .menu-1 ul li.has-dropdown > a').click(function(e) {
                    console.log('Dropdown link clicked');
                    const $parent = $(this).parent();
                    const $dropdown = $parent.find('.dropdown');
                    const isMobile = $(window).width() <= 768;

                    if (isMobile) {
                        // Prevent default link behavior on mobile
                        e.preventDefault();
                        // Toggle dropdown visibility
                        $dropdown.toggleClass('show');
                        // Close other dropdowns
                        $('.has-dropdown .dropdown').not($dropdown).removeClass('show');
                    }
                });

                // Handle hover for desktop
                $('.fh5co-nav .menu-1 ul li.has-dropdown').hover(
                    function() {
                        if ($(window).width() > 768) {
                            console.log('Hover in on desktop');
                            $(this).find('.dropdown').addClass('show');
                        }
                    },
                    function() {
                        if ($(window).width() > 768) {
                            console.log('Hover out on desktop');
                            $(this).find('.dropdown').removeClass('show');
                        }
                    }
                );

                // Close menu and dropdowns when clicking outside on mobile
                $(document).click(function(event) {
                    if ($(window).width() <= 768) {
                        const $menu = $('.fh5co-nav .menu-1 ul');
                        const $toggle = $('.menu-toggle');
                        if (!$menu.is(event.target) && $menu.has(event.target).length === 0 && !$toggle.is(event.target) && $toggle.has(event.target).length === 0) {
                            $menu.removeClass('active');
                            $('.has-dropdown .dropdown').removeClass('show');
                        }
                    }
                });
            });
        </script>
