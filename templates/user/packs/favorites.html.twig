                                            <li><a href="{{ path('app_auth') }}">Log in</a></li>
                                            <li><a href="{{ path('app_auth') }}">Sign up</a></li>
                                        {% endif %}
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            <!-- Favorites content -->
            <div class="favorites-content">
                {% if favorites|length > 0 %}
                    <div class="favorites-grid">
                        {% for favorite in favorites %}
                            <div class="favorite-card">
                                <h3>{{ favorite.pack.nomPack }}</h3>
                                <div class="pack-image-wrapper">
                                    <img src="{{ asset(favorite.pack.imagePath ?: 'images/default-pack.jpg') }}" alt="{{ favorite.pack.nomPack }}">
                                </div>
                                <div class="pack-details-list">
                                    <p><strong>Prix:</strong> <span class="price-highlight">{{ favorite.pack.prix }} dt</span></p>
                                </div>
                                <a href="{{ path('user_pack_details', {'id': favorite.pack.id}) }}" class="details-button">Voir Détails</a>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="no-favorites">
                        <p>Vous n'avez aucun pack favori pour le moment.</p>
                        <a href="{{ path('user_packs') }}" class="explore-button">Découvrir les Packs</a>
                    </div>
                {% endif %}
            </div>

            <footer id="fh5co-footer" role="contentinfo">
                <div class="container">
                    <div class="row copyright">
