        <script>
            $(document).ready(function() {
                // Debug logs
                console.log('jQuery chargé :', typeof $ !== 'undefined');
                console.log('Bouton favori trouvé :', $('#favorite-button').length);
                console.log('Éléments dropdown trouvés :', $('.has-dropdown').length);

                // Navbar toggle for mobile
                $('.menu-toggle').click(function() {
                    console.log('Menu toggle cliqué');
                    $('.fh5co-nav .menu-1 ul').toggleClass('active');
                    // Fermer tous les dropdowns lors du toggle du menu
                    $('.has-dropdown .dropdown').removeClass('show');
                });

                // Gestion des dropdowns pour desktop et mobile
                $('.fh5co-nav .menu-1 ul li.has-dropdown > a').click(function(e) {
                    console.log('Lien dropdown cliqué');
                    const $parent = $(this).parent();
                    const $dropdown = $parent.find('.dropdown');
                    const isMobile = $(window).width() <= 768;

                    if (isMobile) {
                        // Empêcher le comportement par défaut du lien sur mobile
                        e.preventDefault();
                        // Toggle la visibilité du dropdown
                        $dropdown.toggleClass('show');
                        // Fermer les autres dropdowns
                        $('.has-dropdown .dropdown').not($dropdown).removeClass('show');
                    } else {
                        // Sur desktop, laisser le hover gérer les dropdowns
                        $(document).click(function(event) {
                            if (!$(event.target).closest('.has-dropdown').length) {
                                $('.has-dropdown .dropdown').removeClass('show');
                            }
                        });
                    }
                });

                // Gestion du hover pour desktop
                $('.fh5co-nav .menu-1 ul li.has-dropdown').hover(
                    function() {
                        if ($(window).width() > 768) {
                            console.log('Hover in sur desktop');
                            $(this).find('.dropdown').addClass('show');
                        }
                    },
                    function() {
                        if ($(window).width() > 768) {
                            console.log('Hover out sur desktop');
                            $(this).find('.dropdown').removeClass('show');
                        }
                    }
                );

                // Logique du bouton favori
                const favoriteButton = $('#favorite-button');
                if (favoriteButton.length) {
                    favoriteButton.click(function() {
                        console.log('Bouton favori cliqué');
                        const packId = $(this).data('pack-id');
                        const isFavorited = $(this).data('is-favorited');
                        const csrfToken = $(this).data('csrf-token');

                        console.log('Pack ID:', packId);
                        console.log('Est favori:', isFavorited);
                        console.log('CSRF Token:', csrfToken);
                        console.log('URL AJAX:', '{{ path('user_toggle_favorite', {'id': 0}) }}'.replace('0', packId));

                        $.ajax({
                            url: '{{ path('user_toggle_favorite', {'id': 0}) }}'.replace('0', packId),
                            method: 'POST',
                            headers: {
                                'X-Requested-With': 'XMLHttpRequest'
                            },
                            data: {
                                token: csrfToken
                            },
                            success: function(response) {
                                console.log('Succès AJAX:', response);
                                if (response.isFavorited !== undefined) {
                                    favoriteButton.data('is-favorited', response.isFavorited);
                                    favoriteButton.toggleClass('favorited', response.isFavorited);
                                    favoriteButton.html(
                                        `<i class="${response.isFavorited ? 'fas fa-heart' : 'far fa-heart'}"></i> ` +
                                        (response.isFavorited ? 'Retirer des favoris' : 'Ajouter aux favoris')
                                    );
                                } else {
                                    console.error('Réponse inattendue:', response);
                                    alert('Une erreur est survenue.');
                                }
                            },
                            error: function(xhr) {
                                console.error('Erreur AJAX:', xhr.responseText);
                                alert('Une erreur est survenue lors de la mise à jour des favoris.');
                            }
                        });
                    });
                }

                // Vérification du chargement de la vidéo
                const video = $('.video-background video')[0];
                if (video) {
                    video.addEventListener('error', function() {
                        console.error('Erreur de chargement de la vidéo:', video.error);
                        $('.video-background').css('display', 'none'); // Masquer si erreur
                    });
                    video.addEventListener('loadeddata', function() {
                        console.log('Vidéo chargée avec succès');
                    });
                }
            });

            // Fonctions de partage sur les réseaux sociaux
            function shareOnFacebook() {
                const url = encodeURIComponent(window.location.href);
                const title = encodeURIComponent('{{ pack.nomPack }} sur Eventora');
                window.open(`https://www.facebook.com/sharer/sharer.php?u=${url}&title=${title}`, '_blank');
            }

            function shareOnTwitter() {
                const url = encodeURIComponent(window.location.href);
                const text = encodeURIComponent('Découvrez {{ pack.nomPack }} sur Eventora ! {{ pack.description|u.truncate(100, '...') }}');
                window.open(`https://twitter.com/intent/tweet?url=${url}&text=${text}`, '_blank');
            }

            function shareOnWhatsApp() {
                const url = encodeURIComponent(window.location.href);
                const text = encodeURIComponent('Découvrez {{ pack.nomPack }} sur Eventora : {{ pack.description|u.truncate(100, '...') }}');
                window.open(`https://api.whatsapp.com/send?text=${text}%20${url}`, '_blank');
            }

            function shareOnLinkedIn() {
                const url = encodeURIComponent(window.location.href);
                const title = encodeURIComponent('{{ pack.nomPack }} sur Eventora');
                const summary = encodeURIComponent('{{ pack.description|u.truncate(200, '...') }}');
                window.open(`https://www.linkedin.com/shareArticle?mini=true&url=${url}&title=${title}&summary=${summary}`, '_blank');
            }
        </script>
