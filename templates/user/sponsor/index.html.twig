        {% block stylesheets %}
            <link href="https://fonts.googleapis.com/css?family=Work+Sans:400,300,600,400italic,700" rel="stylesheet" type="text/css">
            <link href="https://fonts.googleapis.com/css?family=Sacramento" rel="stylesheet">
            <!-- Animate.css -->
            <link rel="stylesheet" href="{{ asset('css/animate.css') }}">
            <!-- Icomoon Icon Fonts -->
            <link rel="stylesheet" href="{{ asset('css/icomoon.css') }}">
            <!-- Bootstrap -->
            <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
            <!-- Magnific Popup -->
            <link rel="stylesheet" href="{{ asset('css/magnific-popup.css') }}">
            <!-- Owl Carousel -->
            <link rel="stylesheet" href="{{ asset('css/owl.carousel.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/owl.theme.default.min.css') }}">
            <!-- Theme style -->
            <link rel="stylesheet" href="{{ asset('css/style1.css') }}">
            <style>
                /* Navigation fixe */
                #page {
                    min-height: 100vh;
                    display: flex;
                    flex-direction: column;
                }
                .fh5co-nav {
                    position: fixed;
                    top: 0;
                    width: 100%;
                    z-index: 1000;
                    background-color:rgba(255, 255, 255, 0.6);
                    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
                    backdrop-filter: blur(10px); /* Effet de flou */

                }
                .fh5co-nav .container {
                    display: flex;
                    align-items: center;
                    justify-content: space-between;
                    padding: 10px 15px;
                }
                .fh5co-logo a {
                    font-family: 'Work Sans', sans-serif;
                    font-weight: 700;
                    font-size: 24px;
                    color: #333;
                    text-decoration: none;
                }
                .user-circle {
                    display: inline-block;
                    width: 40px;
                    height: 40px;
                    line-height: 40px;
                    text-align: center;
                    border-radius: 50%;
                    background-color: #f0f0f0;
                    color: #333;
                    font-size: 20px;
                    vertical-align: middle;
                    margin-right: 8px;
                }
                .user-circle img {
                    width: 100%;
                    height: 100%;
                    object-fit: cover;
                    border-radius: 50%;
                }
                .fh5co-nav .menu-1 {
                    display: block;
                }
                .fh5co-nav .menu-1 ul {
                    display: flex;
                    align-items: center;
                    justify-content: flex-end;
                    margin: 0;
                    padding: 0;
                    list-style: none;
                }
                .fh5co-nav .menu-1 ul li {
                    margin: 0 15px;
                    position: relative;
                }
                .fh5co-nav .menu-1 ul li a {
                    font-family: 'Work Sans', sans-serif;
                    font-size: 16px;
                    color: #333;
                    text-transform: uppercase;
                    text-decoration: none;
                    transition: color 0.3s ease;
                }
                .fh5co-nav .menu-1 ul li a:hover {
                    color: #007bff;
                }
                .fh5co-nav .menu-1 ul li.active a {
                    color: #007bff !important;
                    font-weight: 600;
                }
                .fh5co-nav .menu-1 ul li.has-dropdown {
                    position: relative;
                }
                .fh5co-nav .menu-1 ul li.has-dropdown .dropdown {
                    display: none;
                    position: absolute;
                    top: 100%;
                    right: 0;
                    background-color: #fff;
                    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
                    list-style: none;
                    padding: 10px 0;
                    min-width: 150px;
                    z-index: 1001;
                }
                .fh5co-nav .menu-1 ul li.has-dropdown:hover .dropdown {
                    display: block !important;
                }
                .fh5co-nav .menu-1 ul li.has-dropdown .dropdown li {
                    margin: 0;
                }
                .fh5co-nav .menu-1 ul li.has-dropdown .dropdown li a {
                    padding: 10px 20px;
                    display: block;
                    font-size: 14px;
                    text-transform: none;
                    color: #333;
                }
                .fh5co-nav .menu-1 ul li.has-dropdown .dropdown li a:hover {
                    color: #007bff;
                }
                .menu-toggle {
                    display: none;
                    font-size: 24px;
                    cursor: pointer;
                    color: #333;
                    padding: 10px;
                }
                .event-wrap {
                    background: rgba(0, 123, 255, 0.2);
                    padding: 40px;
                    border-radius: 10px;
                    box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
                    max-width: 700px;
                    margin: 0 auto;
                }
                .event-wrap h3 {
                    color: #fff;
                    margin-bottom: 30px;
                    font-size: 24px;
                    text-transform: uppercase;
                }
                .event-wrap .form-group {
                    margin-bottom: 20px;
                }
                .event-wrap .form-group label {
                    color: #fff;
                    font-weight: 500;
                    margin-bottom: 5px;
                    display: block;
                }
                .event-wrap .form-control {
                    background: rgba(255, 255, 255, 0.1);
                    border: 1px solid rgba(255, 255, 255, 0.3);
                    color: #fff;
                    border-radius: 5px;
                    padding: 10px;
                }
                .event-wrap .form-control::placeholder {
                    color: rgba(255, 255, 255, 0.7);
                }
                .event-wrap .form-control:focus {
                    border-color: #007bff;
                    box-shadow: none;
                }
                .event-wrap .form-control select {
                    color: #fff;
                    background: rgba(255, 255, 255, 0.1);
                }
                .event-wrap .form-control select option {
                    color: #333;
                    background: #fff;
                }
                .event-wrap .btn {
                    margin-top: 10px;
                    padding: 10px;
                    border-radius: 5px;
                    font-size: 16px;
                }
                .event-wrap .btn-primary {
                    background-color: #007bff;
                    border-color: #007bff;
                }
                .event-wrap .btn-secondary {
                    background-color: #6c757d;
                    border-color: #6c757d;
                }
                #fh5co-footer {
                    background: rgba(255, 255, 255, 0.9);
                    padding: 20px 0;
                }
                #fh5co-event {
                    margin-top: 60px;
                    flex: 1 0 auto;
                    padding-top: 50px;
                }
                .fh5co-heading {
                    margin-bottom: 40px;
                }
                .fh5co-heading span {
                    color: #fff;
                    font-size: 18px;
                    display: block;
                    margin-bottom: 10px;
                }
                .fh5co-heading h2 {
                    color: #fff;
                    font-size: 36px;
                    margin: 0;
                }
                .form-error {
                    color: #ff4d4d;
                    font-size: 0.9em;
                    margin-bottom: 5px;
                    display: block;
                }
                @media (max-width: 768px) {
                    .menu-toggle {
                        display: block;
                    }
                    .fh5co-nav .menu-1 ul {
                        display: none;
                        flex-direction: column;
                        position: absolute;
                        top: 60px;
                        left: 0;
                        width: 100%;
                        background-color: #fff;
                        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
                        padding: 20px 0;
                    }
                    .fh5co-nav .menu-1 ul.active {
                        display: flex;
                    }
                    .fh5co-nav .menu-1 ul li {
                        margin: 10px 0;
                        text-align: center;
                    }
                    .user-circle {
                        margin-right: 0;
                        margin-bottom: 5px;
                    }
                    .fh5co-nav .menu-1 ul li.has-dropdown .dropdown {
                        position: static;
                        display: none;
                        box-shadow: none;
                        background-color: #f8f9fa;
                    }
                    .fh5co-nav .menu-1 ul li.has-dropdown:hover .dropdown {
                        display: none !important;
                    }
                    .fh5co-nav .menu-1 ul li.has-dropdown.active .dropdown {
                        display: block !important;
                    }
                    .event-wrap {
                        max-width: 90%;
                        padding: 20px;
                    }
                    .fh5co-heading h2 {
                        font-size: 28px;
                    }
                    #fh5co-event {
                        padding-top: 30px;
                    }
                }
            </style>
        {% endblock %}

        <!-- Modernizr JS -->
        <script src="{{ asset('js/modernizr-2.6.2.min.js') }}"></script>
        <!-- FOR IE9 below -->
        <script src="{{ asset('js/respond.min.js') }}"></script>
    
        {% block javascripts_head %}{% endblock %}
    </head>
    <body>
        <div class="fh5co-loader"></div>
        <div id="page">
            {% block body %}
            <nav class="fh5co-nav" role="navigation">
            <div class="container">
                <div class="fh5co-logo">
                    <a href="{{ path('app_home') }}">Eventora</a>
                </div>
                <div class="menu-toggle">
                    <i class="icon-menu"></i>
                </div>
                <div class="menu-1">
                    <ul>
                        <li class="active"><a href="{{ path('app_home') }}">Home</a></li>
                         <li class="has-dropdown">
                            <a href="#">Réservation</a>
                            <ul class="dropdown">
                                    <li><a href="{{ path('admin_reservations_user_personnalise_new') }}">Reservation personnalisée</a></li>
                                    <li><a href="{{ path('admin_reservations_user_pack_new') }}">Reservation Pack</a></li>
                            </ul>
                        </li>
                          <li class="has-dropdown">
                                <a href="{{ path('user_packs') }}">Packs</a>
                            </li>
                        <li class="has-dropdown">
                            <a href="#">Services</a>
                            <ul class="dropdown">
                                <li><a href="{{ path('user_services') }}">Service</a></li>
                                <li><a href="{{ path('user_sponsor') }}">Partenaire</a></li>
                            </ul>
                        </li>
                        <li><a href="{{ path('app_reclamation_new') }}">Reclamation</a></li>
                        <li><a href="{{ path('app_feedback_new') }}">Feedback</a></li>
                        <li><a href="#">Talk with Evi</a></li>
                        <li class="has-dropdown">
                            <a href="#">
                                <span class="user-circle">
                                    {% if app.user and app.user.image %}
                                        <img src="{{ asset('uploads/images/' ~ app.user.image) }}" alt="Profile">
                                    {% else %}
                                        <i class="icon-user"></i>
                                    {% endif %}
                                </span>
                                Contact
                            </a>
                            <ul class="dropdown">
                                {% if app.user %}
                                    <li><a href="{{ path('app_settings') }}">Paramètres</a></li>
                                    <li><a href="{{ path('app_home') }}">Notifications</a></li>
                                    <li><a href="{{ path('app_home') }}">Historique</a></li>
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <li><a href="{{ path('admin_dashboard') }}">Dashboard</a></li>
                                    {% endif %}
                                    <li><a href="{{ path('app_logout') }}">Déconnexion</a></li>
                                {% else %}
                                    <li><a href="{{ path('app_auth') }}">Connexion</a></li>
                                    <li><a href="{{ path('app_auth') }}">Inscription</a></li>
                                {% endif %}
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
                
                <header id="fh5co-header" class="fh5co-cover" role="banner" style="background-image:url({{ asset('images/gallery-6.jpg') }});" data-stellar-background-ratio="0.5">
                    <div class="overlay"></div>
                    <div class="container">
                        <div class="row">
                            <div class="col-md-8 col-md-offset-2 text-center">
                                <div class="display-t">
                                    <div class="display-tc animate-box" data-animate-effect="fadeIn">
                                        <h1>Wait For Our Event</h1>
                                        <div class="simply-countdown simply-countdown-one"></div>
                                        <p><a href="#" class="btn btn-default btn-sm">Save the date</a></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </header>
                
  <div class="card-container">
    {% for sponsor in Sponsor %}
        <div class="business-card">
            <div class="card-inner">
                <div class="card-front">
                    <h3>{{ sponsor.nomPartenaire }}</h3>
                    <p>{{ sponsor.typePartenaire|default('Partenaire') }}</p>
                </div>
                <div class="card-back">
                    <p>{{ sponsor.emailPartenaire }}</p>
                    <p>{{ sponsor.telephonePartenaire }}</p>
                    <p>{{ sponsor.adressePartenaire }}</p>
                    <p><a href="{{ sponsor.siteWeb }}" target="_blank">{{ sponsor.siteWeb|default('Non spécifié') }}</a></p>
                </div>
            </div>
        </div>
    {% else %}
        <p>Aucun partenaire trouvé.</p>
    {% endfor %}
</div>

<style>
.card-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 20px;
    padding: 20px;
    perspective: 1200px; /* Perspective plus prononcée pour l'effet 3D */
}

.business-card {
    width: 260px;
    height: 160px;
    position: relative;
    cursor: pointer;
}

.card-inner {
    position: relative;
    width: 100%;
    height: 100%;
    transition: transform 0.8s cubic-bezier(0.68, -0.55, 0.265, 1.55), box-shadow 0.3s; /* Animation plus dynamique */
    transform-style: preserve-3d;
}

.business-card:hover .card-inner {
    transform: rotateY(180deg) scale(1.05); /* Rotation + léger zoom */
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2); /* Ombre au survol */
}

.card-front,
.card-back {
    position: absolute;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    border-radius: 12px;
    padding: 15px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-family: 'Arial', sans-serif;
    font-size: 0.95em;
    color: #fff;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

.card-front {
    background: linear-gradient(135deg, #ff6f61, #ffb88c); /* Dégradé corail/orange */
    text-align: center;
}

.card-back {
    background: #2c3e50; /* Bleu nuit élégant */
    transform: rotateY(180deg);
    text-align: center;
}

.card-front h3 {
    margin: 0 0 8px;
    font-size: 1.3em;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.card-front p {
    margin: 0;
    font-size: 0.9em;
    font-style: italic;
    opacity: 0.9;
}

.card-back p {
    margin: 4px 0;
    font-size: 0.85em;
    color: #ecf0f1;
}

.card-back a {
    color: #ff6f61; /* Couleur corail pour les liens */
    text-decoration: none;
    font-weight: bold;
}

.card-back a:hover {
    text-decoration: underline;
    color: #ffb88c;
}

p {
    margin: 4px 0;
}
</style>

</div>
            {% endblock %}
            
            {% block javascripts %}
                <!-- Charger d'abord jQuery -->
                <script src="{{ asset('js/jquery.min.js') }}"></script>
                <!-- Ensuite, Waypoints.js -->
                <script src="https://cdn.jsdelivr.net/npm/waypoints@4.0.1/lib/jquery.waypoints.min.js"></script>
                <!-- Ensuite Stellar.js -->
                <script src="{{ asset('js/jquery.stellar.min.js') }}"></script>
                <!-- Ensuite les autres scripts -->
                <script src="{{ asset('js/bootstrap.min.js') }}"></script>
                <script src="{{ asset('js/owl.carousel.min.js') }}"></script>
                <script src="{{ asset('js/jquery.magnific-popup.min.js') }}"></script>
                <script src="{{ asset('js/simplyCountdown.js') }}"></script>
                <script src="{{ asset('js/main.js') }}"></script>
                <script>
                    var eventDate = new Date('2025-12-31'); // Date mise à jour dynamiquement
                    simplyCountdown('.simply-countdown-one', {
                        year: eventDate.getFullYear(),
                        month: eventDate.getMonth() + 1,
                        day: eventDate.getDate(),
                        enableUtc: false
                    });
                </script>
            {% endblock %}
        </div>
    </body>
   
</html>