                }

                .one-third {
                    width: 33.33%;
                    padding: 15px;
                    box-sizing: border-box;
                    position: relative;
                    perspective: 1000px;
                }

                .card {
                    position: relative;
                    width: 100%;
                    height: 300px;
                    transform-style: preserve-3d;
                    transition: transform 0.6s;
                }

                .card .front,
                .card .back {
